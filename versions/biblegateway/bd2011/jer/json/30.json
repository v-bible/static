    },
    {
      "id": "f0321b36-d5a8-472a-a27f-80b59bfa3e1f",
      "number": 24,
      "content": "Cơn giận bừng bừng của Chúa sẽ không nguôi đi,",
      "order": 0,
      "parNumber": 4,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:29:00.032Z",
      "updatedAt": "2024-09-24T02:29:00.032Z",
      "chapterId": "c4828879-3e21-4064-b5ec-419328347831"
    },
    {
      "id": "a475e200-3677-421e-a206-f788a05fad4b",
      "number": 24,
      "content": "Cho đến khi Ngài thực hiện và hoàn tất mọi điều lòng Ngài đã định.",
      "order": 1,
      "parNumber": 4,
      "parIndex": 5,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:29:00.034Z",
      "updatedAt": "2024-09-24T02:29:00.034Z",
      "chapterId": "c4828879-3e21-4064-b5ec-419328347831"
    },
    {
      "id": "27670bf1-4bab-4cf5-a76d-abe3c4aa1d54",
      "number": 24,
      "content": "Ðiều ấy sau này các người sẽ hiểu.",
      "order": 2,
      "parNumber": 4,
      "parIndex": 6,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:29:00.036Z",
      "updatedAt": "2024-09-24T02:29:00.036Z",
