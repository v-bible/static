    {
      "id": "9f6d6347-e1f7-4b96-9deb-066787d37380",
      "content": "nt: Quan chép sử và cố vấn cho vua",
      "position": 91,
      "order": 5,
      "createdAt": "2024-09-24T01:29:29.122Z",
      "updatedAt": "2024-09-24T01:29:29.122Z",
