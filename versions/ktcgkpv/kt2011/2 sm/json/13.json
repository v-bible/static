    {
      "id": "aab33e66-9656-4b84-a6e3-d2e27e85a88d",
      "content": "St 40,7",
      "position": 57,
      "order": 4,
      "createdAt": "2024-09-23T03:56:48.528Z",
      "updatedAt": "2024-09-23T03:56:48.528Z",
      "verseId": "e770fa0f-21dd-4881-aa61-018401a3ce75",
      "chapterId": "b3be2e6f-458a-419d-9cf2-761f2498c4d0"
