    },
    {
      "id": "58b14633-69fa-4361-a7e5-e90cebef95e5",
      "content": "Các vua và các ngôn sứ cuối cùng",
      "order": 0,
      "createdAt": "2024-09-23T04:36:42.504Z",
      "updatedAt": "2024-09-23T04:36:42.504Z",
      "verseId": "d6a19b44-c86d-4559-8fe5-155db970bc2d",
      "chapterId": "83e35294-eb3f-409b-8213-13c12610bf0b"
    },
    {
      "id": "7db813c3-441c-4a35-b93d-f0400d2403a0",
      "content": "Ông [Dơ-rúp-ba-ven]() và ông [Giê-su-a]()",
      "order": 0,
      "createdAt": "2024-09-23T04:36:42.635Z",
      "updatedAt": "2024-09-23T04:36:42.635Z",
      "verseId": "91efb241-347f-4b87-a4e0-4ca9933df1cc",
      "chapterId": "83e35294-eb3f-409b-8213-13c12610bf0b"
    },
    {
      "id": "ad71d08a-ef89-4de2-a928-82c001c67514",
      "content": "Ông [Nơ-khe-mi-a]()",
      "order": 0,
      "createdAt": "2024-09-23T04:36:42.676Z",
      "updatedAt": "2024-09-23T04:36:42.676Z",
      "verseId": "dd90b767-9cc1-4ff0-93b0-9b04d4f9db0f",
      "chapterId": "83e35294-eb3f-409b-8213-13c12610bf0b"
    },
    {
      "id": "f888bcb0-d176-43d3-ab9f-f9521d5bd501",
      "content": "Ông [Kha-nốc]()",
      "order": 0,
      "createdAt": "2024-09-23T04:36:42.697Z",
      "updatedAt": "2024-09-23T04:36:42.697Z",
      "verseId": "0ed795d6-d2ba-4a35-bab6-b9cfc818316e",
      "chapterId": "83e35294-eb3f-409b-8213-13c12610bf0b"
    },
    {
      "id": "ad8a316b-6d1b-4e57-bc27-eaca2226bba1",
      "content": "Ông [Giu-se]()",
      "order": 0,
      "createdAt": "2024-09-23T04:36:42.719Z",
      "updatedAt": "2024-09-23T04:36:42.719Z",
      "verseId": "77a5adc3-2619-4ae4-a3ad-bc1552fbae64",
      "chapterId": "83e35294-eb3f-409b-8213-13c12610bf0b"
    },
    {
      "id": "056d24f4-9ad8-46c8-a4bd-f0d1a5702458",
      "content": "Các tổ phụ đầu tiên",
      "order": 0,
      "createdAt": "2024-09-23T04:36:42.750Z",
      "updatedAt": "2024-09-23T04:36:42.750Z",
      "verseId": "6ade93af-c2f6-4e87-9e32-410440b52540",
      "chapterId": "83e35294-eb3f-409b-8213-13c12610bf0b"
    }
  ],
