    {
      "id": "99798cd1-d1ec-4786-b75a-3b1eeafa36b7",
      "content": "Kinh Thánh làm chứng : đức tin và Lề Luật",
      "order": 0,
      "createdAt": "2024-09-23T03:25:11.264Z",
      "updatedAt": "2024-09-23T03:25:11.264Z",
      "verseId": "2c3d6d2c-abd1-4a88-8940-551822a2a7a6",
      "chapterId": "fe472b8c-6436-442c-838e-757aa003ef53"
    },
    {
      "id": "27ba36d3-2843-4587-97f1-15522c872ef2",
      "content": "Lề Luật không huỷ bỏ lời hứa",
      "order": 0,
      "createdAt": "2024-09-23T03:25:11.400Z",
      "updatedAt": "2024-09-23T03:25:11.400Z",
      "verseId": "d6b14e35-8bd3-4e5c-9ef3-fc4b2fd695bf",
      "chapterId": "fe472b8c-6436-442c-838e-757aa003ef53"
    },
    {
      "id": "20b65213-cbba-4691-bfcc-0842f8024cba",
      "content": "Vai trò của Lề Luật",
      "order": 0,
      "createdAt": "2024-09-23T03:25:11.441Z",
      "updatedAt": "2024-09-23T03:25:11.441Z",
      "verseId": "dc74ce23-dbd3-471d-9f75-08c0f753c256",
      "chapterId": "fe472b8c-6436-442c-838e-757aa003ef53"
    },
    {
      "id": "c5dc5e44-f52e-47ba-8ac9-8676d55e9f9f",
      "content": "Thời của đức tin đã đến",
      "order": 0,
      "createdAt": "2024-09-23T03:25:11.494Z",
      "updatedAt": "2024-09-23T03:25:11.494Z",
      "verseId": "d7885a46-b66b-469a-ba97-68aa1383224f",
      "chapterId": "fe472b8c-6436-442c-838e-757aa003ef53"
    },
    {
      "id": "de4097d4-2be9-4fab-b6de-1f5ce1a971f3",
      "content": "Kinh nghiệm của người tín hữu",
      "order": 1,
      "createdAt": "2024-09-23T03:25:11.225Z",
      "updatedAt": "2024-09-23T03:25:11.225Z",
      "verseId": "20484de7-da4c-4686-8df5-8f0072dffca3",
      "chapterId": "fe472b8c-6436-442c-838e-757aa003ef53"
    }
