    },
    {
      "id": "034190d3-0d5e-4237-8e21-0b12a54b60a0",
      "content": "Trận đánh ở [Các-ni-on]()",
      "order": 0,
      "createdAt": "2024-09-23T04:22:44.865Z",
      "updatedAt": "2024-09-23T04:22:44.865Z",
      "verseId": "df7f503c-6633-4eff-9522-698f638afbe2",
      "chapterId": "966674a7-fcca-4ac5-9b37-d95bc9ca1893"
    },
    {
      "id": "8c64cf18-bd74-4b78-9709-e9544e7b3d4f",
      "content": "Ông [Giu-đa]() từ [Ép-rôn]() và [Xi-ky-thô-pô-li]() trở về",
      "order": 0,
      "createdAt": "2024-09-23T04:22:44.953Z",
      "updatedAt": "2024-09-23T04:22:44.953Z",
      "verseId": "d893cd9f-daf4-4bbf-8367-7703a02107f6",
      "chapterId": "966674a7-fcca-4ac5-9b37-d95bc9ca1893"
    },
    {
      "id": "c87e06d8-f6f3-4719-8767-8611aa3b622c",
      "content": "Trận chiến chống lại tướng [Goóc-ghi-át]()",
      "order": 0,
      "createdAt": "2024-09-23T04:22:45.006Z",
      "updatedAt": "2024-09-23T04:22:45.006Z",
      "verseId": "a93ccdf2-dd3c-4465-9f5c-ac05c33404cb",
      "chapterId": "966674a7-fcca-4ac5-9b37-d95bc9ca1893"
    },
    {
      "id": "0a840f1a-5bb1-494b-b4bb-0d1b7a9b49da",
      "content": "Lễ tế cầu cho chiến sĩ trận vong",
      "order": 0,
      "createdAt": "2024-09-23T04:22:45.074Z",
      "updatedAt": "2024-09-23T04:22:45.074Z",
      "verseId": "81225edc-27c9-4496-8a22-626540e6677a",
      "chapterId": "966674a7-fcca-4ac5-9b37-d95bc9ca1893"
    }
  ],
