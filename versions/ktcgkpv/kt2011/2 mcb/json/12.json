      "verseId": "849ebf24-dd0e-4300-b4be-563f2f82d31c",
      "chapterId": "966674a7-fcca-4ac5-9b37-d95bc9ca1893"
    },
    {
      "id": "84e4ffe7-d74e-4652-aabe-a7c68e2246b2",
      "content": "Chinh phạt vùng [Ga-la-át]()",
      "order": 0,
      "createdAt": "2024-09-23T04:22:44.806Z",
      "updatedAt": "2024-09-23T04:22:44.806Z",
      "verseId": "88c0f6a2-d792-4a47-b391-492ca65fe35d",
