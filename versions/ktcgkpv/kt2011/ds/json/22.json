    {
      "id": "756de420-3b6c-491f-a6d1-d34dd8be88c3",
      "content": "Địa danh này không ai biết.",
      "position": 73,
      "order": 18,
      "createdAt": "2024-09-23T03:42:53.311Z",
      "updatedAt": "2024-09-23T03:42:53.311Z",
