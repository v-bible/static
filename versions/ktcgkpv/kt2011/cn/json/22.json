    {
      "id": "ced9b8b0-d8b9-48e0-8bcf-1c95014fe243",
      "content": "Cn 1,22; 26,20",
      "position": 37,
      "order": 5,
      "createdAt": "2024-09-23T04:27:15.102Z",
      "updatedAt": "2024-09-23T04:27:15.102Z",
      "verseId": "1541bcbd-1d98-4bb8-a545-288f7ee2f113",
      "chapterId": "1387b334-5feb-49a3-b35a-b6659b0e7cda"
