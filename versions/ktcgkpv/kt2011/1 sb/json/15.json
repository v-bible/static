    },
    {
      "id": "9f513973-fbf4-41ed-9126-dc0b28f4630e",
      "content": "Nghi thức rước kiệu",
      "order": 0,
      "createdAt": "2024-09-23T04:03:23.318Z",
      "updatedAt": "2024-09-23T04:03:23.318Z",
      "verseId": "b3b52d26-b5e0-4789-a876-541c4af1ea6e",
      "chapterId": "1526b774-f965-49bd-9e60-46f66db0dfdc"
    },
    {
      "id": "1594590f-3975-458f-9330-a37ca471c72a",
      "content": "Chuẩn bị di chuyển",
      "order": 1,
      "createdAt": "2024-09-23T04:03:23.165Z",
      "updatedAt": "2024-09-23T04:03:23.165Z",
      "verseId": "f1c513ab-580b-4553-9697-c679896d0768",
      "chapterId": "1526b774-f965-49bd-9e60-46f66db0dfdc"
    }
