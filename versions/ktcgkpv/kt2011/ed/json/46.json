      "content": "Xh 23,14-17",
      "position": 59,
      "order": 1,
      "createdAt": "2024-09-23T04:48:12.255Z",
      "updatedAt": "2024-09-23T04:48:12.255Z",
      "verseId": "49000d8f-e899-44f2-8b13-bb676aaa3822",
