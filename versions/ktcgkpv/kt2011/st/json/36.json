    },
    {
      "id": "3ea1fc2b-39d4-45dd-8afb-98b264bcc05a",
      "content": "Ông [Ê-xau]() di cư",
      "order": 0,
      "createdAt": "2024-09-23T03:36:28.027Z",
      "updatedAt": "2024-09-23T03:36:28.027Z",
      "verseId": "0215d66c-9482-46e3-8869-099df4f8b273",
      "chapterId": "87842625-1a43-4c7f-bcf3-faf590d0fa50"
    },
    {
      "id": "37579cd4-77ed-4f8e-bee6-bf179e5da0e7",
      "content": "Dòng dõi ông [Ê-xau]() tại [Xê-ia]()",
      "order": 0,
      "createdAt": "2024-09-23T03:36:28.042Z",
      "updatedAt": "2024-09-23T03:36:28.042Z",
      "verseId": "d308edf7-fd84-4fd4-b8f1-840176122e1e",
      "chapterId": "87842625-1a43-4c7f-bcf3-faf590d0fa50"
    },
    {
      "id": "a7064aa6-523e-4864-965b-77b95e8eb715",
      "content": "Các tộc trưởng dân [Ê-đôm]()",
      "order": 0,
      "createdAt": "2024-09-23T03:36:28.066Z",
      "updatedAt": "2024-09-23T03:36:28.066Z",
      "verseId": "f1dc4994-a3e7-4b51-9ef7-1153a2b2e55e",
      "chapterId": "87842625-1a43-4c7f-bcf3-faf590d0fa50"
    },
    {
      "id": "648e2235-0b09-4a54-a72d-8e613fa21709",
      "content": "Dòng dõi ông [Xê-ia](), người [Khô-ri]()",
      "order": 0,
      "createdAt": "2024-09-23T03:36:28.099Z",
      "updatedAt": "2024-09-23T03:36:28.099Z",
      "verseId": "be483001-4965-475f-8940-986a37075ae3",
      "chapterId": "87842625-1a43-4c7f-bcf3-faf590d0fa50"
    },
    {
      "id": "ec2002d5-625b-4cb8-bd1a-adaaf48646fa",
      "content": "Các vua [Ê-đôm]()",
      "order": 0,
      "createdAt": "2024-09-23T03:36:28.153Z",
      "updatedAt": "2024-09-23T03:36:28.153Z",
      "verseId": "1ea9d852-646a-44a7-b126-6867d3343204",
      "chapterId": "87842625-1a43-4c7f-bcf3-faf590d0fa50"
    },
    {
      "id": "e1322ad7-9e69-4606-90a7-dbc021f79e6a",
      "content": "Lại nói về các tộc trưởng [Ê-đôm]()",
      "order": 0,
      "createdAt": "2024-09-23T03:36:28.206Z",
      "updatedAt": "2024-09-23T03:36:28.206Z",
