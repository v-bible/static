    }
  ],
  "references": [
    {
      "id": "c8f579bc-0614-4afe-82eb-19a29a0e7293",
      "content": "Ga 1,51",
      "position": 113,
      "order": 0,
      "createdAt": "2024-09-23T03:31:56.194Z",
      "updatedAt": "2024-09-23T03:31:56.194Z",
      "verseId": "1a5e4365-274e-4d82-8cb4-c37ef85a812e",
      "chapterId": "7f885551-b17b-4350-a314-37fcc7b500e3"
    },
    {
      "id": "459bba36-3241-45c3-bbcf-82ad8f3d4854",
