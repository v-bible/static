    },
    {
      "id": "85b9f703-7e65-43ab-bbcf-9b8b59d55ba3",
      "content": "Khuyên riêng ông [Ti-tô]()",
      "order": 0,
      "createdAt": "2024-09-23T03:27:40.675Z",
      "updatedAt": "2024-09-23T03:27:40.675Z",
      "verseId": "060f284a-54d8-4e14-b4c2-18583cfd0834",
      "chapterId": "2b39ab09-be66-49c6-ab78-af4b2d2fe94e"
    },
    {
      "id": "e31b5727-67ee-4372-8021-8d1bad7a7f5a",
      "content": "Dặn dò. Lời chào và lời chúc cuối thư.",
      "order": 0,
      "createdAt": "2024-09-23T03:27:40.713Z",
      "updatedAt": "2024-09-23T03:27:40.713Z",
      "verseId": "153531eb-6d39-4169-b1d3-325949ea7bce",
      "chapterId": "2b39ab09-be66-49c6-ab78-af4b2d2fe94e"
    }
  ],
