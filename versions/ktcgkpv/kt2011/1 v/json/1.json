    },
    {
      "id": "0311945a-2536-427e-9c16-2e01d07a7599",
      "content": "2 Sm 20,23-25",
      "position": 22,
      "order": 3,
      "createdAt": "2024-09-23T03:58:58.619Z",
      "updatedAt": "2024-09-23T03:58:58.619Z",
      "verseId": "6c0923f2-db6e-4669-b457-93f681b6aaa7",
      "chapterId": "7ff5ab5a-3f56-431b-b340-a3f7b239767e"
    },
    {
      "id": "4ba3c9ee-25ae-4568-ab3e-63f3cb6454d1",
