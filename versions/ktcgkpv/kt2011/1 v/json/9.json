    },
    {
      "id": "b9cb9496-f7b9-4b6f-8340-c618ca6d0182",
      "content": "Buôn bán với vua [Khi-ram]()",
      "order": 0,
      "createdAt": "2024-09-23T03:58:39.879Z",
      "updatedAt": "2024-09-23T03:58:39.879Z",
      "verseId": "91910925-4875-4465-9f2d-8451755e9e13",
      "chapterId": "9fb3aad8-0b06-4832-bace-712f8bcfb9ea"
    },
    {
      "id": "cdfb5d48-8787-42c9-b65b-5ea5d36b97c0",
      "content": "Dân công để xây cất",
      "order": 0,
      "createdAt": "2024-09-23T03:58:39.905Z",
      "updatedAt": "2024-09-23T03:58:39.905Z",
      "verseId": "5aaa1a67-d5f4-4c9c-8da9-c669606dceda",
      "chapterId": "9fb3aad8-0b06-4832-bace-712f8bcfb9ea"
    },
    {
      "id": "893bbf32-756e-4492-9799-46f21c0b22f3",
      "content": "Phục vụ Đền Thờ",
      "order": 0,
      "createdAt": "2024-09-23T03:58:39.983Z",
      "updatedAt": "2024-09-23T03:58:39.983Z",
      "verseId": "342daa50-ecd1-451b-aa01-3a851434246b",
      "chapterId": "9fb3aad8-0b06-4832-bace-712f8bcfb9ea"
    },
    {
      "id": "b231cf38-9661-4631-bad3-2833ff368996",
      "content": "3. VUA SA-LÔ-MÔN, NHÀ KINH DOANH",
      "order": 0,
      "createdAt": "2024-09-23T03:58:40.011Z",
      "updatedAt": "2024-09-23T03:58:40.011Z",
      "verseId": "10724d2d-4a33-4d7c-8815-00b80a578037",
      "chapterId": "9fb3aad8-0b06-4832-bace-712f8bcfb9ea"
    },
    {
      "id": "21f00cd0-43b5-4ed4-b51b-18872d6c1e9d",
      "content": "Vua [Sa-lô-môn](), người tổ chức thương thuyền",
      "order": 1,
      "createdAt": "2024-09-23T03:58:40.019Z",
      "updatedAt": "2024-09-23T03:58:40.019Z",
      "verseId": "10724d2d-4a33-4d7c-8815-00b80a578037",
      "chapterId": "9fb3aad8-0b06-4832-bace-712f8bcfb9ea"
    }
  ],
