    },
    {
      "id": "4222fb26-1e42-4a6c-8592-9aba8b62f40f",
      "content": "Cuộc đột kích",
      "order": 0,
      "createdAt": "2024-09-23T03:52:16.892Z",
      "updatedAt": "2024-09-23T03:52:16.892Z",
      "verseId": "b07f8493-ad95-4bb0-aab0-85993cb10934",
      "chapterId": "407f548a-8217-413e-86e8-452ae7311dde"
    },
    {
      "id": "0cfae693-501a-458a-8824-3f9c9d9745fb",
      "content": "Truy kích",
      "order": 0,
      "createdAt": "2024-09-23T03:52:16.950Z",
      "updatedAt": "2024-09-23T03:52:16.950Z",
      "verseId": "2669ad6f-489a-4c76-9fa8-8b7cdde2687d",
      "chapterId": "407f548a-8217-413e-86e8-452ae7311dde"
    },
    {
      "id": "c977c0c7-abd7-4735-969a-b53e86771f70",
      "content": "[ĐỨC CHÚA]() rút bớt quân số của ông [Ghít-ôn]()",
      "order": 1,
      "createdAt": "2024-09-23T03:52:16.757Z",
      "updatedAt": "2024-09-23T03:52:16.757Z",
      "verseId": "70f9e57a-7d5e-4ea0-a8a0-96ea15c90067",
      "chapterId": "407f548a-8217-413e-86e8-452ae7311dde"
    }
  ],
