    },
    {
      "id": "f1442db1-1fb5-4b83-904f-ed0f8f9a203c",
      "content": "Người [Ben-gia-min]() ngoan cố",
      "order": 0,
      "createdAt": "2024-09-23T03:52:23.592Z",
      "updatedAt": "2024-09-23T03:52:23.592Z",
      "verseId": "42e1446f-7488-43df-8ca2-698c7eb5284e",
      "chapterId": "2b59740b-91e6-4cd8-9db1-800d595f6162"
    },
    {
      "id": "f68f3bab-7f87-4a43-8635-8b4dc6f36df9",
      "content": "Giao tranh đầu tiên",
      "order": 0,
      "createdAt": "2024-09-23T03:52:23.612Z",
      "updatedAt": "2024-09-23T03:52:23.612Z",
      "verseId": "4e18a60a-de31-4b90-a293-e04002f2368b",
      "chapterId": "2b59740b-91e6-4cd8-9db1-800d595f6162"
    },
    {
      "id": "de366e71-ab52-4e08-8f9a-9ce0a2582b85",
      "content": "[Ben-gia-min]() bại trận",
      "order": 0,
      "createdAt": "2024-09-23T03:52:23.727Z",
      "updatedAt": "2024-09-23T03:52:23.727Z",
