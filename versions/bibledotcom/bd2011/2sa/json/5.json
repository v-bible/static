    }
  ],
  "headings": [
    {
      "id": "f78e68fd-6876-43ad-9a0e-89797aa3a01c",
      "content": "Đa-vít Trị Vì Trên Toàn Thể I-sơ-ra-ên",
      "order": 0,
      "createdAt": "2024-09-23T05:28:17.853Z",
      "updatedAt": "2024-09-23T05:28:17.853Z",
      "verseId": "46ec4618-a32c-4993-ae0e-d9702c09ecdb",
      "chapterId": "82a9ced5-e0f2-4bfb-be7a-bdac0880e82b"
    },
    {
      "id": "ee3eac9c-6d1a-4474-ba50-d73d57353dd1",
      "content": "Chiếm Thành Giê-ru-sa-lem",
      "order": 0,
      "createdAt": "2024-09-23T05:28:17.870Z",
      "updatedAt": "2024-09-23T05:28:17.870Z",
      "verseId": "bac5946e-41df-4056-b3c2-064c00323f00",
      "chapterId": "82a9ced5-e0f2-4bfb-be7a-bdac0880e82b"
    },
    {
      "id": "a12a9685-c79c-4ce7-8ad8-4356ff00ba95",
