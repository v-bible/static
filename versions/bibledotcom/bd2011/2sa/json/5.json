    {
      "id": "2b52d29b-7603-4564-9edc-170299e34adf",
      "content": "Trong 1 Sử 3:5 thì gọi là Si-mê-a",
      "position": 62,
      "order": 1,
      "createdAt": "2024-09-23T05:28:17.920Z",
      "updatedAt": "2024-09-23T05:28:17.920Z",
