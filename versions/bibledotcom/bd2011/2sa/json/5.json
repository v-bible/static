    },
    {
      "id": "b555c811-6022-4a4f-8d4a-e18b71745d99",
      "content": "Nghĩa là Ba-anh bị tan nát",
      "position": 199,
      "order": 2,
      "createdAt": "2024-09-23T05:28:17.973Z",
      "updatedAt": "2024-09-23T05:28:17.973Z",
