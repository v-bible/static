    }
  ],
  "headings": [
    {
      "id": "83227a7d-98ff-4e3c-9640-f9b44e777bdc",
      "content": "Bổn Phận Vợ Chồng",
      "order": 0,
      "createdAt": "2024-09-23T06:24:28.910Z",
      "updatedAt": "2024-09-23T06:24:28.910Z",
      "verseId": "ae796836-8de6-41a6-ba73-a88d7f6bdde9",
      "chapterId": "ab0ba6ed-21b7-4b89-8ab2-159330f0f4d1"
    },
    {
      "id": "4b93ddda-8485-4b82-9302-56a573387914",
      "content": "Khuyên Chịu Khổ Vì Lẽ Phải",
      "order": 0,
      "createdAt": "2024-09-23T06:24:28.941Z",
      "updatedAt": "2024-09-23T06:24:28.941Z",
      "verseId": "c9bd847e-fa64-45da-9718-c001a36d8fb1",
      "chapterId": "ab0ba6ed-21b7-4b89-8ab2-159330f0f4d1"
    },
    {
      "id": "d0dea2e0-0ab6-4caf-bc7b-e564b945ff6c",
      "content": "Đấng Christ Chịu Khổ Thay Cho Những Người Tội Lỗi",
