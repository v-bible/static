{
  "chapter": {
    "id": "8d17a854-c570-4d66-844e-1df1ad65524a",
    "number": 11,
    "ref": "https://www.bible.com/bible/19/HOS.11.BD2011",
    "createdAt": "2024-09-07T11:51:12.955Z",
    "updatedAt": "2024-09-07T11:51:12.955Z",
    "bookId": "29f7e7cf-50a1-479e-94a2-0a42acf6401f"
  },
  "verses": [
    {
      "id": "cdbd5fe7-e58b-45ce-8ad6-de1ef9936df7",
      "number": 1,
      "content": "“Khi I-sơ-ra-ên còn là một trẻ thơ, Ta yêu thương nó;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.523Z",
      "updatedAt": "2024-09-07T15:20:09.523Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "bd1194f0-642a-453b-9bc1-9a7ad29ab04c",
      "number": 1,
      "content": "Ta đã gọi con Ta ra khỏi Ai-cập.",
      "order": 1,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.523Z",
      "updatedAt": "2024-09-07T15:20:09.523Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "17649f50-4660-42a4-8262-a5c5583427b0",
      "number": 2,
      "content": "Các đầy tớ Ta càng kêu gọi chúng bao nhiêu,",
      "order": 0,
      "parNumber": 3,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.533Z",
      "updatedAt": "2024-09-07T15:20:09.533Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "30e282cd-5cfa-4d48-9d9b-243c2f9cc0f9",
      "number": 2,
      "content": "Chúng càng chạy xa họ bấy nhiêu.",
      "order": 1,
      "parNumber": 4,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.533Z",
      "updatedAt": "2024-09-07T15:20:09.533Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "dbd2c63c-1c4c-4d7f-8397-c663e60590d7",
      "number": 2,
      "content": "Chúng dâng các của tế lễ cho Ba-anh",
      "order": 2,
      "parNumber": 5,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.533Z",
      "updatedAt": "2024-09-07T15:20:09.533Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "fa97d3a3-6e07-4ccd-9d8b-b0ed9e94480a",
      "number": 2,
      "content": "Và dâng hương cho các hình tượng.",
      "order": 3,
      "parNumber": 6,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.533Z",
      "updatedAt": "2024-09-07T15:20:09.533Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "780bf9f1-1baf-499a-ab16-01075168ceb2",
      "number": 3,
      "content": "Dầu vậy chính Ta đã dạy Ép-ra-im chập chững bước đi;",
      "order": 0,
      "parNumber": 7,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.535Z",
      "updatedAt": "2024-09-07T15:20:09.535Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "cae201d6-dd69-4ac2-88a8-6f3c590526b8",
      "number": 3,
      "content": "Ta đã bồng ẵm chúng trong tay Ta,",
      "order": 1,
      "parNumber": 8,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.535Z",
      "updatedAt": "2024-09-07T15:20:09.535Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "50681ba3-d52d-44f6-ba8c-926819efa06a",
      "number": 3,
      "content": "Nhưng chúng chẳng muốn biết rằng Ta đã chữa lành chúng.",
      "order": 2,
      "parNumber": 9,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.535Z",
      "updatedAt": "2024-09-07T15:20:09.535Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "54f51ef7-d21c-4955-8489-af6f78ca7f96",
      "number": 4,
      "content": "Ta đã dùng những dây nhân ái",
      "order": 0,
      "parNumber": 10,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.538Z",
      "updatedAt": "2024-09-07T15:20:09.538Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "e7779177-4d26-44f5-8242-89925d59d71b",
      "number": 4,
      "content": "Và những dải buộc yêu thương kéo chúng về;",
      "order": 1,
      "parNumber": 11,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.538Z",
      "updatedAt": "2024-09-07T15:20:09.538Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "9f8db710-dc95-4cf6-81de-23b8a9b79f71",
      "number": 4,
      "content": "Ta đã cất bỏ cái ách trên cổ chúng;",
      "order": 2,
      "parNumber": 12,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.538Z",
      "updatedAt": "2024-09-07T15:20:09.538Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "4e378616-436e-4f1a-b6d4-8795f3754dda",
      "number": 4,
      "content": "Ta đã cúi xuống và đút cho chúng ăn.",
      "order": 3,
      "parNumber": 13,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.538Z",
      "updatedAt": "2024-09-07T15:20:09.538Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "70fb7f98-5382-40a4-b8b3-3b9a4585c2b5",
      "number": 5,
      "content": "Không, chúng phải trở lại Ai-cập,",
      "order": 0,
      "parNumber": 14,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.540Z",
      "updatedAt": "2024-09-07T15:20:09.540Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "58f0bf8d-9d43-4ddf-bdef-d9a887b51849",
      "number": 5,
      "content": "Và A-sy-ri sẽ là vua của chúng,",
      "order": 1,
      "parNumber": 15,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.540Z",
      "updatedAt": "2024-09-07T15:20:09.540Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "8564126e-decc-4303-bcc3-11bdbf7a5858",
      "number": 5,
      "content": "Bởi vì chúng đã khước từ trở về với Ta.",
      "order": 2,
      "parNumber": 16,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.540Z",
      "updatedAt": "2024-09-07T15:20:09.540Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "6417baa7-9f08-4922-a66e-42f594c06702",
      "number": 6,
      "content": "Gươm đao sẽ vung lên trong các thành của chúng;",
      "order": 0,
      "parNumber": 17,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.543Z",
      "updatedAt": "2024-09-07T15:20:09.543Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "f6b84362-5eb1-4ec2-8f86-679952a8d189",
      "number": 6,
      "content": "Các thanh sắt nơi các cổng thành của chúng sẽ bị phá tan;",
      "order": 1,
      "parNumber": 18,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.543Z",
      "updatedAt": "2024-09-07T15:20:09.543Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "36fadba1-28de-4ef0-bd1c-92148f819333",
      "number": 6,
      "content": "Mọi kế hoạch của chúng sẽ bị hỏng.",
      "order": 2,
      "parNumber": 19,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.543Z",
      "updatedAt": "2024-09-07T15:20:09.543Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "d1447809-7256-4a7f-a81a-fdf8c2cf6e5e",
      "number": 7,
      "content": "Dân Ta đã quyết lòng lìa bỏ Ta;",
      "order": 0,
      "parNumber": 20,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.545Z",
      "updatedAt": "2024-09-07T15:20:09.545Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "dc1c3068-317d-4d3a-a579-d8cfe18c3bb1",
      "number": 7,
      "content": "Mặc dù chúng gọi Ta là Đấng Tối Cao,",
      "order": 1,
      "parNumber": 21,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.545Z",
      "updatedAt": "2024-09-07T15:20:09.545Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "54be4664-2a18-4550-86ca-d332fdc5975e",
      "number": 7,
      "content": "Nhưng không ai trong chúng tôn cao Ta.”",
      "order": 2,
      "parNumber": 22,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.545Z",
      "updatedAt": "2024-09-07T15:20:09.545Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "a588b03e-47a1-4138-a6c7-8c8ea1132d4b",
      "number": 8,
      "content": "“Hỡi Ép-ra-im, Ta nỡ nào từ bỏ ngươi?",
      "order": 0,
      "parNumber": 24,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.548Z",
      "updatedAt": "2024-09-07T15:20:09.548Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "7273c023-aba5-4fa7-af67-6688d602e7b4",
      "number": 8,
      "content": "Hỡi I-sơ-ra-ên, Ta đành lòng nào đem ngươi trao cho kẻ khác?",
      "order": 1,
      "parNumber": 25,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.548Z",
      "updatedAt": "2024-09-07T15:20:09.548Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "5c23f097-27e7-49a2-b37a-c6548569b454",
      "number": 8,
      "content": "Làm sao Ta có thể biến ngươi ra như Át-ma?",
      "order": 2,
      "parNumber": 26,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.548Z",
      "updatedAt": "2024-09-07T15:20:09.548Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "e73b080c-b11c-4a22-b633-8183779c965a",
      "number": 8,
      "content": "Làm sao Ta có thể khiến ngươi thành như Xê-boi-im?",
      "order": 3,
      "parNumber": 27,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.548Z",
      "updatedAt": "2024-09-07T15:20:09.548Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "821460e9-f7a7-41dc-8076-ba2ae1c9b687",
      "number": 8,
      "content": "Lòng Ta chùn lại trong Ta;",
      "order": 4,
      "parNumber": 28,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.548Z",
      "updatedAt": "2024-09-07T15:20:09.548Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "7d9c1f4f-362b-4aed-8aec-411560f60836",
      "number": 8,
      "content": "Lòng thương xót của Ta được nhen nhúm lên rồi.",
      "order": 5,
      "parNumber": 29,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.548Z",
      "updatedAt": "2024-09-07T15:20:09.548Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "ea7bea58-894d-4153-ad12-88482ed2d525",
      "number": 9,
      "content": "Ta sẽ không thi hành án phạt dành cho ngươi theo cơn giận phừng phừng của Ta;",
      "order": 0,
      "parNumber": 30,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.552Z",
      "updatedAt": "2024-09-07T15:20:09.552Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "0c01db80-6cb2-481c-831d-e603fc702fb0",
      "number": 9,
      "content": "Ta sẽ không tiêu diệt Ép-ra-im;",
      "order": 1,
      "parNumber": 31,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.552Z",
      "updatedAt": "2024-09-07T15:20:09.552Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "248a7ba0-7151-417c-b500-ee1aa36a1c48",
      "number": 9,
      "content": "Vì Ta là Đức Chúa Trời chứ không phải phàm nhân.",
      "order": 2,
      "parNumber": 32,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.552Z",
      "updatedAt": "2024-09-07T15:20:09.552Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "4e02465b-b0a0-4305-bf58-453abd44b0a8",
      "number": 9,
      "content": "Ta là Đấng Thánh ở giữa ngươi,",
      "order": 3,
      "parNumber": 33,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.552Z",
      "updatedAt": "2024-09-07T15:20:09.552Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "07a45911-c6dc-469b-8141-77c38be55924",
      "number": 9,
      "content": "Và Ta sẽ đến không phải trong cơn phẫn nộ.",
      "order": 4,
      "parNumber": 34,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.552Z",
      "updatedAt": "2024-09-07T15:20:09.552Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "03e31314-cb13-418a-b581-e20dd9b503ae",
      "number": 10,
      "content": "Chúng sẽ bước đi theo CHÚA,",
      "order": 0,
      "parNumber": 35,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.558Z",
      "updatedAt": "2024-09-07T15:20:09.558Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "19772b79-2315-488d-8004-750722351a28",
      "number": 10,
      "content": "Đấng gầm lên như sư tử;",
      "order": 1,
      "parNumber": 36,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.558Z",
      "updatedAt": "2024-09-07T15:20:09.558Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "71436131-8dcf-4926-94c0-81b7e3f4d86d",
      "number": 10,
      "content": "Khi Ngài gầm lên,",
      "order": 2,
      "parNumber": 37,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.558Z",
      "updatedAt": "2024-09-07T15:20:09.558Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "c730677f-1ba5-4649-b005-e7799d81a4e7",
      "number": 10,
      "content": "Các con cái Ngài từ phương tây sẽ run rẩy kéo về.",
      "order": 3,
      "parNumber": 38,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.558Z",
      "updatedAt": "2024-09-07T15:20:09.558Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "cbad3347-f550-47b8-9e90-c67a54cafdee",
      "number": 11,
      "content": "Chúng sẽ run rẩy kéo đến như đàn chim từ Ai-cập bay về,",
      "order": 0,
      "parNumber": 39,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.565Z",
      "updatedAt": "2024-09-07T15:20:09.565Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "a33bc547-7e94-4969-9461-b73a663533de",
      "number": 11,
      "content": "Như đàn bồ câu từ xứ A-sy-ri bay về.",
      "order": 1,
      "parNumber": 40,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.565Z",
      "updatedAt": "2024-09-07T15:20:09.565Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "1d4efa59-2d1b-41a1-8b03-5016dbf09c1f",
      "number": 11,
      "content": "Ta sẽ cho chúng ở trong nhà của chúng,” CHÚA phán.",
      "order": 2,
      "parNumber": 41,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.565Z",
      "updatedAt": "2024-09-07T15:20:09.565Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "d08fb59d-15b2-486b-9b5b-3533f72bb52b",
      "number": 12,
      "content": "“Ép-ra-im đã bao quanh Ta bằng những lời giả dối,",
      "order": 0,
      "parNumber": 43,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.571Z",
      "updatedAt": "2024-09-07T15:20:09.571Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "57746719-7ef3-43ae-ae38-46061e5a1b68",
      "number": 12,
      "content": "Còn nhà I-sơ-ra-ên thì dùng sự dối gian;",
      "order": 1,
      "parNumber": 44,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.571Z",
      "updatedAt": "2024-09-07T15:20:09.571Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "8de1f506-ee37-4629-a09f-35b60f8b9edd",
      "number": 12,
      "content": "Nhưng Giu-đa vẫn còn kính sợ Đức Chúa Trời",
      "order": 2,
      "parNumber": 45,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.571Z",
      "updatedAt": "2024-09-07T15:20:09.571Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    },
    {
      "id": "8f42c258-f7f6-4665-b09c-386a1be652a3",
      "number": 12,
      "content": "Và vẫn còn trung thành với Đấng Thánh.",
      "order": 3,
      "parNumber": 46,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T15:20:09.571Z",
      "updatedAt": "2024-09-07T15:20:09.571Z",
      "chapterId": "8d17a854-c570-4d66-844e-1df1ad65524a"
    }
  ],
