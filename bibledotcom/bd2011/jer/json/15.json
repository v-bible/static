    },
    {
      "id": "ec6b8830-ee38-4ef0-a0f0-fb4e46fdfba5",
      "content": "Giê-rê-mi Than Thân Trách Phận",
      "order": 0,
      "createdAt": "2024-09-07T15:00:18.380Z",
      "updatedAt": "2024-09-07T15:00:18.380Z",
      "verseId": "a07099b1-8d64-4b99-8355-d8f385cbd19f",
      "chapterId": "c6ba6f00-3187-4599-89a4-8318aa119ca1"
    },
    {
      "id": "967ec72f-d225-4695-944b-85ff4eed81eb",
      "content": "CHÚA Trả Lời",
      "order": 0,
      "createdAt": "2024-09-07T15:00:18.380Z",
      "updatedAt": "2024-09-07T15:00:18.380Z",
      "verseId": "65b708cb-b08f-41be-8720-15695b74702c",
      "chapterId": "c6ba6f00-3187-4599-89a4-8318aa119ca1"
    },
    {
      "id": "baa574f0-5ccd-457a-91f7-3d9e34735930",
      "content": "Sức Mạnh của Quân Thù Giu-đa",
      "order": 0,
      "createdAt": "2024-09-07T15:00:18.380Z",
      "updatedAt": "2024-09-07T15:00:18.380Z",
      "verseId": "5a37159a-e97d-4f29-8434-ee8b624d5da0",
      "chapterId": "c6ba6f00-3187-4599-89a4-8318aa119ca1"
    },
    {
      "id": "d4f06859-a85a-448f-a21f-9b6bab131fab",
      "content": "Giê-rê-mi Tiếp Tục Than Vãn",
      "order": 0,
      "createdAt": "2024-09-07T15:00:18.380Z",
      "updatedAt": "2024-09-07T15:00:18.380Z",
      "verseId": "784c992b-dde7-4f76-9d6a-add50f41aa5b",
      "chapterId": "c6ba6f00-3187-4599-89a4-8318aa119ca1"
