    },
    {
      "id": "220dbc6d-e006-49b5-a719-64bb7ad4ae15",
      "content": "Hãy Tránh Xa Kẻ Xấu",
      "order": 0,
      "createdAt": "2024-09-07T14:31:40.026Z",
