{
  "chapter": {
    "id": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91",
    "number": 4,
    "ref": "https://www.bible.com/bible/19/PRO.4.BD2011",
    "createdAt": "2024-09-07T11:51:11.634Z",
    "updatedAt": "2024-09-07T11:51:11.634Z",
    "bookId": "71c3c74b-28d8-4c20-87d4-7d45fc5c93e2"
  },
  "verses": [
    {
      "id": "9186fdab-21b6-45fb-ba54-b68fcbe8c03c",
      "number": 1,
      "content": "Các con ơi, hãy lắng nghe lời cha dạy bảo;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.457Z",
      "updatedAt": "2024-09-07T14:32:21.457Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "3c62c8f9-1879-402c-8ab6-5e025a61e719",
      "number": 1,
      "content": "Hãy chú tâm lãnh hội đến tinh tường.",
      "order": 1,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.457Z",
      "updatedAt": "2024-09-07T14:32:21.457Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "f858c5da-253a-41a3-b3e8-eae1df0cff6b",
      "number": 2,
      "content": "Vì cha cho các con những lời khuyên dạy tốt;",
      "order": 0,
      "parNumber": 3,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.467Z",
      "updatedAt": "2024-09-07T14:32:21.467Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "6e189470-6153-499b-b2b3-64b3d56cbf8a",
      "number": 2,
      "content": "Mong các con đừng bỏ lời giáo huấn của cha.",
      "order": 1,
      "parNumber": 4,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.467Z",
      "updatedAt": "2024-09-07T14:32:21.467Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "c3a09f25-786e-48cf-803a-bfe791ed16a7",
      "number": 3,
      "content": "Khi cha còn là một đứa con thơ dại của ông nội các con,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.469Z",
      "updatedAt": "2024-09-07T14:32:21.469Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "c47598b6-50ae-44f4-96ad-84b990382add",
      "number": 3,
      "content": "Là con một yêu dấu của bà nội các con.",
      "order": 1,
      "parNumber": 6,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.469Z",
      "updatedAt": "2024-09-07T14:32:21.469Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "dd3a5284-4518-45eb-93b5-1b8eee3f51fc",
      "number": 4,
      "content": "Ông nội các con đã dạy cha rằng:",
      "order": 0,
      "parNumber": 7,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.472Z",
      "updatedAt": "2024-09-07T14:32:21.472Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "b3e11b5b-fab7-4d39-9d1c-0a8f3faf55b8",
      "number": 4,
      "content": "Lòng con khá ghi tạc lời cha dạy bảo;",
      "order": 1,
      "parNumber": 8,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.472Z",
      "updatedAt": "2024-09-07T14:32:21.472Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "b7cda606-0227-4ad9-9031-2f5038ec89e9",
      "number": 4,
      "content": "Giữ mệnh lệnh cha để con sống oai hùng:",
      "order": 2,
      "parNumber": 9,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.472Z",
      "updatedAt": "2024-09-07T14:32:21.472Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "a01e0c32-9825-4ba8-8a0c-c94c6f2f66cc",
      "number": 5,
      "content": "Hãy kiếm khôn ngoan, khá tìm thông sáng,",
      "order": 0,
      "parNumber": 10,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.475Z",
      "updatedAt": "2024-09-07T14:32:21.475Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "8187815c-1b7c-4fd1-9802-ecac3efcaa8e",
      "number": 5,
      "content": "Đừng quên và chớ lìa bỏ lời cha.",
      "order": 1,
      "parNumber": 11,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.475Z",
      "updatedAt": "2024-09-07T14:32:21.475Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "99cb0153-8386-46c1-b29e-1ac6c178ebbd",
      "number": 6,
      "content": "Đừng lìa bỏ khôn ngoan, thì nàng sẽ bảo vệ con;",
      "order": 0,
      "parNumber": 12,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.477Z",
      "updatedAt": "2024-09-07T14:32:21.477Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "4b5da562-54ee-4dd0-ae36-35c4843b5853",
      "number": 6,
      "content": "Yêu mến nàng, thì nàng sẽ gìn giữ con.",
      "order": 1,
      "parNumber": 13,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.477Z",
      "updatedAt": "2024-09-07T14:32:21.477Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "b1f2e5ad-4f77-4445-8cf1-d06ebad6d5da",
      "number": 7,
      "content": "Khôn ngoan là nhu cầu tối thượng, nên con phải đạt sự khôn ngoan;",
      "order": 0,
      "parNumber": 14,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.479Z",
      "updatedAt": "2024-09-07T14:32:21.479Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "436fdc53-b029-4753-870e-61145f49f6d5",
      "number": 7,
      "content": "Trong mọi thứ con đạt được ở đời, hãy cố đạt sự thông sáng.",
      "order": 1,
      "parNumber": 15,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.479Z",
      "updatedAt": "2024-09-07T14:32:21.479Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "dd2777be-3487-43cb-8a66-935925b3790f",
      "number": 8,
      "content": "Hãy coi trọng nàng, nàng sẽ làm con được tôn trọng;",
      "order": 0,
      "parNumber": 16,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.481Z",
      "updatedAt": "2024-09-07T14:32:21.481Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "a56562ce-413d-45f1-9046-56a9d2363e4a",
      "number": 8,
      "content": "Ôm giữ nàng, nàng sẽ mang vinh dự đến cho con.",
      "order": 1,
      "parNumber": 17,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.481Z",
      "updatedAt": "2024-09-07T14:32:21.481Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "d2ce6550-5067-4b00-93ff-81d291690216",
      "number": 9,
      "content": "Nàng sẽ đặt trên đầu con một vòng hoa tuyệt mỹ;",
      "order": 0,
      "parNumber": 18,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.483Z",
      "updatedAt": "2024-09-07T14:32:21.483Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "313a49e6-ec05-48b1-935a-c424a42b6900",
      "number": 9,
      "content": "Nàng sẽ dâng tặng con mão miện đắc thắng huy hoàng.",
      "order": 1,
      "parNumber": 19,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.483Z",
      "updatedAt": "2024-09-07T14:32:21.483Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "9fb12665-5033-4797-9670-5bf0de21ead1",
      "number": 10,
      "content": "Con ơi, hãy lắng nghe và tiếp nhận lời cha,",
      "order": 0,
      "parNumber": 21,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.486Z",
      "updatedAt": "2024-09-07T14:32:21.486Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "b1ff79cc-da15-4f78-861a-5ba5b292f7d0",
      "number": 10,
      "content": "Thì những năm của đời con sẽ thêm nhiều lên.",
      "order": 1,
      "parNumber": 22,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.486Z",
      "updatedAt": "2024-09-07T14:32:21.486Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "1592cfd3-ff0e-4837-957a-3b0e6f958560",
      "number": 11,
      "content": "Cha đã dạy dỗ con theo đường lối khôn ngoan;",
      "order": 0,
      "parNumber": 23,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.488Z",
      "updatedAt": "2024-09-07T14:32:21.488Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "2dd94f30-6cfa-4d4a-85fc-d6afe552ec7f",
      "number": 11,
      "content": "Cha đã hướng dẫn con theo những nẻo đường ngay thẳng.",
      "order": 1,
      "parNumber": 24,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.488Z",
      "updatedAt": "2024-09-07T14:32:21.488Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "e23ad0be-8095-4e04-aa14-0ab88209e5b6",
      "number": 12,
      "content": "Khi con đi, các bước con sẽ không bị cản trở;",
      "order": 0,
      "parNumber": 25,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.490Z",
      "updatedAt": "2024-09-07T14:32:21.490Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "633632a7-1741-45fe-80bd-2565e8ad84a2",
      "number": 12,
      "content": "Nếu con chạy, con sẽ không bị vấp ngã bao giờ.",
      "order": 1,
      "parNumber": 26,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.490Z",
      "updatedAt": "2024-09-07T14:32:21.490Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "2ce5ca50-6183-4e4f-8d82-b8be685f1af1",
      "number": 13,
      "content": "Hãy giữ chặt lời giáo huấn, đừng buông nó ra.",
      "order": 0,
      "parNumber": 27,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.493Z",
      "updatedAt": "2024-09-07T14:32:21.493Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "ee7d512a-0fc6-45a4-93f8-d10d9e752e03",
      "number": 13,
      "content": "Hãy canh giữ nàng, vì nàng là sự sống của con.",
      "order": 1,
      "parNumber": 28,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.493Z",
      "updatedAt": "2024-09-07T14:32:21.493Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "579b5438-d0d5-48f1-9e38-9ce50630a195",
      "number": 14,
      "content": "Con đừng đi vào nẻo đường của phường gian ác,",
      "order": 0,
      "parNumber": 29,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.495Z",
      "updatedAt": "2024-09-07T14:32:21.495Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "9aeb1efe-3378-40e9-9261-401e9dbbd7ac",
      "number": 14,
      "content": "Bước chân con chớ đặt vào lối của bọn gian tà.",
      "order": 1,
      "parNumber": 30,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.495Z",
      "updatedAt": "2024-09-07T14:32:21.495Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "fba3bc6b-491c-4f5a-b24d-63b5957b724d",
      "number": 15,
      "content": "Con hãy tránh xa nó và đừng đi vào đường đó;",
      "order": 0,
      "parNumber": 31,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.497Z",
      "updatedAt": "2024-09-07T14:32:21.497Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "26eb555d-09cf-4b1a-9acf-2c15a154ab70",
      "number": 15,
      "content": "Con hãy quay khỏi nó và tiếp tục đường mình.",
      "order": 1,
      "parNumber": 32,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.497Z",
      "updatedAt": "2024-09-07T14:32:21.497Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "52d7f718-d9f3-4dec-8b81-92e5c8dbf883",
      "number": 16,
      "content": "Vì kẻ ác sẽ không ngủ được nếu không làm gì ác đức;",
      "order": 0,
      "parNumber": 33,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.499Z",
      "updatedAt": "2024-09-07T14:32:21.499Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "b3b2c0bf-2835-4663-8fe0-120c04e9f319",
      "number": 16,
      "content": "Chúng sẽ bị mất ngủ nếu chưa gây vấp ngã cho ai.",
      "order": 1,
      "parNumber": 34,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.499Z",
      "updatedAt": "2024-09-07T14:32:21.499Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "a00b7f53-374b-4a16-ada2-6187c8296acd",
      "number": 17,
      "content": "Vì chúng cho làm chuyện gian tà thiết yếu như ăn cơm ăn bánh,",
      "order": 0,
      "parNumber": 35,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.501Z",
      "updatedAt": "2024-09-07T14:32:21.501Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "2c57f4e4-8b15-4f8e-b7fe-4e1e74f1ccac",
      "number": 17,
      "content": "Và cho việc bạo tàn là cần có như uống rượu khi ăn.",
      "order": 1,
      "parNumber": 36,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.501Z",
      "updatedAt": "2024-09-07T14:32:21.501Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "d7cec63f-4a14-4466-bcc7-8a5eddb524b2",
      "number": 18,
      "content": "Đường của người ngay lành giống như ánh bình minh rực rỡ,",
      "order": 0,
      "parNumber": 37,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.504Z",
      "updatedAt": "2024-09-07T14:32:21.504Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "6649f7b9-5862-47d3-acb2-dafcf8085ec2",
      "number": 18,
      "content": "Càng lúc càng rạng ngời cho đến khi chiếu sáng khắp bầu trời;",
      "order": 1,
      "parNumber": 38,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.504Z",
      "updatedAt": "2024-09-07T14:32:21.504Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "85ea64b3-9cb4-439e-a244-23138c73f2c0",
      "number": 19,
      "content": "Còn đường kẻ gian ác giống như đêm khuya tăm tối;",
      "order": 0,
      "parNumber": 39,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.506Z",
      "updatedAt": "2024-09-07T14:32:21.506Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "88bb8911-49ea-4ae3-bda1-fec90b6e0425",
      "number": 19,
      "content": "Chúng ngã nhào mà không biết ngã vì sao.",
      "order": 1,
      "parNumber": 40,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.506Z",
      "updatedAt": "2024-09-07T14:32:21.506Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "28aa5d3c-4f00-44f8-b2ff-e3df2a3a09cd",
      "number": 20,
      "content": "Con ơi, hãy chú tâm để ý đến lời cha;",
      "order": 0,
      "parNumber": 41,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.509Z",
      "updatedAt": "2024-09-07T14:32:21.509Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "72cc2e66-5c3b-4e37-9fb1-689c726f2ab8",
      "number": 20,
      "content": "Hãy nghiêng tai nghe lời cha khuyên bảo.",
      "order": 1,
      "parNumber": 42,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.509Z",
      "updatedAt": "2024-09-07T14:32:21.509Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "a709e87f-bafb-490b-a34c-4f25a4a60c8b",
      "number": 21,
      "content": "Đừng để chúng vuột khỏi tầm mắt con;",
      "order": 0,
      "parNumber": 43,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.511Z",
      "updatedAt": "2024-09-07T14:32:21.511Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "285a8a25-c980-4058-aebe-da845eab6184",
      "number": 21,
      "content": "Hãy giữ chúng trong lòng con.",
      "order": 1,
      "parNumber": 44,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.511Z",
      "updatedAt": "2024-09-07T14:32:21.511Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "157cfd29-ac08-4f2c-9136-c2c1c823e168",
      "number": 22,
      "content": "Vì chúng là sự sống cho người nào tìm được chúng;",
      "order": 0,
      "parNumber": 45,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.514Z",
      "updatedAt": "2024-09-07T14:32:21.514Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "20dba85a-431e-4df3-8c33-c7a1357848be",
      "number": 22,
      "content": "Chúng là sức khỏe cho thân thể ai có chúng trong lòng.",
      "order": 1,
      "parNumber": 46,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.514Z",
      "updatedAt": "2024-09-07T14:32:21.514Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "537e0df7-827c-4924-8bda-fa29b787bc31",
      "number": 23,
      "content": "Hãy cẩn thận giữ tấm lòng của con hơn hết,",
      "order": 0,
      "parNumber": 47,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.516Z",
      "updatedAt": "2024-09-07T14:32:21.516Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "5861d4f2-b4f5-4109-9343-01a188d31fbb",
      "number": 23,
      "content": "Vì các nguồn sự sống đều từ đó mà ra.",
      "order": 1,
      "parNumber": 48,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.516Z",
      "updatedAt": "2024-09-07T14:32:21.516Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "f33f0731-5231-4023-89e7-e7b5cb3e9d0c",
      "number": 24,
      "content": "Hãy bỏ khỏi miệng con những lời điêu ngoa gian dối,",
      "order": 0,
      "parNumber": 49,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.518Z",
      "updatedAt": "2024-09-07T14:32:21.518Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "7411216d-a86a-4483-82f6-354ee38d2f98",
      "number": 24,
      "content": "Hãy quăng khỏi môi con những lời dối trá lọc lừa.",
      "order": 1,
      "parNumber": 50,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.518Z",
      "updatedAt": "2024-09-07T14:32:21.518Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "4cf1c8db-5e61-45d1-83a4-1b8f27afa203",
      "number": 25,
      "content": "Mắt con hãy nhìn thẳng về phía trước,",
      "order": 0,
      "parNumber": 51,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.520Z",
      "updatedAt": "2024-09-07T14:32:21.520Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "3e56f1a0-11d0-4ab7-98ce-918593f69fed",
      "number": 25,
      "content": "Ánh mắt con khá hướng thẳng về phía trước mặt con.",
      "order": 1,
      "parNumber": 52,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.520Z",
      "updatedAt": "2024-09-07T14:32:21.520Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "ab872c38-1dda-4f17-966c-8358b7c9f00e",
      "number": 26,
      "content": "Hãy giữ chân con trong đường ngay nẻo chánh,",
      "order": 0,
      "parNumber": 53,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.522Z",
      "updatedAt": "2024-09-07T14:32:21.522Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "2b0189b2-7d2b-4477-89a6-1136b1f76cf0",
      "number": 26,
      "content": "Để mọi đường lối con được thiết lập vững vàng.",
      "order": 1,
      "parNumber": 54,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.522Z",
      "updatedAt": "2024-09-07T14:32:21.522Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "97271798-e8ff-4d7a-b9b7-5d91f34a9656",
      "number": 27,
      "content": "Đừng quay qua bên phải hoặc quay qua bên trái;",
      "order": 0,
      "parNumber": 55,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.525Z",
      "updatedAt": "2024-09-07T14:32:21.525Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    },
    {
      "id": "b0cac583-3aa5-4788-98a2-f6187c935863",
      "number": 27,
      "content": "Hãy quay bước chân con ra khỏi chỗ gian tà.",
      "order": 1,
      "parNumber": 56,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:32:21.525Z",
      "updatedAt": "2024-09-07T14:32:21.525Z",
      "chapterId": "03bcb58c-01d9-455e-a5bd-8cbf5ed71b91"
    }
  ],
