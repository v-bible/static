{
  "chapter": {
    "id": "3b3ce2a6-407e-4df1-8c3d-038587765b07",
    "number": 19,
    "ref": "https://www.bible.com/bible/19/PRO.19.BD2011",
    "createdAt": "2024-09-07T11:51:11.755Z",
    "updatedAt": "2024-09-07T11:51:11.755Z",
    "bookId": "71c3c74b-28d8-4c20-87d4-7d45fc5c93e2"
  },
  "verses": [
    {
      "id": "f7141f9d-398d-4996-bafb-5c6a48408461",
      "number": 1,
      "content": "Thà nghèo mà sống thanh liêm,",
      "order": 0,
      "parNumber": 0,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.571Z",
      "updatedAt": "2024-09-07T14:34:55.571Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "97c9e8ee-4367-4b72-91e0-7550df2cc16f",
      "number": 1,
      "content": "Còn hơn có môi miệng gian xảo và làm một kẻ dại.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.571Z",
      "updatedAt": "2024-09-07T14:34:55.571Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "7817a941-f8e0-4420-8761-54a8739be89f",
      "number": 2,
      "content": "Nhiệt thành nhưng thiếu tri thức thì không tốt;",
      "order": 0,
      "parNumber": 2,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.582Z",
      "updatedAt": "2024-09-07T14:34:55.582Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "85ebe6f3-8851-48dd-ac2d-c379b6642546",
      "number": 2,
      "content": "Vội vàng làm nhưng chưa suy nghĩ kỹ chỉ làm hỏng việc mà thôi.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.582Z",
      "updatedAt": "2024-09-07T14:34:55.582Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "a2c98b99-b02c-4b0f-aa94-0da979d7ca90",
      "number": 3,
      "content": "Kẻ dại làm theo sự dại dột mình và thất bại;",
      "order": 0,
      "parNumber": 4,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.584Z",
      "updatedAt": "2024-09-07T14:34:55.584Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "59419bf4-b644-47a7-8e01-62eec167b6e2",
      "number": 3,
      "content": "Rồi nổi giận trong lòng và oán trách CHÚA.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.584Z",
      "updatedAt": "2024-09-07T14:34:55.584Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "9dc9f216-95c1-4ae1-b2db-9a8e9036596e",
      "number": 4,
      "content": "Khi giàu sang có lắm người xin kết bạn,",
      "order": 0,
      "parNumber": 6,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.587Z",
      "updatedAt": "2024-09-07T14:34:55.587Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "c0d20143-6213-49f3-96ae-060216da34a0",
      "number": 4,
      "content": "Lúc khó nghèo bạn hữu đều lìa bỏ lánh xa.",
      "order": 1,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.587Z",
      "updatedAt": "2024-09-07T14:34:55.587Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "b87a7363-e5e9-48a3-9dbb-c5a35d8ae45c",
      "number": 5,
      "content": "Kẻ làm chứng gian ắt phải mang hình phạt;",
      "order": 0,
      "parNumber": 8,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.589Z",
      "updatedAt": "2024-09-07T14:34:55.589Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "99723ec6-cf40-41a9-a737-3fcd5242a8b9",
      "number": 5,
      "content": "Kẻ nói dối không thoát khỏi bị sửa trị đâu.",
      "order": 1,
      "parNumber": 9,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.589Z",
      "updatedAt": "2024-09-07T14:34:55.589Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "a180a452-4565-45e9-8a9f-a8edb75199b8",
      "number": 6,
      "content": "Người quyền quý tốt bụng sẽ được nhiều người tìm xin ân huệ;",
      "order": 0,
      "parNumber": 10,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.591Z",
      "updatedAt": "2024-09-07T14:34:55.591Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "d84f2dd2-3ed0-41d3-80b8-c165f944e1d8",
      "number": 6,
      "content": "Người rộng rãi ban cho ai cũng mong được là bạn của mình.",
      "order": 1,
      "parNumber": 11,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.591Z",
      "updatedAt": "2024-09-07T14:34:55.591Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "17ec9fc9-9568-400a-909a-06aa7fe6e232",
      "number": 7,
      "content": "Người nghèo khó ngay cả bà con ruột thịt còn xa lánh,",
      "order": 0,
      "parNumber": 12,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.593Z",
      "updatedAt": "2024-09-07T14:34:55.593Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "a053f1ed-a8d5-4550-aa38-535aaff5c02a",
      "number": 7,
      "content": "Huống chi là bị bạn bè lìa bỏ;",
      "order": 1,
      "parNumber": 13,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.593Z",
      "updatedAt": "2024-09-07T14:34:55.593Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "3f05bbb2-2a59-4391-8120-a9d8f93a1e40",
      "number": 7,
      "content": "Khi người ấy đuổi theo xin giúp đỡ, họ đều đã cao bay xa chạy.",
      "order": 2,
      "parNumber": 14,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.593Z",
      "updatedAt": "2024-09-07T14:34:55.593Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "40fabafd-5602-44cb-b7b6-aa5fb1b726c1",
      "number": 8,
      "content": "Ai tìm kiếm khôn ngoan là yêu mến linh hồn mình;",
      "order": 0,
      "parNumber": 15,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.596Z",
      "updatedAt": "2024-09-07T14:34:55.596Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "41de6ae7-3dae-46cd-a31a-24e6df184dfb",
      "number": 8,
      "content": "Ai giữ lấy thông sáng ắt sẽ được thịnh vượng.",
      "order": 1,
      "parNumber": 16,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.596Z",
      "updatedAt": "2024-09-07T14:34:55.596Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "79e5daeb-f6c0-4f87-93ec-f1cd368f209f",
      "number": 9,
      "content": "Kẻ làm chứng gian ắt phải mang hình phạt,",
      "order": 0,
      "parNumber": 17,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.601Z",
      "updatedAt": "2024-09-07T14:34:55.601Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "50bbcd3a-5db5-457c-a91c-90d3064b093d",
      "number": 9,
      "content": "Kẻ nói dối sớm muộn gì cũng sẽ bị tàn mạt tiêu vong.",
      "order": 1,
      "parNumber": 18,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.601Z",
      "updatedAt": "2024-09-07T14:34:55.601Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "edc73497-a9e9-4009-8de3-ec3a39c3a0d1",
      "number": 10,
      "content": "Vinh hoa phú quý thật không xứng với kẻ rồ dại;",
      "order": 0,
      "parNumber": 19,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.606Z",
      "updatedAt": "2024-09-07T14:34:55.606Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "5c0b11d6-07b0-4635-ad2f-712e8b8f032b",
      "number": 10,
      "content": "Tôi tớ mà cai trị người quyền quý lại càng không xứng hợp.",
      "order": 1,
      "parNumber": 20,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.606Z",
      "updatedAt": "2024-09-07T14:34:55.606Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "dd60fb36-f52a-47c6-b40c-191ead67106b",
      "number": 11,
      "content": "Người khôn ngoan thường hay chậm giận,",
      "order": 0,
      "parNumber": 21,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.612Z",
      "updatedAt": "2024-09-07T14:34:55.612Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "14dc6ace-ff35-42e3-bdf5-29a9b7fd8e83",
      "number": 11,
      "content": "Người ấy lấy làm vinh hạnh bỏ qua lầm lỗi của người ta.",
      "order": 1,
      "parNumber": 22,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.612Z",
      "updatedAt": "2024-09-07T14:34:55.612Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "b25b51a2-3651-4ee5-9603-dfd86db3058a",
      "number": 12,
      "content": "Vua giận dữ thét la như sư tử rống,",
      "order": 0,
      "parNumber": 23,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.618Z",
      "updatedAt": "2024-09-07T14:34:55.618Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "51e9c9c4-9c19-4930-a837-ecb52e3bfb78",
      "number": 12,
      "content": "Lúc nguôi ngoai ban ân điển giống sương móc đồng xanh.",
      "order": 1,
      "parNumber": 24,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.618Z",
      "updatedAt": "2024-09-07T14:34:55.618Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "d1280de2-1eef-49e1-8606-96aa230ca533",
      "number": 13,
      "content": "Con ngu muội là tai họa cho cha nó;",
      "order": 0,
      "parNumber": 25,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.623Z",
      "updatedAt": "2024-09-07T14:34:55.623Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "45648fa6-474f-4aeb-ba3b-dc894d238889",
      "number": 13,
      "content": "Vợ hay cãi khác nào nhà bị dột mãi khi trời mưa.",
      "order": 1,
      "parNumber": 26,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.623Z",
      "updatedAt": "2024-09-07T14:34:55.623Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "4fed0f78-cd68-4a28-ba8a-98c6a10a9407",
      "number": 14,
      "content": "Nhà cửa và tài sản là cơ nghiệp do cha mẹ để lại;",
      "order": 0,
      "parNumber": 27,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.628Z",
      "updatedAt": "2024-09-07T14:34:55.628Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "96fde661-5bf9-48da-9dea-e1c64344bdb8",
      "number": 14,
      "content": "Nhưng người vợ khôn ngoan thì do CHÚA ban cho.",
      "order": 1,
      "parNumber": 28,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.628Z",
      "updatedAt": "2024-09-07T14:34:55.628Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "338ae62f-c234-4c76-8e1d-bb629601544a",
      "number": 15,
      "content": "Kẻ biếng nhác ham mê ngủ nghỉ;",
      "order": 0,
      "parNumber": 29,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.633Z",
      "updatedAt": "2024-09-07T14:34:55.633Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "e8d5b274-a2d1-4b66-a188-a4bb5406426b",
      "number": 15,
      "content": "Kẻ biếng lười bị đói khổ triền miên.",
      "order": 1,
      "parNumber": 30,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.633Z",
      "updatedAt": "2024-09-07T14:34:55.633Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "9a4458f7-749c-45a0-99d4-4453a0423433",
      "number": 16,
      "content": "Ai vâng giữ điều răn gìn giữ mạng sống mình;",
      "order": 0,
      "parNumber": 31,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.639Z",
      "updatedAt": "2024-09-07T14:34:55.639Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "ac95737a-bd16-49ec-938a-afd0e893be92",
      "number": 16,
      "content": "Kẻ khinh thường đường lối mình ắt sẽ chết chắc.",
      "order": 1,
      "parNumber": 32,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.639Z",
      "updatedAt": "2024-09-07T14:34:55.639Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "438317af-3653-4bfa-9c49-e8934236cb00",
      "number": 17,
      "content": "Ai thương xót người nghèo là cho CHÚA vay mượn;",
      "order": 0,
      "parNumber": 33,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.645Z",
      "updatedAt": "2024-09-07T14:34:55.645Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "6359a978-4de4-4682-86cc-bc79a51f4af9",
      "number": 17,
      "content": "Ngài sẽ trả lại đầy đủ việc phước thiện người ấy làm.",
      "order": 1,
      "parNumber": 34,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.645Z",
      "updatedAt": "2024-09-07T14:34:55.645Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "c4c5c70a-6824-41cb-9534-c4480c0d3795",
      "number": 18,
      "content": "Hãy sửa trị con bạn khi còn tia hy vọng;",
      "order": 0,
      "parNumber": 35,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.650Z",
      "updatedAt": "2024-09-07T14:34:55.650Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "8be6a791-689d-4895-ad87-3fb5839319f7",
      "number": 18,
      "content": "Nhưng lòng bạn đừng mong nó bị diệt vong.",
      "order": 1,
      "parNumber": 36,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.650Z",
      "updatedAt": "2024-09-07T14:34:55.650Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "3eba94db-59a8-4a22-ad86-b64115b92684",
      "number": 19,
      "content": "Người giận dữ thái quá ắt chuốc lấy hình phạt;",
      "order": 0,
      "parNumber": 37,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.655Z",
      "updatedAt": "2024-09-07T14:34:55.655Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "cf69a401-f22f-4b42-bd99-5003c3cc8082",
      "number": 19,
      "content": "Nếu bạn cứu người ấy lần này, hãy chuẩn bị để cứu lại lần sau.",
      "order": 1,
      "parNumber": 38,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.655Z",
      "updatedAt": "2024-09-07T14:34:55.655Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "6d38b1d7-3a3c-43ab-8a25-8837aa8bb543",
      "number": 20,
      "content": "Hãy lắng nghe lời khuyên bảo và hãy lãnh hội lời giáo huấn,",
      "order": 0,
      "parNumber": 39,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.660Z",
      "updatedAt": "2024-09-07T14:34:55.660Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "8f696349-a30b-472e-9048-0c5e74500105",
      "number": 20,
      "content": "Để có được khôn ngoan hầu biết ứng biến trong tương lai.",
      "order": 1,
      "parNumber": 40,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.660Z",
      "updatedAt": "2024-09-07T14:34:55.660Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "612b18f8-58c4-402c-a363-3d3b9c0a3233",
      "number": 21,
      "content": "Lòng người ta nghĩ ra nhiều mưu kế,",
      "order": 0,
      "parNumber": 41,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.665Z",
      "updatedAt": "2024-09-07T14:34:55.665Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "d86578c0-c0dc-4d0e-9260-63537f156893",
      "number": 21,
      "content": "Nhưng chỉ ý định của CHÚA mới đứng vững mà thôi.",
      "order": 1,
      "parNumber": 42,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.665Z",
      "updatedAt": "2024-09-07T14:34:55.665Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "2bb56458-38d4-45b1-a2cb-3def49d1acbd",
      "number": 22,
      "content": "Điều mong ước ở một người là lòng trung nghĩa của người ấy;",
      "order": 0,
      "parNumber": 43,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.670Z",
      "updatedAt": "2024-09-07T14:34:55.670Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "f7883a3e-673d-4537-9a58-e6d47eb5be02",
      "number": 22,
      "content": "Thà làm một người nghèo hơn làm một kẻ nói dối.",
      "order": 1,
      "parNumber": 44,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.670Z",
      "updatedAt": "2024-09-07T14:34:55.670Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "b9de7f46-88ae-49ca-abbb-bc373512136b",
      "number": 23,
      "content": "Lòng kính sợ CHÚA dẫn đến sự sống,",
      "order": 0,
      "parNumber": 45,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.675Z",
      "updatedAt": "2024-09-07T14:34:55.675Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "390b3b47-378c-4c2a-b45b-4373afaa1a1a",
      "number": 23,
      "content": "Có nó ở cùng thì sẽ được thỏa mãn",
      "order": 1,
      "parNumber": 46,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.675Z",
      "updatedAt": "2024-09-07T14:34:55.675Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "ac2b68e7-8f0f-4aed-97a9-c437e62e602c",
      "number": 23,
      "content": "Và không bị chiếu cố bởi tai ương.",
      "order": 2,
      "parNumber": 47,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.675Z",
      "updatedAt": "2024-09-07T14:34:55.675Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "a8859f7a-af63-43a2-9301-d38ef893d300",
      "number": 24,
      "content": "Kẻ biếng nhác chôn tay mình trong dĩa,",
      "order": 0,
      "parNumber": 48,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.680Z",
      "updatedAt": "2024-09-07T14:34:55.680Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "fca368c7-9d42-438b-95b4-5cde402300a4",
      "number": 24,
      "content": "Không nhấc nổi tay lên đưa thức ăn vào miệng.",
      "order": 1,
      "parNumber": 49,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.680Z",
      "updatedAt": "2024-09-07T14:34:55.680Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "217371d9-728d-4033-81d6-3f00e8643472",
      "number": 25,
      "content": "Đánh kẻ nhạo báng, kẻ khờ khạo sẽ học được thận trọng;",
      "order": 0,
      "parNumber": 50,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.685Z",
      "updatedAt": "2024-09-07T14:34:55.685Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "fc408c9c-9332-4f91-ad10-ca7be021156b",
      "number": 25,
      "content": "Quở người thông sáng, người ấy sẽ lãnh hội thêm tri thức.",
      "order": 1,
      "parNumber": 51,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.685Z",
      "updatedAt": "2024-09-07T14:34:55.685Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "8ca3096b-f36b-496d-9db0-5c3c80c1f6d0",
      "number": 26,
      "content": "Kẻ đánh cha đuổi mẹ là đứa con bất hiếu.",
      "order": 0,
      "parNumber": 52,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.690Z",
      "updatedAt": "2024-09-07T14:34:55.690Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "814f31dc-317e-43a6-97f6-e75116dbab66",
      "number": 26,
      "content": "Ấy là đứa con gây xấu hổ và sỉ nhục.",
      "order": 1,
      "parNumber": 53,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.690Z",
      "updatedAt": "2024-09-07T14:34:55.690Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "810aa29f-757a-4e95-a093-7028f78d8190",
      "number": 27,
      "content": "Con ơi, khi con không muốn nghe những lời chỉ dạy nữa,",
      "order": 0,
      "parNumber": 54,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.695Z",
      "updatedAt": "2024-09-07T14:34:55.695Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "2132b4a0-0e4a-41c3-a9a5-9d4b7d31dfa4",
      "number": 27,
      "content": "Con sẽ lạc xa những lời của tri thức.",
      "order": 1,
      "parNumber": 55,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.695Z",
      "updatedAt": "2024-09-07T14:34:55.695Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "c1a08cd8-e73a-4ab7-9aac-d46f0e325729",
      "number": 28,
      "content": "Kẻ làm chứng dối nhạo báng công lý;",
      "order": 0,
      "parNumber": 56,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.701Z",
      "updatedAt": "2024-09-07T14:34:55.701Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "54ca0c0c-5bde-4508-b502-b8f1f73d4e79",
      "number": 28,
      "content": "Miệng kẻ gian tà ăn ngấu nghiến tội lỗi.",
      "order": 1,
      "parNumber": 57,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.701Z",
      "updatedAt": "2024-09-07T14:34:55.701Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "1e3dd7cd-23a8-413c-8816-6634c732531b",
      "number": 29,
      "content": "Các án phạt dành cho phường nhạo báng,",
      "order": 0,
      "parNumber": 58,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.706Z",
      "updatedAt": "2024-09-07T14:34:55.706Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    },
    {
      "id": "c771c1d0-c9f2-4c13-b82c-03400ca86aee",
      "number": 29,
      "content": "Các đòn roi dành cho lưng bọn điên rồ.",
      "order": 1,
      "parNumber": 59,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:34:55.706Z",
      "updatedAt": "2024-09-07T14:34:55.706Z",
      "chapterId": "3b3ce2a6-407e-4df1-8c3d-038587765b07"
    }
  ],
