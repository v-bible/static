    }
  ],
  "headings": [
    {
      "id": "c333633d-8376-40d6-a223-1a2bc414f384",
      "content": "Đa-vít Trị Vì Trên Toàn Thể I-sơ-ra-ên",
      "order": 0,
      "createdAt": "2024-09-07T12:47:18.594Z",
      "updatedAt": "2024-09-07T12:47:18.594Z",
      "verseId": "32d13284-aa0a-481b-85c1-45daedf3ee13",
      "chapterId": "09dfe6db-12c1-4cc2-8b51-f08b6fa236b0"
    },
    {
      "id": "6b73d21f-3c9f-46d1-a81c-067558ffa8de",
      "content": "Chiếm Thành Giê-ru-sa-lem",
      "order": 0,
      "createdAt": "2024-09-07T12:47:18.594Z",
      "updatedAt": "2024-09-07T12:47:18.594Z",
      "verseId": "132caaf5-f5d3-42a3-bd4c-993c92c087ee",
      "chapterId": "09dfe6db-12c1-4cc2-8b51-f08b6fa236b0"
    },
    {
      "id": "bb7ff279-4c67-4942-abd0-9de54e253f47",
