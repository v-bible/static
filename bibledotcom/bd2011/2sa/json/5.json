    },
    {
      "id": "7ebb47b5-881c-4a62-8fac-ea2e6a8d3c00",
      "content": "Nghĩa là Ba-anh bị tan nát",
      "position": 195,
      "order": 0,
      "createdAt": "2024-09-07T12:47:12.563Z",
      "updatedAt": "2024-09-07T12:47:12.563Z",
