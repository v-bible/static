    },
    {
      "id": "f570811e-ab5a-4deb-92bb-b48a7f79253f",
      "content": "Có bản dịch là Ê-dôm",
      "position": 9,
      "order": 5,
      "createdAt": "2024-09-07T12:47:36.747Z",
      "updatedAt": "2024-09-07T12:47:36.747Z",
