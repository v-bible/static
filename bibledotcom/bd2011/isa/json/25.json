{
  "chapter": {
    "id": "b37ba65c-06c1-4507-a1b4-f03571d638f3",
    "number": 25,
    "ref": "https://www.bible.com/bible/19/ISA.25.BD2011",
    "createdAt": "2024-09-07T11:51:11.971Z",
    "updatedAt": "2024-09-07T11:51:11.971Z",
    "bookId": "dd94a7a2-46d4-489f-a1b9-a328e1eafa8e"
  },
  "verses": [
    {
      "id": "a092eb64-db2e-4ab3-b6a4-f66709d76cda",
      "number": 1,
      "content": "Lạy CHÚA, Ngài là Đức Chúa Trời của con;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.120Z",
      "updatedAt": "2024-09-07T14:45:33.120Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "ad7c3ccc-78d0-441c-abd1-17c4f27cdabf",
      "number": 1,
      "content": "Con tôn ngợi Ngài, con chúc tụng danh Ngài,",
      "order": 1,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.120Z",
      "updatedAt": "2024-09-07T14:45:33.120Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "024ebc48-f7b3-4f33-990c-6b82f0d0ab35",
      "number": 1,
      "content": "Vì Ngài đã làm những việc lạ lùng.",
      "order": 2,
      "parNumber": 3,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.120Z",
      "updatedAt": "2024-09-07T14:45:33.120Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "d9f73569-7293-44f3-837b-6f2040f650aa",
      "number": 1,
      "content": "Ngài thực hiện các chương trình đã định sẵn từ xưa cách thành tín và chân thật.",
      "order": 3,
      "parNumber": 4,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.120Z",
      "updatedAt": "2024-09-07T14:45:33.120Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "da35ae38-c503-43fc-86be-0cf8f0d0e518",
      "number": 2,
      "content": "Vì Ngài đã biến một thành phố thành một đống vụn,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.131Z",
      "updatedAt": "2024-09-07T14:45:33.131Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "cbd56492-d744-49be-8a59-a3d8bdf7dc7f",
      "number": 2,
      "content": "Một thành trì kiên cố ra một nơi đổ nát điêu tàn;",
      "order": 1,
      "parNumber": 6,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.131Z",
      "updatedAt": "2024-09-07T14:45:33.131Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "e5bc39b9-f588-4cb4-b363-753eb412a443",
      "number": 2,
      "content": "Khu dinh thự của các dân ngoại không còn là một khu phố nữa;",
      "order": 2,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.131Z",
      "updatedAt": "2024-09-07T14:45:33.131Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "b36ebbc6-ad15-489f-a459-249f6ea20d62",
      "number": 2,
      "content": "Nó sẽ không bao giờ được xây dựng lại.",
      "order": 3,
      "parNumber": 8,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.131Z",
      "updatedAt": "2024-09-07T14:45:33.131Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "f0d2bda4-715f-4b64-bd02-1c35465b2847",
      "number": 3,
      "content": "Vì thế các dân tộc hùng cường sẽ tôn vinh Ngài;",
      "order": 0,
      "parNumber": 9,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.135Z",
      "updatedAt": "2024-09-07T14:45:33.135Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "8ff72255-22b2-4839-9360-5bcd258beab6",
      "number": 3,
      "content": "Những thành trì của các dân hung hãn sẽ kính sợ Ngài,",
      "order": 1,
      "parNumber": 10,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.135Z",
      "updatedAt": "2024-09-07T14:45:33.135Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "b460939e-da53-4e67-abaf-18ce212001a0",
      "number": 4,
      "content": "Vì Ngài là nơi ẩn núp của người nghèo khó,",
      "order": 0,
      "parNumber": 11,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.138Z",
      "updatedAt": "2024-09-07T14:45:33.138Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "1bc98e68-5bed-4e20-8313-1109233dd277",
      "number": 4,
      "content": "Nơi nương náu cho người khốn cùng trong lúc gian nguy,",
      "order": 1,
      "parNumber": 12,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.138Z",
      "updatedAt": "2024-09-07T14:45:33.138Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "dd44f5c1-57e1-47a3-98ce-a4cebae25066",
      "number": 4,
      "content": "Nơi trú ẩn trong khi bão tố, và bóng mát giữa lúc nắng thiêu;",
      "order": 2,
      "parNumber": 13,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.138Z",
      "updatedAt": "2024-09-07T14:45:33.138Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "dfecff9d-bd7d-4bec-8a1b-e40dcc14932f",
      "number": 4,
      "content": "Vì sát khí của quân cường bạo như bão tố đập tới tấp vào tường,",
      "order": 3,
      "parNumber": 14,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.138Z",
      "updatedAt": "2024-09-07T14:45:33.138Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "d4a008b4-cfff-421e-a686-e651781b63c5",
      "number": 5,
      "content": "Tiếng náo động của các dân ngoại như nắng gắt giữa vùng khô hạn;",
      "order": 0,
      "parNumber": 15,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.141Z",
      "updatedAt": "2024-09-07T14:45:33.141Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "a4851094-74a7-4def-8174-69d33078949b",
      "number": 5,
      "content": "Ngài chế ngự chúng",
      "order": 1,
      "parNumber": 16,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.141Z",
      "updatedAt": "2024-09-07T14:45:33.141Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "32639a44-81fc-4467-b77e-a886202048a6",
      "number": 5,
      "content": "Như nắng nóng bị đám mây che mát;",
      "order": 2,
      "parNumber": 17,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.141Z",
      "updatedAt": "2024-09-07T14:45:33.141Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "c0947d36-4b18-4a15-917b-6faa097f90a8",
      "number": 5,
      "content": "Tiếng ca hát của quân cường bạo đành im bặt.",
      "order": 3,
      "parNumber": 18,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.141Z",
      "updatedAt": "2024-09-07T14:45:33.141Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "2bd23ce6-94ff-409c-9722-000f2d331db8",
      "number": 6,
      "content": "Trên núi này CHÚA các đạo quân sẽ thết đãi muôn dân một đại tiệc,",
      "order": 0,
      "parNumber": 19,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.145Z",
      "updatedAt": "2024-09-07T14:45:33.145Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "9b68498a-ff50-4aef-bec2-17337c1eb103",
      "number": 6,
      "content": "Một đại tiệc với thịt béo, một đại tiệc với rượu ngon;",
      "order": 1,
      "parNumber": 20,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.145Z",
      "updatedAt": "2024-09-07T14:45:33.145Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "eb493686-0ffd-4c56-9ebe-36bb430f4a8c",
      "number": 6,
      "content": "Thịt thật béo bổ và rượu tinh khiết thượng hạng.",
      "order": 2,
      "parNumber": 21,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.145Z",
      "updatedAt": "2024-09-07T14:45:33.145Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "aaa6897a-4538-442a-a88c-98c51a654d72",
      "number": 7,
      "content": "Cũng tại trên núi này Ngài sẽ hủy bỏ",
      "order": 0,
      "parNumber": 22,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.148Z",
      "updatedAt": "2024-09-07T14:45:33.148Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "103fb1c6-8f48-43aa-a107-aac502c73c09",
      "number": 7,
      "content": "Tấm màn bao trùm mọi dân;",
      "order": 1,
      "parNumber": 23,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.148Z",
      "updatedAt": "2024-09-07T14:45:33.148Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "46978663-777c-46de-b681-78edb712620c",
      "number": 7,
      "content": "Một tấm màn bao phủ tất cả các nước.",
      "order": 2,
      "parNumber": 24,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.148Z",
      "updatedAt": "2024-09-07T14:45:33.148Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "e0faf3e2-d746-4468-844c-9a0812b79f0c",
      "number": 8,
      "content": "Ngài sẽ tiêu diệt tử thần vĩnh viễn;",
      "order": 0,
      "parNumber": 25,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.151Z",
      "updatedAt": "2024-09-07T14:45:33.151Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "4fefd53b-43e6-4462-89e2-4085ab34dc9f",
      "number": 8,
      "content": "CHÚA Hằng Hữu sẽ lau khô dòng lệ trên mặt mọi người;",
      "order": 1,
      "parNumber": 26,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.151Z",
      "updatedAt": "2024-09-07T14:45:33.151Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "825f215b-41ac-4460-abd3-a130673156a5",
      "number": 8,
      "content": "Ngài sẽ cất đi nỗi ô nhục của dân Ngài trên toàn thế giới,",
      "order": 2,
      "parNumber": 27,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.151Z",
      "updatedAt": "2024-09-07T14:45:33.151Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "14dddca2-0bd4-4dd0-a0a7-c44e4abe08f3",
      "number": 8,
      "content": "Vì CHÚA đã phán vậy.",
      "order": 3,
      "parNumber": 28,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.151Z",
      "updatedAt": "2024-09-07T14:45:33.151Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "cb465ef5-0db8-4a5e-9d61-d7ba1e2afc0c",
      "number": 9,
      "content": "Trong ngày ấy người ta sẽ nói:",
      "order": 0,
      "parNumber": 29,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.155Z",
      "updatedAt": "2024-09-07T14:45:33.155Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "01531967-b39f-472b-9a32-81166e98d758",
      "number": 9,
      "content": "Đây là Đức Chúa Trời chúng ta; chúng ta trông đợi Ngài, và Ngài giải cứu chúng ta.",
      "order": 1,
      "parNumber": 30,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.155Z",
      "updatedAt": "2024-09-07T14:45:33.155Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "61c2e781-d268-4307-8546-a06292b2b17f",
      "number": 9,
      "content": "Đây là CHÚA chúng ta hằng chờ đợi;",
      "order": 2,
      "parNumber": 31,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.155Z",
      "updatedAt": "2024-09-07T14:45:33.155Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "32e342b0-724a-46a2-9031-16bf10136206",
      "number": 9,
      "content": "Chúng ta hãy hân hoan và mừng rỡ hưởng ơn cứu rỗi của Ngài,",
      "order": 3,
      "parNumber": 32,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.155Z",
      "updatedAt": "2024-09-07T14:45:33.155Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "0fcfcfef-e9c0-4cc5-99e1-2f6508e97610",
      "number": 10,
      "content": "Vì CHÚA sẽ đặt tay Ngài trên núi này.",
      "order": 0,
      "parNumber": 33,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.158Z",
      "updatedAt": "2024-09-07T14:45:33.158Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "0d2b5853-f318-4d6e-9489-22f21747f2a0",
      "number": 10,
      "content": "Người Mô-áp sẽ bị chà đạp ngay tại xứ sở của họ,",
      "order": 1,
      "parNumber": 35,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.158Z",
      "updatedAt": "2024-09-07T14:45:33.158Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "8183f048-99ed-4722-a8c0-15e30ae25c4a",
      "number": 10,
      "content": "Như rơm bị đạp dưới hố phân.",
      "order": 2,
      "parNumber": 36,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.158Z",
      "updatedAt": "2024-09-07T14:45:33.158Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "7f9eaa90-a428-4942-8089-3e3120ecb0d3",
      "number": 11,
      "content": "Dù giữa lúc ấy họ đưa tay ra tự cứu,",
      "order": 0,
      "parNumber": 37,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.161Z",
      "updatedAt": "2024-09-07T14:45:33.161Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "cbf15ba8-3341-4b4a-ae3a-e7e33b9c126e",
      "number": 11,
      "content": "Như người bơi vươn tay ra để sải bơi,",
      "order": 1,
      "parNumber": 38,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.161Z",
      "updatedAt": "2024-09-07T14:45:33.161Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "282c9d7e-dea0-4308-9a28-37ced0a33b4e",
      "number": 11,
      "content": "Nhưng Ngài sẽ triệt hạ tính kiêu căng của họ, dù cánh tay họ cố vùng vẫy vươn lên.",
      "order": 2,
      "parNumber": 39,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.161Z",
      "updatedAt": "2024-09-07T14:45:33.161Z",
      "chapterId": "b37ba65c-06c1-4507-a1b4-f03571d638f3"
    },
    {
      "id": "b6510438-4c43-4f62-b1a8-a4c42a92cb0c",
      "number": 12,
      "content": "Những tường thành của họ dù lớn cao kiên cố thế nào",
      "order": 0,
      "parNumber": 40,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:45:33.165Z",
      "updatedAt": "2024-09-07T14:45:33.165Z",
