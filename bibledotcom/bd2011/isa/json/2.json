      "chapterId": "1c00c694-f4ec-4dfd-9f83-bbd5a1e14d50"
    },
    {
      "id": "9164ba7c-3601-474d-9ff5-98d54dc63095",
      "content": "Ngày của CHÚA",
      "order": 0,
      "createdAt": "2024-09-07T14:41:32.727Z",
      "updatedAt": "2024-09-07T14:41:32.727Z",
      "verseId": "36b0d823-bc9f-4def-9215-55a17be75fc2",
      "chapterId": "1c00c694-f4ec-4dfd-9f83-bbd5a1e14d50"
    }
  ],
