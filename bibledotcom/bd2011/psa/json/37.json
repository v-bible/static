{
  "chapter": {
    "id": "353b5d49-2ee4-4686-be27-f7c8676528c2",
    "number": 37,
    "ref": "https://www.bible.com/bible/19/PSA.37.BD2011",
    "createdAt": "2024-09-07T11:51:10.918Z",
    "updatedAt": "2024-09-07T11:51:10.918Z",
    "bookId": "67614455-e41d-4311-bd36-6e33fe552385"
  },
  "verses": [
    {
      "id": "f4d13eff-749d-406a-b2bb-b366c74d3bac",
      "number": 1,
      "content": "Chớ phiền lòng vì những kẻ làm ác;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.472Z",
      "updatedAt": "2024-09-07T14:02:33.472Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "1e5267e0-63a8-4bbb-ab5c-f2d916cede7a",
      "number": 1,
      "content": "Cũng đừng ganh tức vì những kẻ làm chuyện gian tà,",
      "order": 1,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.472Z",
      "updatedAt": "2024-09-07T14:02:33.472Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "8081d598-cd65-4ce4-a0fd-fd34d96fd6e1",
      "number": 2,
      "content": "Vì chúng sẽ mau héo khô như cỏ dại,",
      "order": 0,
      "parNumber": 3,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.481Z",
      "updatedAt": "2024-09-07T14:02:33.481Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "93a7bf9f-1491-4a33-8d3b-09b446602ef3",
      "number": 2,
      "content": "Và sẽ chóng úa tàn như rau dại mới vừa xanh.",
      "order": 1,
      "parNumber": 4,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.481Z",
      "updatedAt": "2024-09-07T14:02:33.481Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "ff8df603-e7a2-4d08-86e0-20089ffeb023",
      "number": 3,
      "content": "Hãy tin cậy CHÚA và làm điều lành;",
      "order": 0,
      "parNumber": 5,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.484Z",
      "updatedAt": "2024-09-07T14:02:33.484Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "e5b742cc-b7ae-404c-9416-86ace982af57",
      "number": 3,
      "content": "Khá ở trong xứ và nuôi mình bằng sự thành tín của Ngài.",
      "order": 1,
      "parNumber": 6,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.484Z",
      "updatedAt": "2024-09-07T14:02:33.484Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "0a1fd563-3f64-4a81-bc0f-4a1a6d6d124f",
      "number": 4,
      "content": "Hãy vui thỏa trong CHÚA,",
      "order": 0,
      "parNumber": 7,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.487Z",
      "updatedAt": "2024-09-07T14:02:33.487Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "0531d35e-163f-4877-b93d-c74ece039d0e",
      "number": 4,
      "content": "Và Ngài sẽ ban cho bạn những điều lòng bạn ao ước.",
      "order": 1,
      "parNumber": 8,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.487Z",
      "updatedAt": "2024-09-07T14:02:33.487Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "d62aa63d-ae31-41c7-9ed4-4b3f72d2b612",
      "number": 5,
      "content": "Hãy phó thác đường lối bạn cho CHÚA,",
      "order": 0,
      "parNumber": 9,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.491Z",
      "updatedAt": "2024-09-07T14:02:33.491Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "9295e64d-b0de-4f9a-b8e4-e0ca6747759a",
      "number": 5,
      "content": "Hãy tin cậy Ngài, Ngài sẽ làm thành điều bạn muốn.",
      "order": 1,
      "parNumber": 10,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.491Z",
      "updatedAt": "2024-09-07T14:02:33.491Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "2edeea3e-200c-47cc-af9c-42042a54bfb3",
      "number": 6,
      "content": "Ngài sẽ làm cho đức công chính của bạn rạng ngời như ánh sáng,",
      "order": 0,
      "parNumber": 11,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.493Z",
      "updatedAt": "2024-09-07T14:02:33.493Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "5b96a226-1ff2-4d74-a4df-71a3b7b816d3",
      "number": 6,
      "content": "Và sự trong sạch của bạn lộ ra như giữa trưa.",
      "order": 1,
      "parNumber": 12,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.493Z",
      "updatedAt": "2024-09-07T14:02:33.493Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "cef41f77-61b5-4c26-b781-5606d194269c",
      "number": 7,
      "content": "Hãy an tâm trong CHÚA và kiên nhẫn chờ đợi Ngài;",
      "order": 0,
      "parNumber": 13,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.495Z",
      "updatedAt": "2024-09-07T14:02:33.495Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "1a35d68d-2709-432d-b228-c0f6a8d62a65",
      "number": 7,
      "content": "Đừng phiền lòng vì người khác được may mắn trong đường lối họ,",
      "order": 1,
      "parNumber": 14,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.495Z",
      "updatedAt": "2024-09-07T14:02:33.495Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "e576552f-330e-4b26-b36c-77fc3ab8a3d1",
      "number": 7,
      "content": "Hoặc vì họ thực hiện được những mưu ác.",
      "order": 2,
      "parNumber": 15,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.495Z",
      "updatedAt": "2024-09-07T14:02:33.495Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "cd942cc1-aca6-4413-a105-eeb4439d074b",
      "number": 8,
      "content": "Hãy ngưng cơn giận và bỏ sự tức giận đi;",
      "order": 0,
      "parNumber": 16,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.498Z",
      "updatedAt": "2024-09-07T14:02:33.498Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "e1516d6f-c80f-4ed3-ad49-1c6f85a47826",
      "number": 8,
      "content": "Đừng bực bội làm gì, vì nuôi giận như thế chỉ dẫn đến việc ác.",
      "order": 1,
      "parNumber": 17,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.498Z",
      "updatedAt": "2024-09-07T14:02:33.498Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "f60036ed-c768-4880-83ed-e15906b5dab9",
      "number": 9,
      "content": "Phàm kẻ nào làm điều ác ắt sẽ bị diệt mất,",
      "order": 0,
      "parNumber": 18,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.500Z",
      "updatedAt": "2024-09-07T14:02:33.500Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "5750b099-da33-4b2d-ba52-3c5ea658546e",
      "number": 9,
      "content": "Nhưng ai trông đợi CHÚA sẽ hưởng được đất.",
      "order": 1,
      "parNumber": 19,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.500Z",
      "updatedAt": "2024-09-07T14:02:33.500Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "28242726-b0db-4388-bda8-6ced4acb0cca",
      "number": 10,
      "content": "Chỉ trong chốc lát thôi, kẻ ác sẽ không còn nữa;",
      "order": 0,
      "parNumber": 20,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.501Z",
      "updatedAt": "2024-09-07T14:02:33.501Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "d7fdc2d4-722a-4424-a3d2-438775e8cb22",
      "number": 10,
      "content": "Bạn sẽ tìm kiếm chỗ nó, nhưng nó chẳng còn ở đó nữa.",
      "order": 1,
      "parNumber": 21,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.501Z",
      "updatedAt": "2024-09-07T14:02:33.501Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "f54cee83-b606-4e64-a951-d45d4d03ab5f",
      "number": 11,
      "content": "Nhưng người hiền lành sẽ hưởng được đất",
      "order": 0,
      "parNumber": 22,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.503Z",
      "updatedAt": "2024-09-07T14:02:33.503Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "2eebd090-de0f-4c63-8ed6-1bee2fd5100c",
      "number": 11,
      "content": "Và được vui thỏa trong bình an thịnh vượng dồi dào.",
      "order": 1,
      "parNumber": 23,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.503Z",
      "updatedAt": "2024-09-07T14:02:33.503Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "20cb954d-7ba7-41d2-bbd7-57e4f6a4c2f4",
      "number": 12,
      "content": "Kẻ ác lập mưu hại người ngay lành,",
      "order": 0,
      "parNumber": 24,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.505Z",
      "updatedAt": "2024-09-07T14:02:33.505Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "06788aef-827d-43ec-98f4-769a9913372c",
      "number": 12,
      "content": "Và nghiến răng chống lại người ấy;",
      "order": 1,
      "parNumber": 25,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.505Z",
      "updatedAt": "2024-09-07T14:02:33.505Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "b9f3b773-f9c4-4e9f-a3f0-1fac6b0c7fe9",
      "number": 13,
      "content": "Nhưng CHÚA cười nó,",
      "order": 0,
      "parNumber": 26,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.507Z",
      "updatedAt": "2024-09-07T14:02:33.507Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "34bbfd5c-f599-48c4-ba21-4e00119545bd",
      "number": 13,
      "content": "Vì Ngài thấy ngày tàn của nó đến gần.",
      "order": 1,
      "parNumber": 27,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.507Z",
      "updatedAt": "2024-09-07T14:02:33.507Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "8e09ac88-81b2-4d26-b4c2-7e1d5302210a",
      "number": 14,
      "content": "Kẻ ác rút gươm và giương cung",
      "order": 0,
      "parNumber": 28,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.510Z",
      "updatedAt": "2024-09-07T14:02:33.510Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "17d5735f-a6bd-4eb9-a6c7-a709b742cb44",
      "number": 14,
      "content": "Để đánh hạ người nghèo và khốn khổ,",
      "order": 1,
      "parNumber": 29,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.510Z",
      "updatedAt": "2024-09-07T14:02:33.510Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "b82db170-8722-44d2-8171-a7b0714b5e96",
      "number": 14,
      "content": "Và để giết hại người sống ngay lành;",
      "order": 2,
      "parNumber": 30,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.510Z",
      "updatedAt": "2024-09-07T14:02:33.510Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "6c808372-396c-463d-9a98-f4f04fc6b114",
      "number": 15,
      "content": "Nhưng gươm của nó sẽ đâm vào lòng nó,",
      "order": 0,
      "parNumber": 31,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.513Z",
      "updatedAt": "2024-09-07T14:02:33.513Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "43a01f13-a4b9-4330-a029-219076311cd9",
      "number": 15,
      "content": "Và cung của nó sẽ gãy cụp làm hai.",
      "order": 1,
      "parNumber": 32,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.513Z",
      "updatedAt": "2024-09-07T14:02:33.513Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "d8ba6c54-78c1-41a9-aa62-759e57cfbbbe",
      "number": 16,
      "content": "Những gì người ngay lành có tuy ít ỏi,",
      "order": 0,
      "parNumber": 33,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.516Z",
      "updatedAt": "2024-09-07T14:02:33.516Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "4a3668c0-d971-4b81-9e3e-c032888129b3",
      "number": 16,
      "content": "Nhưng tốt hơn của cải nhiều của lắm kẻ gian tà.",
      "order": 1,
      "parNumber": 34,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.516Z",
      "updatedAt": "2024-09-07T14:02:33.516Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "01c7dc27-dcee-48c0-a2be-8c6cd7b13e1c",
      "number": 17,
      "content": "Vì cánh tay của kẻ ác sẽ bị gãy,",
      "order": 0,
      "parNumber": 35,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.518Z",
      "updatedAt": "2024-09-07T14:02:33.518Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "673223a9-8fb3-42ab-89a7-8dc87ff25860",
      "number": 17,
      "content": "Nhưng CHÚA bảo vệ người ngay lành.",
      "order": 1,
      "parNumber": 36,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.518Z",
      "updatedAt": "2024-09-07T14:02:33.518Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "800cd28c-0b33-4e44-902e-851a8ad936c1",
      "number": 18,
      "content": "CHÚA biết những ngày của người thanh liêm trong sạch;",
      "order": 0,
      "parNumber": 37,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.520Z",
      "updatedAt": "2024-09-07T14:02:33.520Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "8cb5e72d-3aa9-4cee-a43e-edb543070965",
      "number": 18,
      "content": "Cơ nghiệp của họ sẽ còn lại đời đời.",
      "order": 1,
      "parNumber": 38,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.520Z",
      "updatedAt": "2024-09-07T14:02:33.520Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "957eadbe-6d94-4d84-ba68-af397352d430",
      "number": 19,
      "content": "Họ sẽ không bị hổ thẹn trong thời tai họa;",
      "order": 0,
      "parNumber": 39,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.522Z",
      "updatedAt": "2024-09-07T14:02:33.522Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "5cec39b2-ecf0-43f9-90e1-07cc871916c2",
      "number": 19,
      "content": "Trong thời đói kém họ vẫn được no nê.",
      "order": 1,
      "parNumber": 40,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.522Z",
      "updatedAt": "2024-09-07T14:02:33.522Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "6b1e1451-e399-4d5c-8022-7c9748de4489",
      "number": 20,
      "content": "Nhưng kẻ ác sẽ bị chết mất;",
      "order": 0,
      "parNumber": 41,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.524Z",
      "updatedAt": "2024-09-07T14:02:33.524Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "78694590-348e-49a2-a922-97f8578d2ab8",
      "number": 20,
      "content": "Những kẻ thù của CHÚA tựa như sắc đẹp của đồng cỏ;",
      "order": 1,
      "parNumber": 42,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.524Z",
      "updatedAt": "2024-09-07T14:02:33.524Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "1ab63397-d391-4c6e-82e3-d4e5c0d34c3f",
      "number": 20,
      "content": "Chúng bị tan biến như khói tan đi.",
      "order": 2,
      "parNumber": 43,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.524Z",
      "updatedAt": "2024-09-07T14:02:33.524Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "1b1d15d3-810e-42bb-b401-7bba05a6394a",
      "number": 21,
      "content": "Kẻ ác vay mượn rồi không trả lại,",
      "order": 0,
      "parNumber": 44,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.526Z",
      "updatedAt": "2024-09-07T14:02:33.526Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "e89f28b1-04cd-4a79-aa8b-b598173a0130",
      "number": 21,
      "content": "Còn người ngay lành cứ rộng rãi ban cho.",
      "order": 1,
      "parNumber": 45,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.526Z",
      "updatedAt": "2024-09-07T14:02:33.526Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "0b222f18-980b-488e-9740-09f3155399ca",
      "number": 22,
      "content": "Vì ai được CHÚA ban phước sẽ hưởng được đất,",
      "order": 0,
      "parNumber": 46,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.528Z",
      "updatedAt": "2024-09-07T14:02:33.528Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "bc21f044-541d-424a-885c-49cc334b14d5",
      "number": 22,
      "content": "Nhưng kẻ nào bị Ngài nguyền rủa sẽ bị diệt vong.",
      "order": 1,
      "parNumber": 47,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.528Z",
      "updatedAt": "2024-09-07T14:02:33.528Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "89e7d109-5377-4eba-a12f-3b7fe2ded11c",
      "number": 23,
      "content": "CHÚA làm cho vững các bước của người tốt,",
      "order": 0,
      "parNumber": 48,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.530Z",
      "updatedAt": "2024-09-07T14:02:33.530Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "c7134498-806b-4de2-b101-45a0d5947e4b",
      "number": 23,
      "content": "Vì Ngài ưa thích đường lối của người ấy.",
      "order": 1,
      "parNumber": 49,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.530Z",
      "updatedAt": "2024-09-07T14:02:33.530Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "37d91092-c307-4535-ac05-e44701d4914c",
      "number": 24,
      "content": "Nếu người ấy có vấp, người ấy sẽ không ngã dài,",
      "order": 0,
      "parNumber": 50,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.532Z",
      "updatedAt": "2024-09-07T14:02:33.532Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "6ca952a8-7d5e-4a9c-998e-1a2fce9c531d",
      "number": 24,
      "content": "Vì CHÚA sẽ nắm lấy tay người ấy giữ lại.",
      "order": 1,
      "parNumber": 51,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.532Z",
      "updatedAt": "2024-09-07T14:02:33.532Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "ed185a37-09ab-44bd-826c-2fc4253ee0f4",
      "number": 25,
      "content": "Trước tôi trẻ, giờ tôi già,",
      "order": 0,
      "parNumber": 52,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.538Z",
      "updatedAt": "2024-09-07T14:02:33.538Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "dbabb02d-a189-4efb-834d-155f404fc23c",
      "number": 25,
      "content": "Nhưng tôi chưa thấy người ngay lành nào bị bỏ,",
      "order": 1,
      "parNumber": 53,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.538Z",
      "updatedAt": "2024-09-07T14:02:33.538Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "13d77230-1f9a-4076-a7f7-5b5ce5f0b246",
      "number": 25,
      "content": "Hoặc dòng dõi người ấy phải đi ăn mày.",
      "order": 2,
      "parNumber": 54,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.538Z",
      "updatedAt": "2024-09-07T14:02:33.538Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "5c7c87c9-9b52-40a8-a144-6607306585bc",
      "number": 26,
      "content": "Cả đời người ấy cứ làm ơn và cho mượn;",
      "order": 0,
      "parNumber": 55,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.543Z",
      "updatedAt": "2024-09-07T14:02:33.543Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "06ac181e-1397-42f1-a2a2-bc9f483fc040",
      "number": 26,
      "content": "Dòng dõi người ấy trở thành nguồn phước cho nhiều người.",
      "order": 1,
      "parNumber": 56,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.543Z",
      "updatedAt": "2024-09-07T14:02:33.543Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "419ac9d0-edcc-425f-a05f-e4d017608c32",
      "number": 27,
      "content": "Hãy tránh điều ác và làm điều thiện,",
      "order": 0,
      "parNumber": 57,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.548Z",
      "updatedAt": "2024-09-07T14:02:33.548Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "1bf4afd9-45b9-4f17-b6af-632bcea92388",
      "number": 27,
      "content": "Để bạn sẽ ở trong xứ mãi mãi.",
      "order": 1,
      "parNumber": 58,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.548Z",
      "updatedAt": "2024-09-07T14:02:33.548Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "48f786d9-b410-40f4-8793-95cf77a7d3b8",
      "number": 28,
      "content": "Vì CHÚA yêu thương người công chính;",
      "order": 0,
      "parNumber": 59,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.553Z",
      "updatedAt": "2024-09-07T14:02:33.553Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "8d6932b7-b297-4ca1-83e5-a75fcd232d4f",
      "number": 28,
      "content": "Ngài không bỏ các thánh đồ của Ngài;",
      "order": 1,
      "parNumber": 60,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.553Z",
      "updatedAt": "2024-09-07T14:02:33.553Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "6fe3777c-ea7c-44e0-93f1-9f172a64c496",
      "number": 28,
      "content": "Họ sẽ được bảo vệ đời đời;",
      "order": 2,
      "parNumber": 61,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.553Z",
      "updatedAt": "2024-09-07T14:02:33.553Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "63727384-d296-4aff-a8ae-c0889376d6fe",
      "number": 28,
      "content": "Nhưng dòng dõi của kẻ ác sẽ bị diệt vong.",
      "order": 3,
      "parNumber": 62,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.553Z",
      "updatedAt": "2024-09-07T14:02:33.553Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "876c9c93-1378-4796-b23a-4d1babbb83ef",
      "number": 29,
      "content": "Người ngay lành sẽ hưởng được đất,",
      "order": 0,
      "parNumber": 63,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.559Z",
      "updatedAt": "2024-09-07T14:02:33.559Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "be54687e-24be-40fb-aaf2-de8456bef49d",
      "number": 29,
      "content": "Và sẽ ở trong đó mãi mãi.",
      "order": 1,
      "parNumber": 64,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.559Z",
      "updatedAt": "2024-09-07T14:02:33.559Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "00124122-52cc-4e7f-b228-610cd2a3518f",
      "number": 30,
      "content": "Miệng người ngay lành thốt ra sự khôn ngoan;",
      "order": 0,
      "parNumber": 65,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.564Z",
      "updatedAt": "2024-09-07T14:02:33.564Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "e7f42f96-087e-444e-8a3a-593682903570",
      "number": 30,
      "content": "Lưỡi người ấy nói ra công lý.",
      "order": 1,
      "parNumber": 66,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.564Z",
      "updatedAt": "2024-09-07T14:02:33.564Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "bd0f93c4-2cc7-4ae0-ad76-548f03e37bc9",
      "number": 31,
      "content": "Luật pháp Đức Chúa Trời ở trong lòng người ấy;",
      "order": 0,
      "parNumber": 67,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.569Z",
      "updatedAt": "2024-09-07T14:02:33.569Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "4edb0f0d-0ab5-440f-a7c0-44c91a05b8be",
      "number": 31,
      "content": "Các bước chân người ấy sẽ không bị trượt.",
      "order": 1,
      "parNumber": 68,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.569Z",
      "updatedAt": "2024-09-07T14:02:33.569Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "9ba1c199-25ac-473e-848a-57285f29dd93",
      "number": 32,
      "content": "Kẻ ác rình rập người ngay lành,",
      "order": 0,
      "parNumber": 69,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.575Z",
      "updatedAt": "2024-09-07T14:02:33.575Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "92c09070-95c7-4682-b21c-5c23e6913463",
      "number": 32,
      "content": "Để tìm cơ hội giết hại người ấy,",
      "order": 1,
      "parNumber": 70,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.575Z",
      "updatedAt": "2024-09-07T14:02:33.575Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "916eb858-82de-4ed3-95ed-04c848f5c705",
      "number": 33,
      "content": "Nhưng CHÚA không phó người ấy vào tay nó;",
      "order": 0,
      "parNumber": 71,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.580Z",
      "updatedAt": "2024-09-07T14:02:33.580Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "911e6c18-5eb3-4e4a-aca6-d5f2cfba29dd",
      "number": 33,
      "content": "Ngài không để cho người ấy bị kết án khi bị xét xử.",
      "order": 1,
      "parNumber": 72,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.580Z",
      "updatedAt": "2024-09-07T14:02:33.580Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "a898a75c-5417-4fe3-bb4f-c20e22beab9c",
      "number": 34,
      "content": "Hãy trông cậy CHÚA và hãy giữ theo đường lối Ngài;",
      "order": 0,
      "parNumber": 73,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.584Z",
      "updatedAt": "2024-09-07T14:02:33.584Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "60ecd85f-9ab1-40d3-b0f6-b359d0df2f16",
      "number": 34,
      "content": "Ngài sẽ nhấc nâng bạn lên để bạn hưởng được đất;",
      "order": 1,
      "parNumber": 74,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.584Z",
      "updatedAt": "2024-09-07T14:02:33.584Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "dd419066-6377-4521-8ad4-8fc79c139558",
      "number": 34,
      "content": "Bạn sẽ nhìn thấy rõ khi kẻ ác bị diệt mất.",
      "order": 2,
      "parNumber": 75,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.584Z",
      "updatedAt": "2024-09-07T14:02:33.584Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "2c63f296-aafd-4b38-aac7-e7ef453cecd6",
      "number": 35,
      "content": "Tôi đã từng thấy một kẻ gian ác có thế lực và bạo tàn;",
      "order": 0,
      "parNumber": 76,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.591Z",
      "updatedAt": "2024-09-07T14:02:33.591Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "1bb3af2d-6978-4b74-83f5-b7bcf2d054cc",
      "number": 35,
      "content": "Nó vùng vẫy dọc ngang như một cây sum suê trong vùng đất tốt;",
      "order": 1,
      "parNumber": 77,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.591Z",
      "updatedAt": "2024-09-07T14:02:33.591Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "ce1cc4b2-2275-48c5-8219-49b4f6ad942c",
      "number": 36,
      "content": "Nhưng nó đã mất sớm, và này, nó chẳng còn nữa;",
      "order": 0,
      "parNumber": 78,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.596Z",
      "updatedAt": "2024-09-07T14:02:33.596Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "1e69e000-cba3-4dbc-9f0e-5206f41f6123",
      "number": 36,
      "content": "Tôi đã cố tình tìm kiếm nó nhưng chẳng tìm ra.",
      "order": 1,
      "parNumber": 79,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.596Z",
      "updatedAt": "2024-09-07T14:02:33.596Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "aa247a12-f3c7-4541-b610-b8bf63431677",
      "number": 37,
      "content": "Hãy để ý người liêm khiết và nhìn xem người ngay thật;",
      "order": 0,
      "parNumber": 80,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.602Z",
      "updatedAt": "2024-09-07T14:02:33.602Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "d34018d1-1d4f-4a16-9982-adc22f8765b4",
      "number": 37,
      "content": "Vì tương lai của người hiếu hòa là bình an thịnh vượng.",
      "order": 1,
      "parNumber": 81,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.602Z",
      "updatedAt": "2024-09-07T14:02:33.602Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "c1112df4-3773-4a72-942e-57e633d003c7",
      "number": 38,
      "content": "Nhưng những kẻ tội lỗi đều phải bị diệt vong;",
      "order": 0,
      "parNumber": 82,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.607Z",
      "updatedAt": "2024-09-07T14:02:33.607Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "413c7175-7978-4e2f-8d16-193725bd671d",
      "number": 38,
      "content": "Tương lai của những kẻ gian ác là bị tiêu diệt hoàn toàn.",
      "order": 1,
      "parNumber": 83,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.607Z",
      "updatedAt": "2024-09-07T14:02:33.607Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "00385049-36aa-4e67-88cf-b57479774fac",
      "number": 39,
      "content": "CHÚA ban ơn cứu rỗi cho người ngay lành;",
      "order": 0,
      "parNumber": 84,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.612Z",
      "updatedAt": "2024-09-07T14:02:33.612Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "a93e9fbb-94e7-420f-b988-0e3d51cf1556",
      "number": 39,
      "content": "Ngài là sức mạnh của người ấy trong khi gặp khó khăn rắc rối.",
      "order": 1,
      "parNumber": 85,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.612Z",
      "updatedAt": "2024-09-07T14:02:33.612Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "a2d53e5f-06ec-4c88-8716-40cfb02dd15f",
      "number": 40,
      "content": "CHÚA giúp đỡ họ và giải cứu họ;",
      "order": 0,
      "parNumber": 86,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.617Z",
      "updatedAt": "2024-09-07T14:02:33.617Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "f4603095-e9a1-4819-b73f-43dac9da6d88",
      "number": 40,
      "content": "Ngài giải thoát họ và cứu họ khỏi tay kẻ ác,",
      "order": 1,
      "parNumber": 87,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.617Z",
      "updatedAt": "2024-09-07T14:02:33.617Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    },
    {
      "id": "96b63a82-c097-4486-a250-da8108357ed2",
      "number": 40,
      "content": "Bởi vì họ nương náu nơi Ngài.",
      "order": 2,
      "parNumber": 88,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:33.617Z",
      "updatedAt": "2024-09-07T14:02:33.617Z",
      "chapterId": "353b5d49-2ee4-4686-be27-f7c8676528c2"
    }
  ],
