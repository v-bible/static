{
  "chapter": {
    "id": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe",
    "number": 32,
    "ref": "https://www.bible.com/bible/19/PSA.32.BD2011",
    "createdAt": "2024-09-07T11:51:10.878Z",
    "updatedAt": "2024-09-07T11:51:10.878Z",
    "bookId": "67614455-e41d-4311-bd36-6e33fe552385"
  },
  "verses": [
    {
      "id": "ab36d972-10e9-4032-9c79-aee085927f1b",
      "number": 1,
      "content": "Phước cho người được tha những vi phạm mình,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:01:56.797Z",
      "updatedAt": "2024-09-07T14:01:56.797Z",
      "chapterId": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe"
    },
    {
      "id": "a4790859-bb2c-444e-956a-47b66b7ce1e1",
      "number": 1,
      "content": "Được khỏa lấp những tội lỗi mình!",
      "order": 1,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:01:56.797Z",
      "updatedAt": "2024-09-07T14:01:56.797Z",
      "chapterId": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe"
    },
    {
      "id": "2fe26ecc-4191-4072-b123-07059d3d3c0e",
      "number": 2,
      "content": "Phước cho người được CHÚA không kể tội của mình,",
      "order": 0,
      "parNumber": 3,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:01:56.806Z",
      "updatedAt": "2024-09-07T14:01:56.806Z",
      "chapterId": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe"
    },
    {
      "id": "43b2d251-5aa6-4199-a0d7-0453f22f8da3",
      "number": 2,
      "content": "Và trong lòng không có điều chi gian dối!",
      "order": 1,
      "parNumber": 4,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:01:56.806Z",
      "updatedAt": "2024-09-07T14:01:56.806Z",
      "chapterId": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe"
    },
    {
      "id": "fd0fc2af-c9bb-48da-96d2-41a824c209f8",
      "number": 3,
      "content": "Khi con cố nín lặng, các xương cốt con vẫn tiêu hao,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:01:56.809Z",
      "updatedAt": "2024-09-07T14:01:56.809Z",
      "chapterId": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe"
    },
    {
      "id": "ebbeb54a-7ed9-42d7-8146-c492ae6ec03a",
      "number": 3,
      "content": "Bởi con phải rên rỉ suốt ngày;",
      "order": 1,
      "parNumber": 6,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:01:56.809Z",
      "updatedAt": "2024-09-07T14:01:56.809Z",
      "chapterId": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe"
    },
    {
      "id": "116dcc9b-1ffc-4ae0-b599-83794034ba6b",
      "number": 4,
      "content": "Vì cả ngày lẫn đêm tay Ngài đè nặng trên con;",
      "order": 0,
      "parNumber": 7,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:01:56.811Z",
      "updatedAt": "2024-09-07T14:01:56.811Z",
      "chapterId": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe"
    },
    {
      "id": "d151e5f7-1468-4200-a8d7-26ff201c7a20",
      "number": 4,
      "content": "Sức sống con cạn dần như gặp hơi nóng mùa hè. (Sê-la)",
      "order": 1,
      "parNumber": 8,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:01:56.811Z",
      "updatedAt": "2024-09-07T14:01:56.811Z",
      "chapterId": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe"
    },
    {
      "id": "5a6e33e9-795e-4a72-96bc-a52d40d63de9",
      "number": 5,
      "content": "Con nhìn nhận những tội lỗi con đã phạm đối với Ngài,",
      "order": 0,
      "parNumber": 10,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:01:56.813Z",
      "updatedAt": "2024-09-07T14:01:56.813Z",
      "chapterId": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe"
    },
    {
      "id": "0bbbc051-55c2-44b0-a5ca-7d1f1dd0b4d0",
      "number": 5,
      "content": "Con chẳng dám giấu giếm các tội lỗi mình;",
      "order": 1,
      "parNumber": 11,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:01:56.813Z",
      "updatedAt": "2024-09-07T14:01:56.813Z",
      "chapterId": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe"
    },
    {
      "id": "cb80313b-2156-470f-9efe-d07afecbd601",
      "number": 5,
      "content": "Con nói, “Con sẽ xưng nhận các vi phạm con với CHÚA,”",
      "order": 2,
      "parNumber": 12,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:01:56.813Z",
      "updatedAt": "2024-09-07T14:01:56.813Z",
      "chapterId": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe"
    },
    {
      "id": "d5390592-6177-499a-a93e-1378fc6ec846",
      "number": 5,
      "content": "Và Ngài đã tha thứ các lỗi lầm vi phạm của con. (Sê-la)",
      "order": 3,
      "parNumber": 13,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:01:56.813Z",
      "updatedAt": "2024-09-07T14:01:56.813Z",
      "chapterId": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe"
    },
    {
      "id": "176ad3b4-497b-439d-b593-72412f6395fa",
      "number": 6,
      "content": "Vì vậy mong mọi người có lòng tin kính",
      "order": 0,
      "parNumber": 15,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:01:56.816Z",
      "updatedAt": "2024-09-07T14:01:56.816Z",
      "chapterId": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe"
    },
    {
      "id": "b986bf98-fad3-40f9-8cb9-f626c42e5b02",
      "number": 6,
      "content": "Hãy cầu nguyện với Ngài khi còn có thể tìm được Ngài,",
      "order": 1,
      "parNumber": 16,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:01:56.816Z",
      "updatedAt": "2024-09-07T14:01:56.816Z",
      "chapterId": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe"
    },
    {
      "id": "53f94977-3df6-490f-9b66-3111e60e25da",
      "number": 6,
      "content": "Hầu khi những dòng nước lũ ào ạt tràn đến,",
      "order": 2,
      "parNumber": 17,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:01:56.816Z",
      "updatedAt": "2024-09-07T14:01:56.816Z",
      "chapterId": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe"
    },
    {
      "id": "2ee313c5-b8c8-42b5-b5b0-a8f2604e3808",
      "number": 6,
      "content": "Chúng sẽ không tới gần họ.",
      "order": 3,
      "parNumber": 18,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:01:56.816Z",
      "updatedAt": "2024-09-07T14:01:56.816Z",
      "chapterId": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe"
    },
    {
      "id": "fcf043b8-a1de-4290-961f-6f19b846d7d9",
      "number": 7,
      "content": "Ngài là nơi ẩn náu của con;",
      "order": 0,
      "parNumber": 19,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:01:56.818Z",
      "updatedAt": "2024-09-07T14:01:56.818Z",
      "chapterId": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe"
    },
    {
      "id": "c6f67ca4-b20a-4841-90c9-a40338510261",
      "number": 7,
      "content": "Ngài gìn giữ con khỏi bị hoạn nạn;",
      "order": 1,
      "parNumber": 20,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:01:56.818Z",
      "updatedAt": "2024-09-07T14:01:56.818Z",
      "chapterId": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe"
    },
    {
      "id": "0552b892-be7a-4b34-9193-4d0b0a7104ae",
      "number": 7,
      "content": "Ngài bao quanh con bằng những bài ca giải cứu. (Sê-la)",
      "order": 2,
      "parNumber": 21,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:01:56.818Z",
      "updatedAt": "2024-09-07T14:01:56.818Z",
      "chapterId": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe"
    },
    {
      "id": "9c009222-20a6-4004-9526-8c35b393a9b7",
      "number": 8,
      "content": "Ta sẽ dạy bảo ngươi và chỉ cho ngươi con đường phải đi;",
      "order": 0,
      "parNumber": 23,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:01:56.821Z",
      "updatedAt": "2024-09-07T14:01:56.821Z",
      "chapterId": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe"
    },
    {
      "id": "42f96a54-a762-4a31-af68-4e7a657716e1",
      "number": 8,
      "content": "Mắt Ta hằng ở với ngươi để hướng dẫn ngươi.",
      "order": 1,
      "parNumber": 24,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:01:56.821Z",
      "updatedAt": "2024-09-07T14:01:56.821Z",
      "chapterId": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe"
    },
    {
      "id": "3835e20c-c92e-420e-a1a4-2a3b0dbf5943",
      "number": 9,
      "content": "Đừng như con ngựa hoặc con la là loài không thông sáng,",
      "order": 0,
      "parNumber": 25,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:01:56.823Z",
      "updatedAt": "2024-09-07T14:01:56.823Z",
      "chapterId": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe"
    },
    {
      "id": "398c1a07-0027-48e7-a280-23a60675a0ca",
      "number": 9,
      "content": "Ngươi phải dùng hàm khớp và dây cương để điều khiển chúng,",
      "order": 1,
      "parNumber": 26,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:01:56.823Z",
      "updatedAt": "2024-09-07T14:01:56.823Z",
      "chapterId": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe"
    },
    {
      "id": "1c5b7a18-d602-4266-99b6-1c37b6a6a9bd",
      "number": 9,
      "content": "Bằng không, chúng chẳng vâng lời ngươi.",
      "order": 2,
      "parNumber": 27,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:01:56.823Z",
      "updatedAt": "2024-09-07T14:01:56.823Z",
      "chapterId": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe"
    },
    {
      "id": "4e81d3b2-814d-4952-8424-fdc1e37f296a",
      "number": 10,
      "content": "Kẻ ác gặp nhiều đau khổ,",
      "order": 0,
      "parNumber": 28,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:01:56.827Z",
      "updatedAt": "2024-09-07T14:01:56.827Z",
      "chapterId": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe"
    },
    {
      "id": "d407fd86-7c10-46e3-b7bb-b2b23cf2330c",
      "number": 10,
      "content": "Nhưng tình thương của CHÚA bao bọc người tin cậy Ngài.",
      "order": 1,
      "parNumber": 29,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:01:56.827Z",
      "updatedAt": "2024-09-07T14:01:56.827Z",
      "chapterId": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe"
    },
    {
      "id": "ddc8bb1f-06a1-4e67-9434-864991ec690b",
      "number": 11,
      "content": "Hỡi người ngay lành, hãy vui vẻ và hân hoan trong CHÚA!",
      "order": 0,
      "parNumber": 30,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:01:56.830Z",
      "updatedAt": "2024-09-07T14:01:56.830Z",
      "chapterId": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe"
    },
    {
      "id": "c17e7cee-2952-4760-bcf2-d4c3bda4d8ba",
      "number": 11,
      "content": "Hỡi mọi người có lòng ngay thẳng, hãy cất tiếng reo mừng!",
      "order": 1,
      "parNumber": 31,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:01:56.830Z",
      "updatedAt": "2024-09-07T14:01:56.830Z",
      "chapterId": "9da2d302-5e1b-4a51-ab20-3036c6ec9cbe"
    }
  ],
