{
  "chapter": {
    "id": "86d74b22-d432-4470-babe-05b7b33ff760",
    "number": 38,
    "ref": "https://www.bible.com/bible/19/PSA.38.BD2011",
    "createdAt": "2024-09-07T11:51:10.926Z",
    "updatedAt": "2024-09-07T11:51:10.926Z",
    "bookId": "67614455-e41d-4311-bd36-6e33fe552385"
  },
  "verses": [
    {
      "id": "a3f33f2b-07a6-4cbf-b958-5b9080cec35c",
      "number": 1,
      "content": "CHÚA ôi, xin đừng khiển trách con trong khi Ngài nóng giận;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.222Z",
      "updatedAt": "2024-09-07T14:02:42.222Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "f4178e09-6054-4594-b506-d147a28a8516",
      "number": 1,
      "content": "Xin đừng sửa phạt con giữa cơn thịnh nộ của Ngài,",
      "order": 1,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.222Z",
      "updatedAt": "2024-09-07T14:02:42.222Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "633d7e91-4754-4d42-a4ca-0a42f8f79034",
      "number": 2,
      "content": "Vì các mũi tên của Ngài đã ghim thấu vào con,",
      "order": 0,
      "parNumber": 3,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.232Z",
      "updatedAt": "2024-09-07T14:02:42.232Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "d4ae95cc-edf1-46cf-8f99-64122e7a4c29",
      "number": 2,
      "content": "Và tay Ngài đã đè nặng trên con.",
      "order": 1,
      "parNumber": 4,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.232Z",
      "updatedAt": "2024-09-07T14:02:42.232Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "a5c79526-8263-4b43-8ddb-af6685a0ac17",
      "number": 3,
      "content": "Vì cơn giận của Ngài,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.235Z",
      "updatedAt": "2024-09-07T14:02:42.235Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "2f4dd82b-714a-4ba8-aff2-726693b1c167",
      "number": 3,
      "content": "Thân thể con không chỗ nào lành lặn;",
      "order": 1,
      "parNumber": 6,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.235Z",
      "updatedAt": "2024-09-07T14:02:42.235Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "a166e166-d1eb-4a8f-91ff-c21b00d89adb",
      "number": 3,
      "content": "Vì tội lỗi của con,",
      "order": 2,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.235Z",
      "updatedAt": "2024-09-07T14:02:42.235Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "eda024ea-8242-4831-be23-e65ea00ea775",
      "number": 3,
      "content": "Các xương con chẳng còn cái mạnh lành.",
      "order": 3,
      "parNumber": 8,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.235Z",
      "updatedAt": "2024-09-07T14:02:42.235Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "eebbbf6c-eae6-48a5-90c0-30ea47eb7b13",
      "number": 4,
      "content": "Vì các tội lỗi của con đã chồng chất cao quá đầu con;",
      "order": 0,
      "parNumber": 9,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.239Z",
      "updatedAt": "2024-09-07T14:02:42.239Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "f916ba24-9478-4102-aac7-f274379e0d36",
      "number": 4,
      "content": "Chúng giống như một gánh nặng, đè nặng quá sức con.",
      "order": 1,
      "parNumber": 10,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.239Z",
      "updatedAt": "2024-09-07T14:02:42.239Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "486f3570-76aa-4f86-a89a-7e5b1c7cc787",
      "number": 5,
      "content": "Những vết thương của con đã trở nên hôi thối và mưng mủ,",
      "order": 0,
      "parNumber": 11,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.241Z",
      "updatedAt": "2024-09-07T14:02:42.241Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "703195a0-2f98-41e6-bd86-9ae4601d0007",
      "number": 5,
      "content": "Bởi vì con đã ngu dại.",
      "order": 1,
      "parNumber": 12,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.241Z",
      "updatedAt": "2024-09-07T14:02:42.241Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "fbd8f216-1157-431d-872e-a829c0f806f0",
      "number": 6,
      "content": "Con phải cúi khom và khòm cụp;",
      "order": 0,
      "parNumber": 13,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.245Z",
      "updatedAt": "2024-09-07T14:02:42.245Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "511db6d5-76f7-4bef-ae9d-ca2a0a1d32e2",
      "number": 6,
      "content": "Con vừa đi vừa rên rỉ suốt ngày.",
      "order": 1,
      "parNumber": 14,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.245Z",
      "updatedAt": "2024-09-07T14:02:42.245Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "69c01ea6-ac7a-4b31-a7cc-28e6f7731698",
      "number": 7,
      "content": "Vì gan ruột con như bị lửa hừng thiêu đốt,",
      "order": 0,
      "parNumber": 15,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.248Z",
      "updatedAt": "2024-09-07T14:02:42.248Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "2f80feee-1220-40a3-9d78-fa5a19d4b083",
      "number": 7,
      "content": "Da thịt con chẳng còn lành lặn chỗ nào.",
      "order": 1,
      "parNumber": 16,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.248Z",
      "updatedAt": "2024-09-07T14:02:42.248Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "507e0834-f316-4917-b4d2-80ff078e2793",
      "number": 8,
      "content": "Con bị kiệt lực và bị nghiền nát;",
      "order": 0,
      "parNumber": 17,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.250Z",
      "updatedAt": "2024-09-07T14:02:42.250Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "1c0287f1-8b31-49db-be23-396020055ca0",
      "number": 8,
      "content": "Con rên rỉ than van, vì lòng con luôn lo lắng bồn chồn.",
      "order": 1,
      "parNumber": 18,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.250Z",
      "updatedAt": "2024-09-07T14:02:42.250Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "b24bcf24-b35a-4e35-b7c4-2d6f4a3ab4a1",
      "number": 9,
      "content": "Chúa ôi, mọi ước nguyện của con đều ở trước mặt Ngài;",
      "order": 0,
      "parNumber": 19,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.252Z",
      "updatedAt": "2024-09-07T14:02:42.252Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "9bbd9c2e-1e1d-4581-8a0b-593a2d3f8c34",
      "number": 9,
      "content": "Nỗi thở than của con chẳng thể giấu được Ngài.",
      "order": 1,
      "parNumber": 20,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.252Z",
      "updatedAt": "2024-09-07T14:02:42.252Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "adc2d3cc-954f-424e-9286-c4ad2c276e1f",
      "number": 10,
      "content": "Lòng con luôn hồi hộp; sức lực con tiêu tan;",
      "order": 0,
      "parNumber": 21,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.255Z",
      "updatedAt": "2024-09-07T14:02:42.255Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "5536f638-78c7-46f3-9163-2626691b5c09",
      "number": 10,
      "content": "Ngay cả thị lực của con cũng biến mất.",
      "order": 1,
      "parNumber": 22,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.255Z",
      "updatedAt": "2024-09-07T14:02:42.255Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "217983cb-6994-4f7f-983f-3f620e19180c",
      "number": 11,
      "content": "Những người con yêu thương và bạn bè con đều xa lánh khi con bị thảm họa;",
      "order": 0,
      "parNumber": 23,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.257Z",
      "updatedAt": "2024-09-07T14:02:42.257Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "105fef5a-f04f-4730-b493-30449f5fecde",
      "number": 11,
      "content": "Những bà con của con cũng đứng tránh ở đằng xa.",
      "order": 1,
      "parNumber": 24,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.257Z",
      "updatedAt": "2024-09-07T14:02:42.257Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "9705881a-5f92-4ba7-9a8b-121ac7dcc9ff",
      "number": 12,
      "content": "Những kẻ muốn giết con gài bẫy để hại mạng sống con;",
      "order": 0,
      "parNumber": 25,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.259Z",
      "updatedAt": "2024-09-07T14:02:42.259Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "929b8ba0-6cac-44f2-b353-2f933d650da7",
      "number": 12,
      "content": "Những kẻ tìm cách làm tổn thương con trù ẻo con sớm mất;",
      "order": 1,
      "parNumber": 26,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.259Z",
      "updatedAt": "2024-09-07T14:02:42.259Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "7d33fed4-7cfa-49b8-a440-0c0b4f109605",
      "number": 12,
      "content": "Suốt ngày chúng bàn tính những cách để phản bội lọc lừa.",
      "order": 2,
      "parNumber": 27,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.259Z",
      "updatedAt": "2024-09-07T14:02:42.259Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "81d66bbf-e998-4078-aebb-99d42e32e12b",
      "number": 13,
      "content": "Nhưng con, con như người điếc chẳng thèm nghe,",
      "order": 0,
      "parNumber": 28,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.261Z",
      "updatedAt": "2024-09-07T14:02:42.261Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "4ffcc280-6b56-491a-95a5-ad2e4c7ef4ff",
      "number": 13,
      "content": "Như người câm chẳng thèm nói.",
      "order": 1,
      "parNumber": 29,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.261Z",
      "updatedAt": "2024-09-07T14:02:42.261Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "60c67538-e373-4e95-9db2-9fb20be877a4",
      "number": 14,
      "content": "Thật vậy con như người không nghe không biết;",
      "order": 0,
      "parNumber": 30,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.264Z",
      "updatedAt": "2024-09-07T14:02:42.264Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "092af794-8c99-4c56-a487-8e434d83ac8c",
      "number": 14,
      "content": "Miệng con chẳng buồn biện hộ.",
      "order": 1,
      "parNumber": 31,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.264Z",
      "updatedAt": "2024-09-07T14:02:42.264Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "f6e5b62c-1cf4-468d-8821-5863cecc0c21",
      "number": 15,
      "content": "Vì CHÚA ôi, con chỉ trông cậy nơi Ngài;",
      "order": 0,
      "parNumber": 32,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.266Z",
      "updatedAt": "2024-09-07T14:02:42.266Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "7de8e257-33c8-4643-ac2a-4e765c48a5e2",
      "number": 15,
      "content": "Xin nhậm lời con, lạy CHÚA, Đức Chúa Trời của con.",
      "order": 1,
      "parNumber": 33,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.266Z",
      "updatedAt": "2024-09-07T14:02:42.266Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "9a89df9b-be72-4d94-bef0-0f97eba1dfd4",
      "number": 16,
      "content": "Vì con đã nói, “Chúng sẽ chẳng được vui mừng vì cớ tôi đâu;",
      "order": 0,
      "parNumber": 34,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.268Z",
      "updatedAt": "2024-09-07T14:02:42.268Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "707b9998-e458-4851-be55-2ce58217dd6c",
      "number": 16,
      "content": "Dù chân tôi có trợt, nhưng chúng sẽ chẳng có dịp để lên mình.”",
      "order": 1,
      "parNumber": 35,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.268Z",
      "updatedAt": "2024-09-07T14:02:42.268Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "0f5fd14f-6a7e-4361-9937-b785a48ad71e",
      "number": 17,
      "content": "Vì con sắp ngã rồi,",
      "order": 0,
      "parNumber": 36,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.271Z",
      "updatedAt": "2024-09-07T14:02:42.271Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "196e5d0e-a850-4856-bece-ea4c2b9e826b",
      "number": 17,
      "content": "Nỗi đau đớn của con hằng ở trước mặt con.",
      "order": 1,
      "parNumber": 37,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.271Z",
      "updatedAt": "2024-09-07T14:02:42.271Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "6fdf6c48-7952-4400-a5e3-39d276273edc",
      "number": 18,
      "content": "Con xưng nhận tội lỗi của con;",
      "order": 0,
      "parNumber": 38,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.273Z",
      "updatedAt": "2024-09-07T14:02:42.273Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "64821efa-4532-467a-828e-5567703b0408",
      "number": 18,
      "content": "Con rất khổ tâm vì tội của con.",
      "order": 1,
      "parNumber": 39,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.273Z",
      "updatedAt": "2024-09-07T14:02:42.273Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "af2ae2a5-a984-479d-b7d2-c0f9ec46b501",
      "number": 19,
      "content": "Những kẻ thù của con hăng say và mạnh bạo;",
      "order": 0,
      "parNumber": 40,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.275Z",
      "updatedAt": "2024-09-07T14:02:42.275Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "707e799e-e1da-4e6e-af99-ddfa7661b270",
      "number": 19,
      "content": "Những kẻ ghét con vô cớ thật nhiều thay.",
      "order": 1,
      "parNumber": 41,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.275Z",
      "updatedAt": "2024-09-07T14:02:42.275Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "4f3a9c5a-36ea-4ffa-b0e5-5a41f6acd2d5",
      "number": 20,
      "content": "Chúng là những kẻ lấy điều ác báo đáp cho điều thiện;",
      "order": 0,
      "parNumber": 42,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.279Z",
      "updatedAt": "2024-09-07T14:02:42.279Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "088f6362-cbb6-4fea-ada5-7eeca69ba760",
      "number": 20,
      "content": "Chúng chống đối con, vì con quyết tâm theo điều thiện.",
      "order": 1,
      "parNumber": 43,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.279Z",
      "updatedAt": "2024-09-07T14:02:42.279Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "efc1185c-caea-4ad4-914a-0763e53c82a1",
      "number": 21,
      "content": "CHÚA ôi, xin đừng bỏ con;",
      "order": 0,
      "parNumber": 44,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.281Z",
      "updatedAt": "2024-09-07T14:02:42.281Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "7bb61362-3765-4441-b614-96bcbcf8de94",
      "number": 21,
      "content": "Đức Chúa Trời của con ôi, xin đừng ở xa con.",
      "order": 1,
      "parNumber": 45,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.281Z",
      "updatedAt": "2024-09-07T14:02:42.281Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "106e143d-ed5b-4408-baba-db00f576c3d2",
      "number": 22,
      "content": "Xin mau mau đến cứu giúp con;",
      "order": 0,
      "parNumber": 46,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.284Z",
      "updatedAt": "2024-09-07T14:02:42.284Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    },
    {
      "id": "79767267-c996-451f-ad90-9e56ad8d22ad",
      "number": 22,
      "content": "Lạy Chúa, Đấng Giải Cứu của con.",
      "order": 1,
      "parNumber": 47,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-07T14:02:42.284Z",
      "updatedAt": "2024-09-07T14:02:42.284Z",
      "chapterId": "86d74b22-d432-4470-babe-05b7b33ff760"
    }
  ],
