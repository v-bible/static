    },
    {
      "id": "e619bd17-8468-4fea-8efa-8ea4aec58667",
      "number": 15,
      "content": "khi thức giấc, được thoả tình chiêm ngưỡng Thánh Nhan.",
      "order": 2,
      "parNumber": 14,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.821Z",
      "updatedAt": "2024-09-10T04:22:27.821Z",
