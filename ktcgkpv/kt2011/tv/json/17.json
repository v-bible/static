    },
    {
      "id": "ba72ebf2-8056-4685-8dc8-312bedae821a",
      "number": 15,
      "content": "khi thức giấc, được thoả tình chiêm ngưỡng Thánh Nhan.",
      "order": 2,
      "parNumber": 14,
      "parIndex": 0,
      "isPoetry": true,
