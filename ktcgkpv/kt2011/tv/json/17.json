{
  "chapter": {
    "id": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2",
    "number": 17,
    "ref": "",
    "createdAt": "2024-09-10T00:39:05.892Z",
    "updatedAt": "2024-09-10T00:39:05.892Z",
    "bookId": "36ce7190-e479-4be3-9624-b27d78763f56"
  },
  "verses": [
    {
      "id": "d962555b-7151-4f39-b873-68d12de4d931",
      "number": 1,
      "content": "Kinh nguyện của vua Đa-vít.",
      "order": 0,
      "parNumber": 0,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2024-09-10T04:22:27.719Z",
      "updatedAt": "2024-09-10T04:22:27.719Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "ad628f3d-2d9d-4431-9587-7fd18d57b985",
      "number": 1,
      "content": "Lạy CHÚA, xin nghe con giãi bày lẽ phải,",
      "order": 1,
      "parNumber": 0,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.733Z",
      "updatedAt": "2024-09-10T04:22:27.733Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "261e1e36-b3e4-432c-b25c-8d772f87aa3d",
      "number": 1,
      "content": "lời con than vãn, xin Ngài để ý ;",
      "order": 2,
      "parNumber": 0,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.735Z",
      "updatedAt": "2024-09-10T04:22:27.735Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "910d330b-cd73-49ea-a70d-4fcc531b99a1",
      "number": 1,
      "content": "xin lắng tai nghe tiếng nguyện cầu",
      "order": 3,
      "parNumber": 0,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.737Z",
      "updatedAt": "2024-09-10T04:22:27.737Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "6dc0712d-b9bc-4a4a-b321-5e670892fddf",
      "number": 1,
      "content": "thốt ra từ miệng lưỡi chẳng điêu ngoa.",
      "order": 4,
      "parNumber": 0,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.739Z",
      "updatedAt": "2024-09-10T04:22:27.739Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "11b592a1-a640-4206-a377-73c70e5839c0",
      "number": 2,
      "content": "Con xin được Thánh Nhan soi xét",
      "order": 0,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.741Z",
      "updatedAt": "2024-09-10T04:22:27.741Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "9801d7fc-418b-48af-a6d8-3ea8a31be8bc",
      "number": 2,
      "content": "vì mắt Ngài thấy rõ điều chính trực.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.743Z",
      "updatedAt": "2024-09-10T04:22:27.743Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "42c52539-dea9-42e6-8ae7-18c3f4223a8e",
      "number": 3,
      "content": "Chúa có xét lòng con, thăm con giữa đêm trường,",
      "order": 0,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.745Z",
      "updatedAt": "2024-09-10T04:22:27.745Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "685d5d68-3dd8-4c49-b0af-1a034718df59",
      "number": 3,
      "content": "có thử con bằng lửa, cũng chẳng thấy điều gian.",
      "order": 1,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.747Z",
      "updatedAt": "2024-09-10T04:22:27.747Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "6307f6c3-5063-4947-a908-e47fa0dfc8e8",
      "number": 4,
      "content": "Con chẳng theo thói đời buông những lời sai trái.",
      "order": 0,
      "parNumber": 3,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.749Z",
      "updatedAt": "2024-09-10T04:22:27.749Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "6a3305f9-f958-4673-8045-36f89010791b",
      "number": 4,
      "content": "Con tuân giữ mọi lời Chúa dạy,",
      "order": 1,
      "parNumber": 3,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.752Z",
      "updatedAt": "2024-09-10T04:22:27.752Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "d47d0ad5-8a7e-4825-9a9c-82ecbccfec72",
      "number": 4,
      "content": "tránh xa đường lối kẻ bạo tàn,",
      "order": 2,
      "parNumber": 3,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.754Z",
      "updatedAt": "2024-09-10T04:22:27.754Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "485e9b75-f2f5-48a9-b420-87aedb367057",
      "number": 5,
      "content": "dõi vết chân Ngài, con không vấp ngã.",
      "order": 0,
      "parNumber": 4,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.758Z",
      "updatedAt": "2024-09-10T04:22:27.758Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "04aa9955-3343-46f8-88d6-4597c1404813",
      "number": 6,
      "content": "Con kêu lên Ngài, lạy Thiên Chúa, vì Ngài đáp lời con.",
      "order": 0,
      "parNumber": 5,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.760Z",
      "updatedAt": "2024-09-10T04:22:27.760Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "ebb65cd7-f4db-4e22-8f4a-cfee14da13ae",
      "number": 6,
      "content": "Xin lắng tai và nghe tiếng con cầu.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.762Z",
      "updatedAt": "2024-09-10T04:22:27.762Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "d5ccbe3e-623b-4813-8614-bd9b6626b9c5",
      "number": 7,
      "content": "Xin biểu lộ tình thương diệu kỳ của Chúa,",
      "order": 0,
      "parNumber": 6,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.764Z",
      "updatedAt": "2024-09-10T04:22:27.764Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "c54cfce2-1ce4-4300-b2d8-89a03c36f53c",
      "number": 7,
      "content": "Ngài cứu ai trú ẩn dưới cánh tay Ngài",
      "order": 1,
      "parNumber": 6,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.765Z",
      "updatedAt": "2024-09-10T04:22:27.765Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "23481a3f-5690-4b2a-934d-1ad75d814fc3",
      "number": 7,
      "content": "khỏi quân thù xông đánh.",
      "order": 2,
      "parNumber": 6,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.767Z",
      "updatedAt": "2024-09-10T04:22:27.767Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "0b650d29-cf6d-4c5d-9a83-ee364efc52e5",
      "number": 8,
      "content": "Xin giữ gìn con như thể con ngươi,",
      "order": 0,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.769Z",
      "updatedAt": "2024-09-10T04:22:27.769Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "f3773935-03cb-452a-98bb-105cc7effeea",
      "number": 8,
      "content": "dưới bóng Ngài, xin thương che chở,",
      "order": 1,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.771Z",
      "updatedAt": "2024-09-10T04:22:27.771Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "c3d6aca0-b392-4675-a3a9-a9b364a2d638",
      "number": 9,
      "content": "cho khỏi tay lũ ác nhân hãm hại,",
      "order": 0,
      "parNumber": 8,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.773Z",
      "updatedAt": "2024-09-10T04:22:27.773Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "49cac382-c832-4ec0-a8b8-41afa4375f91",
      "number": 9,
      "content": "thoát bọn tử thù tứ phía bủa vây.",
      "order": 1,
      "parNumber": 8,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.775Z",
      "updatedAt": "2024-09-10T04:22:27.775Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "9f7fded8-d0eb-456a-8a4b-6a633b7a4c57",
      "number": 10,
      "content": "Kẻ thù con lòng chai dạ đá,",
      "order": 0,
      "parNumber": 9,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.777Z",
      "updatedAt": "2024-09-10T04:22:27.777Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "8b50cbe6-9ac7-41f0-a955-8109d2f6ba28",
      "number": 10,
      "content": "mở miệng ra là ngạo mạn khinh đời.",
      "order": 1,
      "parNumber": 9,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.779Z",
      "updatedAt": "2024-09-10T04:22:27.779Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "57573817-db03-4c3c-83dc-6d424afcdcb3",
      "number": 11,
      "content": "Rầm rập tới, kìa chúng đã bao quanh,",
      "order": 0,
      "parNumber": 10,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.781Z",
      "updatedAt": "2024-09-10T04:22:27.781Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "72ab572a-4ca7-4166-9399-e57498d0d6d7",
      "number": 11,
      "content": "mắt trừng trừng, như muốn quật con xuống đất,",
      "order": 1,
      "parNumber": 10,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.783Z",
      "updatedAt": "2024-09-10T04:22:27.783Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "e05caaa8-0d3d-4834-bd12-b963b51f9251",
      "number": 12,
      "content": "thật giống loài sư tử chực nuốt sống ăn tươi,",
      "order": 0,
      "parNumber": 11,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.785Z",
      "updatedAt": "2024-09-10T04:22:27.785Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "3947d37a-a2c8-4f47-8471-9b6749f3089e",
      "number": 12,
      "content": "hệt như con mãnh thú rình rập ở bụi bờ.",
      "order": 1,
      "parNumber": 11,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.787Z",
      "updatedAt": "2024-09-10T04:22:27.787Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "b088b94b-01ab-42a3-8e82-cb3cf810ce16",
      "number": 13,
      "content": "Lạy CHÚA, xin đứng dậy,",
      "order": 0,
      "parNumber": 12,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.789Z",
      "updatedAt": "2024-09-10T04:22:27.789Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "a848f87f-006e-430f-99ec-914c7246edc0",
      "number": 13,
      "content": "ra nghênh chiến, quật ngã quân thù,",
      "order": 1,
      "parNumber": 12,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.791Z",
      "updatedAt": "2024-09-10T04:22:27.791Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "998727ee-a21c-433d-baa6-e9f947755289",
      "number": 13,
      "content": "vung bảo kiếm, cứu mạng con cho khỏi ác nhân.",
      "order": 2,
      "parNumber": 12,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.793Z",
      "updatedAt": "2024-09-10T04:22:27.793Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "e20d46ca-000c-404c-b527-7f8341bd3a57",
      "number": 14,
      "content": "Lạy CHÚA, xin thẳng tay khai trừ bọn chúng",
      "order": 0,
      "parNumber": 13,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.795Z",
      "updatedAt": "2024-09-10T04:22:27.795Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "f693e455-2f79-425f-a976-4379394b64c1",
      "number": 14,
      "content": "khỏi thế giới loài người,",
      "order": 1,
      "parNumber": 13,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.798Z",
      "updatedAt": "2024-09-10T04:22:27.798Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "56b3436c-1331-4c15-b841-e51580a5bc6c",
      "number": 14,
      "content": "khỏi thế giới loài người, khỏi chốn dương gian.",
      "order": 2,
      "parNumber": 13,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.800Z",
      "updatedAt": "2024-09-10T04:22:27.800Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "4c9a2dc6-2e57-4b8a-9feb-519465453e28",
      "number": 14,
      "content": "Số phận chúng ở đời là như vậy.",
      "order": 3,
      "parNumber": 13,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.802Z",
      "updatedAt": "2024-09-10T04:22:27.802Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "6a1cc563-b872-4ced-bfc6-a2bd3e72066b",
      "number": 14,
      "content": "Án phạt Chúa đã dành,",
      "order": 4,
      "parNumber": 13,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.805Z",
      "updatedAt": "2024-09-10T04:22:27.805Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "0b71d4e7-efa6-4610-848b-0a07abac05cf",
      "number": 14,
      "content": "xin Ngài bắt chúng nuốt cho đầy bụng,",
      "order": 5,
      "parNumber": 13,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.807Z",
      "updatedAt": "2024-09-10T04:22:27.807Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "a51347ea-110b-4dce-9d98-67932a0ebdf9",
      "number": 14,
      "content": "cả đàn con cũng được ăn thoả thích,",
      "order": 6,
      "parNumber": 13,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.810Z",
      "updatedAt": "2024-09-10T04:22:27.810Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "81cce14a-5f4d-4a2d-9382-04bc854b7b74",
      "number": 14,
      "content": "phần còn lại, cho bầy cháu mai sau.",
      "order": 7,
      "parNumber": 13,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.812Z",
      "updatedAt": "2024-09-10T04:22:27.812Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "47ec90a5-7c05-42aa-b021-b59797beba13",
      "number": 15,
      "content": "Về phần con, sống công minh chính trực,",
      "order": 0,
      "parNumber": 14,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.815Z",
      "updatedAt": "2024-09-10T04:22:27.815Z",
      "chapterId": "ea7d3a9c-92bc-461e-b478-8f093c62d8e2"
    },
    {
      "id": "1929af13-0e6d-4078-85d9-3d0f3695dfeb",
      "number": 15,
      "content": "con sẽ được trông thấy mặt Ngài,",
      "order": 1,
      "parNumber": 14,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:22:27.818Z",
      "updatedAt": "2024-09-10T04:22:27.818Z",
