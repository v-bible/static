    },
    {
      "id": "1a68f998-3b69-456b-b2a5-3514f23e633c",
      "content": "III. NHỮNG CUỘC HÀNH TRÌNH CỦA ĐỨC GIÊ-SU Ở NGOÀI MIỀN GA-LI-LÊ",
      "order": 0,
      "createdAt": "2024-09-17T08:48:09.285Z",
      "updatedAt": "2024-09-17T08:48:09.285Z",
      "verseId": "a88eff06-507c-41b6-b904-2ac5902507fb",
      "chapterId": "868573ae-8554-4c49-8b8c-02903f23f8b6"
    },
    {
      "id": "cd48172e-48a1-4356-be08-72db98ec496a",
      "content": "Đức Giê-su chữa người vừa điếc vừa ngọng",
      "order": 0,
      "createdAt": "2024-09-17T08:48:09.333Z",
      "updatedAt": "2024-09-17T08:48:09.333Z",
      "verseId": "e5ee7bb6-bd17-47b8-a240-bc58aa4b7bd4",
      "chapterId": "868573ae-8554-4c49-8b8c-02903f23f8b6"
    },
    {
      "id": "70856169-f3a7-4451-9410-6efbbc4afd29",
      "content": "Đức Giê-su chữa con gái một bà gốc Phê-ni-xi xứ Xy-ri",
      "order": 1,
      "createdAt": "2024-09-17T08:48:09.289Z",
      "updatedAt": "2024-09-17T08:48:09.289Z",
      "verseId": "a88eff06-507c-41b6-b904-2ac5902507fb",
      "chapterId": "868573ae-8554-4c49-8b8c-02903f23f8b6"
    }
  ],
