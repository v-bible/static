    },
    {
      "id": "2f081684-47a1-4ae7-8c4f-6030015dda34",
      "content": "Cái gì làm cho con người ra ô uế ?",
      "order": 0,
      "createdAt": "2024-09-17T08:48:09.226Z",
      "updatedAt": "2024-09-17T08:48:09.226Z",
