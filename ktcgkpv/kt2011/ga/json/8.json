    {
      "id": "36f6def3-c491-44c0-81b3-e0bae85be2b3",
      "content": "Ga 14,7",
      "position": 105,
      "order": 3,
      "createdAt": "2024-09-17T08:46:17.297Z",
      "updatedAt": "2024-09-17T08:46:17.297Z",
      "verseId": "24080b42-4ab6-4e29-967e-c689cb4c7e4c",
      "chapterId": "018130d0-0b91-4d6a-be5b-43d980e8a9ae"
    },
