    },
    {
      "id": "ecabf384-bada-44b2-bbed-e1ac10b0a8bc",
      "content": "Đức Giê-su bị điệu ra trước các ông Kha-nan và Cai-pha. Ông Phê-rô chối Thầy.",
      "order": 0,
      "createdAt": "2024-09-10T00:54:18.222Z",
      "updatedAt": "2024-09-10T00:54:18.222Z",
      "verseId": "eb05e34b-620f-4d27-8dba-bc0f814440cc",
      "chapterId": "038e055b-6280-40ef-b068-6ed564a3cf22"
    },
    {
      "id": "1d72c2c7-81ac-4a1e-9632-f3fe3eddf37a",
      "content": "Đức Giê-su bị điệu ra trước tổng trấn Phi-la-tô",
      "order": 0,
      "createdAt": "2024-09-10T00:54:18.317Z",
      "updatedAt": "2024-09-10T00:54:18.317Z",
      "verseId": "f996195d-5d1e-4079-bef0-ead8ff43398c",
      "chapterId": "038e055b-6280-40ef-b068-6ed564a3cf22"
    },
    {
      "id": "78ae42c4-0e0f-451f-8ed5-12cbe9c02f20",
      "content": "Đức Giê-su bị bắt giữ",
      "order": 1,
      "createdAt": "2024-09-10T00:54:18.128Z",
