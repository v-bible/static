      "chapterId": "a038d76e-8e3c-4086-83a5-a1c1521242b5"
    },
    {
      "id": "d2dad86c-b4be-4bda-bac7-7a79c9adcaa4",
      "content": "A. Những ngày xa xưa",
      "order": 2,
      "createdAt": "2024-09-10T04:06:28.744Z",
      "updatedAt": "2024-09-10T04:06:28.744Z",
