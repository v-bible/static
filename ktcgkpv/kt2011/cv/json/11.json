    {
      "id": "7913d954-0df4-464b-859d-d8705bcb87b2",
      "content": "Thành lập Hội Thánh An-ti-ô-khi-a",
      "order": 0,
      "createdAt": "2024-09-17T08:54:54.744Z",
      "updatedAt": "2024-09-17T08:54:54.744Z",
      "verseId": "8a3e7130-1b3b-447b-a685-e94887a7b45d",
      "chapterId": "4511b3aa-5f4b-477d-84f9-4c516de6f0b6"
    },
    {
      "id": "29691fb7-aa8e-40d0-b09a-4d062377f152",
      "content": "Ông Ba-na-ba và ông Sao-lô được cử đi Giê-ru-sa-lem",
      "order": 0,
      "createdAt": "2024-09-17T08:54:54.823Z",
      "updatedAt": "2024-09-17T08:54:54.823Z",
      "verseId": "7cf9406a-8727-4f05-8c4a-863bc9093bae",
      "chapterId": "4511b3aa-5f4b-477d-84f9-4c516de6f0b6"
    }
  ],
