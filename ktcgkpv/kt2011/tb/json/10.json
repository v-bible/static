    },
    {
      "id": "869c76e4-dd09-411d-9061-1828aeecb288",
      "content": "PTM thêm : <i>hôn chào và</i>.",
      "position": 7,
      "order": 10,
      "createdAt": "2024-09-10T03:48:22.970Z",
      "updatedAt": "2024-09-10T03:48:22.970Z",
