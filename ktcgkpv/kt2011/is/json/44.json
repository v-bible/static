{
  "chapter": {
    "id": "71396b8c-123d-45de-8da6-0fbd0d66c701",
    "number": 44,
    "ref": "",
    "createdAt": "2024-09-10T00:39:05.912Z",
    "updatedAt": "2024-09-10T00:39:05.912Z",
    "bookId": "8e89794d-e833-4529-b7a4-fc26a3a0cc06"
  },
  "verses": [
    {
      "id": "83beb266-42e2-4f5d-a3d6-9ceb8c6bef10",
      "number": 1,
      "content": "Nhưng giờ đây, hãy lắng nghe,",
      "order": 0,
      "parNumber": 0,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:37.994Z",
      "updatedAt": "2024-09-10T04:50:37.994Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "6d6423ea-0035-46e3-a6d1-ca7fdc2ca5c2",
      "number": 1,
      "content": "hỡi Gia-cóp, tôi tớ của Ta, hỡi Ít-ra-en, kẻ Ta tuyển chọn !",
      "order": 1,
      "parNumber": 0,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.005Z",
      "updatedAt": "2024-09-10T04:50:38.005Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "005b4ddd-e4eb-4657-bd3d-9add27c2a52a",
      "number": 2,
      "content": "ĐỨC CHÚA, Đấng tạo thành ngươi,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.010Z",
      "updatedAt": "2024-09-10T04:50:38.010Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "c32c7b63-8132-4d03-9dd9-a2e4b3891299",
      "number": 2,
      "content": "Đấng nắn ra ngươi từ khi ngươi còn trong lòng mẹ,",
      "order": 1,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.014Z",
      "updatedAt": "2024-09-10T04:50:38.014Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "85ed15a0-786f-47a4-800e-3230b311ba8b",
      "number": 2,
      "content": "Đấng phù trợ ngươi, Người phán thế này :",
      "order": 2,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.016Z",
      "updatedAt": "2024-09-10T04:50:38.016Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "d6df910e-44cd-499b-b7a2-e59494204aea",
      "number": 2,
      "content": "Đừng sợ, hỡi Gia-cóp, tôi tớ của Ta,",
      "order": 3,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.018Z",
      "updatedAt": "2024-09-10T04:50:38.018Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "6deb9cbd-df39-4534-ac19-233bf6a1fa48",
      "number": 2,
      "content": "hỡi Giơ-su-run, kẻ Ta tuyển chọn !",
      "order": 4,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.020Z",
      "updatedAt": "2024-09-10T04:50:38.020Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "e43e5b0a-0615-47e4-9248-93fda9e36de2",
      "number": 3,
      "content": "Vì Ta sắp đổ mưa xuống những vùng hạn hán",
      "order": 0,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.026Z",
      "updatedAt": "2024-09-10T04:50:38.026Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "336f5d7a-4569-4a3e-b1aa-f8e7b6f1a89f",
      "number": 3,
      "content": "và cho suối chảy trên mảnh đất khô cằn ;",
      "order": 1,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.028Z",
      "updatedAt": "2024-09-10T04:50:38.028Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "33d3019f-9b96-41df-92fe-7d45b23d7310",
      "number": 3,
      "content": "trên dòng dõi ngươi, Ta sẽ đổ thần khí,",
      "order": 2,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.032Z",
      "updatedAt": "2024-09-10T04:50:38.032Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "b3953c10-4420-4b52-94b2-06e9199f546a",
      "number": 3,
      "content": "trên con cháu ngươi, Ta ban muôn phúc lành.",
      "order": 3,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.036Z",
      "updatedAt": "2024-09-10T04:50:38.036Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "48c39c19-5cd3-4a98-8449-aa0dde74ab94",
      "number": 4,
      "content": "Chúng sẽ mọc lên giữa đồng cỏ, như dương liễu bên dòng nước.",
      "order": 0,
      "parNumber": 3,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.038Z",
      "updatedAt": "2024-09-10T04:50:38.038Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "829ae6f0-433e-4c8b-a901-0c666df5f715",
      "number": 5,
      "content": "Người này sẽ nói : tôi thuộc về ĐỨC CHÚA,",
      "order": 0,
      "parNumber": 4,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.042Z",
      "updatedAt": "2024-09-10T04:50:38.042Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "7db356ba-4b18-4326-b191-b81a52916884",
      "number": 5,
      "content": "người kia sẽ lấy tên Gia-cóp đặt cho mình,",
      "order": 1,
      "parNumber": 4,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.045Z",
      "updatedAt": "2024-09-10T04:50:38.045Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "b1743f9f-ec62-4361-97cc-227d01ae8e63",
      "number": 5,
      "content": "kẻ nọ lại viết lên tay : “thuộc về ĐỨC CHÚA”",
      "order": 2,
      "parNumber": 4,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.047Z",
      "updatedAt": "2024-09-10T04:50:38.047Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "27bb764f-737f-4da5-8522-5d54ad10494b",
      "number": 5,
      "content": "và lấy tên Ít-ra-en đặt cho mình.",
      "order": 3,
      "parNumber": 4,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.052Z",
      "updatedAt": "2024-09-10T04:50:38.052Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "8d38697f-bba9-4142-a481-8d5379cd1c05",
      "number": 6,
      "content": "ĐỨC CHÚA là Vua, là Đấng cứu chuộc Ít-ra-en,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.055Z",
      "updatedAt": "2024-09-10T04:50:38.055Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "6320d4cc-6ff7-43e4-9929-b404e2397e3a",
      "number": 6,
      "content": "và là ĐỨC CHÚA các đạo binh, Người phán thế này :",
      "order": 1,
      "parNumber": 5,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.062Z",
      "updatedAt": "2024-09-10T04:50:38.062Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "7db8a482-7ccc-42c6-bd6b-de0a292a4283",
      "number": 6,
      "content": "Ta là khởi nguyên, Ta là cùng tận ;",
      "order": 2,
      "parNumber": 5,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.067Z",
      "updatedAt": "2024-09-10T04:50:38.067Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "287c0036-4337-4584-ba1f-9f8e69839178",
      "number": 6,
      "content": "chẳng có thần nào hết, ngoại trừ Ta.",
      "order": 3,
      "parNumber": 5,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.071Z",
      "updatedAt": "2024-09-10T04:50:38.071Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "3d36878c-8011-42a5-8de0-6254748562d3",
      "number": 7,
      "content": "Ai được như Ta, người ấy cứ lên tiếng,",
      "order": 0,
      "parNumber": 6,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.076Z",
      "updatedAt": "2024-09-10T04:50:38.076Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "027a3654-9785-4355-9185-30246cf57fa8",
      "number": 7,
      "content": "cứ kể ra và trình bày cho Ta xem",
      "order": 1,
      "parNumber": 6,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.081Z",
      "updatedAt": "2024-09-10T04:50:38.081Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "007939d4-9663-4e9e-90ff-d1aebc8bd9af",
      "number": 7,
      "content": "những gì đã xảy ra từ thời cổ đại, khi Ta tạo dựng loài người.",
      "order": 2,
      "parNumber": 6,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.083Z",
      "updatedAt": "2024-09-10T04:50:38.083Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "bca6dda0-4fba-407a-928a-b8afc9824ead",
      "number": 7,
      "content": "Và những gì sẽ xảy đến, cứ kể ra đi.",
      "order": 3,
      "parNumber": 6,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.089Z",
      "updatedAt": "2024-09-10T04:50:38.089Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "3038254d-6009-4ab4-952c-0d79e4b4ed5d",
      "number": 8,
      "content": "Đừng run, đừng sợ.",
      "order": 0,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.092Z",
      "updatedAt": "2024-09-10T04:50:38.092Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "1ad98e33-d18c-4d48-9188-db6478f9403b",
      "number": 8,
      "content": "Ta đã chẳng cho ngươi nghe từ thuở nào,",
      "order": 1,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.098Z",
      "updatedAt": "2024-09-10T04:50:38.098Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "046ae632-d5e6-4f7d-bbaa-48ec0ca38ecc",
      "number": 8,
      "content": "đã chẳng báo cho ngươi biết đó sao ?",
      "order": 2,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.101Z",
      "updatedAt": "2024-09-10T04:50:38.101Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "a0436a9d-c4c8-473b-b653-bb21e7197a2a",
      "number": 8,
      "content": "Chính các ngươi là nhân chứng của Ta.",
      "order": 3,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.104Z",
      "updatedAt": "2024-09-10T04:50:38.104Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "69e93e92-3c89-48e2-8a93-e0b7f95ce7f3",
      "number": 8,
      "content": "Hỏi có thần nào khác ngoại trừ Ta ?",
      "order": 4,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.110Z",
      "updatedAt": "2024-09-10T04:50:38.110Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "8ff347a6-f907-4cab-8cc5-642c9daf885d",
      "number": 8,
      "content": "Không có Núi Đá nào, Ta biết chắc là không.",
      "order": 5,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.118Z",
      "updatedAt": "2024-09-10T04:50:38.118Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "0f974447-664c-4d19-8cf7-d9014b58edf6",
      "number": 9,
      "content": "Thợ nắn ra tượng thần, tất cả bọn họ chẳng là gì hết. Các kiệt tác của họ đều vô dụng. Chúng là nhân chứng của họ, nhưng là những nhân chứng chẳng thấy, chẳng hiểu gì, nên chỉ làm xấu mặt họ mà thôi.",
      "order": 0,
      "parNumber": 8,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2024-09-10T04:50:38.128Z",
      "updatedAt": "2024-09-10T04:50:38.128Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "ed7e01d7-ac90-4af4-a50c-1634da8f6040",
      "number": 10,
      "content": "Ai lại nắn ra một ông thần, đúc ra một pho tượng để chẳng được gì cả !",
      "order": 0,
      "parNumber": 8,
      "parIndex": 1,
      "isPoetry": false,
      "createdAt": "2024-09-10T04:50:38.153Z",
      "updatedAt": "2024-09-10T04:50:38.153Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "6e4cd97c-8c31-4c48-9120-6dcca520fb85",
      "number": 11,
      "content": "Đúng vậy, tất cả những ai sùng bái tượng thần đều phải xấu hổ, và những kẻ tạo ra chúng cũng chỉ là phàm nhân. Họ cứ tụ tập lại hết đi, bước cả ra xem nào ! Họ sẽ khiếp run và xấu hổ cả đám.",
      "order": 0,
      "parNumber": 8,
      "parIndex": 2,
      "isPoetry": false,
      "createdAt": "2024-09-10T04:50:38.158Z",
      "updatedAt": "2024-09-10T04:50:38.158Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "b3f7d8f7-3da6-44a3-99ff-86bcd5d6569a",
      "number": 12,
      "content": "Trên than hồng, anh thợ rèn làm một cái rìu, lấy búa đập thành hình, dùng cả sức mạnh cánh tay mà làm việc. Anh đói đến kiệt sức, khát đến mệt lả.",
      "order": 0,
      "parNumber": 9,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2024-09-10T04:50:38.163Z",
      "updatedAt": "2024-09-10T04:50:38.163Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "12d0027f-b830-4cc0-88ff-c010eb82ac91",
      "number": 13,
      "content": "Anh thợ chạm lấy dây chăng, lấy phấn vẽ hình trên gỗ, lấy đục mà chạm trổ theo đường nét com-pa. Anh làm cho nó ra hình người, có vẻ đẹp của con người, để nó ngự trong nhà.",
      "order": 0,
      "parNumber": 9,
      "parIndex": 1,
      "isPoetry": false,
      "createdAt": "2024-09-10T04:50:38.173Z",
      "updatedAt": "2024-09-10T04:50:38.173Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "dc8654fc-206f-4670-93bc-ac9224e24d4f",
      "number": 14,
      "content": "Anh đốn bá hương, chọn cây dẻ cây sồi mà anh đã để cho lớn cho chắc giữa bao nhiêu cây cối trong rừng. Anh đã trồng một cây thông, mưa làm cho nó lớn lên.",
      "order": 0,
      "parNumber": 9,
      "parIndex": 2,
      "isPoetry": false,
      "createdAt": "2024-09-10T04:50:38.178Z",
      "updatedAt": "2024-09-10T04:50:38.178Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "c47f53c0-ff47-4fc3-a0f8-406484590da9",
      "number": 15,
      "content": "Người ta lấy gỗ làm củi : phần để sưởi, phần để nhóm lửa nướng bánh, rồi phần nữa để tạc tượng thần mà lạy, làm một ông thần mà thờ,",
      "order": 0,
      "parNumber": 9,
      "parIndex": 3,
      "isPoetry": false,
      "createdAt": "2024-09-10T04:50:38.188Z",
      "updatedAt": "2024-09-10T04:50:38.188Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "c7e6874d-e9a6-4cde-9c4f-1f16f934def2",
      "number": 16,
      "content": "Người ta lấy một phần đem chụm lửa, đặt lên đó miếng thịt sắp ăn, nướng cho chín mà ăn cho no ; rồi dùng để sưởi, vừa sưởi vừa nói : “A ấm quá ! Lại được xem ánh lửa bập bùng.”",
      "order": 0,
      "parNumber": 9,
      "parIndex": 4,
      "isPoetry": false,
      "createdAt": "2024-09-10T04:50:38.196Z",
      "updatedAt": "2024-09-10T04:50:38.196Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "3786e9d2-270f-4e1f-9b3b-528371d7780b",
      "number": 17,
      "content": "Phần còn dư thì lấy mà làm ra tượng ra thần, rồi thờ rồi lạy, rồi cầu khẩn rằng : “Xin cứu tôi, vì ngài là chúa của tôi !”",
      "order": 0,
      "parNumber": 9,
      "parIndex": 5,
      "isPoetry": false,
      "createdAt": "2024-09-10T04:50:38.204Z",
      "updatedAt": "2024-09-10T04:50:38.204Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "7f4d76d7-ac44-4bc8-a3ac-4319b16a675d",
      "number": 18,
      "content": "Chúng đâu biết, đâu hiểu gì, vì mắt chúng không thấy, lòng chúng không hiểu được.",
      "order": 0,
      "parNumber": 10,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2024-09-10T04:50:38.207Z",
      "updatedAt": "2024-09-10T04:50:38.207Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "ee41d4ea-d90e-4fee-854b-e1f97b017873",
      "number": 19,
      "content": "Không ai nghĩ lại trong lòng, không ai có chút hiểu biết, chút trí khôn để nói rằng : “Mình đã cho một nửa vào lửa, làm than hồng để nướng bánh, quay thịt mà ăn ; phần còn lại, mình đã làm ra thứ đồ ghê tởm, rồi lại đi thờ khúc gỗ như thế sao !”",
      "order": 0,
      "parNumber": 10,
      "parIndex": 1,
      "isPoetry": false,
      "createdAt": "2024-09-10T04:50:38.211Z",
      "updatedAt": "2024-09-10T04:50:38.211Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "e8370e56-3142-4e86-a6d9-e7c7906f37c7",
      "number": 20,
      "content": "Nó bầu bạn với bụi, với tro, lòng mê muội đã làm nó lạc hướng. Nó không cứu nổi mình mà cũng không biết nói : “Không phải là đồ giả trong tay tôi sao ?”",
      "order": 0,
      "parNumber": 10,
      "parIndex": 2,
      "isPoetry": false,
      "createdAt": "2024-09-10T04:50:38.215Z",
      "updatedAt": "2024-09-10T04:50:38.215Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "2eadb06f-da16-46bd-8e60-3d9eb98f1fe6",
      "number": 21,
      "content": "Hỡi Gia-cóp, hỡi Ít-ra-en,",
      "order": 0,
      "parNumber": 11,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.219Z",
      "updatedAt": "2024-09-10T04:50:38.219Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "b443e694-7207-49a4-ae81-31d5578d07cf",
      "number": 21,
      "content": "hãy nhớ rằng ngươi là tôi tớ của Ta,",
      "order": 1,
      "parNumber": 11,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.230Z",
      "updatedAt": "2024-09-10T04:50:38.230Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "54e17e41-9d03-4447-a2e3-4606237d1cb2",
      "number": 21,
      "content": "Ta đã nắn ra ngươi để ngươi nên tôi tớ của Ta ;",
      "order": 2,
      "parNumber": 11,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.237Z",
      "updatedAt": "2024-09-10T04:50:38.237Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "6d737e21-67b5-47c0-868f-85c542ca1461",
      "number": 21,
      "content": "và ngươi, hỡi Ít-ra-en, ngươi sẽ không làm Ta thất vọng.",
      "order": 3,
      "parNumber": 11,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.245Z",
      "updatedAt": "2024-09-10T04:50:38.245Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "d77e1aba-3b97-405f-95cd-04807233f58c",
      "number": 22,
      "content": "Ta sẽ làm cho tội của ngươi tan ra như làn khói,",
      "order": 0,
      "parNumber": 12,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.254Z",
      "updatedAt": "2024-09-10T04:50:38.254Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "5283e8d7-e2c8-4d7d-abe5-0c867aecb95d",
      "number": 22,
      "content": "lỗi của ngươi biến mất tựa áng mây.",
      "order": 1,
      "parNumber": 12,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.259Z",
      "updatedAt": "2024-09-10T04:50:38.259Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "8fe647c1-29cb-443c-88a5-b534c0fee9bb",
      "number": 22,
      "content": "Hãy trở lại cùng Ta, vì Ta là Đấng cứu chuộc ngươi.",
      "order": 2,
      "parNumber": 12,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.264Z",
      "updatedAt": "2024-09-10T04:50:38.264Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "928703e3-9588-4738-bae3-3259bb8c14e6",
      "number": 23,
      "content": "Hò reo lên, hỡi các tầng trời, ĐỨC CHÚA đã ra tay.",
      "order": 0,
      "parNumber": 13,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.269Z",
      "updatedAt": "2024-09-10T04:50:38.269Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "e2873124-c80d-4f34-bde3-2e8efa70af3e",
      "number": 23,
      "content": "Tung hô đi nào, hỡi vực sâu lòng đất ;",
      "order": 1,
      "parNumber": 13,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.274Z",
      "updatedAt": "2024-09-10T04:50:38.274Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "cbc6d309-e205-4f31-8656-2c22aadc291b",
      "number": 23,
      "content": "vang tiếng hò reo, hỡi núi đồi,",
      "order": 2,
      "parNumber": 13,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.279Z",
      "updatedAt": "2024-09-10T04:50:38.279Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "eace7e6f-da8c-4b0c-952c-aecedf2605d2",
      "number": 23,
      "content": "hỡi rừng sâu với mọi thứ thảo mộc !",
      "order": 3,
      "parNumber": 13,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.284Z",
      "updatedAt": "2024-09-10T04:50:38.284Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "88f53edc-a45e-4358-826e-2972f920fd4d",
      "number": 23,
      "content": "Vì ĐỨC CHÚA đã chuộc Gia-cóp,",
      "order": 4,
      "parNumber": 13,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.289Z",
      "updatedAt": "2024-09-10T04:50:38.289Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "f0bdcd54-f92c-40f1-9046-383a748835ae",
      "number": 23,
      "content": "đã tỏ vinh quang Người tại Ít-ra-en.",
      "order": 5,
      "parNumber": 13,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.294Z",
      "updatedAt": "2024-09-10T04:50:38.294Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "d9aebfee-8bc9-4b9e-838a-8d2a2c0de915",
      "number": 24,
      "content": "ĐỨC CHÚA, Đấng cứu chuộc ngươi,",
      "order": 0,
      "parNumber": 14,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.299Z",
      "updatedAt": "2024-09-10T04:50:38.299Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "a51ff6cb-e860-4654-b0f7-92f403c9f6da",
      "number": 24,
      "content": "Đấng đã nắn ra ngươi từ khi ngươi còn trong lòng mẹ,",
      "order": 1,
      "parNumber": 14,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.313Z",
      "updatedAt": "2024-09-10T04:50:38.313Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "8d796a15-6cff-4aed-9727-2a17fa8f2944",
      "number": 24,
      "content": "Người phán thế này :",
      "order": 2,
      "parNumber": 14,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.323Z",
      "updatedAt": "2024-09-10T04:50:38.323Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "73084a6b-ed74-4a0e-8c6e-8cbbafe6cab6",
      "number": 24,
      "content": "Chính Ta là ĐỨC CHÚA đã dựng nên vạn vật,",
      "order": 3,
      "parNumber": 14,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.328Z",
      "updatedAt": "2024-09-10T04:50:38.328Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "f7a4b343-16dd-4cb2-b755-ea4972069952",
      "number": 24,
      "content": "một tay Ta đã căng vòm trời,",
      "order": 4,
      "parNumber": 14,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.333Z",
      "updatedAt": "2024-09-10T04:50:38.333Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "b8068658-7810-4f11-890b-bc21931a4bdc",
      "number": 24,
      "content": "đã trải rộng trái đất, chẳng cần ai giúp đỡ.",
      "order": 5,
      "parNumber": 14,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.337Z",
      "updatedAt": "2024-09-10T04:50:38.337Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "cdfdaf7c-b39c-4f73-91be-3221d0e8bbc0",
      "number": 25,
      "content": "Ta làm rối loạn những điềm báo của bọn thầy chiêm,",
      "order": 0,
      "parNumber": 15,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.342Z",
      "updatedAt": "2024-09-10T04:50:38.342Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "23dffe37-5e13-49c5-9dd9-9f24b06e6654",
      "number": 25,
      "content": "Ta khiến bọn thầy bói nói điên nói dại.",
      "order": 1,
      "parNumber": 15,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.347Z",
      "updatedAt": "2024-09-10T04:50:38.347Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "c7721d46-214e-4eda-b3b7-4463eb11f566",
      "number": 25,
      "content": "Ta hạ uy tín kẻ khôn ngoan,",
      "order": 2,
      "parNumber": 15,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.357Z",
      "updatedAt": "2024-09-10T04:50:38.357Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "31c7667e-9582-4d47-b5b9-ceaf17ad7757",
      "number": 25,
      "content": "biến những kẻ hiểu biết này thành ngu xuẩn.",
      "order": 3,
      "parNumber": 15,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.367Z",
      "updatedAt": "2024-09-10T04:50:38.367Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "46ea4206-b54c-412f-a905-9964183fdb5b",
      "number": 26,
      "content": "Ta làm cho ứng nghiệm lời của tôi tớ Ta,",
      "order": 0,
      "parNumber": 16,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.372Z",
      "updatedAt": "2024-09-10T04:50:38.372Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "613eb71c-8a20-4e54-a268-1ee765ce444f",
      "number": 26,
      "content": "cho dự định của các sứ giả Ta được thành tựu.",
      "order": 1,
      "parNumber": 16,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.377Z",
      "updatedAt": "2024-09-10T04:50:38.377Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "ccf1d222-e8b9-45c2-9acb-0c10de02a718",
      "number": 26,
      "content": "Ta nói về Giê-ru-sa-lem : “Cho nó có dân cư !”,",
      "order": 2,
      "parNumber": 16,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.387Z",
      "updatedAt": "2024-09-10T04:50:38.387Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "64ab398b-4e49-4766-a2d3-9d5073b5a6bb",
      "number": 26,
      "content": "và về thành thị Giu-đa : “Cho nó được tái thiết !”,",
      "order": 3,
      "parNumber": 16,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.391Z",
      "updatedAt": "2024-09-10T04:50:38.391Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "9e119d4d-c7be-47df-aaaf-ead945b204e8",
      "number": 26,
      "content": "những nơi điêu tàn, Ta sẽ xây dựng lại.",
      "order": 4,
      "parNumber": 16,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.396Z",
      "updatedAt": "2024-09-10T04:50:38.396Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "3c328491-96eb-4344-aac5-a88cac166117",
      "number": 27,
      "content": "Ta nói với biển khơi : “Hãy khô cạn ;",
      "order": 0,
      "parNumber": 17,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.401Z",
      "updatedAt": "2024-09-10T04:50:38.401Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "663fb9e6-1a00-4493-acb7-e9d77de816a3",
      "number": 27,
      "content": "sông ngòi của ngươi, Ta làm cho khô ráo.”",
      "order": 1,
      "parNumber": 17,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.406Z",
      "updatedAt": "2024-09-10T04:50:38.406Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "e26e045b-4713-4cb9-ac62-c1cbb5b9d900",
      "number": 28,
      "content": "Về Ky-rô Ta nói : “Đó là mục tử của Ta” ;",
      "order": 0,
      "parNumber": 18,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.415Z",
      "updatedAt": "2024-09-10T04:50:38.415Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "534edddf-69e2-4b5d-8526-af98e053ccfe",
      "number": 28,
      "content": "nó sẽ làm cho mọi điều Ta muốn được thành tựu",
      "order": 1,
      "parNumber": 18,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.425Z",
      "updatedAt": "2024-09-10T04:50:38.425Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "991a92d8-e045-4250-9fcf-f9f60bdfee4c",
      "number": 28,
      "content": "khi Ta nói về Giê-ru-sa-lem : “Cho nó được tái thiết !”",
      "order": 2,
      "parNumber": 18,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.430Z",
      "updatedAt": "2024-09-10T04:50:38.430Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "237e77b5-5f27-480f-aee2-345ff0eeefd6",
      "number": 28,
      "content": "và với đền thờ : “Hãy được dựng lên !”",
      "order": 3,
      "parNumber": 18,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T04:50:38.435Z",
      "updatedAt": "2024-09-10T04:50:38.435Z",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    }
  ],
  "footnotes": [
    {
      "id": "a56631a8-34b8-4990-a827-baf170b451ea",
      "content": "Cái tên nên thơ này của Ít-ra-en chỉ xuất hiện ở Đnl 32,15 ; 33,5.26 và Hc 37,25 (HR), nhưng không rõ nghĩa. Có thể hiểu là <i>người trung trực</i>, ngay thẳng. Đây là đức tính mới mà Thiên Chúa sẽ ban cho dân Người, tương phản với thói <i>lật lọng</i> là đặc tính của Gia-cóp (x. Gr 9,3).",
      "position": 14,
      "order": 0,
      "createdAt": "2024-09-10T04:50:38.022Z",
      "updatedAt": "2024-09-10T04:50:38.022Z",
      "verseId": "6deb9cbd-df39-4534-ac19-233bf6a1fa48",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "1dbad49b-c2e5-413e-8080-b1431c31caa4",
      "content": "ds : <i>sẽ nẩy mầm</i>. X. 42,9.",
      "position": 16,
      "order": 1,
      "createdAt": "2024-09-10T04:50:38.040Z",
      "updatedAt": "2024-09-10T04:50:38.040Z",
      "verseId": "48c39c19-5cd3-4a98-8449-aa0dde74ab94",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "2359e53d-25c0-4dc9-99de-1d4fd9581e75",
      "content": "Có thể ở đây nói về việc xâm mình, bị cấm nếu biểu hiện việc thờ cúng tà thần (x. Lv 19,28), nhưng được phép nếu biểu hiện việc thờ kính Thiên Chúa. Ở 49,16, chính Thiên Chúa sẽ <i>ghi khắc Xi-on trong lòng bàn tay của Người</i>, như để khỏi quên.",
      "position": 44,
      "order": 2,
      "createdAt": "2024-09-10T04:50:38.050Z",
      "updatedAt": "2024-09-10T04:50:38.050Z",
      "verseId": "b1743f9f-ec62-4361-97cc-227d01ae8e63",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "671c4e62-42f9-40ba-b1ca-fd4bb5b77c8f",
      "content": "Danh hiệu này xuất hiện 6 lần trong quyển sách : ở đây và 45,13 ; 47,4 ; 48,2 ; 51,15 ; 54,5. <i>Đạo binh</i> ở đây dịch từ Híp-ri có nghĩa là “đơn vị”, “thành phần” (x. St 2,1). Từ này trước hết chỉ quân lực Ít-ra-en dàn trận, rồi đến các chòm sao (x. Đnl 4,19). Nghĩa ở đây chỉ tất cả mọi thành phần làm ra vũ trụ, như ta nói “ngũ hành”.",
      "position": 27,
      "order": 3,
      "createdAt": "2024-09-10T04:50:38.064Z",
      "updatedAt": "2024-09-10T04:50:38.064Z",
      "verseId": "6320d4cc-6ff7-43e4-9929-b404e2397e3a",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "6dc755ce-b35b-40a4-a656-a72790d50857",
      "content": "So sánh với 43,11 ; 45,6.21 ; Đnl 32,39.",
      "position": 35,
      "order": 4,
      "createdAt": "2024-09-10T04:50:38.074Z",
      "updatedAt": "2024-09-10T04:50:38.074Z",
      "verseId": "287c0036-4337-4584-ba1f-9f8e69839178",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "86b60093-a114-44f8-b100-b4e84c2ce653",
      "content": "So sánh với 40,18.25 ; 46,5 ; Gr 10,6 ; 49,19.",
      "position": 14,
      "order": 5,
      "createdAt": "2024-09-10T04:50:38.078Z",
      "updatedAt": "2024-09-10T04:50:38.078Z",
      "verseId": "3d36878c-8011-42a5-8de0-6254748562d3",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "e0adbed9-b829-45ef-a74c-2831ccdce782",
      "content": "<i>Từ thời cổ đại ... loài người</i> : ds là <i>từ khi Ta gầy dựng dân muôn đời</i>. C.7 này, các bản ngắt mệnh đề khác nhau, và CR có thêm <i>hãy nói</i> sau <i>dân muôn đời</i>.",
      "position": 61,
      "order": 6,
      "createdAt": "2024-09-10T04:50:38.086Z",
      "updatedAt": "2024-09-10T04:50:38.086Z",
      "verseId": "007939d4-9663-4e9e-90ff-d1aebc8bd9af",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "2b9cad81-1203-4e03-926e-bd0b42f1bdab",
      "content": "C.8 là phản đề của c.11 với chữ <i>run</i> : Ít-ra-en khỏi phải run sợ vì có Đức Chúa cứu nguy, còn kẻ thờ tượng thần mới phải khiếp run vì <i>tượng thần chẳng cứu nổi ai</i>.",
      "position": 8,
      "order": 7,
      "createdAt": "2024-09-10T04:50:38.095Z",
      "updatedAt": "2024-09-10T04:50:38.095Z",
      "verseId": "3038254d-6009-4ab4-952c-0d79e4b4ed5d",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "9c6a1dd8-0c55-4da8-8d0d-9afefa602e7a",
      "content": "Đoạn này là một bài trào phúng châm biếm những thợ chạm, thợ nắn tượng thần, làm nổi bật công trình của Thiên Chúa khi Người tạo dựng tôi trung của Người (44,2).",
      "position": 19,
      "order": 8,
      "createdAt": "2024-09-10T04:50:38.138Z",
      "updatedAt": "2024-09-10T04:50:38.138Z",
      "headingId": "07bef1a3-c22d-4f4b-bee8-7d7e4878fd55",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "15bdf3d9-cc0c-4b0e-8546-41cbf2225204",
      "content": "<i>Vô dụng</i>, hữu dụng : x. 47,12 ; 48,17 ; 57,12.",
      "position": 85,
      "order": 9,
      "createdAt": "2024-09-10T04:50:38.148Z",
      "updatedAt": "2024-09-10T04:50:38.148Z",
      "verseId": "0f974447-664c-4d19-8cf7-d9014b58edf6",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "1d8abc9a-4d15-4930-b49d-6faa45c0361d",
      "content": "Động từ đọc thấy trong LXX và XR, thiếu mất trong M, có lẽ vì các mẫu tự của nó cũng là mẫu tự của chữ trước.",
      "position": 31,
      "order": 10,
      "createdAt": "2024-09-10T04:50:38.168Z",
      "updatedAt": "2024-09-10T04:50:38.168Z",
      "verseId": "b3f7d8f7-3da6-44a3-99ff-86bcd5d6569a",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "8de1048d-4efa-47c2-aca0-46e99f9d392b",
      "content": "ds : <i>đốn bá hương cho mình.</i>",
      "position": 16,
      "order": 11,
      "createdAt": "2024-09-10T04:50:38.183Z",
      "updatedAt": "2024-09-10T04:50:38.183Z",
      "verseId": "dc8654fc-206f-4670-93bc-ac9224e24d4f",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "7d7d3579-c958-4d89-9652-e4785b77dc1b",
      "content": "ds : <i>đặt lên đó, ăn, nướng cho chín</i>. Có bản chép : <i>đặt lên lửa đó</i>.",
      "position": 80,
      "order": 12,
      "createdAt": "2024-09-10T04:50:38.200Z",
      "updatedAt": "2024-09-10T04:50:38.200Z",
      "verseId": "c7e6874d-e9a6-4cde-9c4f-1f16f934def2",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "2d021c8c-6b06-4eb1-97b4-0a723e3f9529",
      "content": "Cc. 21-23 có thể là đoạn tiếp nối liền sau 44,1-8, và c.23 có thể là câu kết của “bài ca chiến thắng” (42,10-17). Nguyên bản đã chịu nhiều xáo trộn.",
      "position": 24,
      "order": 13,
      "createdAt": "2024-09-10T04:50:38.226Z",
      "updatedAt": "2024-09-10T04:50:38.226Z",
      "headingId": "3e192184-e44a-4b2f-bb4a-716036ced405",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "234f4b7a-cd4f-4261-b4c4-584299eab829",
      "content": "Theo CR, khác với M.",
      "position": 55,
      "order": 14,
      "createdAt": "2024-09-10T04:50:38.249Z",
      "updatedAt": "2024-09-10T04:50:38.249Z",
      "verseId": "6d737e21-67b5-47c0-868f-85c542ca1461",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "49d635ca-c59a-4981-8dad-f8e12f413349",
      "content": "Lấy lại chủ đề Thiên Chúa toàn năng, nổi bật trong các sự kiện tương lai : cuộc tái thiết Giê-ru-sa-lem và vai trò của vua Ky-rô.",
      "position": 48,
      "order": 15,
      "createdAt": "2024-09-10T04:50:38.308Z",
      "updatedAt": "2024-09-10T04:50:38.308Z",
      "headingId": "c8fcbb46-0355-4294-88bf-66b5c6853e7b",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "986e5ef3-9b55-4b57-8546-12d08aef927a",
      "content": "ds : <i>đẩy lui, làm ngược lại</i>. X. 43,13.",
      "position": 12,
      "order": 16,
      "createdAt": "2024-09-10T04:50:38.362Z",
      "updatedAt": "2024-09-10T04:50:38.362Z",
      "verseId": "c7721d46-214e-4eda-b3b7-4463eb11f566",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "8bb90ecd-f7f4-4dd0-bd11-0e58817ed63c",
      "content": "Ở đây, Thiên Chúa <i>làm cho dự định các sứ giả Người được thành tựu,</i> cũng như vua Ky-rô sẽ <i>làm cho mọi điều (Người) muốn được thành tựu</i> (c.28). So sánh các động từ và vị trí động từ ở cc. 26 và 28.",
      "position": 44,
      "order": 17,
      "createdAt": "2024-09-10T04:50:38.381Z",
      "updatedAt": "2024-09-10T04:50:38.381Z",
      "verseId": "613eb71c-8a20-4e54-a268-1ee765ce444f",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "8e581db2-300b-407e-98e2-ac6b67edd035",
      "content": "Cho tới đây, vua Ky-rô chỉ được nhắc đến một cách ngấm ngầm (40,13 ; 41,1-5 ; 41,25 – 42,9). Ở đây, vua được nêu danh hai lần và sẽ còn được nhắc tới trong nhiều đoạn tiếp theo sau.",
      "position": 8,
      "order": 18,
      "createdAt": "2024-09-10T04:50:38.420Z",
      "updatedAt": "2024-09-10T04:50:38.420Z",
      "verseId": "e26e045b-4713-4cb9-ac62-c1cbb5b9d900",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    }
  ],
  "headings": [
    {
      "id": "489f033f-904d-4c99-8b5a-c46f8c2a973d",
      "content": "Thiên Chúa giáng phúc cho Ít-ra-en",
      "order": 0,
      "createdAt": "2024-09-10T04:50:38.003Z",
      "updatedAt": "2024-09-10T04:50:38.003Z",
      "verseId": "83beb266-42e2-4f5d-a3d6-9ceb8c6bef10",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "de7941fa-d38c-4a50-b60c-26c52e5c1f1a",
      "content": "Chỉ có một Thiên Chúa",
      "order": 0,
      "createdAt": "2024-09-10T04:50:38.057Z",
      "updatedAt": "2024-09-10T04:50:38.057Z",
      "verseId": "8d38697f-bba9-4142-a481-8d5379cd1c05",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "07bef1a3-c22d-4f4b-bee8-7d7e4878fd55",
      "content": "Tượng thần là hư vô",
      "order": 0,
      "createdAt": "2024-09-10T04:50:38.133Z",
      "updatedAt": "2024-09-10T04:50:38.133Z",
      "verseId": "0f974447-664c-4d19-8cf7-d9014b58edf6",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "3e192184-e44a-4b2f-bb4a-716036ced405",
      "content": "Trung thành với ĐỨC CHÚA",
      "order": 0,
      "createdAt": "2024-09-10T04:50:38.223Z",
      "updatedAt": "2024-09-10T04:50:38.223Z",
      "verseId": "2eadb06f-da16-46bd-8e60-3d9eb98f1fe6",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    },
    {
      "id": "c8fcbb46-0355-4294-88bf-66b5c6853e7b",
      "content": "Thiên Chúa tạo thành thế giới và làm chủ lịch sử",
      "order": 0,
      "createdAt": "2024-09-10T04:50:38.304Z",
      "updatedAt": "2024-09-10T04:50:38.304Z",
      "verseId": "d9aebfee-8bc9-4b9e-838a-8d2a2c0de915",
      "chapterId": "71396b8c-123d-45de-8da6-0fbd0d66c701"
    }
  ],
