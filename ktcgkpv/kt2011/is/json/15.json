  ],
  "references": [
    {
      "id": "960841b4-a3c0-491e-9696-c25ef5b6b9ad",
      "content": "Gr 48ss; Ed 25,8-11; Am 2,1-3",
      "position": 17,
      "order": 0,
      "createdAt": "2024-09-10T04:50:09.169Z",
