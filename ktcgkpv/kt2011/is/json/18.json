    {
      "id": "1bcc942e-eb59-48ea-a9cf-59944e2f468f",
      "content": "Ga 15,2",
      "position": 31,
      "order": 1,
      "createdAt": "2024-09-17T10:24:17.453Z",
      "updatedAt": "2024-09-17T10:24:17.453Z",
      "verseId": "c12344f1-b2f8-4f1c-89d8-1dafd45fbeaa",
      "chapterId": "d6ecfe7e-81d8-4bfe-ba46-2d2a5502959e"
