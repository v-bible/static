      "chapterId": "008bec4e-f308-4cbc-9b04-3fa92357ab5b"
    },
    {
      "id": "66084cbc-cddd-4647-8d47-8661679fa973",
      "content": "Chống ngôn sứ giả",
      "order": 0,
      "createdAt": "2024-09-10T04:53:21.413Z",
      "updatedAt": "2024-09-10T04:53:21.413Z",
      "verseId": "2e86c22c-0489-40f6-95a1-4120990d2bde",
      "chapterId": "008bec4e-f308-4cbc-9b04-3fa92357ab5b"
    },
    {
      "id": "456d228e-d13d-441e-a55a-569c2f7fbc99",
      "content": "Chống cố vấn sai lầm",
      "order": 0,
      "createdAt": "2024-09-10T04:53:21.561Z",
