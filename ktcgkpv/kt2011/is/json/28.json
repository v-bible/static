  "references": [
    {
      "id": "2ea9fa69-8c7c-456b-b15d-4b251644430c",
      "content": "Is 5,11-13",
      "position": 0,
      "order": 0,
      "createdAt": "2024-09-10T04:53:21.282Z",
      "updatedAt": "2024-09-10T04:53:21.282Z",
      "verseId": "ac0afea6-b30e-4a35-b919-9aba7dd59f27",
      "chapterId": "008bec4e-f308-4cbc-9b04-3fa92357ab5b"
    },
    {
      "id": "d70acfff-4d7a-4abf-9566-a888089e55e2",
      "content": "Is 4,3+",
      "position": 4,
