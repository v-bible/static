      "verseId": "147ecafb-3aea-4f7e-8b9d-e00300242710",
      "chapterId": "30dceaca-85d8-49a2-86a5-79a824c69169"
    },
    {
      "id": "b8710451-bd15-4b01-99ea-28bee637990c",
      "content": "Ông Gio-an Tẩy Giả bị chém đầu",
      "order": 0,
      "createdAt": "2024-09-17T08:42:35.374Z",
      "updatedAt": "2024-09-17T08:42:35.374Z",
      "verseId": "4bdcb8b2-91ee-440d-b18c-fd7effa5379d",
      "chapterId": "30dceaca-85d8-49a2-86a5-79a824c69169"
    },
    {
      "id": "e6737247-3650-4da7-8535-2718775750a5",
      "content": "Đức Giê-su hoá bánh ra nhiều lần thứ nhất",
      "order": 0,
      "createdAt": "2024-09-17T08:42:35.421Z",
      "updatedAt": "2024-09-17T08:42:35.421Z",
      "verseId": "fd77c1e9-2b20-436a-92e3-bf42a4359f2b",
      "chapterId": "30dceaca-85d8-49a2-86a5-79a824c69169"
    },
    {
      "id": "dbaf61d6-a51b-4fb8-99f5-1589dbb76340",
      "content": "Đức Giê-su đi trên mặt nước",
      "order": 0,
      "createdAt": "2024-09-17T08:42:35.520Z",
      "updatedAt": "2024-09-17T08:42:35.520Z",
      "verseId": "ec0b2858-00fa-4b96-b82d-2ea9594248a5",
      "chapterId": "30dceaca-85d8-49a2-86a5-79a824c69169"
    },
    {
      "id": "4c41412e-eb09-4af1-98df-8b9b9f0071e2",
      "content": "Đức Giê-su chữa nhiều người đau ốm tại Ghen-nê-xa-rét",
      "order": 0,
      "createdAt": "2024-09-17T08:42:35.621Z",
      "updatedAt": "2024-09-17T08:42:35.621Z",
      "verseId": "a4ae533f-12bf-4986-b720-8211e2111886",
      "chapterId": "30dceaca-85d8-49a2-86a5-79a824c69169"
    }
  ],
