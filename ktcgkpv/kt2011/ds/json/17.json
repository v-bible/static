    },
    {
      "id": "9ce454b8-cbc3-4cae-84d0-cc88eb78d6bb",
      "content": "Cây gậy của ông A-ha-ron",
      "order": 0,
      "createdAt": "2024-09-17T09:18:48.072Z",
      "updatedAt": "2024-09-17T09:18:48.072Z",
