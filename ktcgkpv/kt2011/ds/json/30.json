    {
      "id": "2af61bf7-6536-47cc-baac-dc7383ac77dc",
      "content": "Luật về các lời khấn hứa",
      "order": 0,
      "createdAt": "2024-09-17T09:18:42.217Z",
      "updatedAt": "2024-09-17T09:18:42.217Z",
      "verseId": "ca7945f0-0640-4f93-a7f1-092fb0bbe604",
      "chapterId": "dbf6a4d4-e183-4779-987c-d738ef943f86"
    }
  ],
  "references": [
    {
      "id": "be8c1658-20e9-4f2a-a0fe-2b5857737231",
      "content": "Lv 27,1-34; Đnl 23,22-24; Tv 50,14; 56,13; 65,2; Gv 5,3-4",
      "position": 12,
      "order": 0,
      "createdAt": "2024-09-17T09:18:42.222Z",
      "updatedAt": "2024-09-17T09:18:42.222Z",
      "headingId": "2af61bf7-6536-47cc-baac-dc7383ac77dc",
      "chapterId": "dbf6a4d4-e183-4779-987c-d738ef943f86"
    },
    {
      "id": "bd9e8877-8b0d-45ea-9baf-b70e20553415",
      "content": "Tl 11,30-40",
      "position": 22,
