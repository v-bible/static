    },
    {
      "id": "d7f3e57e-009d-4b49-ae1e-dd7800bbb683",
      "content": "Trừng phạt ông Mô-sê và ông A-ha-ron",
      "order": 0,
      "createdAt": "2024-09-10T02:34:31.587Z",
      "updatedAt": "2024-09-10T02:34:31.587Z",
      "verseId": "56d89226-e03f-449d-b751-771f68a70b5a",
      "chapterId": "2de5e8df-768c-4c44-a6f5-27e1bf7bf1b7"
    },
    {
      "id": "84196356-15a3-4830-821d-95d32cd9574c",
      "content": "Ê-đôm không cho mượn đường",
      "order": 0,
      "createdAt": "2024-09-10T02:34:31.613Z",
      "updatedAt": "2024-09-10T02:34:31.613Z",
      "verseId": "71af28d3-710b-47f4-af02-a7c1bc0d5b3d",
      "chapterId": "2de5e8df-768c-4c44-a6f5-27e1bf7bf1b7"
    },
    {
      "id": "8f5e5e47-b9f7-4592-86e9-d4e58b71a631",
      "content": "Ông A-ha-ron qua đời",
      "order": 0,
      "createdAt": "2024-09-10T02:34:31.656Z",
      "updatedAt": "2024-09-10T02:34:31.656Z",
      "verseId": "d67ff8cd-004b-4895-9f60-902e538ff0ad",
      "chapterId": "2de5e8df-768c-4c44-a6f5-27e1bf7bf1b7"
    },
    {
      "id": "7594b532-8209-4077-aed2-4489d951d714",
      "content": "Mạch nước Mơ-ri-va",
      "order": 1,
      "createdAt": "2024-09-10T02:34:31.508Z",
      "updatedAt": "2024-09-10T02:34:31.508Z",
      "verseId": "5329677c-79d4-4961-8eef-d248be012029",
      "chapterId": "2de5e8df-768c-4c44-a6f5-27e1bf7bf1b7"
    }
  ],
