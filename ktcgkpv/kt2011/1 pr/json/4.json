      "chapterId": "a83d1849-51ec-4b48-a1ab-ac1624b617eb"
    },
    {
      "id": "0153ac8a-c44c-45fa-a200-b2843a988d11",
      "content": "X. Cl 3,4 ; 1 Pr 1,7 ; và c.7+.",
      "position": 118,
      "order": 15,
      "createdAt": "2024-09-23T03:27:53.504Z",
      "updatedAt": "2024-09-23T03:27:53.504Z",
