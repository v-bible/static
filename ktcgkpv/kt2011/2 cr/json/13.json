      "chapterId": "60035d0b-8e84-4559-8f39-3c347721db56"
    },
    {
      "id": "6af3483f-9a6f-4072-a92d-80ad28121723",
      "content": "2 Cr 12,11",
      "position": 15,
      "order": 1,
      "createdAt": "2024-09-23T03:24:22.711Z",
