    },
    {
      "id": "00418748-45e7-485f-9d13-b6371935068d",
      "content": "Khiển trách những kẻ năng lui tới Đền Thờ",
      "order": 0,
      "createdAt": "2024-09-17T10:16:58.038Z",
      "updatedAt": "2024-09-17T10:16:58.038Z",
