      "verseId": "30ffb399-aa85-43e4-9e5e-8a75bf8999d1",
      "chapterId": "7e0f192a-cbdf-4907-b3c1-0c2be9b33591"
    },
    {
      "id": "19665590-02ad-4dda-a807-d95c2e488312",
      "content": "Thị kiến thứ ba : người đo",
      "order": 0,
      "createdAt": "2024-09-17T10:33:10.775Z",
      "updatedAt": "2024-09-17T10:33:10.775Z",
      "verseId": "f2dd2b96-407e-44cf-bac0-63fd8472144a",
      "chapterId": "7e0f192a-cbdf-4907-b3c1-0c2be9b33591"
    },
    {
      "id": "aed4032e-784c-404f-ae2f-b48c849c90bd",
      "content": "Hai lời kêu gọi dân lưu đày",
      "order": 0,
      "createdAt": "2024-09-17T10:33:10.837Z",
      "updatedAt": "2024-09-17T10:33:10.837Z",
      "verseId": "216fa648-e9a4-4f5f-be5e-ffa9c8fe9491",
      "chapterId": "7e0f192a-cbdf-4907-b3c1-0c2be9b33591"
    }
  ],
