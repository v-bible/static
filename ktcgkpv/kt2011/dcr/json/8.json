      "chapterId": "4fe8a3a1-1092-42ae-8592-5fdb6767b9ca"
    },
    {
      "id": "db57d51d-bf6a-46f0-a632-11df1795c766",
      "content": "Đnl 4,40; Is 65,20",
      "position": 24,
      "order": 2,
      "createdAt": "2024-09-10T05:57:27.682Z",
