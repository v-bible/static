    },
    {
      "id": "1f24da22-4d8d-474b-8f37-12386d5f5edd",
      "content": "Đnl 4,29-31; 29,3",
      "position": 4,
      "order": 1,
      "createdAt": "2024-09-10T02:41:43.008Z",
      "updatedAt": "2024-09-10T02:41:43.008Z",
      "verseId": "3f5afaaf-48d8-41e7-a642-983fbadc7755",
      "chapterId": "614370ab-ede6-4ca2-834c-18069ad4af07"
