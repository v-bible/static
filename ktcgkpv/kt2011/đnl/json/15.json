      "chapterId": "fa786ca3-bd61-4ecc-b24d-799c85a7315f"
    },
    {
      "id": "3b0a4c9e-27f6-4380-b089-2ae20f737551",
      "content": "Các con đầu lòng",
      "order": 0,
      "createdAt": "2024-09-23T03:48:36.540Z",
      "updatedAt": "2024-09-23T03:48:36.540Z",
