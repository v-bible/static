    {
      "id": "cc6042ee-83c4-4204-b231-a88c62aa14f3",
      "content": "Năm sa-bát",
      "order": 0,
      "createdAt": "2024-09-23T03:48:36.459Z",
      "updatedAt": "2024-09-23T03:48:36.459Z",
      "verseId": "13fc8651-bf4c-45af-81ab-2ebb11c53468",
      "chapterId": "fa786ca3-bd61-4ecc-b24d-799c85a7315f"
    },
    {
      "id": "9d041729-6dee-4b37-b5a4-30ca5a42fc79",
      "content": "Người nô lệ",
      "order": 0,
      "createdAt": "2024-09-23T03:48:36.499Z",
      "updatedAt": "2024-09-23T03:48:36.499Z",
