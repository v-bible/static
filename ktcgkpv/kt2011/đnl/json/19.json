    }
  ],
  "references": [
    {
      "id": "696310d5-7988-4da5-8c95-e35d1c91c1b7",
      "content": "Xh 21,13-14; Ds 35,9-34",
      "position": 29,
      "order": 0,
      "createdAt": "2024-09-10T02:41:06.433Z",
      "updatedAt": "2024-09-10T02:41:06.433Z",
      "headingId": "0c96bcfa-dea7-4053-815a-d77c8f6d5783",
      "chapterId": "1a0b2dfa-db64-419c-8781-c1da0962a197"
