    {
      "id": "e3462f74-bd6a-415d-9edd-d500f3b201fa",
      "content": "Thiên Chúa gọi ông Sa-mu-en",
      "order": 0,
      "createdAt": "2024-09-17T09:27:49.324Z",
      "updatedAt": "2024-09-17T09:27:49.324Z",
