      "chapterId": "bd841f86-1104-4d9f-b187-254fa5d4c996"
    },
    {
      "id": "26ff1757-a8de-4c60-9b34-6e1f1c17dddf",
      "content": "Tl 10,16",
      "position": 17,
      "order": 2,
      "createdAt": "2024-09-17T09:27:45.317Z",
      "updatedAt": "2024-09-17T09:27:45.317Z",
      "verseId": "73b537bc-81b1-4f10-843d-cd85929a8079",
      "chapterId": "bd841f86-1104-4d9f-b187-254fa5d4c996"
    },
    {
