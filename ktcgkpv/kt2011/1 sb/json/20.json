    },
    {
      "id": "f95eaf34-3083-4438-9004-56c050a8a7bc",
      "content": "Chiến công đánh bại quân Phi-li-tinh",
      "order": 0,
      "createdAt": "2024-09-17T09:36:55.296Z",
      "updatedAt": "2024-09-17T09:36:55.296Z",
