      "chapterId": "31f236e4-ad2e-4a0f-b238-1f6969bf6e19"
    },
    {
      "id": "92f694d1-4567-4e68-a8fd-3815e4d34be0",
      "content": "Chiếm Giê-ru-sa-lem",
      "order": 0,
      "createdAt": "2024-09-10T03:21:27.291Z",
      "updatedAt": "2024-09-10T03:21:27.291Z",
      "verseId": "bb067e92-8670-4f46-ad2d-cb581488d4e5",
      "chapterId": "31f236e4-ad2e-4a0f-b238-1f6969bf6e19"
    },
    {
      "id": "692e103e-3a7b-46ba-836d-0f89d7bc45d0",
      "content": "Các dũng sĩ của vua Đa-vít",
      "order": 0,
      "createdAt": "2024-09-10T03:21:27.340Z",
      "updatedAt": "2024-09-10T03:21:27.340Z",
      "verseId": "b4cc72db-e9c4-4c50-b014-1f9e2d431e1d",
      "chapterId": "31f236e4-ad2e-4a0f-b238-1f6969bf6e19"
    },
    {
      "id": "685780d6-61a9-4aea-934a-586d8a7a9537",
      "content": "1. VƯƠNG QUYỀN VUA ĐA-VÍT",
      "order": 1,
      "createdAt": "2024-09-10T03:21:27.264Z",
      "updatedAt": "2024-09-10T03:21:27.264Z",
      "verseId": "8bc96401-a688-4d38-a314-6926b71d8abb",
      "chapterId": "31f236e4-ad2e-4a0f-b238-1f6969bf6e19"
    },
    {
      "id": "46aac7e4-51e1-4718-8969-10562368afa6",
      "content": "Vua Đa-vít được phong làm vua Ít-ra-en",
      "order": 2,
      "createdAt": "2024-09-10T03:21:27.266Z",
      "updatedAt": "2024-09-10T03:21:27.266Z",
      "verseId": "8bc96401-a688-4d38-a314-6926b71d8abb",
      "chapterId": "31f236e4-ad2e-4a0f-b238-1f6969bf6e19"
    }
  ],
