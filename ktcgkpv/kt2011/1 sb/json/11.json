      "chapterId": "cf3c9417-7b6a-4a16-8315-e23b3dc39275"
    },
    {
      "id": "5a721140-0b9e-4043-b1f2-41005c9f7746",
      "content": "Các dũng sĩ của vua Đa-vít",
      "order": 0,
      "createdAt": "2024-09-17T09:39:22.133Z",
      "updatedAt": "2024-09-17T09:39:22.133Z",
      "verseId": "5c85ab5d-7280-41f2-9cf9-909ee8d81ada",
      "chapterId": "cf3c9417-7b6a-4a16-8315-e23b3dc39275"
    },
    {
      "id": "29699ba1-0a00-49da-9e41-f5d39a2e7fe8",
      "content": "1. VƯƠNG QUYỀN VUA ĐA-VÍT",
      "order": 1,
      "createdAt": "2024-09-17T09:39:22.063Z",
      "updatedAt": "2024-09-17T09:39:22.063Z",
      "verseId": "7ce29fc1-c6e9-47b9-9f3b-4e4857e6cbe6",
      "chapterId": "cf3c9417-7b6a-4a16-8315-e23b3dc39275"
    },
    {
      "id": "cbe58a97-bead-4b42-af5f-cb17169042a3",
      "content": "Vua Đa-vít được phong làm vua Ít-ra-en",
      "order": 2,
      "createdAt": "2024-09-17T09:39:22.065Z",
      "updatedAt": "2024-09-17T09:39:22.065Z",
      "verseId": "7ce29fc1-c6e9-47b9-9f3b-4e4857e6cbe6",
      "chapterId": "cf3c9417-7b6a-4a16-8315-e23b3dc39275"
    }
  ],
