      "chapterId": "119c1dbf-0347-409d-b0bc-f5c593b5cd99"
    },
    {
      "id": "9fb3b56e-096a-4424-b42e-6e8d908febc4",
      "content": "1. NHÀ THỜ CỦA ÔNG MI-KHA VÀ NHÀ THỜ CỦA HỌ ĐAN",
      "order": 1,
      "createdAt": "2024-09-17T09:25:12.373Z",
      "updatedAt": "2024-09-17T09:25:12.373Z",
      "verseId": "cd25cf85-c44b-4893-bb63-2a0dae8c06e6",
      "chapterId": "119c1dbf-0347-409d-b0bc-f5c593b5cd99"
    },
    {
      "id": "75989619-f84f-471c-a9fc-5751a4d361e0",
      "content": "Nhà thờ tư của ông Mi-kha",
      "order": 2,
      "createdAt": "2024-09-17T09:25:12.378Z",
      "updatedAt": "2024-09-17T09:25:12.378Z",
