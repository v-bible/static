    },
    {
      "id": "9013fc2d-eb7e-4254-bb97-173d90e93261",
      "content": "St 31,19; 1 Sm 2,28",
      "position": 47,
      "order": 1,
      "createdAt": "2024-09-17T09:25:12.403Z",
      "updatedAt": "2024-09-17T09:25:12.403Z",
      "verseId": "bfd7c447-0c51-4aee-ae5a-cfb50ce66c6e",
      "chapterId": "119c1dbf-0347-409d-b0bc-f5c593b5cd99"
