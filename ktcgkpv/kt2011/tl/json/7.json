    },
    {
      "id": "5862525e-f077-470e-903a-44f8a93e670e",
      "content": "Điềm báo thắng trận",
      "order": 0,
      "createdAt": "2024-09-17T09:26:08.013Z",
      "updatedAt": "2024-09-17T09:26:08.013Z",
