    },
    {
      "id": "9ec6327c-a67d-420b-b191-3d6104c07729",
      "content": "Cuộc đột kích",
      "order": 0,
      "createdAt": "2024-09-17T09:26:08.045Z",
      "updatedAt": "2024-09-17T09:26:08.045Z",
      "verseId": "77eb6437-6092-4332-8189-0b88a0b9079b",
      "chapterId": "e9c7ef44-13ea-43df-bd14-767458f92491"
    },
    {
      "id": "5590ea2e-53d3-4b2d-bede-9248e761992a",
      "content": "Truy kích",
      "order": 0,
      "createdAt": "2024-09-17T09:26:08.088Z",
      "updatedAt": "2024-09-17T09:26:08.088Z",
      "verseId": "5bac28f3-47bb-41b5-ace5-14421323e0f9",
      "chapterId": "e9c7ef44-13ea-43df-bd14-767458f92491"
    },
    {
      "id": "8fca2ea2-a358-49ef-b00d-e76504e672fe",
      "content": "ĐỨC CHÚA rút bớt quân số của ông Ghít-ôn",
      "order": 1,
      "createdAt": "2024-09-17T09:26:07.976Z",
      "updatedAt": "2024-09-17T09:26:07.976Z",
      "verseId": "f366b91a-e049-456e-8a16-b5eb375044bd",
      "chapterId": "e9c7ef44-13ea-43df-bd14-767458f92491"
    }
  ],
