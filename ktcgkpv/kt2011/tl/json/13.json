    },
    {
      "id": "ca270fdf-634c-4b30-9f3a-4a2ac4ca34da",
      "content": "Thiên sứ hiện ra lần thứ hai",
      "order": 0,
      "createdAt": "2024-09-23T03:51:08.621Z",
      "updatedAt": "2024-09-23T03:51:08.621Z",
      "verseId": "76469cd5-2054-47f8-9f03-de130e3b3a82",
      "chapterId": "315a8807-574c-4bc2-87d7-80699f828835"
    },
    {
      "id": "737b2688-151d-4c67-875d-2e88a60fcb74",
      "content": "Truyền tin ông [Sam-sôn]() ra đời",
      "order": 1,
      "createdAt": "2024-09-23T03:51:08.562Z",
      "updatedAt": "2024-09-23T03:51:08.562Z",
