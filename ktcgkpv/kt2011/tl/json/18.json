    },
    {
      "id": "89c45d24-a4f1-4c1b-8f33-f72fb83d76a9",
      "content": "Xh 4,18; 1 Sm 1,17",
      "position": 32,
      "order": 5,
      "createdAt": "2024-09-10T02:54:53.267Z",
      "updatedAt": "2024-09-10T02:54:53.267Z",
      "verseId": "6a9428b9-82f5-4b44-93c3-208da5acd296",
      "chapterId": "a7ddfc44-0eb0-44d5-bf45-4709f74b8c93"
    },
