    },
    {
      "id": "fc9c2c51-fe04-4241-a12f-4313ab9ea974",
      "content": "Cuộc chiến đấu nội tâm",
      "order": 0,
      "createdAt": "2024-09-23T03:22:11.288Z",
      "updatedAt": "2024-09-23T03:22:11.288Z",
      "verseId": "c3dacdbe-ff5f-46a1-9e7b-f04a5cad1f04",
      "chapterId": "39e7d329-1db0-4ffe-b425-f60c2c0777a0"
    }
  ],
