    },
    {
      "id": "e07e11a2-b57b-45f2-99fe-0fd5ecdcf56a",
      "content": "Trung tín trong việc sử dụng Tiền Của",
      "order": 0,
      "createdAt": "2024-09-10T01:04:01.771Z",
      "updatedAt": "2024-09-10T01:04:01.771Z",
      "verseId": "1a650e46-ec75-4084-83b0-da62c5ea979a",
      "chapterId": "cabc54b2-aea5-4185-bb2a-3714aa14326b"
    },
    {
      "id": "01e50e94-93ae-45e5-b2af-d24c81ef0637",
      "content": "Đức Giê-su khiển trách người Pha-ri-sêu ham tiền",
      "order": 0,
      "createdAt": "2024-09-10T01:04:01.848Z",
      "updatedAt": "2024-09-10T01:04:01.848Z",
      "verseId": "980aa8c2-064e-4f5c-b853-50aeea4a7d2e",
      "chapterId": "cabc54b2-aea5-4185-bb2a-3714aa14326b"
    },
    {
      "id": "6c625830-5a00-4cfd-af41-054c583d25e7",
      "content": "Dùng sức mạnh mà vào Nước Thiên Chúa",
      "order": 0,
      "createdAt": "2024-09-10T01:04:01.896Z",
      "updatedAt": "2024-09-10T01:04:01.896Z",
      "verseId": "4543d389-750c-41ab-90b6-b8b11b8e839a",
      "chapterId": "cabc54b2-aea5-4185-bb2a-3714aa14326b"
    },
    {
      "id": "45580f4a-8510-4f19-9631-dc6078adacbb",
      "content": "Lề Luật sẽ không bao giờ ra vô hiệu",
      "order": 0,
      "createdAt": "2024-09-10T01:04:01.916Z",
      "updatedAt": "2024-09-10T01:04:01.916Z",
      "verseId": "c3fe4755-89b2-47b6-a547-19a286229505",
      "chapterId": "cabc54b2-aea5-4185-bb2a-3714aa14326b"
    },
    {
      "id": "ed260497-6623-4b3f-9a2d-5484bd016780",
      "content": "Vấn đề ly dị",
      "order": 0,
      "createdAt": "2024-09-10T01:04:01.932Z",
      "updatedAt": "2024-09-10T01:04:01.932Z",
      "verseId": "e53cd962-afdb-4c24-b5b9-7d40b8d58e5e",
      "chapterId": "cabc54b2-aea5-4185-bb2a-3714aa14326b"
    },
    {
      "id": "9026354d-2cad-47a6-86c6-345afb234b95",
      "content": "Dụ ngôn ông nhà giàu và anh La-da-rô nghèo khó",
      "order": 0,
      "createdAt": "2024-09-10T01:04:01.946Z",
      "updatedAt": "2024-09-10T01:04:01.946Z",
      "verseId": "762438ed-11eb-416c-8587-b686cda40105",
      "chapterId": "cabc54b2-aea5-4185-bb2a-3714aa14326b"
    }
