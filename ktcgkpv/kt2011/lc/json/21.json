      "chapterId": "431f228b-d73e-456f-81b7-f19bc23a9a98"
    },
    {
      "id": "c7db2976-32ba-4ee5-bfd7-6dbaeb8089a4",
      "content": "Mt 24,15-19; Mc 13,14-17",
      "position": 0,
      "order": 4,
      "createdAt": "2024-09-17T08:49:32.274Z",
