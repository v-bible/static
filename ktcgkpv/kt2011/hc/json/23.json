    {
      "id": "32b63ad2-5209-45f2-84aa-7bc9475cbfe6",
      "content": "Những lời nói khiếm nhã",
      "order": 0,
      "createdAt": "2024-09-10T05:07:43.045Z",
      "updatedAt": "2024-09-10T05:07:43.045Z",
