{
  "chapter": {
    "id": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0",
    "number": 3,
    "ref": "",
    "createdAt": "2024-09-17T08:41:12.665Z",
    "updatedAt": "2024-09-17T08:41:12.665Z",
    "bookId": "ea2c3cc0-06f4-4368-850b-d68b5a5024a8"
  },
  "verses": [
    {
      "id": "05586b9a-9eb7-42bb-a12a-47c582fc18f3",
      "number": 1,
      "content": "Hỡi các con, hãy nghe cha đây,",
      "order": 0,
      "parNumber": 0,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.831Z",
      "updatedAt": "2024-09-17T10:14:10.831Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "d07ec889-27fd-4b26-bcd1-6d50dfe19e34",
      "number": 1,
      "content": "và làm thế nào để các con được cứu độ.",
      "order": 1,
      "parNumber": 0,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.849Z",
      "updatedAt": "2024-09-17T10:14:10.849Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "b9f45e35-2981-4bc7-bad4-4499739bae12",
      "number": 2,
      "content": "Đức Chúa làm cho người cha được vẻ vang vì con cái,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.851Z",
      "updatedAt": "2024-09-17T10:14:10.851Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "6290c33d-2ee8-45d0-9fc4-a03f933e8c1e",
      "number": 2,
      "content": "cho người mẹ thêm uy quyền đối với các con.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.853Z",
      "updatedAt": "2024-09-17T10:14:10.853Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "e2a0b1ba-d94c-4c8e-ba00-c37065046171",
      "number": 3,
      "content": "Ai thờ cha thì bù đắp lỗi lầm,",
      "order": 0,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.856Z",
      "updatedAt": "2024-09-17T10:14:10.856Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "cde0aa6f-82d6-4074-8248-59e2dbabc87b",
      "number": 4,
      "content": "ai kính mẹ thì tích trữ kho báu.",
      "order": 0,
      "parNumber": 3,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.858Z",
      "updatedAt": "2024-09-17T10:14:10.858Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "2882c883-6555-487f-b6fa-0aa715098d9d",
      "number": 5,
      "content": "Ai thờ cha sẽ được vui mừng vì con cái,",
      "order": 0,
      "parNumber": 4,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.861Z",
      "updatedAt": "2024-09-17T10:14:10.861Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "2fbf1889-dd8b-4dca-85f1-8fd08babbc48",
      "number": 5,
      "content": "khi cầu nguyện, họ sẽ được lắng nghe.",
      "order": 1,
      "parNumber": 4,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.863Z",
      "updatedAt": "2024-09-17T10:14:10.863Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "69936121-3930-4c84-9d9c-4a76af1ea3e9",
      "number": 6,
      "content": "Ai tôn vinh cha sẽ được trường thọ,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.865Z",
      "updatedAt": "2024-09-17T10:14:10.865Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "45b6f19d-42b4-42c1-859d-97f4002bc86b",
      "number": 6,
      "content": "ai vâng lệnh Đức Chúa sẽ làm cho mẹ an lòng.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.867Z",
      "updatedAt": "2024-09-17T10:14:10.867Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "e1b23492-4ef4-4cfa-9c9d-d722cccef7c8",
      "number": 7,
      "content": "Người đó phục vụ các bậc sinh thành",
      "order": 0,
      "parNumber": 6,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.872Z",
      "updatedAt": "2024-09-17T10:14:10.872Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "868e2ccb-7fe1-4043-9dbc-a4c153db3808",
      "number": 7,
      "content": "như phục vụ chủ nhân.",
      "order": 1,
      "parNumber": 6,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.874Z",
      "updatedAt": "2024-09-17T10:14:10.874Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "96d6e5ba-6a15-41d4-877e-e36af0a2a6fe",
      "number": 8,
      "content": "Hãy thảo kính cha con bằng lời nói việc làm,",
      "order": 0,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.880Z",
      "updatedAt": "2024-09-17T10:14:10.880Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "6f302bf8-b78a-4475-9f50-2bf65c000a1e",
      "number": 8,
      "content": "để nhờ người mà con được chúc phúc.",
      "order": 1,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.885Z",
      "updatedAt": "2024-09-17T10:14:10.885Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "50b1f4ca-4417-47f2-9c12-ab4dd4ca4ad0",
      "number": 9,
      "content": "Vì phúc lành của người cha",
      "order": 0,
      "parNumber": 8,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.887Z",
      "updatedAt": "2024-09-17T10:14:10.887Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "a11d9ee9-7ac9-42b9-b293-6e66400ab2eb",
      "number": 9,
      "content": "làm cho cửa nhà con cái bền vững,",
      "order": 1,
      "parNumber": 8,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.891Z",
      "updatedAt": "2024-09-17T10:14:10.891Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "bf027208-ecdb-47d5-8ab3-061783c4ff00",
      "number": 9,
      "content": "lời nguyền rủa của người mẹ",
      "order": 2,
      "parNumber": 8,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.893Z",
      "updatedAt": "2024-09-17T10:14:10.893Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "20d6c695-dad2-4168-8fce-e4516df269e3",
      "number": 9,
      "content": "làm cho trốc rễ bật nền.",
      "order": 3,
      "parNumber": 8,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.896Z",
      "updatedAt": "2024-09-17T10:14:10.896Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "f49914d0-c827-47da-8e46-a1c2bb9c18e2",
      "number": 10,
      "content": "Chớ vênh vang khi cha con phải tủi nhục,",
      "order": 0,
      "parNumber": 9,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.898Z",
      "updatedAt": "2024-09-17T10:14:10.898Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "9a46043b-3d63-4dee-9434-49d268426586",
      "number": 10,
      "content": "vì nỗi tủi nhục đó chẳng vinh dự gì cho con.",
      "order": 1,
      "parNumber": 9,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.900Z",
      "updatedAt": "2024-09-17T10:14:10.900Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "a45345f2-a89c-430d-92df-f1c027b3c301",
      "number": 11,
      "content": "Quả thật, người ta chỉ được vẻ vang",
      "order": 0,
      "parNumber": 10,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.903Z",
      "updatedAt": "2024-09-17T10:14:10.903Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "7b7d2aea-a5df-413b-bbb2-60ea263c2bd0",
      "number": 11,
      "content": "lúc cha mình được tôn kính ;",
      "order": 1,
      "parNumber": 10,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.907Z",
      "updatedAt": "2024-09-17T10:14:10.907Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "23082c68-9323-446f-804b-644f61243c09",
      "number": 11,
      "content": "và con cái phải ô nhục khi mẹ mình bị khinh chê.",
      "order": 2,
      "parNumber": 10,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.909Z",
      "updatedAt": "2024-09-17T10:14:10.909Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "367651b5-f578-4751-bdad-0e89b4a52c26",
      "number": 12,
      "content": "Con ơi, hãy săn sóc cha con, khi người đến tuổi già ;",
      "order": 0,
      "parNumber": 11,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.912Z",
      "updatedAt": "2024-09-17T10:14:10.912Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "985803d8-803f-4b1b-8009-4ef482fc5780",
      "number": 12,
      "content": "bao lâu người còn sống, chớ làm người buồn tủi.",
      "order": 1,
      "parNumber": 11,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.916Z",
      "updatedAt": "2024-09-17T10:14:10.916Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "9e38ac15-812a-4aa6-b3c5-9aa3c1055c1a",
      "number": 13,
      "content": "Người có lú lẫn, con cũng phải cảm thông,",
      "order": 0,
      "parNumber": 12,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.920Z",
      "updatedAt": "2024-09-17T10:14:10.920Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "1683624d-0231-4940-9d4b-7c7918a328a5",
      "number": 13,
      "content": "chớ cậy mình sung sức mà khinh dể người.",
      "order": 1,
      "parNumber": 12,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.922Z",
      "updatedAt": "2024-09-17T10:14:10.922Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "8444aed9-1746-4664-8862-8e2d967f06c1",
      "number": 14,
      "content": "Vì lòng hiếu nghĩa đối với cha sẽ không bị quên lãng,",
      "order": 0,
      "parNumber": 13,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.924Z",
      "updatedAt": "2024-09-17T10:14:10.924Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "7db422d6-3703-4942-a10a-5a60a25643d6",
      "number": 14,
      "content": "và sẽ đền bù tội lỗi cho con.",
      "order": 1,
      "parNumber": 13,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.926Z",
      "updatedAt": "2024-09-17T10:14:10.926Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "28237a3c-0e1b-4dd3-a008-67323abaf46d",
      "number": 15,
      "content": "Thiên Chúa sẽ nhớ đến con, ngày con gặp khốn khó,",
      "order": 0,
      "parNumber": 14,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.928Z",
      "updatedAt": "2024-09-17T10:14:10.928Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "2213109a-c7d0-49cc-b0c9-947f6d5655c3",
      "number": 15,
      "content": "và các tội con sẽ biến tan",
      "order": 1,
      "parNumber": 14,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.930Z",
      "updatedAt": "2024-09-17T10:14:10.930Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "12cc7121-ac13-4769-8337-2bd58a2a2285",
      "number": 15,
      "content": "như sương muối biến tan lúc đẹp trời.",
      "order": 2,
      "parNumber": 14,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.932Z",
      "updatedAt": "2024-09-17T10:14:10.932Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "78217556-43f1-4404-8d49-bc19818d628c",
      "number": 16,
      "content": "Ai bỏ rơi cha mình thì khác nào kẻ lộng ngôn,",
      "order": 0,
      "parNumber": 15,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.934Z",
      "updatedAt": "2024-09-17T10:14:10.934Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "7b68aea9-78ff-4c44-9bb7-97989dbee58e",
      "number": 16,
      "content": "ai chọc giận mẹ mình, sẽ bị Đức Chúa nguyền rủa.",
      "order": 1,
      "parNumber": 15,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.938Z",
      "updatedAt": "2024-09-17T10:14:10.938Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "31b8f0c6-42c3-4102-b88a-b507252622c9",
      "number": 17,
      "content": "Con ơi, hãy hoàn thành việc của con một cách nhũn nhặn,",
      "order": 0,
      "parNumber": 16,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.942Z",
      "updatedAt": "2024-09-17T10:14:10.942Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "d5f11252-3592-44a7-b0f0-6f451c0f8e4d",
      "number": 17,
      "content": "thì con sẽ được mến yêu hơn người hào phóng.",
      "order": 1,
      "parNumber": 16,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.947Z",
      "updatedAt": "2024-09-17T10:14:10.947Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "180635ef-9418-4ad8-9a02-f143179a8d94",
      "number": 18,
      "content": "Càng làm lớn, con càng phải tự hạ,",
      "order": 0,
      "parNumber": 17,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.951Z",
      "updatedAt": "2024-09-17T10:14:10.951Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "a90c96f8-aafc-4a6e-967f-a0f7ae92d7d5",
      "number": 18,
      "content": "như thế, con sẽ được đẹp lòng Đức Chúa.",
      "order": 1,
      "parNumber": 17,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.955Z",
      "updatedAt": "2024-09-17T10:14:10.955Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "7f6682fe-0e7e-4dbb-bb85-46135f619ef3",
      "number": 20,
      "content": "Vì quyền năng Đức Chúa thì lớn lao :",
      "order": 0,
      "parNumber": 18,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.963Z",
      "updatedAt": "2024-09-17T10:14:10.963Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "69b479ec-4e0c-4547-a5fa-154822509fed",
      "number": 20,
      "content": "Người được tôn vinh nơi các kẻ khiêm nhường.",
      "order": 1,
      "parNumber": 18,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.968Z",
      "updatedAt": "2024-09-17T10:14:10.968Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "dd1e3abe-228a-4813-a845-d75dea13e1fd",
      "number": 21,
      "content": "Đừng tìm những điều khó quá đối với con,",
      "order": 0,
      "parNumber": 19,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.982Z",
      "updatedAt": "2024-09-17T10:14:10.982Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "7f217ac1-2b42-4d55-a892-3e6326619b77",
      "number": 21,
      "content": "những điều vượt sức con, con đừng xét tới.",
      "order": 1,
      "parNumber": 19,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:10.991Z",
      "updatedAt": "2024-09-17T10:14:10.991Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "bcac8c7d-b24b-47ae-b3ab-d422e90e7a7d",
      "number": 22,
      "content": "Những gì đã ấn định cho con, con hãy suy cho kỹ,",
      "order": 0,
      "parNumber": 20,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:11.004Z",
      "updatedAt": "2024-09-17T10:14:11.004Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "8cd1ba5d-e0a8-4997-895f-6f436e62d20f",
      "number": 22,
      "content": "cần chi phải hiếu kỳ !",
      "order": 1,
      "parNumber": 20,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:11.009Z",
      "updatedAt": "2024-09-17T10:14:11.009Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "53841b2e-cb34-4b45-bf6f-9ebc48a5fa14",
      "number": 23,
      "content": "Đừng dây mình vào những việc quá sức con,",
      "order": 0,
      "parNumber": 21,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:11.014Z",
      "updatedAt": "2024-09-17T10:14:11.014Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "bfffb523-fa7a-4229-8473-b05f96f74c83",
      "number": 23,
      "content": "vì những điều con trông thấy",
      "order": 1,
      "parNumber": 21,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:11.024Z",
      "updatedAt": "2024-09-17T10:14:11.024Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "01219d45-a10c-480c-90ad-185143564f05",
      "number": 23,
      "content": "đã vượt quá trí hiểu của loài người.",
      "order": 2,
      "parNumber": 21,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:11.029Z",
      "updatedAt": "2024-09-17T10:14:11.029Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "31da253b-9feb-4f2e-9afc-532070eb506a",
      "number": 24,
      "content": "Nhiều người mắc sai lầm vì ý kiến riêng của họ,",
      "order": 0,
      "parNumber": 22,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:11.033Z",
      "updatedAt": "2024-09-17T10:14:11.033Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "f71a3318-2fa6-4735-be23-8bb9da7d94aa",
      "number": 24,
      "content": "ý nghĩ xấu làm cho suy nghĩ của họ đảo điên.",
      "order": 1,
      "parNumber": 22,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:11.038Z",
      "updatedAt": "2024-09-17T10:14:11.038Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "ceb646ab-e32e-4de0-b239-c52dcdaa4f3f",
      "number": 26,
      "content": "Kẻ lòng chai dạ đá cuối đời sẽ gặp bất hạnh,",
      "order": 0,
      "parNumber": 23,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:11.048Z",
      "updatedAt": "2024-09-17T10:14:11.048Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "fb3d71f6-e343-4d0c-8d6b-558984bb870f",
      "number": 26,
      "content": "người thích nguy hiểm sẽ phải chết vì hiểm nguy.",
      "order": 1,
      "parNumber": 23,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:11.063Z",
      "updatedAt": "2024-09-17T10:14:11.063Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "de15ebd4-b7e2-4542-b3e2-38ca2067549a",
      "number": 27,
      "content": "Kẻ lòng chai dạ đá sẽ bị ngàn nỗi ưu phiền đè nặng,",
      "order": 0,
      "parNumber": 24,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:11.073Z",
      "updatedAt": "2024-09-17T10:14:11.073Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "85cd2f8b-83e8-4dee-9659-10e6acf4c997",
      "number": 27,
      "content": "người tội lỗi cứ chồng chất tội này lên tội kia.",
      "order": 1,
      "parNumber": 24,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:11.082Z",
      "updatedAt": "2024-09-17T10:14:11.082Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "35ac7149-b88e-44ad-87bb-b0d90c516462",
      "number": 28,
      "content": "Kẻ kiêu ngạo lâm cảnh khốn cùng thì vô phương cứu chữa,",
      "order": 0,
      "parNumber": 25,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:11.086Z",
      "updatedAt": "2024-09-17T10:14:11.086Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "1d816520-8b4a-4e95-881e-a7d05d7017de",
      "number": 28,
      "content": "vì sự xấu xa đã ăn sâu mọc rễ trong nó.",
      "order": 1,
      "parNumber": 25,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:11.089Z",
      "updatedAt": "2024-09-17T10:14:11.089Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "c3d4a206-7db7-4820-a56d-b6dcb8a38b3a",
      "number": 29,
      "content": "Người sáng trí để tâm nghiên cứu các ẩn dụ,",
      "order": 0,
      "parNumber": 26,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:11.093Z",
      "updatedAt": "2024-09-17T10:14:11.093Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "54df1c2f-57c9-4fb8-a6a8-0537c6842e83",
      "number": 29,
      "content": "kẻ khôn ngoan ao ước có tai thính để nghe.",
      "order": 1,
      "parNumber": 26,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:11.098Z",
      "updatedAt": "2024-09-17T10:14:11.098Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "659d470c-1c40-4736-9e24-1edbdb0d2bb3",
      "number": 30,
      "content": "Nước dập tắt lửa hồng, bố thí đền bù tội lỗi.",
      "order": 0,
      "parNumber": 27,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:11.101Z",
      "updatedAt": "2024-09-17T10:14:11.101Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "bd98cb0e-1b1c-4309-bfee-2e27782ec950",
      "number": 31,
      "content": "Ai đền ơn đáp nghĩa là biết lo xa,",
      "order": 0,
      "parNumber": 28,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:11.117Z",
      "updatedAt": "2024-09-17T10:14:11.117Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "6fdab9b1-0973-41ce-a465-db9accf17c93",
      "number": 31,
      "content": "lúc sa cơ, người ấy sẽ tìm được nơi nương tựa.",
      "order": 1,
      "parNumber": 28,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-17T10:14:11.124Z",
      "updatedAt": "2024-09-17T10:14:11.124Z",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    }
  ],
  "footnotes": [
    {
      "id": "db6154e1-eec3-447d-8c40-e62277529852",
      "content": "Có những thủ bản thêm : “<sup>7a</sup> Kẻ kính sợ Đức Chúa thì tôn kính cha mình.”",
      "position": 43,
      "order": 0,
      "createdAt": "2024-09-17T10:14:10.869Z",
      "updatedAt": "2024-09-17T10:14:10.869Z",
      "verseId": "45b6f19d-42b4-42c1-859d-97f4002bc86b",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "dc0eeedb-6651-4b47-bc0b-e42307242715",
      "content": "<i>Chủ nhân</i> theo Hy-lạp ; có lẽ <i>Chúa</i> hay hơn.",
      "position": 20,
      "order": 1,
      "createdAt": "2024-09-17T10:14:10.876Z",
      "updatedAt": "2024-09-17T10:14:10.876Z",
      "verseId": "868e2ccb-7fe1-4043-9dbc-a4c153db3808",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "c18a6cb1-b75a-43cd-af78-e3b50eee54b7",
      "content": "<i>Người hào phóng</i>, ds theo HR : <i>người tặng quà</i>. Cũng có thể dịch : <i>Con sẽ được mến yêu bởi kẻ đẹp lòng (Thiên Chúa)</i>.",
      "position": 43,
      "order": 2,
      "createdAt": "2024-09-17T10:14:10.949Z",
      "updatedAt": "2024-09-17T10:14:10.949Z",
      "verseId": "d5f11252-3592-44a7-b0f0-6f451c0f8e4d",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "d23c47a5-b6ff-41cc-a4a9-11c0bb0d96e6",
      "content": "Có những thủ bản thêm <i>Nhiều kẻ cao ngạo và vinh sang, nhưng Người mặc khải bí mật cho những kẻ nghèo hèn</i> (x. Mt 11,25).",
      "position": 38,
      "order": 3,
      "createdAt": "2024-09-17T10:14:10.958Z",
      "updatedAt": "2024-09-17T10:14:10.958Z",
      "verseId": "a90c96f8-aafc-4a6e-967f-a0f7ae92d7d5",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "f2f1ac51-55f4-4e48-b1b1-4d4ed63ac4bf",
      "content": "Một cách nhấn mạnh việc Thiên Chúa chiếu cố tới người hèn mọn. HR : <i>Vì lòng lân tuất của Thiên Chúa thì lớn lao và Người mặc khải bí mật cho kẻ nghèo hèn</i>, nói lên một tư tưởng quen thuộc hơn trong Cựu Ước, là : Thiên Chúa ban ân sủng dư dầy cho ai tự hạ (Cn 3,34 ; Tv 25,14 ; x. Lc 1,52).",
      "position": 43,
      "order": 4,
      "createdAt": "2024-09-17T10:14:10.973Z",
      "updatedAt": "2024-09-17T10:14:10.973Z",
      "verseId": "69b479ec-4e0c-4547-a5fa-154822509fed",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "7ada3792-9ab5-41cc-87e1-ab2ec7fd5e44",
      "content": "<i>Xét tới</i>, ds theo HR : <i>tìm tòi</i>. Tác giả muốn ám chỉ tới chuyện triết học Hy-lạp thời ấy đã bắt đầu gây ảnh hưởng đối với người Do-thái. Tò mò về văn hoá ngoại nhập có thể tác hại đến đức tin.",
      "position": 41,
      "order": 5,
      "createdAt": "2024-09-17T10:14:10.996Z",
      "updatedAt": "2024-09-17T10:14:10.996Z",
      "verseId": "7f217ac1-2b42-4d55-a892-3e6326619b77",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "13fe3eb5-ced9-4c10-b190-3ab573e536ce",
      "content": "Cũng có thể dịch : <i>... những việc dư thừa</i> theo HL.",
      "position": 40,
      "order": 6,
      "createdAt": "2024-09-17T10:14:11.020Z",
      "updatedAt": "2024-09-17T10:14:11.020Z",
      "verseId": "53841b2e-cb34-4b45-bf6f-9ebc48a5fa14",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "3aa06a82-25da-411f-9cad-152d3569739b",
      "content": "HR : <i>Ý kiến người ta thì có nhiều</i>. Tác giả ám chỉ những người Hy-lạp với lối suy tư trừu tượng và duy lý của họ, hoặc những sai lầm về đạo lý trong Do-thái giáo. Ở cuối câu, có thủ bản thêm : “Nếu không có con ngươi, con sẽ chẳng có ánh sáng ; thiếu hiểu biết thì con đừng để lộ ra.” (Không biết thì dựa cột mà nghe !)",
      "position": 43,
      "order": 7,
      "createdAt": "2024-09-17T10:14:11.043Z",
      "updatedAt": "2024-09-17T10:14:11.043Z",
      "verseId": "f71a3318-2fa6-4735-be23-8bb9da7d94aa",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "5b9f49a1-1584-416b-9abc-8923de4a9333",
      "content": "HR : <i>Kẻ ham vui thú sẽ bị cuốn theo</i>. Thích nguy hiểm là dấu kiêu ngạo tự mãn ; nó đẩy con người lao mình vào nguy hiểm mà không suy nghĩ.",
      "position": 47,
      "order": 8,
      "createdAt": "2024-09-17T10:14:11.068Z",
      "updatedAt": "2024-09-17T10:14:11.068Z",
      "verseId": "fb3d71f6-e343-4d0c-8d6b-558984bb870f",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "1a581a65-dbc9-489a-8da9-3574c94f11e4",
      "content": "Dịch sát thì bản văn không nói rõ lấy ơn đền ơn, hay lấy ơn đền oán.",
      "position": 19,
      "order": 9,
      "createdAt": "2024-09-17T10:14:11.120Z",
      "updatedAt": "2024-09-17T10:14:11.120Z",
      "verseId": "bd98cb0e-1b1c-4309-bfee-2e27782ec950",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    }
  ],
  "headings": [
    {
      "id": "c79a354c-cb1e-493d-909e-9c478f93b45a",
      "content": "Nghĩa vụ đối với cha mẹ",
      "order": 0,
      "createdAt": "2024-09-17T10:14:10.840Z",
      "updatedAt": "2024-09-17T10:14:10.840Z",
      "verseId": "05586b9a-9eb7-42bb-a12a-47c582fc18f3",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "b10788d6-4d78-4756-8bc3-8ad683906183",
      "content": "Khiêm tốn",
      "order": 0,
      "createdAt": "2024-09-17T10:14:10.945Z",
      "updatedAt": "2024-09-17T10:14:10.945Z",
      "verseId": "31b8f0c6-42c3-4102-b88a-b507252622c9",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "62bcf775-25f4-4ab8-8eae-79b919ee5073",
      "content": "Kiêu ngạo",
      "order": 0,
      "createdAt": "2024-09-17T10:14:11.053Z",
      "updatedAt": "2024-09-17T10:14:11.053Z",
      "verseId": "ceb646ab-e32e-4de0-b239-c52dcdaa4f3f",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "46717d62-ddbc-4801-a6ba-f121f04bc3d1",
      "content": "Bác ái đối với người nghèo",
      "order": 0,
      "createdAt": "2024-09-17T10:14:11.105Z",
      "updatedAt": "2024-09-17T10:14:11.105Z",
      "verseId": "659d470c-1c40-4736-9e24-1edbdb0d2bb3",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    }
  ],
  "references": [
    {
      "id": "de5763dd-ded9-4feb-b19f-67dc7044a5c3",
      "content": "Xh 20,12; Ep 6,1-3",
      "position": 0,
      "order": 0,
      "createdAt": "2024-09-17T10:14:10.843Z",
      "updatedAt": "2024-09-17T10:14:10.843Z",
      "headingId": "c79a354c-cb1e-493d-909e-9c478f93b45a",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
    {
      "id": "c5140343-0fa9-415e-9bb7-86e21dd70fc5",
      "content": "Mt 21,28-31",
      "position": 4,
      "order": 1,
      "createdAt": "2024-09-17T10:14:10.882Z",
      "updatedAt": "2024-09-17T10:14:10.882Z",
      "verseId": "96d6e5ba-6a15-41d4-877e-e36af0a2a6fe",
      "chapterId": "84ab63ed-e6b7-4a71-bcc2-2abbc84d49f0"
    },
