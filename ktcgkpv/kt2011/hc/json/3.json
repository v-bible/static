    },
    {
      "id": "cfc67038-8afb-48af-931f-47491dab66c8",
      "content": "Khiêm tốn",
      "order": 0,
      "createdAt": "2024-09-10T05:06:42.148Z",
      "updatedAt": "2024-09-10T05:06:42.148Z",
      "verseId": "a7e0817d-c3a7-41f8-8409-ba9c13d4fa20",
      "chapterId": "dc9a9ff7-fbbf-495c-86f0-840dec974869"
    },
    {
      "id": "fd017191-fcb6-4c0c-8859-fd0e7a1a1918",
      "content": "Kiêu ngạo",
      "order": 0,
      "createdAt": "2024-09-10T05:06:42.246Z",
      "updatedAt": "2024-09-10T05:06:42.246Z",
      "verseId": "2486b1d2-694c-473a-8192-6f9249d142c6",
      "chapterId": "dc9a9ff7-fbbf-495c-86f0-840dec974869"
    },
    {
      "id": "02bd3820-3c83-4174-9bc9-9692a9f9a7e7",
      "content": "Bác ái đối với người nghèo",
      "order": 0,
      "createdAt": "2024-09-10T05:06:42.275Z",
      "updatedAt": "2024-09-10T05:06:42.275Z",
      "verseId": "63f72398-904c-48bf-b675-58c758d3e36a",
      "chapterId": "dc9a9ff7-fbbf-495c-86f0-840dec974869"
    }
  ],
