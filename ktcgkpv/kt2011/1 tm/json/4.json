      "updatedAt": "2024-09-17T08:55:44.837Z",
      "verseId": "63918f48-d9b6-4b3b-ba1f-3d80362ed311",
      "chapterId": "9b2d309e-10bc-42be-b87b-c5540a2f284c"
    },
    {
      "id": "62a1ec75-be61-4800-818c-e96f9afad888",
      "content": "1 Tm 1,4; 6,20; 2 Tm 2,16; Tt 1,14",
      "position": 10,
      "order": 1,
      "createdAt": "2024-09-17T08:55:44.865Z",
