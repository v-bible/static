    },
    {
      "id": "bad5632c-bb6d-442e-bab3-13584b66d413",
      "content": "Giao ước với vua A-vi-me-léc",
      "order": 0,
      "createdAt": "2024-09-17T09:07:08.702Z",
      "updatedAt": "2024-09-17T09:07:08.702Z",
