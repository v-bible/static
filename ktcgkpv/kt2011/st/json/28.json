    {
      "id": "47f721fd-9610-45fb-a43a-3b9c440c8950",
      "content": "St 13,14-16",
      "position": 28,
      "order": 1,
      "createdAt": "2024-09-10T01:52:43.550Z",
      "updatedAt": "2024-09-10T01:52:43.550Z",
      "verseId": "1f844a84-2ea7-4bba-bb10-af024d459a6b",
      "chapterId": "1e8e6152-8fd4-4574-9225-4d99daf38667"
