    },
    {
      "id": "442e9b07-99f4-4493-81da-1dcd8c02f3b7",
      "content": "Ra khỏi tàu",
      "order": 0,
      "createdAt": "2024-09-23T03:36:45.466Z",
      "updatedAt": "2024-09-23T03:36:45.466Z",
