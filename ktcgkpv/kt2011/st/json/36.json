      "chapterId": "14ad4c78-4c00-438b-97c2-0271d475af3b"
    },
    {
      "id": "a53837ba-7048-4d6d-80db-76868250ae87",
      "content": "Ông Ê-xau di cư",
      "order": 0,
      "createdAt": "2024-09-17T09:08:45.883Z",
      "updatedAt": "2024-09-17T09:08:45.883Z",
      "verseId": "f094fadb-7a19-49fe-ab7c-18faee114028",
      "chapterId": "14ad4c78-4c00-438b-97c2-0271d475af3b"
    },
    {
      "id": "72f2000f-4694-4599-aea0-2b2fb1391211",
      "content": "Dòng dõi ông Ê-xau tại Xê-ia",
      "order": 0,
      "createdAt": "2024-09-17T09:08:45.913Z",
      "updatedAt": "2024-09-17T09:08:45.913Z",
      "verseId": "26cd514a-235e-4e76-8b10-6ecbc35ceac8",
      "chapterId": "14ad4c78-4c00-438b-97c2-0271d475af3b"
    },
    {
      "id": "8e85fb1c-974d-4d45-acf7-cd9cc60880fb",
      "content": "Các tộc trưởng dân Ê-đôm",
      "order": 0,
      "createdAt": "2024-09-17T09:08:45.942Z",
      "updatedAt": "2024-09-17T09:08:45.942Z",
      "verseId": "5bf1c407-84ee-45a5-9f31-e97ca7b96f5a",
      "chapterId": "14ad4c78-4c00-438b-97c2-0271d475af3b"
    },
    {
      "id": "20f94ca9-cdb7-4607-983b-de438cc426dd",
      "content": "Dòng dõi ông Xê-ia, người Khô-ri",
      "order": 0,
      "createdAt": "2024-09-17T09:08:45.976Z",
      "updatedAt": "2024-09-17T09:08:45.976Z",
      "verseId": "7792bf3b-5f19-4592-9050-b75352ee3c9e",
      "chapterId": "14ad4c78-4c00-438b-97c2-0271d475af3b"
    },
    {
      "id": "fa939f66-0d6c-4644-a860-c1dce43c6baf",
      "content": "Các vua Ê-đôm",
      "order": 0,
      "createdAt": "2024-09-17T09:08:46.022Z",
      "updatedAt": "2024-09-17T09:08:46.022Z",
      "verseId": "3c172c25-9c5d-46cc-bd19-2d3a7b3f1552",
      "chapterId": "14ad4c78-4c00-438b-97c2-0271d475af3b"
    },
    {
      "id": "517fdc0b-7be5-48eb-8316-80bccf4a5d01",
      "content": "Lại nói về các tộc trưởng Ê-đôm",
      "order": 0,
      "createdAt": "2024-09-17T09:08:46.067Z",
      "updatedAt": "2024-09-17T09:08:46.067Z",
      "verseId": "9cf2b646-8a4b-4f74-aa9f-ba15e6e2bce0",
