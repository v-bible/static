      "chapterId": "83d92b0b-6ac4-4006-9e9e-92315207cdcd"
    },
    {
      "id": "1e6765a9-f25f-4018-9730-7cd5984fa807",
      "content": "Hành vi của ông Đi-ốt-rê-phét",
      "order": 0,
      "createdAt": "2024-09-10T01:33:09.337Z",
      "updatedAt": "2024-09-10T01:33:09.337Z",
      "verseId": "758ac70b-82e4-4f3b-b524-a7cab5a09816",
      "chapterId": "83d92b0b-6ac4-4006-9e9e-92315207cdcd"
    },
    {
      "id": "0ab7b274-ec1f-47f1-9978-632a7ac1f4f4",
      "content": "Làm chứng cho ông Đê-mết-ri-ô",
      "order": 0,
      "createdAt": "2024-09-10T01:33:09.360Z",
      "updatedAt": "2024-09-10T01:33:09.360Z",
      "verseId": "1e419ec6-f5d3-49d8-80d6-42b2fc63ab29",
      "chapterId": "83d92b0b-6ac4-4006-9e9e-92315207cdcd"
    },
    {
      "id": "7fd87065-fff8-4b83-9b21-3452c35cd6c0",
      "content": "Lời kết thúc",
