      "content": "Gương Sa-ma-ri",
      "order": 0,
      "createdAt": "2024-09-17T10:36:01.982Z",
      "updatedAt": "2024-09-17T10:36:01.982Z",
      "verseId": "862d0e76-6209-4f05-94ec-797ecd4f7912",
      "chapterId": "ea1b1c4c-daf8-427b-871f-4eb33056de51"
    },
    {
      "id": "d5fc4c10-8994-49ea-8cf9-8b18ec3a36ce",
