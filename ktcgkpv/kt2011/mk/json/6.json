      "chapterId": "ea1b1c4c-daf8-427b-871f-4eb33056de51"
    },
    {
      "id": "af1ce831-9461-41fb-9622-ed12d8351b5a",
      "content": "Chống sự gian giảo của dân thành",
      "order": 0,
      "createdAt": "2024-09-17T10:36:01.810Z",
