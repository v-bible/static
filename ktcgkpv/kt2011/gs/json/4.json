      "chapterId": "0bbd8011-686f-4fb5-a2a5-3e3ce8f47670"
    },
    {
      "id": "6ceeb262-37f3-4534-a6f6-a0672bcdbaf9",
      "content": "Sau khi qua sông",
      "order": 0,
      "createdAt": "2024-09-10T02:45:47.912Z",
      "updatedAt": "2024-09-10T02:45:47.912Z",
      "verseId": "83172db2-0f4b-4aa9-9dcb-bfd37de98b66",
      "chapterId": "0bbd8011-686f-4fb5-a2a5-3e3ce8f47670"
    },
    {
      "id": "a8a242bd-eebe-493e-bf99-676e09368fa5",
      "content": "Tới Ghin-gan",
      "order": 0,
      "createdAt": "2024-09-10T02:45:47.944Z",
      "updatedAt": "2024-09-10T02:45:47.944Z",
