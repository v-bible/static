    {
      "id": "47d7a246-2e22-4b71-80da-e2193554477b",
      "content": "Phải sống thế nào giữa các dân ngoại",
      "order": 0,
      "createdAt": "2024-09-17T09:24:02.842Z",
      "updatedAt": "2024-09-17T09:24:02.842Z",
