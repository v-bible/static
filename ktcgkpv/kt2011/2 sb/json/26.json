      "chapterId": "8f9711a3-a37a-454b-8327-67d7834c3984"
    },
    {
      "id": "c227fd5a-19b4-472a-93f7-33b327654d33",
      "content": "Vua Út-di-gia-hu kiêu ngạo và bị trừng phạt",
      "order": 0,
      "createdAt": "2024-09-10T03:44:55.591Z",
      "updatedAt": "2024-09-10T03:44:55.591Z",
