    {
      "id": "717ea3bb-b761-4166-a294-f5f377f96183",
      "content": "Thế lực của vua Út-di-gia-hu",
      "order": 0,
      "createdAt": "2024-09-10T03:44:55.502Z",
      "updatedAt": "2024-09-10T03:44:55.502Z",
