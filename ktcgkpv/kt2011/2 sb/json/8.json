    },
    {
      "id": "67b80f02-cb71-4d5f-9563-1da7d2bb71cd",
      "content": "Ds 28–29",
      "position": 61,
      "order": 1,
      "createdAt": "2024-09-17T09:40:42.837Z",
      "updatedAt": "2024-09-17T09:40:42.837Z",
      "verseId": "e4d855c5-135b-462e-8bd1-9585080c0619",
      "chapterId": "47c87dd6-482f-4808-9841-87c2723d7a07"
    },
