    {
      "id": "f6b6829b-3e86-4ffb-afd9-fe0c7c7802ea",
      "content": "Hoàn tất các công trình xây cất",
      "order": 0,
      "createdAt": "2024-09-17T09:40:42.793Z",
      "updatedAt": "2024-09-17T09:40:42.793Z",
      "verseId": "29cfcd7c-29e5-4258-b7f9-845faae3fbda",
      "chapterId": "47c87dd6-482f-4808-9841-87c2723d7a07"
    },
    {
      "id": "a85cbed2-3d66-4786-be8f-2d38d35a4254",
      "content": "Vinh quang của vua Sa-lô-môn",
      "order": 0,
      "createdAt": "2024-09-17T09:40:42.852Z",
      "updatedAt": "2024-09-17T09:40:42.852Z",
      "verseId": "595d5cde-2715-4cf6-8a85-d3dfb549cce3",
      "chapterId": "47c87dd6-482f-4808-9841-87c2723d7a07"
    }
  ],
