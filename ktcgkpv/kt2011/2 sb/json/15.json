      "chapterId": "07f916ae-774d-40d5-8d56-5f2a5030ae2a"
    },
    {
      "id": "3a8b8455-91d6-4d13-98e7-6b94376b8004",
      "content": "Đnl 4,29-30",
      "position": 39,
      "order": 1,
      "createdAt": "2024-09-17T09:41:53.618Z",
