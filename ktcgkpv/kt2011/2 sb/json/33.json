      "chapterId": "e39b010d-3322-418f-8e92-fb9fd251c1e2"
    },
    {
      "id": "82efb716-70ad-4fad-b552-e81d97f118a0",
      "content": "Vua Mơ-na-se phá huỷ công trình của vua Khít-ki-gia",
      "order": 1,
      "createdAt": "2024-09-10T03:41:40.136Z",
      "updatedAt": "2024-09-10T03:41:40.136Z",
