    },
    {
      "id": "5af9d0ae-59ac-43df-be3a-8832ef331455",
      "content": "Ông A-ha-ron, phát ngôn viên của ông Mô-sê",
      "order": 0,
      "createdAt": "2024-09-10T02:07:00.676Z",
      "updatedAt": "2024-09-10T02:07:00.676Z",
      "verseId": "8c574230-2a55-4d16-a6ba-47206ab32ba7",
      "chapterId": "70695901-acc0-4571-af16-5909beb436bc"
    },
    {
      "id": "e942f95d-26a3-40b4-9255-e1f16e28c78f",
      "content": "Ông Mô-sê rời Ma-đi-an trở về Ai-cập",
      "order": 0,
      "createdAt": "2024-09-10T02:07:00.747Z",
      "updatedAt": "2024-09-10T02:07:00.747Z",
      "verseId": "0691b5d7-f45a-4bcd-9504-d018136e1edd",
      "chapterId": "70695901-acc0-4571-af16-5909beb436bc"
    },
    {
      "id": "6cbb6188-e6d6-4886-99b9-c426d11bb8b0",
      "content": "Con ông Mô-sê được cắt bì",
      "order": 0,
      "createdAt": "2024-09-10T02:07:00.815Z",
      "updatedAt": "2024-09-10T02:07:00.815Z",
      "verseId": "05ecf9ce-fa19-4162-aa18-14cf513d3db1",
      "chapterId": "70695901-acc0-4571-af16-5909beb436bc"
    },
    {
      "id": "d86a6b1f-676c-4866-874f-12b69e105cd6",
      "content": "Ông Mô-sê gặp ông A-ha-ron",
      "order": 0,
      "createdAt": "2024-09-10T02:07:00.851Z",
      "updatedAt": "2024-09-10T02:07:00.851Z",
      "verseId": "219458b9-05a9-4c46-a284-b3cb91f8c1c1",
      "chapterId": "70695901-acc0-4571-af16-5909beb436bc"
    }
  ],
