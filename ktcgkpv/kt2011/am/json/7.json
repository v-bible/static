    },
    {
      "id": "294882e1-bc36-487e-b896-2fea2cbffdff",
      "content": "Thị kiến thứ hai : lửa",
      "order": 0,
      "createdAt": "2024-09-23T04:46:21.723Z",
      "updatedAt": "2024-09-23T04:46:21.723Z",
      "verseId": "a504080c-82af-4b1f-8d16-935187c9e98c",
      "chapterId": "b4648d6b-3c80-47b7-8114-4212dcb7c493"
    },
    {
      "id": "207cda51-6438-4d57-8a36-015bbd660105",
      "content": "Thị kiến thứ ba : dây dọi",
      "order": 0,
      "createdAt": "2024-09-23T04:46:21.771Z",
      "updatedAt": "2024-09-23T04:46:21.771Z",
      "verseId": "10f8e15f-3eb2-46ab-a280-602c3f73ea8e",
      "chapterId": "b4648d6b-3c80-47b7-8114-4212dcb7c493"
    },
    {
      "id": "e5dead47-7ed2-4337-9390-313ab043b291",
      "content": "Xung đột với [A-mát-gia](). Ông [A-mốt]() bị trục xuất khỏi Bết Ên.",
      "order": 0,
      "createdAt": "2024-09-23T04:46:21.836Z",
      "updatedAt": "2024-09-23T04:46:21.836Z",
      "verseId": "748b7567-f3b5-415f-988b-3ffab53eeb1e",
      "chapterId": "b4648d6b-3c80-47b7-8114-4212dcb7c493"
    },
    {
      "id": "e7a068e6-5d0b-40f8-ba17-2eedbeea844a",
      "content": "Thị kiến thứ nhất : châu chấu",
      "order": 1,
      "createdAt": "2024-09-23T04:46:21.661Z",
      "updatedAt": "2024-09-23T04:46:21.661Z",
      "verseId": "7a6156e9-68b9-4a60-aeff-72e8d4e94537",
      "chapterId": "b4648d6b-3c80-47b7-8114-4212dcb7c493"
    }
  ],
