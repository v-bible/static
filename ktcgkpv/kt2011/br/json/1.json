    {
      "id": "b9ed0bdb-4d6e-4570-84d7-811b997eb703",
      "content": "Xưng thú tội lỗi",
      "order": 1,
      "createdAt": "2024-09-17T10:32:34.947Z",
      "updatedAt": "2024-09-17T10:32:34.947Z",
      "verseId": "1f95fee4-77e3-48d5-980f-570813850441",
      "chapterId": "48148596-e233-44cb-bae8-442ddb768de8"
    },
    {
      "id": "16b6e60b-3790-4267-b844-fbc403168b8f",
      "content": "Ông Ba-rúc và cộng đồng Do-thái ở Ba-by-lon",
      "order": 2,
      "createdAt": "2024-09-17T10:32:34.779Z",
