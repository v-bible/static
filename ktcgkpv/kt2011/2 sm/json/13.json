    {
      "id": "2ed4c0ff-d4ae-4cf5-bf91-b5366cafa603",
      "content": "2 V 8,29; 9,16",
      "position": 77,
      "order": 5,
      "createdAt": "2024-09-17T09:35:31.332Z",
      "updatedAt": "2024-09-17T09:35:31.332Z",
      "verseId": "97a1e9f7-bdd3-402b-8967-9dfbb49d91c7",
      "chapterId": "69425ccb-7633-4579-ada8-cf51518c4ef5"
    },
