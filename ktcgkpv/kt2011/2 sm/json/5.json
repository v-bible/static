    {
      "id": "a16e697c-3463-481a-bbb0-bd7cd76342de",
      "content": "Chiếm Giê-ru-sa-lem",
      "order": 0,
      "createdAt": "2024-09-17T09:35:42.612Z",
      "updatedAt": "2024-09-17T09:35:42.612Z",
      "verseId": "0741fd43-3738-4137-8af2-18ebd8cb3de4",
      "chapterId": "8dff1d3b-afca-453f-a165-d85406dc4a35"
    },
    {
      "id": "48c1a1f5-b6e1-4731-a22e-eb5376469a2e",
      "content": "Các con vua Đa-vít sinh ra tại Giê-ru-sa-lem",
      "order": 0,
      "createdAt": "2024-09-17T09:35:42.650Z",
      "updatedAt": "2024-09-17T09:35:42.650Z",
      "verseId": "de1d9b7b-49e7-4ec0-b77c-365226e8c32f",
      "chapterId": "8dff1d3b-afca-453f-a165-d85406dc4a35"
    },
    {
      "id": "5023d603-288e-4730-9be3-05593307b0af",
      "content": "Chiến thắng quân Phi-li-tinh",
      "order": 0,
      "createdAt": "2024-09-17T09:35:42.670Z",
      "updatedAt": "2024-09-17T09:35:42.670Z",
      "verseId": "5fc507c7-f6f4-416e-88a8-0435f8826805",
      "chapterId": "8dff1d3b-afca-453f-a165-d85406dc4a35"
    },
    {
      "id": "8426e02b-e7c0-4d88-a4a5-f76c661abc4d",
      "content": "Vua Đa-vít được xức dầu tấn phong làm vua Ít-ra-en",
      "order": 1,
      "createdAt": "2024-09-17T09:35:42.585Z",
      "updatedAt": "2024-09-17T09:35:42.585Z",
      "verseId": "da95fc91-ed26-42c3-a989-863c9e7034ba",
      "chapterId": "8dff1d3b-afca-453f-a165-d85406dc4a35"
    }
  ],
