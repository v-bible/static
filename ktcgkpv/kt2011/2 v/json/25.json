  "headings": [
    {
      "id": "898f13e6-7232-4b7d-9688-80994b7ec7f6",
      "content": "Giê-ru-sa-lem bị vây hãm",
      "order": 0,
      "createdAt": "2024-09-10T03:36:07.955Z",
      "updatedAt": "2024-09-10T03:36:07.955Z",
      "verseId": "3a3a7a0b-d9cd-4ce3-be29-9be169ee7fe0",
      "chapterId": "d5aa731d-0368-4856-8892-61c431cf7899"
    },
    {
      "id": "6b7f1049-1a30-49fa-9cc0-9c37e21d94d3",
      "content": "Giê-ru-sa-lem bị cướp phá. Cuộc lưu đày thứ hai.",
      "order": 0,
      "createdAt": "2024-09-10T03:36:08.064Z",
      "updatedAt": "2024-09-10T03:36:08.064Z",
      "verseId": "ea792366-cb6a-45b8-b111-a1f7b474d8b0",
      "chapterId": "d5aa731d-0368-4856-8892-61c431cf7899"
    },
    {
      "id": "ec158f65-49ad-49ea-a04c-6b5c2d59220b",
      "content": "Ông Gơ-đan-gia-hu, tổng trấn xứ Giu-đa",
      "order": 0,
      "createdAt": "2024-09-10T03:36:08.214Z",
      "updatedAt": "2024-09-10T03:36:08.214Z",
      "verseId": "fa9d3244-787a-45cb-9632-2d49abc1bba8",
      "chapterId": "d5aa731d-0368-4856-8892-61c431cf7899"
    },
    {
      "id": "60e7f4e5-590e-4c0f-be64-24abbfb28e32",
      "content": "Vua Giơ-hô-gia-khin được ân xá",
      "order": 0,
      "createdAt": "2024-09-10T03:36:08.283Z",
      "updatedAt": "2024-09-10T03:36:08.283Z",
      "verseId": "de7fb8fa-dc87-4e42-afd3-db9456a38520",
