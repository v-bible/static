    },
    {
      "id": "dd1323db-96ca-4adf-8154-ca9d34c3b6fe",
      "content": "Xh 23,24+; 34,13+; Đnl 12,2",
      "position": 15,
      "order": 2,
      "createdAt": "2024-09-10T03:34:19.328Z",
      "updatedAt": "2024-09-10T03:34:19.328Z",
      "verseId": "d2247283-fa22-4bcb-85c4-2a3d3701509f",
