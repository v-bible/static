    },
    {
      "id": "d39ecdab-eb1b-4a0b-af2c-d0befae2f2fc",
      "content": "Cuộc viễn chinh của Giu-đa và Ít-ra-en đánh Mô-áp",
      "order": 0,
      "createdAt": "2024-09-10T03:33:36.152Z",
      "updatedAt": "2024-09-10T03:33:36.152Z",
      "verseId": "cb805674-f1af-490b-89dc-c4d00501e856",
      "chapterId": "683310a1-a936-48eb-9f34-854d91a0f4a8"
    },
    {
      "id": "fda27c45-79ab-4fc6-a892-b77412c8618f",
      "content": "Thời vua Giô-ram cai trị Ít-ra-en (852-841)",
      "order": 1,
      "createdAt": "2024-09-10T03:33:36.120Z",
