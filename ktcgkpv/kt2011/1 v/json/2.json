    },
    {
      "id": "38606f96-8aa5-403c-bf17-66d031fa2dcc",
      "content": "Số phận ông Ép-gia-tha và ông Giô-áp",
      "order": 0,
      "createdAt": "2024-09-17T09:34:05.063Z",
      "updatedAt": "2024-09-17T09:34:05.063Z",
      "verseId": "b91c303f-25d8-44cb-84cc-315948522446",
      "chapterId": "7feebd1d-0982-4720-a565-e25dac37996f"
    },
    {
      "id": "afaee17e-d8b0-43b7-a31b-a8f36171d593",
      "content": "Sim-y thất lời và bị giết",
      "order": 0,
      "createdAt": "2024-09-17T09:34:05.147Z",
      "updatedAt": "2024-09-17T09:34:05.147Z",
