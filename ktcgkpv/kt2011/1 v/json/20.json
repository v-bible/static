    {
      "id": "b0d7e4ed-80b1-44f1-8cbd-d211786c0fd0",
      "content": "Chiến thắng của Ít-ra-en",
      "order": 0,
      "createdAt": "2024-09-10T03:12:27.861Z",
      "updatedAt": "2024-09-10T03:12:27.861Z",
      "verseId": "ff40f042-7347-4150-a251-d9820b2f8eba",
      "chapterId": "63f261d0-9c52-4397-b833-f3dbecccd597"
    },
    {
      "id": "fdd8dd0e-2c57-493d-8f32-6afe161869bd",
      "content": "Thời gian sau đó",
      "order": 0,
      "createdAt": "2024-09-10T03:12:27.925Z",
      "updatedAt": "2024-09-10T03:12:27.925Z",
      "verseId": "878281b7-3629-4868-b8c4-89f07234c585",
      "chapterId": "63f261d0-9c52-4397-b833-f3dbecccd597"
    },
    {
      "id": "20a35aa0-bdac-4b5e-80bd-46cce7c1f0f4",
      "content": "Chiến thắng tại A-phếch",
      "order": 0,
      "createdAt": "2024-09-10T03:12:27.987Z",
      "updatedAt": "2024-09-10T03:12:27.987Z",
      "verseId": "fd963425-b222-4563-b004-864550c77d7e",
      "chapterId": "63f261d0-9c52-4397-b833-f3dbecccd597"
    },
    {
      "id": "225aa77f-5b72-4fe2-9e01-d9e5dff27b0f",
      "content": "Một ngôn sứ lên án cách cư xử của vua A-kháp",
      "order": 0,
      "createdAt": "2024-09-10T03:12:28.090Z",
      "updatedAt": "2024-09-10T03:12:28.090Z",
      "verseId": "e7bf6d80-732e-4089-a47d-a272c9200b20",
      "chapterId": "63f261d0-9c52-4397-b833-f3dbecccd597"
    },
    {
      "id": "4675e785-06ff-4e00-a267-1f907a88cf99",
      "content": "Vây hãm Sa-ma-ri",
      "order": 1,
      "createdAt": "2024-09-10T03:12:27.775Z",
      "updatedAt": "2024-09-10T03:12:27.775Z",
