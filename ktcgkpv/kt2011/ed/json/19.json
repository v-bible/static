      "parNumber": 5,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.472Z",
      "updatedAt": "2024-09-10T05:27:45.472Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
    {
      "id": "8fecccde-ddcf-4b60-9ade-08a8279e6b66",
      "number": 7,
      "content": "của chư dân",
      "order": 1,
      "parNumber": 5,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.483Z",
      "updatedAt": "2024-09-10T05:27:45.483Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
    {
      "id": "00fdf09c-28c4-4ca0-89b0-75df279eb179",
      "number": 7,
      "content": "và tàn phá",
      "order": 2,
      "parNumber": 5,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.487Z",
      "updatedAt": "2024-09-10T05:27:45.487Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
    {
      "id": "e02ad8e4-5d7f-4034-8edc-ccb91548c8ce",
      "number": 7,
      "content": "các thành trì của chúng ;",
