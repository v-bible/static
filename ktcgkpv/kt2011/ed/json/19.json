  "verses": [
    {
      "id": "a00d0686-b690-45c4-b5b1-9b44280d4366",
      "number": 1,
      "content": "Phần ngươi, hãy cất lên khúc ai ca khóc thương các ông hoàng Ít-ra-en.",
      "order": 0,
      "parNumber": 0,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2024-09-10T05:27:45.334Z",
      "updatedAt": "2024-09-10T05:27:45.334Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
    {
      "id": "0fda9807-ed05-4c7f-81b0-9ee27c5c9bf7",
      "number": 2,
      "content": "Ngươi sẽ nói :",
      "order": 0,
      "parNumber": 0,
      "parIndex": 1,
      "isPoetry": false,
      "createdAt": "2024-09-10T05:27:45.348Z",
      "updatedAt": "2024-09-10T05:27:45.348Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
    {
      "id": "5c117859-69e4-4e1a-96a7-b3ef65413a83",
      "number": 2,
      "content": "Mẹ của ngươi là ai ?",
      "order": 1,
      "parNumber": 0,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.350Z",
      "updatedAt": "2024-09-10T05:27:45.350Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
    {
      "id": "90ebf68c-11d4-4cb3-abe3-74e0522b69d8",
      "number": 2,
      "content": "Nó như sư tử cái",
      "order": 2,
      "parNumber": 0,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.352Z",
      "updatedAt": "2024-09-10T05:27:45.352Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
    {
      "id": "6db1a585-02eb-4291-9fbb-71eb97caef79",
      "number": 2,
      "content": "cạnh bầy sư tử đực,",
      "order": 3,
      "parNumber": 0,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.356Z",
      "updatedAt": "2024-09-10T05:27:45.356Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
    {
      "id": "87379a6a-ee0d-49a7-8c11-2cc94bcb471b",
      "number": 2,
      "content": "giữa đám sư tử con",
      "order": 4,
      "parNumber": 0,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.359Z",
      "updatedAt": "2024-09-10T05:27:45.359Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
    {
      "id": "8f58f68d-fb64-45cb-9bae-8e2d256d8b6e",
      "number": 2,
      "content": "nuôi nấng đàn con nhỏ.",
      "order": 5,
      "parNumber": 0,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.364Z",
      "updatedAt": "2024-09-10T05:27:45.364Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
    {
      "id": "37494f65-d918-41db-bf10-e6c5afd44e9f",
      "number": 3,
      "content": "Trong đàn con ấy,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.369Z",
      "updatedAt": "2024-09-10T05:27:45.369Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
    {
      "id": "6a053fb1-102e-43e9-977d-a53ef5538f5d",
      "number": 3,
      "content": "nó huấn luyện một con",
      "order": 1,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.373Z",
      "updatedAt": "2024-09-10T05:27:45.373Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
    {
      "id": "caabfd96-d528-40d2-8a97-6adfacd11c88",
      "number": 3,
      "content": "thành một sư tử con,",
      "order": 2,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.378Z",
      "updatedAt": "2024-09-10T05:27:45.378Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
    {
      "id": "9468e030-1381-4103-ab8f-6f31f200a644",
      "number": 3,
      "content": "biết xé mồi và ăn thịt thiên hạ.",
      "order": 3,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.383Z",
      "updatedAt": "2024-09-10T05:27:45.383Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
    {
      "id": "dc7380d5-c602-4567-bae8-709c0634cebf",
      "number": 4,
      "content": "Các dân tộc",
      "order": 0,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.387Z",
      "updatedAt": "2024-09-10T05:27:45.387Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
    {
      "id": "f910f78f-cac7-413c-8c69-f99ddd079a0d",
      "number": 4,
      "content": "đã nghe nói về con sư tử đó ;",
      "order": 1,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.392Z",
      "updatedAt": "2024-09-10T05:27:45.392Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
    {
      "id": "0af59105-9341-43bf-b858-d1042dc257b2",
      "number": 4,
      "content": "nó sa vào bẫy của chúng",
      "order": 2,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.397Z",
      "updatedAt": "2024-09-10T05:27:45.397Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
    {
      "id": "4a19a55c-9a78-4ea4-89b1-1f8d2ee63e2e",
      "number": 4,
      "content": "và bị bắt.",
      "order": 3,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.402Z",
      "updatedAt": "2024-09-10T05:27:45.402Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
    {
      "id": "2f5ebd07-41d8-4a8c-b6a0-6ea18092d010",
      "number": 4,
      "content": "Người ta lấy móc xích nó lại",
      "order": 4,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.408Z",
      "updatedAt": "2024-09-10T05:27:45.408Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
    {
      "id": "07924ef4-4132-4847-bdfa-6c07c89b3224",
      "number": 4,
      "content": "đem đi, đưa về đất Ai-cập.",
      "order": 5,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.417Z",
      "updatedAt": "2024-09-10T05:27:45.417Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
    {
      "id": "b2c1b372-ae74-4c32-a114-ebf0885d940b",
      "number": 5,
      "content": "Thấy hy vọng của mình tiêu tan,",
      "order": 0,
      "parNumber": 3,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.427Z",
      "updatedAt": "2024-09-10T05:27:45.427Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
    {
      "id": "46f9633e-9a3b-47d2-8ade-45d6526d6154",
      "number": 5,
      "content": "niềm cậy trông của mình tan vỡ,",
      "order": 1,
      "parNumber": 3,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.433Z",
      "updatedAt": "2024-09-10T05:27:45.433Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
    {
      "id": "75631365-4210-4415-8ee5-95b250a5a71a",
      "number": 5,
      "content": "sư tử mẹ lại huấn luyện",
      "order": 2,
      "parNumber": 3,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.438Z",
      "updatedAt": "2024-09-10T05:27:45.438Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
    {
      "id": "5ab87c52-6538-4eb7-9265-d20f6df33270",
      "number": 5,
      "content": "một con nhỏ khác",
      "order": 3,
      "parNumber": 3,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.442Z",
      "updatedAt": "2024-09-10T05:27:45.442Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
    {
      "id": "cd0dbb3c-529a-4127-92ae-d6d1b15fe710",
      "number": 5,
      "content": "thành một sư tử non.",
      "order": 4,
      "parNumber": 3,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.447Z",
      "updatedAt": "2024-09-10T05:27:45.447Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
    {
      "id": "6c56b7c7-3a22-46a4-bece-77b47b0ea38f",
      "number": 6,
      "content": "Con này đi giữa bầy sư tử đực,",
      "order": 0,
      "parNumber": 4,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.457Z",
      "updatedAt": "2024-09-10T05:27:45.457Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
    {
      "id": "04bae4ac-e047-407d-9388-eeaae0a71ae2",
      "number": 6,
      "content": "thành một sư tử non",
      "order": 1,
      "parNumber": 4,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.462Z",
      "updatedAt": "2024-09-10T05:27:45.462Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
    {
      "id": "ce4b640d-6b69-44ba-bbbf-1ef5bfe20a60",
      "number": 6,
      "content": "biết xé mồi và ăn thịt thiên hạ.",
      "order": 2,
      "parNumber": 4,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.467Z",
      "updatedAt": "2024-09-10T05:27:45.467Z",
