      "id": "0c0122cf-0acf-4b96-b5df-3d396933e8f4",
      "number": 9,
      "content": "người ta không còn nghe thấy nữa",
      "order": 5,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.562Z",
      "updatedAt": "2024-09-10T05:27:45.562Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
