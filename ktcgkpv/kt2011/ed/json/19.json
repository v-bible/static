      "id": "ce7977cb-f9bb-4fff-9b97-885c9572d62f",
      "number": 9,
      "content": "để tiếng nó,",
      "order": 4,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.557Z",
      "updatedAt": "2024-09-10T05:27:45.557Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
