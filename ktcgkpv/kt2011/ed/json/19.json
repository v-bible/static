      "order": 2,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.547Z",
      "updatedAt": "2024-09-10T05:27:45.547Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
    {
      "id": "0968f131-7c84-4304-9621-14ca22fde190",
      "number": 9,
      "content": "và tống giam vào ngục,",
      "order": 3,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-10T05:27:45.552Z",
      "updatedAt": "2024-09-10T05:27:45.552Z",
      "chapterId": "7688a770-a7e3-4f7b-8831-aeadf104ec2e"
    },
