      "chapterId": "a475c42d-fa15-43b5-b256-49b098c54cf4"
    },
    {
      "id": "761d4f91-1a11-49c3-8bad-3dfa685a9452",
      "content": "Vinh quang ĐỨC CHÚA rời bỏ Giê-ru-sa-lem",
      "order": 0,
      "createdAt": "2024-09-17T10:30:10.064Z",
      "updatedAt": "2024-09-17T10:30:10.064Z",
