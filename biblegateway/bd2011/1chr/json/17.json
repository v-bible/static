    },
    {
      "id": "1dde7eb1-936c-4e73-93a0-b48ea43eba20",
      "content": "Lời Cầu Nguyện của Ða-vít",
      "order": 0,
      "createdAt": "2024-09-09T04:34:04.982Z",
      "updatedAt": "2024-09-09T04:34:04.982Z",
      "verseId": "619bb5a3-cf25-4a13-b545-20cf7a09e569",
      "chapterId": "8919cc34-2b84-4196-97fd-56e3d018a78b"
    }
  ],
  "references": [
    {
      "id": "2b51c160-c2c4-4705-a1de-5970a5c9a494",
      "content": "(2 Sa 7:1-17)",
