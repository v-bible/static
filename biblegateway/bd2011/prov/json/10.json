{
  "chapter": {
    "id": "f840affd-48ed-4bf3-8578-cacd9c275a64",
    "number": 10,
    "ref": "https://www.biblegateway.com/passage/?search=Ch%C3%A2m%20Ng%C3%B4n%2010&version=BD2011",
    "createdAt": "2024-07-12T04:03:49.008Z",
    "updatedAt": "2024-07-24T15:07:49.830Z",
    "bookId": "f88be0f6-2d78-40e0-8b41-6684c15a16e0"
  },
  "verses": [
    {
      "id": "c888b315-0d18-4074-a30a-9ee4827318a7",
      "number": 1,
      "content": "Các câu châm ngôn của Sa-lô-môn:",
      "order": 0,
      "parNumber": 0,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-07-15T03:16:51.926Z",
      "updatedAt": "2024-07-15T03:16:52.084Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "ecfec28d-cf6f-4f14-9ef5-185b479176e9",
      "number": 1,
      "content": "Con khôn ngoan làm cha vui vẻ;",
      "order": 1,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.926Z",
      "updatedAt": "2024-07-15T03:16:51.926Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "181c6ad8-0231-421d-9234-a3eb815f3daf",
      "number": 1,
      "content": "Con ngu dại khiến mẹ buồn lo.",
      "order": 2,
      "parNumber": 1,
      "parIndex": 1,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.926Z",
      "updatedAt": "2024-07-15T03:16:51.926Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "4dcdf90d-3c70-45e0-9572-f37723012500",
      "number": 2,
      "content": "Của cải phi nghĩa chẳng ích lợi gì,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 2,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.929Z",
      "updatedAt": "2024-07-15T03:16:51.929Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "d592741c-d4bf-4fd9-b640-102945dd285e",
      "number": 2,
      "content": "Nhưng đức công chính cứu ta khỏi chết.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 3,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.929Z",
      "updatedAt": "2024-07-15T03:16:51.929Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "0d9c2bb0-1bb4-4ec5-9171-1865a53dd098",
      "number": 3,
      "content": "Chúa không để người ngay lành bị đói,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 4,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.931Z",
      "updatedAt": "2024-07-15T03:16:51.931Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "70e9437e-c312-427f-b947-24f3d8072ca7",
      "number": 3,
      "content": "Nhưng Ngài làm cho khát vọng của kẻ gian ác không thành.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 5,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.931Z",
      "updatedAt": "2024-07-15T03:16:51.931Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "d424e6d0-3991-476d-af44-490307ad8bbe",
      "number": 4,
      "content": "Tay biếng nhác sẽ trở nên nghèo khó;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 6,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.934Z",
      "updatedAt": "2024-07-15T03:16:51.934Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "60465937-15a0-4563-9785-fc21c330ff5d",
      "number": 4,
      "content": "Tay siêng năng sẽ có giàu sang.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 7,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.934Z",
      "updatedAt": "2024-07-15T03:16:51.934Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "c2215753-62f1-49de-8ea4-438a2ba7d457",
      "number": 5,
      "content": "Ðứa con biết thâu trữ trong mùa hè là đứa con khôn ngoan;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 8,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.936Z",
      "updatedAt": "2024-07-15T03:16:51.936Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "87199e0d-8b45-4af0-8f52-99c187cf7fe4",
      "number": 5,
      "content": "Ðứa con mê ngủ trong mùa gặt là đứa con mang về xấu hổ.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 9,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.936Z",
      "updatedAt": "2024-07-15T03:16:51.936Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "ca63a5db-ab17-4cda-9a3b-bee608977bc1",
      "number": 6,
      "content": "Ðầu người ngay lành nhận được nhiều ân phước,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 10,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.938Z",
      "updatedAt": "2024-07-15T03:16:51.938Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "a7998034-47e1-4196-a49c-89c325182bcd",
      "number": 6,
      "content": "Còn miệng kẻ ác gian tiềm ẩn những bạo tàn.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 11,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.938Z",
      "updatedAt": "2024-07-15T03:16:51.938Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "71b9871a-171e-47d4-bd46-6c0d3d92d7bf",
      "number": 7,
      "content": "Tưởng nhớ đến người ngay lành là một điều phước hạnh,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 12,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.940Z",
      "updatedAt": "2024-07-15T03:16:51.940Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "24807c62-c913-48ea-aaf5-04d7308f269b",
      "number": 7,
      "content": "Còn tên tuổi kẻ ác gian bị rục rữa lãng quên.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 13,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.940Z",
      "updatedAt": "2024-07-15T03:16:51.940Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "b89b4d72-ab67-41f7-801c-2e495b45a4c4",
      "number": 8,
      "content": "Người có lòng khôn ngoan đón nhận những lời răn bảo,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 14,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.942Z",
      "updatedAt": "2024-07-15T03:16:51.942Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "16eec07c-7321-4aba-aaa0-7bb6a6caffb9",
      "number": 8,
      "content": "Nhưng kẻ dại dột lắm lời sẽ lảo đảo ngã nhào.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 15,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.942Z",
      "updatedAt": "2024-07-15T03:16:51.942Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "f99e4d02-5526-4df2-a76f-e73b1e99a682",
      "number": 9,
      "content": "Người nào bước đi trong sự liêm khiết sẽ an tâm vững tiến,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 16,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.944Z",
      "updatedAt": "2024-07-15T03:16:51.944Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "e841f04d-06d1-4e49-9437-4ba05bfe02ea",
      "number": 9,
      "content": "Nhưng ai theo lối gian tà sớm muộn gì bản chất sẽ lộ ra.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 17,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.944Z",
      "updatedAt": "2024-07-15T03:16:51.944Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "49243d43-ad2f-486b-b112-a3dccdec11e7",
      "number": 10,
      "content": "Ai nháy mắt ra dấu để làm bậy sẽ gây nên phiền não;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 18,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.947Z",
      "updatedAt": "2024-07-15T03:16:51.947Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "7f89daaa-2f13-416c-a679-9c3a05f27c28",
      "number": 10,
      "content": "Còn kẻ dại mà lắm lời sớm muộn gì cũng thất bại mà thôi.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 19,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.947Z",
      "updatedAt": "2024-07-15T03:16:51.947Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "fa303978-5005-407c-88d7-0d239d29f71b",
      "number": 11,
      "content": "Miệng người ngay lành là nguồn sự sống,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 20,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.949Z",
      "updatedAt": "2024-07-15T03:16:51.949Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "5adc3eed-66a2-449c-8c9d-197e05119faf",
      "number": 11,
      "content": "Còn miệng kẻ gian ác tuôn ra bao hung hiểm ẩn tàng.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 21,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.949Z",
      "updatedAt": "2024-07-15T03:16:51.949Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "c05cb4d7-651a-4dbb-aba2-cb5b8ace1ad6",
      "number": 12,
      "content": "Sự ghen ghét gây ra cãi vã,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 22,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.951Z",
      "updatedAt": "2024-07-15T03:16:51.951Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "ceecf90c-75c4-4f6d-923a-35bc3df190f9",
      "number": 12,
      "content": "Nhưng tình yêu thương khỏa lấp mọi phiền lòng.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 23,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.951Z",
      "updatedAt": "2024-07-15T03:16:51.951Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "3f274826-74d6-4689-bad0-5d25bff371ee",
      "number": 13,
      "content": "Lời khôn ngoan thoát ra từ môi người hiểu biết,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 24,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.953Z",
      "updatedAt": "2024-07-15T03:16:51.953Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "05def5a8-a93c-48f3-a671-9520ea21bbdc",
      "number": 13,
      "content": "Nhưng roi đòn dành đặc biệt cho lưng kẻ chẳng nghĩ suy.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 25,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.953Z",
      "updatedAt": "2024-07-15T03:16:51.953Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "f6dd053d-7f4a-4b3c-be14-16f163b32f93",
      "number": 14,
      "content": "Người khôn ngoan luôn trau dồi thêm tri thức,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 26,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.955Z",
      "updatedAt": "2024-07-15T03:16:51.955Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "290ee98a-d3cd-44c7-aa60-b4a4947c2601",
      "number": 14,
      "content": "Còn kẻ dại dột lắm lời tức sắp rước họa vào thân.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 27,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.955Z",
      "updatedAt": "2024-07-15T03:16:51.955Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "fc52486d-ff71-4e7f-b0f6-44b99b7cb49e",
      "number": 15,
      "content": "Tài sản của người giàu có là thành trì kiên cố của họ,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 28,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.957Z",
      "updatedAt": "2024-07-15T03:16:51.957Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "b565d716-71e7-4261-b32f-b4e2c70781f8",
      "number": 15,
      "content": "Còn cảnh khốn khó của kẻ nghèo rõ là cảnh lầm than.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 29,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.957Z",
      "updatedAt": "2024-07-15T03:16:51.957Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "9728bbf2-160d-42ed-9e8f-74aa2bb579b2",
      "number": 16,
      "content": "Công lao khó nhọc của người ngay lành dẫn đến sự sống;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 30,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.960Z",
      "updatedAt": "2024-07-15T03:16:51.960Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "a64b5046-4442-4bc1-bb97-73b52529b292",
      "number": 16,
      "content": "Tiền lương của kẻ gian ác là phương tiện để nó phạm tội thêm.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 31,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.960Z",
      "updatedAt": "2024-07-15T03:16:51.960Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "e71215d5-67ca-4bd4-9dc5-19876a80b734",
      "number": 17,
      "content": "Người vâng giữ lời giáo huấn là người đi theo đường sự sống,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 32,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.962Z",
      "updatedAt": "2024-07-15T03:16:51.962Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "d2cf7b0c-394e-4e9d-a738-b090e67e632f",
      "number": 17,
      "content": "Nhưng kẻ khước từ lời quở trách ắt phải bị lạc đường.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 33,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.962Z",
      "updatedAt": "2024-07-15T03:16:51.962Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "cec12b28-2c23-4e13-aca3-4486dab90d85",
      "number": 18,
      "content": "Kẻ có lòng ghen ghét che dấu lòng mình bằng môi dối trá;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 34,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.965Z",
      "updatedAt": "2024-07-15T03:16:51.965Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "8eb9b67e-5596-4fc7-8b4b-6eea99482eaf",
      "number": 18,
      "content": "Kẻ đồn đãi lời vu oan quả là kẻ dại khờ.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 35,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.965Z",
      "updatedAt": "2024-07-15T03:16:51.965Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "dfc52956-daf2-4e54-b0cf-96b31921de12",
      "number": 19,
      "content": "Kẻ nói nhiều không thiếu điều vấp phạm,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 36,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.967Z",
      "updatedAt": "2024-07-15T03:16:51.967Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "a2ba66d2-3480-4c80-b87e-3d4a7ca90f31",
      "number": 19,
      "content": "Còn người khôn ngoan thận trọng trong môi miệng của mình.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 37,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.967Z",
      "updatedAt": "2024-07-15T03:16:51.967Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "b72f8ef9-a0e8-443e-a5e8-c31c9a5d1178",
      "number": 20,
      "content": "Lưỡi người ngay lành giống như bạc thượng hảo hạng,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 38,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.971Z",
      "updatedAt": "2024-07-15T03:16:51.971Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "5cbbfd50-7ccf-401d-832a-8a283c50d170",
      "number": 20,
      "content": "Còn lòng kẻ gian ác thật chẳng đáng vài xu.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 39,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.971Z",
      "updatedAt": "2024-07-15T03:16:51.971Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "2b6545a6-e114-4922-a257-441b20b7fb45",
      "number": 21,
      "content": "Môi người ngay lành nuôi được nhiều người sống,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 40,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.976Z",
      "updatedAt": "2024-07-15T03:16:51.976Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "2b9d0576-8130-40f0-ac6e-22a926193cb6",
      "number": 21,
      "content": "Còn kẻ dại khờ chịu chết vì thiếu nghĩ suy.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 41,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.976Z",
      "updatedAt": "2024-07-15T03:16:51.976Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "8f72725e-bc2b-4076-b999-f65fca42e67a",
      "number": 22,
      "content": "Phước hạnh của Chúa làm ta nên giàu có;",
      "order": 0,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.982Z",
      "updatedAt": "2024-07-15T03:16:51.982Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "7d835dee-9137-4066-a1b4-ba4301659b09",
      "number": 22,
      "content": "Ngài chẳng thêm nỗi phiền muộn gì vào.",
      "order": 1,
      "parNumber": 2,
      "parIndex": 1,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.982Z",
      "updatedAt": "2024-07-15T03:16:51.982Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "b20c33f9-dc86-46f8-96d9-3347bb292a87",
      "number": 23,
      "content": "Kẻ điên dại coi việc làm ác giống như trò tiêu khiển,",
      "order": 0,
      "parNumber": 3,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.988Z",
      "updatedAt": "2024-07-15T03:16:51.988Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "adf162a7-1e7e-432d-91f0-2d8c5bd0c157",
      "number": 23,
      "content": "Còn người thông sáng được vui khi xử sự cách khôn ngoan.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 1,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.988Z",
      "updatedAt": "2024-07-15T03:16:51.988Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "67e65347-3e02-42a5-8b3d-cd1279a12e89",
      "number": 24,
      "content": "Kẻ gian ác sợ điều nào sẽ bị trao cho điều ấy;",
      "order": 0,
      "parNumber": 3,
      "parIndex": 2,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.994Z",
      "updatedAt": "2024-07-15T03:16:51.994Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "d9a4b7a8-d6fe-45e6-8ac5-a9aef636b71e",
      "number": 24,
      "content": "Người ngay lành ước điều chi thì điều ấy được ban cho.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 3,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.994Z",
      "updatedAt": "2024-07-15T03:16:51.994Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "419a0bc6-d84b-4525-9738-fc4bf7b390bb",
      "number": 25,
      "content": "Khi giông tố qua rồi kẻ ác không còn nữa,",
      "order": 0,
      "parNumber": 3,
      "parIndex": 4,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.999Z",
      "updatedAt": "2024-07-15T03:16:51.999Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "a4df0b8d-10e3-4788-8b9d-928532df8fa0",
      "number": 25,
      "content": "Nhưng người ngay lành lại được vững lập đời đời.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 5,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:51.999Z",
      "updatedAt": "2024-07-15T03:16:51.999Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "8b333ee0-6988-480f-ac3d-1a80c5a0fac9",
      "number": 26,
      "content": "Như giấm làm ghê răng và như khói làm cay mắt thể nào,",
      "order": 0,
      "parNumber": 3,
      "parIndex": 6,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:52.005Z",
      "updatedAt": "2024-07-15T03:16:52.005Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "72647de5-479c-4a33-bae0-f328e157048a",
      "number": 26,
      "content": "Kẻ biếng nhác cũng như vậy đối với người sai bảo nó.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 7,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:52.005Z",
      "updatedAt": "2024-07-15T03:16:52.005Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "08c4d6ec-2359-4166-a934-ad6ce9d077db",
      "number": 27,
      "content": "Kính sợ Chúa làm tăng thêm tuổi thọ,",
      "order": 0,
      "parNumber": 4,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:52.010Z",
      "updatedAt": "2024-07-15T03:16:52.010Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "5317e1b7-c96e-4e42-acb5-7e9b5cbed5cd",
      "number": 27,
      "content": "Nhưng tuổi kẻ gian tà quả có giảm bớt đi.",
      "order": 1,
      "parNumber": 4,
      "parIndex": 1,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:52.010Z",
      "updatedAt": "2024-07-15T03:16:52.010Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "113a63fb-fb0f-43f0-9ad4-e2b963ae0ae8",
      "number": 28,
      "content": "Người ngay lành hy vọng và cuối cùng được vui thỏa,",
      "order": 0,
      "parNumber": 4,
      "parIndex": 2,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:52.016Z",
      "updatedAt": "2024-07-15T03:16:52.016Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "878787b3-0596-4279-a657-53fe427e71c4",
      "number": 28,
      "content": "Còn kẻ gian ác trông mong nhưng rốt cục chẳng có gì.",
      "order": 1,
      "parNumber": 4,
      "parIndex": 3,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:52.016Z",
      "updatedAt": "2024-07-15T03:16:52.016Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "f413a0d6-cb83-4b62-b855-88532628cfb7",
      "number": 29,
      "content": "Ðường lối Chúa là thành trì cho người chân chính,",
      "order": 0,
      "parNumber": 4,
      "parIndex": 4,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:52.022Z",
      "updatedAt": "2024-07-15T03:16:52.022Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "f71c8795-f272-45c7-888d-513c41e94a4e",
      "number": 29,
      "content": "Nhưng đó cũng là chỗ diệt vong cho kẻ ác gian.",
      "order": 1,
      "parNumber": 4,
      "parIndex": 5,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:52.022Z",
      "updatedAt": "2024-07-15T03:16:52.022Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "ee1fce1a-3b5e-43b0-aa47-6a715049d628",
      "number": 30,
      "content": "Người ngay lành sẽ không bao giờ bị dứt bỏ,",
      "order": 0,
      "parNumber": 4,
      "parIndex": 6,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:52.027Z",
      "updatedAt": "2024-07-15T03:16:52.027Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "20b14f04-1b33-4e50-bf5c-f363817a0445",
      "number": 30,
      "content": "Nhưng kẻ gian ác sẽ không có đất dung thân.",
      "order": 1,
      "parNumber": 4,
      "parIndex": 7,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:52.027Z",
      "updatedAt": "2024-07-15T03:16:52.027Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "8818ba30-4181-4933-b6b6-d24eea46db9d",
      "number": 31,
      "content": "Miệng người ngay lành nói ra lẽ khôn ngoan,",
      "order": 0,
      "parNumber": 4,
      "parIndex": 8,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:52.033Z",
      "updatedAt": "2024-07-15T03:16:52.033Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "db5a2143-86fa-4e8c-a137-26bf21d84ef6",
      "number": 31,
      "content": "Còn lưỡi kẻ ngang bướng sớm muộn gì cũng bị cắt đứt.",
      "order": 1,
      "parNumber": 4,
      "parIndex": 9,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:52.033Z",
      "updatedAt": "2024-07-15T03:16:52.033Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "93c14530-7888-4462-9c7f-8a18143d503b",
      "number": 32,
      "content": "Môi người ngay lành nói những điều đáng nói,",
      "order": 0,
      "parNumber": 4,
      "parIndex": 10,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:52.038Z",
      "updatedAt": "2024-07-15T03:16:52.038Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    },
    {
      "id": "01d20d43-4002-4382-88db-1177a749a78c",
      "number": 32,
      "content": "Còn miệng kẻ ác gian nói toàn chuyện ngang ngược gian tà.",
      "order": 1,
      "parNumber": 4,
      "parIndex": 11,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:16:52.038Z",
      "updatedAt": "2024-07-15T03:16:52.038Z",
      "chapterId": "f840affd-48ed-4bf3-8578-cacd9c275a64"
    }
  ],
