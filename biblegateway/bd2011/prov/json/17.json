{
  "chapter": {
    "id": "da2e602b-4025-43cf-9af4-260b1f5b82db",
    "number": 17,
    "ref": "https://www.biblegateway.com/passage/?search=Ch%C3%A2m%20Ng%C3%B4n%2017&version=BD2011",
    "createdAt": "2024-07-12T04:03:49.133Z",
    "updatedAt": "2024-07-24T15:07:49.941Z",
    "bookId": "f88be0f6-2d78-40e0-8b41-6684c15a16e0"
  },
  "verses": [
    {
      "id": "44fcf7cb-a21a-4090-a56e-b2acafcca52c",
      "number": 1,
      "content": "Thà một miếng bánh khô mà ấm êm hòa thuận,",
      "order": 0,
      "parNumber": 0,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-07-15T03:18:18.003Z",
      "updatedAt": "2024-07-15T03:18:18.237Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "cda02619-85f9-4ec8-b02f-e7288c44cbcf",
      "number": 1,
      "content": "Hơn là nhà đầy bánh thịt mà gây lộn với nhau.",
      "order": 1,
      "parNumber": 0,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-07-15T03:18:18.003Z",
      "updatedAt": "2024-07-15T03:18:18.246Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "55917488-7acb-4d3a-bf8d-cc0fab1d3548",
      "number": 2,
      "content": "Tôi tớ khôn sáng sẽ chỉ huy con trai gây xấu hổ,",
      "order": 0,
      "parNumber": 0,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-07-15T03:18:18.013Z",
      "updatedAt": "2024-07-15T03:18:18.256Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "5e88183a-dcd3-4567-99f2-2249bc97d889",
      "number": 2,
      "content": "Và sẽ chia phần gia tài như anh chị em trong gia đình.",
      "order": 1,
      "parNumber": 0,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-07-15T03:18:18.013Z",
      "updatedAt": "2024-07-15T03:18:18.265Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "18a3d282-14aa-48f6-8461-3a3e41666c16",
      "number": 3,
      "content": "Nồi để luyện bạc, lò để luyện vàng,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.015Z",
      "updatedAt": "2024-07-15T03:18:18.015Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "ff99409f-05f0-4dbe-8171-dd1f0b638ca7",
      "number": 3,
      "content": "Còn Chúa trui luyện tấm lòng.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 1,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.015Z",
      "updatedAt": "2024-07-15T03:18:18.015Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "a4c72442-e5be-431e-a28e-24a551defb79",
      "number": 4,
      "content": "Kẻ làm ác nghe theo môi kẻ gian ác;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 2,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.018Z",
      "updatedAt": "2024-07-15T03:18:18.018Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "464fadb4-3c3c-4b92-9b8a-170a706946a4",
      "number": 4,
      "content": "Kẻ nói dối nghe theo lưỡi kẻ hiểm độc.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 3,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.018Z",
      "updatedAt": "2024-07-15T03:18:18.018Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "13eb48d2-5f62-4dea-9969-90137355dd24",
      "number": 5,
      "content": "Ai chế nhạo người nghèo là sỉ nhục Ðấng Tạo Hóa mình,",
      "order": 0,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.020Z",
      "updatedAt": "2024-07-15T03:18:18.020Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "0c8cf1e8-a041-413e-b2dc-844488fc4665",
      "number": 5,
      "content": "Kẻ nào vui khi thấy người ta bị tai họa sẽ không khỏi bị phạt.",
      "order": 1,
      "parNumber": 2,
      "parIndex": 1,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.020Z",
      "updatedAt": "2024-07-15T03:18:18.020Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "89f56a43-c2d3-4ace-a489-e358b984c201",
      "number": 6,
      "content": "Cháu chắt là mão miện của người già cả,",
      "order": 0,
      "parNumber": 2,
      "parIndex": 2,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.022Z",
      "updatedAt": "2024-07-15T03:18:18.022Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "6368aa28-d0f9-4cf3-bd41-4bf77688f60f",
      "number": 6,
      "content": "Ông bà cha mẹ là vinh hiển của con cháu.",
      "order": 1,
      "parNumber": 2,
      "parIndex": 3,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.022Z",
      "updatedAt": "2024-07-15T03:18:18.022Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "9e890c9d-10eb-48ed-a93e-0a6f1568053b",
      "number": 7,
      "content": "Lời hay đẹp không xứng cho kẻ điên dại,",
      "order": 0,
      "parNumber": 2,
      "parIndex": 4,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.024Z",
      "updatedAt": "2024-07-15T03:18:18.024Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "de038cd6-1b8a-454a-84d9-9e8ad81b9ad1",
      "number": 7,
      "content": "Môi giả dối lại càng bất xứng cho các bậc cầm quyền.",
      "order": 1,
      "parNumber": 2,
      "parIndex": 5,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.024Z",
      "updatedAt": "2024-07-15T03:18:18.024Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "ce869183-9e3c-4d0a-91ce-3ff79fd05b9e",
      "number": 8,
      "content": "Của hối lộ là viên ngọc nhiệm mầu trong mắt người đem biếu,",
      "order": 0,
      "parNumber": 2,
      "parIndex": 6,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.027Z",
      "updatedAt": "2024-07-15T03:18:18.027Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "2f80c329-412c-4221-88c3-ba49e696aff1",
      "number": 8,
      "content": "Nó quay về hướng nào, hướng đó được hanh thông.",
      "order": 1,
      "parNumber": 2,
      "parIndex": 7,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.027Z",
      "updatedAt": "2024-07-15T03:18:18.027Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "80d859a7-91ab-432c-a9b5-bde0d2e1dc2a",
      "number": 9,
      "content": "Bỏ qua lầm lỗi bồi đắp thêm tình cảm,",
      "order": 0,
      "parNumber": 3,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.029Z",
      "updatedAt": "2024-07-15T03:18:18.029Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "cb8e8a63-41ca-4e8d-8e7b-b6dd97457fe1",
      "number": 9,
      "content": "Còn kẻ nhắc lại lỗi xưa cưa tình bạn nát tan.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 1,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.029Z",
      "updatedAt": "2024-07-15T03:18:18.029Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "ad5e1246-ba35-45a0-8557-fefc9d1501a3",
      "number": 10,
      "content": "Một lời quở trách thấm sâu vào trí người thông sáng,",
      "order": 0,
      "parNumber": 3,
      "parIndex": 2,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.031Z",
      "updatedAt": "2024-07-15T03:18:18.031Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "27dac5e3-25fb-4f98-97c3-9781df44de5e",
      "number": 10,
      "content": "Hơn trăm roi đánh vào lưng kẻ dại dột.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 3,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.031Z",
      "updatedAt": "2024-07-15T03:18:18.031Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "3a45d64c-4def-4384-ab1a-1d15448e4668",
      "number": 11,
      "content": "Kẻ gian ác chỉ tìm dịp để phản bội,",
      "order": 0,
      "parNumber": 3,
      "parIndex": 4,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.033Z",
      "updatedAt": "2024-07-15T03:18:18.033Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "a3de6017-802b-4acb-a0cb-ae4e011fab67",
      "number": 11,
      "content": "Nên một sứ giả bạo tàn sẽ được sai đi để đối phó với nó.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 5,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.033Z",
      "updatedAt": "2024-07-15T03:18:18.033Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "975e2e8e-cc2a-4c94-87bd-b436bf887062",
      "number": 12,
      "content": "Thà gặp gấu cái bị cướp con,",
      "order": 0,
      "parNumber": 3,
      "parIndex": 6,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.036Z",
      "updatedAt": "2024-07-15T03:18:18.036Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "87d8f4dc-a209-46d9-8f25-d6569f31aa49",
      "number": 12,
      "content": "Hơn là gặp kẻ dại đang say sưa trong cơn điên cuồng của nó.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 7,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.036Z",
      "updatedAt": "2024-07-15T03:18:18.036Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "ccc33e78-ccf9-41de-8e7d-bdab16211ca1",
      "number": 13,
      "content": "Kẻ lấy oán trả ân,",
      "order": 0,
      "parNumber": 4,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.038Z",
      "updatedAt": "2024-07-15T03:18:18.038Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "effbd299-d51f-4dca-b38c-c9e811cb34f9",
      "number": 13,
      "content": "Sự bất hạnh sẽ không bao giờ rời khỏi nhà nó.",
      "order": 1,
      "parNumber": 4,
      "parIndex": 1,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.038Z",
      "updatedAt": "2024-07-15T03:18:18.038Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "e4df84c9-69be-4dda-9b9d-f0041c5bc0a9",
      "number": 14,
      "content": "Khơi mào sự xung đột như tháo cho nước chảy,",
      "order": 0,
      "parNumber": 4,
      "parIndex": 2,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.047Z",
      "updatedAt": "2024-07-15T03:18:18.047Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "fe295563-b9f7-44d4-a4d0-6b4dd7fe92a2",
      "number": 14,
      "content": "Vậy hãy ngưng ngay trước khi sự cãi vã bắt đầu.",
      "order": 1,
      "parNumber": 4,
      "parIndex": 3,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.047Z",
      "updatedAt": "2024-07-15T03:18:18.047Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "bd120f33-afb8-462a-8277-9e22dc0c3164",
      "number": 15,
      "content": "Ai cho kẻ gian ác là đúng và ai lên án người ngay lành,",
      "order": 0,
      "parNumber": 4,
      "parIndex": 4,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.084Z",
      "updatedAt": "2024-07-15T03:18:18.084Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "30f09df8-474e-400d-9606-3d83c897faf2",
      "number": 15,
      "content": "Cả hai đều trở thành gớm ghiếc trước mặt Chúa.",
      "order": 1,
      "parNumber": 4,
      "parIndex": 5,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.084Z",
      "updatedAt": "2024-07-15T03:18:18.084Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "fe328953-7d0e-4459-8502-1bbe9cd5c1e9",
      "number": 16,
      "content": "Sao kẻ dại đóng học phí để mua sự khôn ngoan,",
      "order": 0,
      "parNumber": 4,
      "parIndex": 6,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.153Z",
      "updatedAt": "2024-07-15T03:18:18.153Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "8018d0a7-e739-429d-a93e-686775cdfc2d",
      "number": 16,
      "content": "Trong khi lòng nó không muốn điều đó?",
      "order": 1,
      "parNumber": 4,
      "parIndex": 7,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.153Z",
      "updatedAt": "2024-07-15T03:18:18.153Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "be67db8f-6c81-4237-beab-515cb5418c97",
      "number": 17,
      "content": "Phước thay khi có người bạn lúc nào cũng thương mình,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.164Z",
      "updatedAt": "2024-07-15T03:18:18.164Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "84c0ff29-0c35-4d6c-8d7c-ac66eb85e2e0",
      "number": 17,
      "content": "Và có anh chị em ruột giúp nhau lúc khó khăn.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 1,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.164Z",
      "updatedAt": "2024-07-15T03:18:18.164Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "c86c935f-40af-4c37-9d96-d9f63d90b7b4",
      "number": 18,
      "content": "Thật là người thiếu hiểu biết mới đưa tay ra bảo lãnh,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 2,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.167Z",
      "updatedAt": "2024-07-15T03:18:18.167Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "6e5c5b79-b452-4cc3-b38c-5c5a38c95e8c",
      "number": 18,
      "content": "Ðể bảo đảm trả nợ cho kẻ khác.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 3,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.167Z",
      "updatedAt": "2024-07-15T03:18:18.167Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "89219753-3fe1-46aa-b45c-1dc3bbcee568",
      "number": 19,
      "content": "Kẻ thích phạm tội yêu mến sự xung đột;",
      "order": 0,
      "parNumber": 5,
      "parIndex": 4,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.169Z",
      "updatedAt": "2024-07-15T03:18:18.169Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "4697bc99-0b86-490a-91d0-e506268cbb70",
      "number": 19,
      "content": "Kẻ xây cửa cho cao tìm kiếm sự đổ nhào.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 5,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.169Z",
      "updatedAt": "2024-07-15T03:18:18.169Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "5ecd5e48-517f-42ea-8629-5aa383081632",
      "number": 20,
      "content": "Tâm địa gian trá không tìm ra phước hạnh;",
      "order": 0,
      "parNumber": 5,
      "parIndex": 6,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.171Z",
      "updatedAt": "2024-07-15T03:18:18.171Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "812f0fec-b531-4eb1-885d-26a3b419b473",
      "number": 20,
      "content": "Miệng lưỡi điêu ngoa ắt rước họa vào thân.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 7,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.171Z",
      "updatedAt": "2024-07-15T03:18:18.171Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "b361163b-3f98-4bc1-ae0e-99774947adde",
      "number": 21,
      "content": "Ai sinh đứa con điên rồ phải chuốc lấy phiền muộn;",
      "order": 0,
      "parNumber": 5,
      "parIndex": 8,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.173Z",
      "updatedAt": "2024-07-15T03:18:18.173Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "090b056b-fad2-449a-9085-8407d7b7d996",
      "number": 21,
      "content": "Cha mẹ đứa con hư không có được niềm vui.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 9,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.173Z",
      "updatedAt": "2024-07-15T03:18:18.173Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "cb3423d5-1c27-44df-8bbd-3082247a76a3",
      "number": 22,
      "content": "Lòng vui mừng là phương thuốc hay;",
      "order": 0,
      "parNumber": 6,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.175Z",
      "updatedAt": "2024-07-15T03:18:18.175Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "763720fc-329f-4133-90f6-ef54b073fb25",
      "number": 22,
      "content": "Còn tinh thần tan nát đày xương cốt khô héo.",
      "order": 1,
      "parNumber": 6,
      "parIndex": 1,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.175Z",
      "updatedAt": "2024-07-15T03:18:18.175Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "02bf4f41-9ab5-4268-93ca-d47ee5fcde11",
      "number": 23,
      "content": "Kẻ gian ác lén lút nhận của hối lộ,",
      "order": 0,
      "parNumber": 6,
      "parIndex": 2,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.177Z",
      "updatedAt": "2024-07-15T03:18:18.177Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "e922b604-b909-4ebb-8374-de04b51b3402",
      "number": 23,
      "content": "Ðể làm sai lệch con đường công lý.",
      "order": 1,
      "parNumber": 6,
      "parIndex": 3,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.177Z",
      "updatedAt": "2024-07-15T03:18:18.177Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "dcf6a9d1-cc0e-43b5-9bef-c66b6f30d979",
      "number": 24,
      "content": "Mặt người thông sáng hướng vào sự khôn ngoan;",
      "order": 0,
      "parNumber": 6,
      "parIndex": 4,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.180Z",
      "updatedAt": "2024-07-15T03:18:18.180Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "d22631f6-2ea6-4232-8bd2-2abba04f1e3e",
      "number": 24,
      "content": "Còn kẻ dại dột nhìn bâng quơ nơi chân trời góc bể.",
      "order": 1,
      "parNumber": 6,
      "parIndex": 5,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.180Z",
      "updatedAt": "2024-07-15T03:18:18.180Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "93718347-8c4b-4bfd-add6-f25690cbadef",
      "number": 25,
      "content": "Ðứa con dại dột là nỗi buồn của cha nó,",
      "order": 0,
      "parNumber": 6,
      "parIndex": 6,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.182Z",
      "updatedAt": "2024-07-15T03:18:18.182Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "30f53e24-5f56-49f1-bc3e-5f77e1038931",
      "number": 25,
      "content": "Và nỗi đắng của người mẹ đã mang thai nó.",
      "order": 1,
      "parNumber": 6,
      "parIndex": 7,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.182Z",
      "updatedAt": "2024-07-15T03:18:18.182Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "bc996a59-e889-4a4b-8054-c50f7e315dc4",
      "number": 26,
      "content": "Thật không đúng khi phạt người vô tội",
      "order": 0,
      "parNumber": 6,
      "parIndex": 8,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.184Z",
      "updatedAt": "2024-07-15T03:18:18.184Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "58291b21-5b58-4781-a714-78e139fe8faa",
      "number": 26,
      "content": "Hay đánh đòn người cao thượng vì sự chính trực của họ.",
      "order": 1,
      "parNumber": 6,
      "parIndex": 9,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.184Z",
      "updatedAt": "2024-07-15T03:18:18.184Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "e9ab5b12-0a2e-4b60-bd00-27a1366be052",
      "number": 27,
      "content": "Người cẩn trọng trong lời nói là người có tri thức;",
      "order": 0,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.187Z",
      "updatedAt": "2024-07-15T03:18:18.187Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "7d19a24e-184a-41d1-89a2-8060d8c05872",
      "number": 27,
      "content": "Người điềm tĩnh là người sáng suốt.",
      "order": 1,
      "parNumber": 7,
      "parIndex": 1,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.187Z",
      "updatedAt": "2024-07-15T03:18:18.187Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "980b4f89-a736-40dc-b585-6e05366f939f",
      "number": 28,
      "content": "Ngay cả kẻ dại khi im lặng cũng được xem là khôn ngoan,",
      "order": 0,
      "parNumber": 7,
      "parIndex": 2,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.189Z",
      "updatedAt": "2024-07-15T03:18:18.189Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    },
    {
      "id": "16e4e425-641a-4095-9be8-275d9c4c7ebd",
      "number": 28,
      "content": "Khi nó không nói, người ta cứ tưởng là nó thông sáng.",
      "order": 1,
      "parNumber": 7,
      "parIndex": 3,
      "isPoetry": false,
      "createdAt": "2024-07-15T03:18:18.189Z",
      "updatedAt": "2024-07-15T03:18:18.189Z",
      "chapterId": "da2e602b-4025-43cf-9af4-260b1f5b82db"
    }
  ],
