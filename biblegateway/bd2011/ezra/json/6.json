    {
      "id": "2cb3a3ee-25b6-4881-aab5-370b7be16b02",
      "content": "nt: tại đó",
      "position": 67,
      "order": 1,
      "createdAt": "2024-09-09T04:36:59.260Z",
      "updatedAt": "2024-09-09T04:36:59.260Z",
      "verseId": "a72d29a7-ab66-4382-8c02-639af46fadfb",
      "chapterId": "7cc63426-1810-4e16-a927-883a23b04af9"
    },
