  "headings": [
    {
      "id": "d31a47ef-1273-4fca-8eb2-175dbda54373",
      "content": "Xi-ba Tôi Tớ của Mê-phi-bô-sết",
      "order": 0,
      "createdAt": "2024-09-09T04:30:00.750Z",
      "updatedAt": "2024-09-09T04:30:00.750Z",
      "verseId": "fbe47830-4d19-4792-b416-5a6b0028eb8a",
      "chapterId": "5073bb9e-e83f-4fa6-8504-1cbf1c59a3f4"
    },
    {
      "id": "80335f40-b2bf-4f2c-b375-34a02ae313f7",
      "content": "Si-mê-i Nguyền Rủa Ða-vít",
      "order": 0,
      "createdAt": "2024-09-09T04:30:00.766Z",
      "updatedAt": "2024-09-09T04:30:00.766Z",
      "verseId": "249b6922-4e2f-4695-bf4e-db83e5c4532f",
      "chapterId": "5073bb9e-e83f-4fa6-8504-1cbf1c59a3f4"
