    }
  ],
  "headings": [
    {
      "id": "2920e210-4133-4bb0-ac20-cea303a6e843",
      "content": "Ðức Chúa Trời Phán qua Con Ngài",
      "order": 0,
      "createdAt": "2024-07-15T04:56:05.475Z",
      "updatedAt": "2024-07-15T04:56:05.475Z",
      "verseId": "14d18b3b-8c5a-4b43-afa9-c83209f85eb0",
      "chapterId": "f6d9146b-d86a-44e8-8283-be7092efc253"
    },
    {
      "id": "1d8e9bb0-f784-455e-9b14-1233e0cfbf30",
      "content": "Ðức Chúa Con Cao Trọng Hơn Các Thiên Sứ",
      "order": 0,
      "createdAt": "2024-07-15T04:56:05.475Z",
