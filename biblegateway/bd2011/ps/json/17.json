{
  "chapter": {
    "id": "50777c82-0c8b-4d95-b34a-34bebf8da1a1",
    "number": 17,
    "ref": "https://www.biblegateway.com/passage/?search=Th%C3%A1nh%20Thi%2017&version=BD2011",
    "createdAt": "2024-09-09T04:12:59.489Z",
    "updatedAt": "2024-09-09T04:12:59.489Z",
    "bookId": "0d206502-6aae-452a-9312-2974be7c7aa6"
  },
  "verses": [
    {
      "id": "cb56f6de-37fc-43c2-8bd6-f598c850b569",
      "number": 1,
      "content": "Xin nghe lẽ công chính, Chúa ôi, xin nghe tiếng con kêu cầu;",
      "order": 0,
      "parNumber": 0,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.282Z",
      "updatedAt": "2024-09-09T04:42:23.282Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "370e7f67-ee92-4c67-83db-58277fa05614",
      "number": 1,
      "content": "Xin nghe lời cầu nguyện của con, những lời chẳng ra từ môi giả dối.",
      "order": 1,
      "parNumber": 0,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.294Z",
      "updatedAt": "2024-09-09T04:42:23.294Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "1448f448-1c5b-42c3-8649-59af15307042",
      "number": 2,
      "content": "Nguyện Ngài minh oan cho con;",
      "order": 0,
      "parNumber": 0,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.296Z",
      "updatedAt": "2024-09-09T04:42:23.296Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "7632e078-637e-4228-aa9b-9bddc8c75df7",
      "number": 2,
      "content": "Nguyện mắt Ngài thấy những điều chính trực.",
      "order": 1,
      "parNumber": 0,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.298Z",
      "updatedAt": "2024-09-09T04:42:23.298Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "84f074f1-6832-4b91-8f16-9553715e924a",
      "number": 3,
      "content": "Ngài đã thử lòng con;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.300Z",
      "updatedAt": "2024-09-09T04:42:23.300Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "dedec061-d958-414d-8077-afd4364b4b24",
      "number": 3,
      "content": "Ban đêm Ngài đã đến thăm con;",
      "order": 1,
      "parNumber": 1,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.302Z",
      "updatedAt": "2024-09-09T04:42:23.302Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "384146fa-7aa6-4004-b589-2578ae0f1454",
      "number": 3,
      "content": "Ngài đã thử thách con,",
      "order": 2,
      "parNumber": 1,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.304Z",
      "updatedAt": "2024-09-09T04:42:23.304Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "64171cb3-f0cb-4fc0-a97d-ee2a9a85d5b0",
      "number": 3,
      "content": "Và Ngài đã thấy con không làm điều gì đáng tội,",
      "order": 3,
      "parNumber": 1,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.306Z",
      "updatedAt": "2024-09-09T04:42:23.306Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "53544eee-528d-49fe-81ca-4d44136fdabe",
      "number": 3,
      "content": "Vì con đã quyết định rằng miệng con sẽ không phạm tội.",
      "order": 4,
      "parNumber": 1,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.308Z",
      "updatedAt": "2024-09-09T04:42:23.308Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "6734cf82-5e9f-40e6-8f25-c4e8d8889049",
      "number": 4,
      "content": "Còn về những việc của loài người,",
      "order": 0,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.310Z",
      "updatedAt": "2024-09-09T04:42:23.310Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "9dff1a95-8ccd-4a31-86ea-d08368a85869",
      "number": 4,
      "content": "Nhờ lời từ môi Ngài, con đã giữ được mình khỏi đường lối của kẻ bạo tàn.",
      "order": 1,
      "parNumber": 2,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.312Z",
      "updatedAt": "2024-09-09T04:42:23.312Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "08824af5-4f57-4396-848e-f468ef168098",
      "number": 5,
      "content": "Con đã giữ những bước chân con theo sát đường lối Ngài,",
      "order": 0,
      "parNumber": 2,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.315Z",
      "updatedAt": "2024-09-09T04:42:23.315Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "aff3546a-1144-4905-a937-c9b7e34c2448",
      "number": 5,
      "content": "Và chân con đã không trượt ngã.",
      "order": 1,
      "parNumber": 2,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.320Z",
      "updatedAt": "2024-09-09T04:42:23.320Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "43b30540-a1fa-40f4-b4fc-fff7579f7856",
      "number": 6,
      "content": "Ðức Chúa Trời ôi, con kêu cầu Ngài, vì Ngài sẽ đáp lời con;",
      "order": 0,
      "parNumber": 3,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.326Z",
      "updatedAt": "2024-09-09T04:42:23.326Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "5de6b57f-e0fd-44f5-958e-129d2b5ac4d8",
      "number": 6,
      "content": "Xin nghiêng tai lắng nghe lời cầu nguyện của con;",
      "order": 1,
      "parNumber": 3,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.329Z",
      "updatedAt": "2024-09-09T04:42:23.329Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "a50bbf0b-e875-4a63-8535-17d00a8135fe",
      "number": 7,
      "content": "Xin bày tỏ lòng thương xót diệu kỳ của Ngài;",
      "order": 0,
      "parNumber": 3,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.332Z",
      "updatedAt": "2024-09-09T04:42:23.332Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "b10cc80b-e3e1-4db0-94c4-464bcf789cec",
      "number": 7,
      "content": "Ðấng Giải Cứu ôi, xin dùng tay phải Ngài giúp những người tin cậy Ngài khỏi những kẻ chống nghịch họ.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.334Z",
      "updatedAt": "2024-09-09T04:42:23.334Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "409cf8a3-1bef-4bb7-94b2-48e155c1a8b1",
      "number": 8,
      "content": "Xin gìn giữ con như con ngươi của mắt Ngài;",
      "order": 0,
      "parNumber": 4,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.337Z",
      "updatedAt": "2024-09-09T04:42:23.337Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "b8c7a07b-4d92-49e7-aa9a-5fa1663ce91e",
      "number": 8,
      "content": "Xin giấu con dưới bóng của cánh Ngài,",
      "order": 1,
      "parNumber": 4,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.340Z",
      "updatedAt": "2024-09-09T04:42:23.340Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "c75bb4a4-1494-4fd1-b775-2c16a31ce8c4",
      "number": 9,
      "content": "Ðể con thoát khỏi những kẻ ác muốn hại con,",
      "order": 0,
      "parNumber": 4,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.343Z",
      "updatedAt": "2024-09-09T04:42:23.343Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "0d6aadf4-3e2e-41b6-b45e-0c91dd2bb03d",
      "number": 9,
      "content": "Tức khỏi những kẻ tử thù đang vây quanh con.",
      "order": 1,
      "parNumber": 4,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.347Z",
      "updatedAt": "2024-09-09T04:42:23.347Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "5fa6a61f-a23d-4d7f-b704-46273327c299",
      "number": 10,
      "content": "Chúng khép chặt lòng thương xót chúng lại như đã bị mỡ bao trùm;",
      "order": 0,
      "parNumber": 5,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.351Z",
      "updatedAt": "2024-09-09T04:42:23.351Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "2182c193-2c63-434c-92be-01d16ae71d5b",
      "number": 10,
      "content": "Miệng chúng nói toàn những lời kiêu ngạo.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.356Z",
      "updatedAt": "2024-09-09T04:42:23.356Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "73974dd8-09b8-4e95-b3c2-6871df0703f9",
      "number": 11,
      "content": "Bây giờ mỗi bước con đều bị chúng vây quanh theo dõi,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.362Z",
      "updatedAt": "2024-09-09T04:42:23.362Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "8a777de4-634c-43a1-97a9-50d45b24e0a3",
      "number": 11,
      "content": "Mắt chúng dõi theo con để tìm cơ hội vật con ngã xuống.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.367Z",
      "updatedAt": "2024-09-09T04:42:23.367Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "b936e8b2-e54b-4a00-a6f9-566b0a424e86",
      "number": 12,
      "content": "Chúng như sư tử đói chực cắn xé con mồi,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.372Z",
      "updatedAt": "2024-09-09T04:42:23.372Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "8ea99aec-9627-492a-9569-38c9a5820ce7",
      "number": 12,
      "content": "Như sư tử tơ đang rình mồi trong bụi rậm.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 5,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.377Z",
      "updatedAt": "2024-09-09T04:42:23.377Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "ef2c2cc8-6ef1-4bb4-a577-fe059d44ae96",
      "number": 13,
      "content": "Chúa ôi, xin trỗi dậy, đối đầu với chúng, và đánh hạ chúng;",
      "order": 0,
      "parNumber": 6,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.382Z",
      "updatedAt": "2024-09-09T04:42:23.382Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "1b33e271-779b-4042-8150-fdf1705af053",
      "number": 13,
      "content": "Xin dùng gươm Ngài giải cứu linh hồn con khỏi kẻ ác.",
      "order": 1,
      "parNumber": 6,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.387Z",
      "updatedAt": "2024-09-09T04:42:23.387Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "f5dbf679-4ac1-47e0-9bef-17f1b750ac02",
      "number": 14,
      "content": "Chúa ôi, xin dùng tay Ngài cứu con khỏi những phàm nhân, những kẻ chỉ có phần phước ở đời này.",
      "order": 0,
      "parNumber": 6,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.392Z",
      "updatedAt": "2024-09-09T04:42:23.392Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "790e66cf-948c-466f-9139-e46e8b683c58",
      "number": 14,
      "content": "Xin cho chúng đầy bụng bằng những gì Ngài đã để dành cho chúng;",
      "order": 1,
      "parNumber": 6,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.397Z",
      "updatedAt": "2024-09-09T04:42:23.397Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "1e249378-2625-4ff2-80cb-c451c08be532",
      "number": 14,
      "content": "Nguyện con cái chúng sẽ nhận đầy đủ những điều ấy,",
      "order": 2,
      "parNumber": 6,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.402Z",
      "updatedAt": "2024-09-09T04:42:23.402Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "2d852ee8-0f0a-4b0d-89b8-e7d09011efa7",
      "number": 14,
      "content": "Và còn dư lại để dành cho cháu chắt chúng nữa.",
      "order": 3,
      "parNumber": 6,
      "parIndex": 5,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.407Z",
      "updatedAt": "2024-09-09T04:42:23.407Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "03d467c3-7884-4ba3-bc6f-f2848306de6b",
      "number": 15,
      "content": "Còn con, nhờ sự công chính, con sẽ được nhìn thấy mặt Ngài;",
      "order": 0,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.411Z",
      "updatedAt": "2024-09-09T04:42:23.411Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    },
    {
      "id": "1aac994b-03e6-4185-906d-2eb6e73b75cb",
      "number": 15,
      "content": "Khi thức dậy con sẽ vui thỏa chiêm ngưỡng thánh nhan Ngài.",
      "order": 1,
      "parNumber": 7,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:42:23.416Z",
      "updatedAt": "2024-09-09T04:42:23.416Z",
      "chapterId": "50777c82-0c8b-4d95-b34a-34bebf8da1a1"
    }
  ],
