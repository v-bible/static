{
  "chapter": {
    "id": "4d6663cc-bf95-4b9a-a934-e2fb1e763759",
    "number": 37,
    "ref": "https://www.biblegateway.com/passage/?search=Th%C3%A1nh%20Thi%2037&version=BD2011",
    "createdAt": "2024-09-24T01:00:43.117Z",
    "updatedAt": "2024-09-24T01:00:43.117Z",
    "bookId": "c717afb1-3e2a-4420-ab57-161df8cd461f"
  },
  "verses": [
    {
      "id": "31c47468-5987-426b-916e-1b5693bbb415",
      "number": 1,
      "content": "Chớ phiền lòng vì những kẻ làm ác;",
      "order": 0,
      "parNumber": 0,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.391Z",
      "updatedAt": "2024-09-24T01:57:18.391Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "39fd9e17-0327-4f05-9e24-f3349943aeb5",
      "number": 1,
      "content": "Cũng đừng ganh tức vì những kẻ làm chuyện gian tà,",
      "order": 1,
      "parNumber": 0,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.394Z",
      "updatedAt": "2024-09-24T01:57:18.394Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "b3c2d359-9aa4-461a-8491-c851c8bd7d2c",
      "number": 2,
      "content": "Vì chúng sẽ mau héo khô như cỏ dại,",
      "order": 0,
      "parNumber": 0,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.396Z",
      "updatedAt": "2024-09-24T01:57:18.396Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "44c33df6-baa1-4efc-9710-2c98e529972d",
      "number": 2,
      "content": "Và sẽ chóng úa tàn như rau dại mới vừa xanh.",
      "order": 1,
      "parNumber": 0,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.399Z",
      "updatedAt": "2024-09-24T01:57:18.399Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "7845bdc0-8849-406f-af53-a59204a125c2",
      "number": 3,
      "content": "Hãy tin cậy Chúa và làm điều lành;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.402Z",
      "updatedAt": "2024-09-24T01:57:18.402Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "0001a3b3-9a63-4a49-ab3d-80d434eff996",
      "number": 3,
      "content": "Khá ở trong xứ và nuôi mình bằng sự thành tín của Ngài.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.404Z",
      "updatedAt": "2024-09-24T01:57:18.404Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "ca4f9784-42e5-488f-acee-d2a21d8b5e5d",
      "number": 4,
      "content": "Hãy vui thỏa trong Chúa,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.409Z",
      "updatedAt": "2024-09-24T01:57:18.409Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "527a6747-be81-40fa-bdf9-18ef07324a35",
      "number": 4,
      "content": "Và Ngài sẽ ban cho bạn những điều lòng bạn ao ước.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.411Z",
      "updatedAt": "2024-09-24T01:57:18.411Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "779b6202-9b12-4c1b-a64c-37705e7144e2",
      "number": 5,
      "content": "Hãy phó thác đường lối bạn cho Chúa,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.413Z",
      "updatedAt": "2024-09-24T01:57:18.413Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "bb4d9bdd-d752-4540-b6aa-23fdefa25c8a",
      "number": 5,
      "content": "Hãy tin cậy Ngài, Ngài sẽ làm thành điều bạn muốn.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 5,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.416Z",
      "updatedAt": "2024-09-24T01:57:18.416Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "cf22c871-a6b6-48e8-95ae-011598efc77b",
      "number": 6,
      "content": "Ngài sẽ làm cho đức công chính của bạn rạng ngời như ánh sáng,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 6,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.418Z",
      "updatedAt": "2024-09-24T01:57:18.418Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "d283da7f-da11-4881-9acb-6a61d16be3d4",
      "number": 6,
      "content": "Và sự trong sạch của bạn lộ ra như giữa trưa.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 7,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.420Z",
      "updatedAt": "2024-09-24T01:57:18.420Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "189ef9e9-2042-4e14-8b11-41a64cae0a2e",
      "number": 7,
      "content": "Hãy an tâm trong Chúa và kiên nhẫn chờ đợi Ngài;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 8,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.422Z",
      "updatedAt": "2024-09-24T01:57:18.422Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "5355be20-65da-4b93-868f-8b4f2c988299",
      "number": 7,
      "content": "Ðừng phiền lòng vì người khác được may mắn trong đường lối họ,",
      "order": 1,
      "parNumber": 1,
      "parIndex": 9,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.424Z",
      "updatedAt": "2024-09-24T01:57:18.424Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "13908d7f-af08-4d2c-810e-a5158baf7d27",
      "number": 7,
      "content": "Hoặc vì họ thực hiện được những mưu ác.",
      "order": 2,
      "parNumber": 1,
      "parIndex": 10,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.426Z",
      "updatedAt": "2024-09-24T01:57:18.426Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "53dcd0ae-9f87-4978-ac3d-19227af0ae64",
      "number": 8,
      "content": "Hãy ngưng cơn giận và bỏ sự tức giận đi;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 11,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.428Z",
      "updatedAt": "2024-09-24T01:57:18.428Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "86da11fb-88de-42c5-be0b-7945da738447",
      "number": 8,
      "content": "Ðừng bực bội làm gì, vì nuôi giận như thế chỉ dẫn đến việc ác.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 12,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.431Z",
      "updatedAt": "2024-09-24T01:57:18.431Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "33bbdfb8-22b2-43ed-b3a9-2285c4f56ae3",
      "number": 9,
      "content": "Phàm kẻ nào làm điều ác ắt sẽ bị diệt mất,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 13,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.433Z",
      "updatedAt": "2024-09-24T01:57:18.433Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "07380026-33c7-4946-8cf7-137acdb8a2ae",
      "number": 9,
      "content": "Nhưng ai trông đợi Chúa sẽ hưởng được đất.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 14,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.435Z",
      "updatedAt": "2024-09-24T01:57:18.435Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "20753823-858b-4f90-bbdb-45819d12ee37",
      "number": 10,
      "content": "Chỉ trong chốc lát thôi, kẻ ác sẽ không còn nữa;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 15,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.437Z",
      "updatedAt": "2024-09-24T01:57:18.437Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "1ed48fe0-7ecc-4df7-bfb8-258617a612b4",
      "number": 10,
      "content": "Bạn sẽ tìm kiếm chỗ nó, nhưng nó chẳng còn ở đó nữa.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 16,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.439Z",
      "updatedAt": "2024-09-24T01:57:18.439Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "55363d73-d963-49d6-ae44-c816e05577f5",
      "number": 11,
      "content": "Nhưng người hiền lành sẽ hưởng được đất",
      "order": 0,
      "parNumber": 1,
      "parIndex": 17,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.441Z",
      "updatedAt": "2024-09-24T01:57:18.441Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "bd3cb860-fef5-4caa-9284-474c9fc6dd21",
      "number": 11,
      "content": "Và được vui thỏa trong bình an thịnh vượng dồi dào.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 18,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.443Z",
      "updatedAt": "2024-09-24T01:57:18.443Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "fcb87b61-5836-4431-adb5-5bbce8c84143",
      "number": 12,
      "content": "Kẻ ác lập mưu hại người ngay lành,",
      "order": 0,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.445Z",
      "updatedAt": "2024-09-24T01:57:18.445Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "eba3e977-d2ba-469f-81e7-06c1d06ad8e8",
      "number": 12,
      "content": "Và nghiến răng chống lại người ấy;",
      "order": 1,
      "parNumber": 2,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.449Z",
      "updatedAt": "2024-09-24T01:57:18.449Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "82eb495c-0a18-4efc-b85f-8e8602ce5e19",
      "number": 13,
      "content": "Nhưng Chúa cười nó,",
      "order": 0,
      "parNumber": 2,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.452Z",
      "updatedAt": "2024-09-24T01:57:18.452Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "57afa9b4-7c1f-40cb-9270-3ab12145a8bd",
      "number": 13,
      "content": "Vì Ngài thấy ngày tàn của nó đến gần.",
      "order": 1,
      "parNumber": 2,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.454Z",
      "updatedAt": "2024-09-24T01:57:18.454Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "c8de7cf9-46e4-4936-a290-7724757f21d8",
      "number": 14,
      "content": "Kẻ ác rút gươm và giương cung để đánh hạ người nghèo nàn và khốn khổ,",
      "order": 0,
      "parNumber": 2,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.456Z",
      "updatedAt": "2024-09-24T01:57:18.456Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "0e426a78-7043-4ad2-935f-0f39ee6c9058",
      "number": 14,
      "content": "Và để giết hại người sống ngay lành;",
      "order": 1,
      "parNumber": 2,
      "parIndex": 5,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.458Z",
      "updatedAt": "2024-09-24T01:57:18.458Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "019166c0-dc1b-4642-8c32-fdce0d9dc5a1",
      "number": 15,
      "content": "Nhưng gươm của nó sẽ đâm vào lòng nó,",
      "order": 0,
      "parNumber": 2,
      "parIndex": 6,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.460Z",
      "updatedAt": "2024-09-24T01:57:18.460Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "9db32188-5b2c-4f0b-aee2-5867bd22dc8b",
      "number": 15,
      "content": "Và cung của nó sẽ gãy cụp làm hai.",
      "order": 1,
      "parNumber": 2,
      "parIndex": 7,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.462Z",
      "updatedAt": "2024-09-24T01:57:18.462Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "cd92317e-d257-4916-ab90-6fad294b7e46",
      "number": 16,
      "content": "Những gì người ngay lành có tuy ít ỏi,",
      "order": 0,
      "parNumber": 3,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.466Z",
      "updatedAt": "2024-09-24T01:57:18.466Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "0c03b5b8-02fd-4daf-b1cb-2923c8265424",
      "number": 16,
      "content": "Nhưng tốt hơn của cải nhiều của lắm kẻ gian tà.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.468Z",
      "updatedAt": "2024-09-24T01:57:18.468Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "8ccc33cf-ac6c-4044-b0ba-50c1ad95a05c",
      "number": 17,
      "content": "Vì cánh tay của kẻ ác sẽ bị gãy,",
      "order": 0,
      "parNumber": 3,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.471Z",
      "updatedAt": "2024-09-24T01:57:18.471Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "6fbe61ed-5874-4040-b15a-027278adac55",
      "number": 17,
      "content": "Nhưng Chúa bảo vệ người ngay lành.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.473Z",
      "updatedAt": "2024-09-24T01:57:18.473Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "b8938f9b-ae38-40d3-a74c-c10bb979a1ec",
      "number": 18,
      "content": "Chúa biết những ngày của người thanh liêm trong sạch;",
      "order": 0,
      "parNumber": 4,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.475Z",
      "updatedAt": "2024-09-24T01:57:18.475Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "2e705dde-c5a8-4cf8-b26a-ab29546ac975",
      "number": 18,
      "content": "Cơ nghiệp của họ sẽ còn lại đời đời.",
      "order": 1,
      "parNumber": 4,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.476Z",
      "updatedAt": "2024-09-24T01:57:18.476Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "ae37d391-0289-411c-ab3e-e2f86ff90941",
      "number": 19,
      "content": "Họ sẽ không bị hổ thẹn trong thời tai họa;",
      "order": 0,
      "parNumber": 4,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.479Z",
      "updatedAt": "2024-09-24T01:57:18.479Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "a7c79502-c05a-40e4-b244-16acd6d4489d",
      "number": 19,
      "content": "Trong thời đói kém họ vẫn được no nê.",
      "order": 1,
      "parNumber": 4,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.483Z",
      "updatedAt": "2024-09-24T01:57:18.483Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "0131881e-c610-4d8b-99ed-4939462752e5",
      "number": 20,
      "content": "Nhưng kẻ ác sẽ bị chết mất;",
      "order": 0,
      "parNumber": 4,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.487Z",
      "updatedAt": "2024-09-24T01:57:18.487Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "ac7c2ea6-fc17-4568-9173-23a742a974f7",
      "number": 20,
      "content": "Những kẻ thù của Chúa tựa như sắc đẹp của đồng cỏ;",
      "order": 1,
      "parNumber": 4,
      "parIndex": 5,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.489Z",
      "updatedAt": "2024-09-24T01:57:18.489Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "14eec845-fa81-4f41-8f02-92934e43098e",
      "number": 20,
      "content": "Chúng bị tan biến như khói tan đi.",
      "order": 2,
      "parNumber": 4,
      "parIndex": 6,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.491Z",
      "updatedAt": "2024-09-24T01:57:18.491Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "ada5f7d6-6a2a-4cdc-b227-ccf67b038dbc",
      "number": 21,
      "content": "Kẻ ác vay mượn rồi không trả lại,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.493Z",
      "updatedAt": "2024-09-24T01:57:18.493Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "6aeb75e0-fcaa-4bef-bc1d-8114909d2b41",
      "number": 21,
      "content": "Còn người ngay lành cứ rộng rãi ban cho.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.496Z",
      "updatedAt": "2024-09-24T01:57:18.496Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "e692b410-c5ea-4fd9-a6c8-90ebe8c039fe",
      "number": 22,
      "content": "Vì ai được Chúa ban phước sẽ hưởng được đất,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.498Z",
      "updatedAt": "2024-09-24T01:57:18.498Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "bdd3aac4-c9ea-4102-ac76-a8d293442a6d",
      "number": 22,
      "content": "Nhưng kẻ nào bị Ngài nguyền rủa sẽ bị diệt vong.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.501Z",
      "updatedAt": "2024-09-24T01:57:18.501Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "1b7c2ac4-6fd6-40e0-a317-9508b24d2009",
      "number": 23,
      "content": "Chúa làm cho vững các bước của người tốt,",
      "order": 0,
      "parNumber": 6,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.503Z",
      "updatedAt": "2024-09-24T01:57:18.503Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "cc34ae86-e9b6-454d-8751-59cebe341f2c",
      "number": 23,
      "content": "Vì Ngài ưa thích đường lối của người ấy.",
      "order": 1,
      "parNumber": 6,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.506Z",
      "updatedAt": "2024-09-24T01:57:18.506Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "89339c14-527a-4122-91e5-bc06d39bdac3",
      "number": 24,
      "content": "Nếu người ấy có vấp, người ấy sẽ không ngã dài,",
      "order": 0,
      "parNumber": 6,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.508Z",
      "updatedAt": "2024-09-24T01:57:18.508Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "4f7c34b4-350e-449e-ad27-e205477e8351",
      "number": 24,
      "content": "Vì Chúa sẽ nắm lấy tay người ấy giữ lại.",
      "order": 1,
      "parNumber": 6,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.511Z",
      "updatedAt": "2024-09-24T01:57:18.511Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "6c5e01d1-0587-473a-aa28-5fa8283b6de0",
      "number": 25,
      "content": "Trước tôi trẻ, giờ tôi già,",
      "order": 0,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.514Z",
      "updatedAt": "2024-09-24T01:57:18.514Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "54489e6b-f975-4be6-9a45-d407f3efd152",
      "number": 25,
      "content": "Nhưng tôi chưa thấy người ngay lành nào bị bỏ,",
      "order": 1,
      "parNumber": 7,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.521Z",
      "updatedAt": "2024-09-24T01:57:18.521Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "f99f6f44-dcbf-48f1-b224-333b6e413baf",
      "number": 25,
      "content": "Hoặc dòng dõi người ấy phải đi ăn mày.",
      "order": 2,
      "parNumber": 7,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.524Z",
      "updatedAt": "2024-09-24T01:57:18.524Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "68e6dc65-4d7b-418f-9662-5968e4145acc",
      "number": 26,
      "content": "Cả đời người ấy cứ làm ơn và cho mượn;",
      "order": 0,
      "parNumber": 7,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.527Z",
      "updatedAt": "2024-09-24T01:57:18.527Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "e2d003c9-f2c5-45ea-94f8-e6f77b9eea66",
      "number": 26,
      "content": "Dòng dõi người ấy trở thành nguồn phước cho nhiều người.",
      "order": 1,
      "parNumber": 7,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.530Z",
      "updatedAt": "2024-09-24T01:57:18.530Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "7b878f9b-c277-48c3-8cb3-15816b30ccdb",
      "number": 27,
      "content": "Hãy tránh điều ác và làm điều thiện,",
      "order": 0,
      "parNumber": 8,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.534Z",
      "updatedAt": "2024-09-24T01:57:18.534Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "7ffcd00a-b0a7-4491-a5fa-d8935c82d66b",
      "number": 27,
      "content": "Ðể bạn sẽ ở trong xứ mãi mãi.",
      "order": 1,
      "parNumber": 8,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.537Z",
      "updatedAt": "2024-09-24T01:57:18.537Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "398ccd6b-b8e6-4db9-8917-657ada7250df",
      "number": 28,
      "content": "Vì Chúa yêu thương người công chính;",
      "order": 0,
      "parNumber": 8,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.540Z",
      "updatedAt": "2024-09-24T01:57:18.540Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "fa6693d9-82db-41f1-97e0-4c0f9bc2d90b",
      "number": 28,
      "content": "Ngài không bỏ các thánh đồ của Ngài;",
      "order": 1,
      "parNumber": 8,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.544Z",
      "updatedAt": "2024-09-24T01:57:18.544Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "cfadd072-9203-4380-b2b7-27b463fdf809",
      "number": 28,
      "content": "Họ sẽ được bảo vệ đời đời;",
      "order": 2,
      "parNumber": 8,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.550Z",
      "updatedAt": "2024-09-24T01:57:18.550Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "40236db6-5790-4bb8-87d5-cc04c446da93",
      "number": 28,
      "content": "Nhưng dòng dõi của kẻ ác sẽ bị diệt vong.",
      "order": 3,
      "parNumber": 8,
      "parIndex": 5,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.554Z",
      "updatedAt": "2024-09-24T01:57:18.554Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "6264e77e-68b6-4817-9459-25d8ba99ce11",
      "number": 29,
      "content": "Người ngay lành sẽ hưởng được đất,",
      "order": 0,
      "parNumber": 8,
      "parIndex": 6,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.558Z",
      "updatedAt": "2024-09-24T01:57:18.558Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "95868d7a-0ecd-4a4c-b737-835f22f93bd6",
      "number": 29,
      "content": "Và sẽ ở trong đó mãi mãi.",
      "order": 1,
      "parNumber": 8,
      "parIndex": 7,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.562Z",
      "updatedAt": "2024-09-24T01:57:18.562Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "ac244924-3c4e-4c17-8777-9b2c71420e1c",
      "number": 30,
      "content": "Miệng người ngay lành thốt ra sự khôn ngoan;",
      "order": 0,
      "parNumber": 9,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.566Z",
      "updatedAt": "2024-09-24T01:57:18.566Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "03c27b67-5ee3-4f76-90d8-2cccf949203d",
      "number": 30,
      "content": "Lưỡi người ấy nói ra công lý.",
      "order": 1,
      "parNumber": 9,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.570Z",
      "updatedAt": "2024-09-24T01:57:18.570Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "291d71da-9449-4215-bca6-cbe9b0869ac8",
      "number": 31,
      "content": "Luật pháp Ðức Chúa Trời ở trong lòng người ấy;",
      "order": 0,
      "parNumber": 9,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.574Z",
      "updatedAt": "2024-09-24T01:57:18.574Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "367e79bb-6efa-486a-94c9-cd4b538f172e",
      "number": 31,
      "content": "Các bước chân người ấy sẽ không bị trợt.",
      "order": 1,
      "parNumber": 9,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.579Z",
      "updatedAt": "2024-09-24T01:57:18.579Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "6b30396d-b972-4d73-a8b1-f2429ac97174",
      "number": 32,
      "content": "Kẻ ác rình rập người ngay lành,",
      "order": 0,
      "parNumber": 10,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.584Z",
      "updatedAt": "2024-09-24T01:57:18.584Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "7941cc46-aa9e-4830-80e2-8be8b2192cd8",
      "number": 32,
      "content": "Ðể tìm cơ hội giết hại người ấy,",
      "order": 1,
      "parNumber": 10,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.588Z",
      "updatedAt": "2024-09-24T01:57:18.588Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "66385f60-b681-4cf7-b974-d1d90b58f5ea",
      "number": 33,
      "content": "Nhưng Chúa không phó người ấy vào tay nó;",
      "order": 0,
      "parNumber": 10,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.591Z",
      "updatedAt": "2024-09-24T01:57:18.591Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "54a49bfa-59ee-4500-a0db-69fd37cb06d4",
      "number": 33,
      "content": "Ngài không để cho người ấy bị kết án khi bị xét xử.",
      "order": 1,
      "parNumber": 10,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.595Z",
      "updatedAt": "2024-09-24T01:57:18.595Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "977449cd-f719-44e4-964f-35c5e61f8b8c",
      "number": 34,
      "content": "Hãy trông cậy Chúa và hãy giữ theo đường lối Ngài;",
      "order": 0,
      "parNumber": 11,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.600Z",
      "updatedAt": "2024-09-24T01:57:18.600Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "70641285-6f0d-4778-8488-d0893a6ebc75",
      "number": 34,
      "content": "Ngài sẽ nhấc nâng bạn lên để bạn hưởng được đất;",
      "order": 1,
      "parNumber": 11,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.604Z",
      "updatedAt": "2024-09-24T01:57:18.604Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "769f7db4-8faf-457b-88ae-f3933587fbb1",
      "number": 34,
      "content": "Bạn sẽ nhìn thấy rõ khi kẻ ác bị diệt mất.",
      "order": 2,
      "parNumber": 11,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.608Z",
      "updatedAt": "2024-09-24T01:57:18.608Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "91e8d6b4-1d00-4889-9453-b13ccab6e0c1",
      "number": 35,
      "content": "Tôi đã từng thấy một kẻ gian ác có thế lực và bạo tàn;",
      "order": 0,
      "parNumber": 12,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.612Z",
      "updatedAt": "2024-09-24T01:57:18.612Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "a2714a6a-72e3-481a-a1c6-f40b89d16992",
      "number": 35,
      "content": "Nó vùng vẫy dọc ngang như một cây sum suê trong vùng đất tốt;",
      "order": 1,
      "parNumber": 12,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.616Z",
      "updatedAt": "2024-09-24T01:57:18.616Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "f5410ebe-fe31-4c9f-8224-a1caaa25ad2d",
      "number": 36,
      "content": "Nhưng nó đã mất sớm, và này, nó chẳng còn nữa;",
      "order": 0,
      "parNumber": 12,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.620Z",
      "updatedAt": "2024-09-24T01:57:18.620Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "866770a5-e1d5-460e-a813-d2abe4a00ee2",
      "number": 36,
      "content": "Tôi đã cố tình tìm kiếm nó nhưng chẳng tìm ra.",
      "order": 1,
      "parNumber": 12,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.624Z",
      "updatedAt": "2024-09-24T01:57:18.624Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "bd888aaa-1ca7-4659-9a0c-7f9aa9dc0f11",
      "number": 37,
      "content": "Hãy để ý người liêm khiết và nhìn xem người ngay thật;",
      "order": 0,
      "parNumber": 13,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.628Z",
      "updatedAt": "2024-09-24T01:57:18.628Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "9c169767-dccb-4311-bdef-93e4c049cf7e",
      "number": 37,
      "content": "Vì tương lai của người hiếu hòa là bình an thịnh vượng.",
      "order": 1,
      "parNumber": 13,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.632Z",
      "updatedAt": "2024-09-24T01:57:18.632Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "8c8cf7ab-caea-4141-9c06-9d805b18151e",
      "number": 38,
      "content": "Nhưng những kẻ tội lỗi đều phải bị diệt vong;",
      "order": 0,
      "parNumber": 13,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.636Z",
      "updatedAt": "2024-09-24T01:57:18.636Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "d2a8b26a-9b91-4197-a9de-2fdd6eac88b8",
      "number": 38,
      "content": "Tương lai của những kẻ gian ác là bị tiêu diệt hoàn toàn.",
      "order": 1,
      "parNumber": 13,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.639Z",
      "updatedAt": "2024-09-24T01:57:18.639Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "f3946331-cd89-41ee-b7a0-a9c62e5310ca",
      "number": 39,
      "content": "Chúa ban ơn cứu rỗi cho người ngay lành;",
      "order": 0,
      "parNumber": 14,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.643Z",
      "updatedAt": "2024-09-24T01:57:18.643Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "16bd00af-6a68-4070-808a-6b8e94913dd5",
      "number": 39,
      "content": "Ngài là sức mạnh của người ấy trong khi gặp khó khăn rắc rối.",
      "order": 1,
      "parNumber": 14,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.647Z",
      "updatedAt": "2024-09-24T01:57:18.647Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "9e2d3303-4737-4ffc-b862-a4770a6c0713",
      "number": 40,
      "content": "Chúa giúp đỡ họ và giải cứu họ;",
      "order": 0,
      "parNumber": 14,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.651Z",
      "updatedAt": "2024-09-24T01:57:18.651Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "b4b4f92a-a93a-4dc4-831f-83d38484d2af",
      "number": 40,
      "content": "Ngài giải thoát họ và cứu họ khỏi tay kẻ ác,",
      "order": 1,
      "parNumber": 14,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.655Z",
      "updatedAt": "2024-09-24T01:57:18.655Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    },
    {
      "id": "35624a0c-9165-4565-9d5f-e8f762d850fa",
      "number": 40,
      "content": "Bởi vì họ nương náu nơi Ngài.",
      "order": 2,
      "parNumber": 14,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2024-09-24T01:57:18.658Z",
      "updatedAt": "2024-09-24T01:57:18.658Z",
      "chapterId": "4d6663cc-bf95-4b9a-a934-e2fb1e763759"
    }
  ],
