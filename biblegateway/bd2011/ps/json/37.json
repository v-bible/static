{
  "chapter": {
    "id": "25af1f67-fbb8-47bb-98a6-0eb906397f73",
    "number": 37,
    "ref": "https://www.biblegateway.com/passage/?search=Th%C3%A1nh%20Thi%2037&version=BD2011",
    "createdAt": "2024-07-12T04:03:46.330Z",
    "updatedAt": "2024-07-24T15:07:47.251Z",
    "bookId": "356e2ad5-52d3-4295-b594-7b36816b4c5e"
  },
  "verses": [
    {
      "id": "441e9ed3-8221-48ad-984f-3abae01304b8",
      "number": 1,
      "content": "Chớ phiền lòng vì những kẻ làm ác;",
      "order": 0,
      "parNumber": 0,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.103Z",
      "updatedAt": "2024-07-31T11:29:55.399Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "d6cb18bf-7420-4f93-b37f-ee970230aa1e",
      "number": 1,
      "content": "Cũng đừng ganh tức vì những kẻ làm chuyện gian tà,",
      "order": 1,
      "parNumber": 0,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.103Z",
      "updatedAt": "2024-07-31T11:29:55.408Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "babbd7c4-0874-477d-9313-787c808fe912",
      "number": 2,
      "content": "Vì chúng sẽ mau héo khô như cỏ dại,",
      "order": 0,
      "parNumber": 0,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.113Z",
      "updatedAt": "2024-07-31T11:29:55.440Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "80925202-8ab4-453d-b5c0-2a5874782d7c",
      "number": 2,
      "content": "Và sẽ chóng úa tàn như rau dại mới vừa xanh.",
      "order": 1,
      "parNumber": 0,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.113Z",
      "updatedAt": "2024-07-31T11:29:55.453Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "125f03c3-f6e9-4b0d-a9bb-4efeb044b903",
      "number": 3,
      "content": "Hãy tin cậy Chúa và làm điều lành;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.116Z",
      "updatedAt": "2024-07-31T11:29:55.469Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "208072cb-80b6-4ef4-94ac-f8d03e4e306e",
      "number": 3,
      "content": "Khá ở trong xứ và nuôi mình bằng sự thành tín của Ngài.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.116Z",
      "updatedAt": "2024-07-31T11:29:55.482Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "e78565e2-50e7-42be-b11c-67f98c55907c",
      "number": 4,
      "content": "Hãy vui thỏa trong Chúa,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.118Z",
      "updatedAt": "2024-07-31T11:29:55.490Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "6cc77671-63eb-4d33-b2ca-5658309c127a",
      "number": 4,
      "content": "Và Ngài sẽ ban cho bạn những điều lòng bạn ao ước.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.118Z",
      "updatedAt": "2024-07-31T11:29:55.500Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "9b81453b-bb07-421b-b0c4-6f49ce709c15",
      "number": 5,
      "content": "Hãy phó thác đường lối bạn cho Chúa,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.120Z",
      "updatedAt": "2024-07-31T11:29:55.509Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "4d21b2a4-da3c-4a3f-b247-35b7859409b0",
      "number": 5,
      "content": "Hãy tin cậy Ngài, Ngài sẽ làm thành điều bạn muốn.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 5,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.120Z",
      "updatedAt": "2024-07-31T11:29:55.520Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "5f9b75d5-15c0-47ef-a162-b74db44d45e1",
      "number": 6,
      "content": "Ngài sẽ làm cho đức công chính của bạn rạng ngời như ánh sáng,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 6,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.122Z",
      "updatedAt": "2024-07-31T11:29:55.529Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "d64a7851-4387-446c-b12e-ce0b352ff576",
      "number": 6,
      "content": "Và sự trong sạch của bạn lộ ra như giữa trưa.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 7,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.122Z",
      "updatedAt": "2024-07-31T11:29:55.539Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "65d70661-4c2a-4f12-b048-6074e1bb3315",
      "number": 7,
      "content": "Hãy an tâm trong Chúa và kiên nhẫn chờ đợi Ngài;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 8,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.125Z",
      "updatedAt": "2024-07-31T11:29:55.549Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "2c6a5fc5-aa8c-4c8b-a1df-85e20779a8a1",
      "number": 7,
      "content": "Ðừng phiền lòng vì người khác được may mắn trong đường lối họ,",
      "order": 1,
      "parNumber": 1,
      "parIndex": 9,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.125Z",
      "updatedAt": "2024-07-31T11:29:55.558Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "a660fbd0-0fec-465e-921c-705aa5879f3f",
      "number": 7,
      "content": "Hoặc vì họ thực hiện được những mưu ác.",
      "order": 2,
      "parNumber": 1,
      "parIndex": 10,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.125Z",
      "updatedAt": "2024-07-31T11:29:55.569Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "0d477ca4-b160-4826-a514-26768fbf2df4",
      "number": 8,
      "content": "Hãy ngưng cơn giận và bỏ sự tức giận đi;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 11,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.127Z",
      "updatedAt": "2024-07-31T11:29:55.578Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "174f02ff-6dee-44ad-b0b0-e5bd69fd8e1a",
      "number": 8,
      "content": "Ðừng bực bội làm gì, vì nuôi giận như thế chỉ dẫn đến việc ác.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 12,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.127Z",
      "updatedAt": "2024-07-31T11:29:55.588Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "e488ab04-8d84-455b-9af0-c6e9b6a700c4",
      "number": 9,
      "content": "Phàm kẻ nào làm điều ác ắt sẽ bị diệt mất,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 13,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.130Z",
      "updatedAt": "2024-07-31T11:29:55.597Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "88027609-c86b-4e6f-a7ab-e5c71f0b3023",
      "number": 9,
      "content": "Nhưng ai trông đợi Chúa sẽ hưởng được đất.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 14,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.130Z",
      "updatedAt": "2024-07-31T11:29:55.606Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "096a5d5c-e7e8-4088-a837-2c0d3afba5e8",
      "number": 10,
      "content": "Chỉ trong chốc lát thôi, kẻ ác sẽ không còn nữa;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 15,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.135Z",
      "updatedAt": "2024-07-31T11:29:55.616Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "5a468303-9284-4ddd-9db1-2b7a8a9ad2e7",
      "number": 10,
      "content": "Bạn sẽ tìm kiếm chỗ nó, nhưng nó chẳng còn ở đó nữa.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 16,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.135Z",
      "updatedAt": "2024-07-31T11:29:55.625Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "b93f88e5-4559-4cba-8617-370f504a4232",
      "number": 11,
      "content": "Nhưng người hiền lành sẽ hưởng được đất",
      "order": 0,
      "parNumber": 1,
      "parIndex": 17,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.140Z",
      "updatedAt": "2024-07-31T11:29:55.637Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "43d7aee6-8b54-46d9-b9a7-e12d57e83e10",
      "number": 11,
      "content": "Và được vui thỏa trong bình an thịnh vượng dồi dào.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 18,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.140Z",
      "updatedAt": "2024-07-31T11:29:55.646Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "8c49071c-6c2b-4eae-ae6b-912c0f21e364",
      "number": 12,
      "content": "Kẻ ác lập mưu hại người ngay lành,",
      "order": 0,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.145Z",
      "updatedAt": "2024-07-31T11:29:55.658Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "2997e604-aad4-4f37-989d-e5b9adf363cf",
      "number": 12,
      "content": "Và nghiến răng chống lại người ấy;",
      "order": 1,
      "parNumber": 2,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.145Z",
      "updatedAt": "2024-07-31T11:29:55.667Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "c16073a3-9fa8-4393-beb9-e2d60bf43a5b",
      "number": 13,
      "content": "Nhưng Chúa cười nó,",
      "order": 0,
      "parNumber": 2,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.149Z",
      "updatedAt": "2024-07-31T11:29:55.676Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "b25731dd-bc25-439c-880b-ba3bdb8f713a",
      "number": 13,
      "content": "Vì Ngài thấy ngày tàn của nó đến gần.",
      "order": 1,
      "parNumber": 2,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.149Z",
      "updatedAt": "2024-07-31T11:29:55.685Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "568716e6-badf-4e3c-8cab-182dc0f8fd59",
      "number": 14,
      "content": "Kẻ ác rút gươm và giương cung để đánh hạ người nghèo nàn và khốn khổ,",
      "order": 0,
      "parNumber": 2,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.154Z",
      "updatedAt": "2024-07-31T11:29:55.696Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "43bb5ec7-5018-416c-8d55-f50c54ec29af",
      "number": 14,
      "content": "Và để giết hại người sống ngay lành;",
      "order": 1,
      "parNumber": 2,
      "parIndex": 5,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.154Z",
      "updatedAt": "2024-07-31T11:29:55.705Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "1bf5b2a8-305a-4969-9347-5b5b2751023f",
      "number": 15,
      "content": "Nhưng gươm của nó sẽ đâm vào lòng nó,",
      "order": 0,
      "parNumber": 2,
      "parIndex": 6,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.159Z",
      "updatedAt": "2024-07-31T11:29:55.714Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "158c7afb-3dd5-4aab-bae0-7f5bda496e69",
      "number": 15,
      "content": "Và cung của nó sẽ gãy cụp làm hai.",
      "order": 1,
      "parNumber": 2,
      "parIndex": 7,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.159Z",
      "updatedAt": "2024-07-31T11:29:55.724Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "9ab1728d-ebae-46dc-8af6-1b5b0aceb267",
      "number": 16,
      "content": "Những gì người ngay lành có tuy ít ỏi,",
      "order": 0,
      "parNumber": 3,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.164Z",
      "updatedAt": "2024-07-31T11:29:55.739Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "f063db9d-bb56-43bb-9553-4583245ff3af",
      "number": 16,
      "content": "Nhưng tốt hơn của cải nhiều của lắm kẻ gian tà.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.164Z",
      "updatedAt": "2024-07-31T11:29:55.749Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "c3e0d17d-b95f-4479-ba87-0ee113de8ef3",
      "number": 17,
      "content": "Vì cánh tay của kẻ ác sẽ bị gãy,",
      "order": 0,
      "parNumber": 3,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.170Z",
      "updatedAt": "2024-07-31T11:29:55.758Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "9eccc980-0efc-4359-a03c-f7c960554b70",
      "number": 17,
      "content": "Nhưng Chúa bảo vệ người ngay lành.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.170Z",
      "updatedAt": "2024-07-31T11:29:55.768Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "70e5251d-96bc-4dc1-a250-8a11df7be33c",
      "number": 18,
      "content": "Chúa biết những ngày của người thanh liêm trong sạch;",
      "order": 0,
      "parNumber": 4,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.175Z",
      "updatedAt": "2024-07-31T11:29:55.779Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "2ae9d417-18dc-4006-b12f-6d88f35b76a8",
      "number": 18,
      "content": "Cơ nghiệp của họ sẽ còn lại đời đời.",
      "order": 1,
      "parNumber": 4,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.175Z",
      "updatedAt": "2024-07-31T11:29:55.788Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "ade024cc-0bf7-4ec8-9033-bc5a192428d1",
      "number": 19,
      "content": "Họ sẽ không bị hổ thẹn trong thời tai họa;",
      "order": 0,
      "parNumber": 4,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.179Z",
      "updatedAt": "2024-07-31T11:29:55.797Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "cb535a05-d1f6-45ff-9d21-5258d80c3820",
      "number": 19,
      "content": "Trong thời đói kém họ vẫn được no nê.",
      "order": 1,
      "parNumber": 4,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.179Z",
      "updatedAt": "2024-07-31T11:29:55.806Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "be5c6c70-ad44-48a9-bf8a-41319afc8ba2",
      "number": 20,
      "content": "Nhưng kẻ ác sẽ bị chết mất;",
      "order": 0,
      "parNumber": 4,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.184Z",
      "updatedAt": "2024-07-31T11:29:55.815Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "7c6a2b04-8b8e-4833-822b-0f3832b6347d",
      "number": 20,
      "content": "Những kẻ thù của Chúa tựa như sắc đẹp của đồng cỏ;",
      "order": 1,
      "parNumber": 4,
      "parIndex": 5,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.184Z",
      "updatedAt": "2024-07-31T11:29:55.825Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "5fae26a4-2d01-4913-b10d-d35e487b5d51",
      "number": 20,
      "content": "Chúng bị tan biến như khói tan đi.",
      "order": 2,
      "parNumber": 4,
      "parIndex": 6,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.184Z",
      "updatedAt": "2024-07-31T11:29:55.836Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "6f678065-a13f-46c4-87d0-19213465ca0f",
      "number": 21,
      "content": "Kẻ ác vay mượn rồi không trả lại,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.189Z",
      "updatedAt": "2024-07-31T11:29:55.848Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "feaf4fe8-7122-4094-9fa2-fa1696ac8acd",
      "number": 21,
      "content": "Còn người ngay lành cứ rộng rãi ban cho.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.189Z",
      "updatedAt": "2024-07-31T11:29:55.857Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "d51045aa-4ded-4580-9b54-bd0b71c2d0de",
      "number": 22,
      "content": "Vì ai được Chúa ban phước sẽ hưởng được đất,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.195Z",
      "updatedAt": "2024-07-31T11:29:55.866Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "32d9226d-37b4-40e2-8bc9-d22420f769f4",
      "number": 22,
      "content": "Nhưng kẻ nào bị Ngài nguyền rủa sẽ bị diệt vong.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.195Z",
      "updatedAt": "2024-07-31T11:29:55.875Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "69493150-2cc9-4f9a-9b26-e8c65aa75840",
      "number": 23,
      "content": "Chúa làm cho vững các bước của người tốt,",
      "order": 0,
      "parNumber": 6,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.200Z",
      "updatedAt": "2024-07-31T11:29:55.887Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "514f4bed-3ea3-4b7c-aebd-c5f5f5e7a2f4",
      "number": 23,
      "content": "Vì Ngài ưa thích đường lối của người ấy.",
      "order": 1,
      "parNumber": 6,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.200Z",
      "updatedAt": "2024-07-31T11:29:55.898Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "e901c5c7-3fd1-471d-9154-cc310ab46483",
      "number": 24,
      "content": "Nếu người ấy có vấp, người ấy sẽ không ngã dài,",
      "order": 0,
      "parNumber": 6,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.205Z",
      "updatedAt": "2024-07-31T11:29:55.908Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "02e96273-caf4-426b-99e0-fedfbcffc133",
      "number": 24,
      "content": "Vì Chúa sẽ nắm lấy tay người ấy giữ lại.",
      "order": 1,
      "parNumber": 6,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.205Z",
      "updatedAt": "2024-07-31T11:29:55.918Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "fddddfa0-b459-44e5-8a66-cd154e311c0f",
      "number": 25,
      "content": "Trước tôi trẻ, giờ tôi già,",
      "order": 0,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.210Z",
      "updatedAt": "2024-07-31T11:29:55.930Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "29550315-9d03-4cbb-a207-8c5514c5e857",
      "number": 25,
      "content": "Nhưng tôi chưa thấy người ngay lành nào bị bỏ,",
      "order": 1,
      "parNumber": 7,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.210Z",
      "updatedAt": "2024-07-31T11:29:55.939Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "8ef41025-4f68-49d9-8460-eb563b4c871c",
      "number": 25,
      "content": "Hoặc dòng dõi người ấy phải đi ăn mày.",
      "order": 2,
      "parNumber": 7,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.210Z",
      "updatedAt": "2024-07-31T11:29:55.948Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "b0b9de49-b263-4d5e-9ee4-0deddb2ac064",
      "number": 26,
      "content": "Cả đời người ấy cứ làm ơn và cho mượn;",
      "order": 0,
      "parNumber": 7,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.216Z",
      "updatedAt": "2024-07-31T11:29:55.957Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "32b9ec54-18e7-4bec-91ed-42d129fe6bbf",
      "number": 26,
      "content": "Dòng dõi người ấy trở thành nguồn phước cho nhiều người.",
      "order": 1,
      "parNumber": 7,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.216Z",
      "updatedAt": "2024-07-31T11:29:55.966Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "878ab747-fe82-4e54-b669-80700f3b903b",
      "number": 27,
      "content": "Hãy tránh điều ác và làm điều thiện,",
      "order": 0,
      "parNumber": 8,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.221Z",
      "updatedAt": "2024-07-31T11:29:55.978Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "f21d4b01-959c-4e24-b3a5-4d03b3260268",
      "number": 27,
      "content": "Ðể bạn sẽ ở trong xứ mãi mãi.",
      "order": 1,
      "parNumber": 8,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.221Z",
      "updatedAt": "2024-07-31T11:29:55.986Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "c9701bf8-1fd1-4793-8eb4-e51b5efa20b1",
      "number": 28,
      "content": "Vì Chúa yêu thương người công chính;",
      "order": 0,
      "parNumber": 8,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.226Z",
      "updatedAt": "2024-07-31T11:29:55.995Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "4d7ef600-ca97-4df8-9b30-c855be07dbb6",
      "number": 28,
      "content": "Ngài không bỏ các thánh đồ của Ngài;",
      "order": 1,
      "parNumber": 8,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.226Z",
      "updatedAt": "2024-07-31T11:29:56.004Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "0621c726-dd87-4dc7-a4c9-18db0916749c",
      "number": 28,
      "content": "Họ sẽ được bảo vệ đời đời;",
      "order": 2,
      "parNumber": 8,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.226Z",
      "updatedAt": "2024-07-31T11:29:56.012Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "4e84810c-f446-4ab9-8680-81433d3830e0",
      "number": 28,
      "content": "Nhưng dòng dõi của kẻ ác sẽ bị diệt vong.",
      "order": 3,
      "parNumber": 8,
      "parIndex": 5,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.226Z",
      "updatedAt": "2024-07-31T11:29:56.021Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "c363c16f-b3e7-488c-9a36-5928ff7ce9e6",
      "number": 29,
      "content": "Người ngay lành sẽ hưởng được đất,",
      "order": 0,
      "parNumber": 8,
      "parIndex": 6,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.232Z",
      "updatedAt": "2024-07-31T11:29:56.030Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "6cbfd821-0b46-4c71-a76f-360849cb84d4",
      "number": 29,
      "content": "Và sẽ ở trong đó mãi mãi.",
      "order": 1,
      "parNumber": 8,
      "parIndex": 7,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.232Z",
      "updatedAt": "2024-07-31T11:29:56.039Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "3318abc2-1876-494a-8ee3-7b310819d593",
      "number": 30,
      "content": "Miệng người ngay lành thốt ra sự khôn ngoan;",
      "order": 0,
      "parNumber": 9,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.237Z",
      "updatedAt": "2024-07-31T11:29:56.050Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "89d146df-d73e-412d-9ea1-5604a486db57",
      "number": 30,
      "content": "Lưỡi người ấy nói ra công lý.",
      "order": 1,
      "parNumber": 9,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.237Z",
      "updatedAt": "2024-07-31T11:29:56.059Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "6fb36e13-ac36-45b4-8693-21f2f325dafd",
      "number": 31,
      "content": "Luật pháp Ðức Chúa Trời ở trong lòng người ấy;",
      "order": 0,
      "parNumber": 9,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.242Z",
      "updatedAt": "2024-07-31T11:29:56.068Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "fc97af21-e170-4d27-b3b9-1897e9d354de",
      "number": 31,
      "content": "Các bước chân người ấy sẽ không bị trợt.",
      "order": 1,
      "parNumber": 9,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.242Z",
      "updatedAt": "2024-07-31T11:29:56.076Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "a911b57a-742d-4231-890b-649f08bf83e3",
      "number": 32,
      "content": "Kẻ ác rình rập người ngay lành,",
      "order": 0,
      "parNumber": 10,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.248Z",
      "updatedAt": "2024-07-31T11:29:56.090Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "f4b63edc-6c32-410f-9dec-ea1033a3776e",
      "number": 32,
      "content": "Ðể tìm cơ hội giết hại người ấy,",
      "order": 1,
      "parNumber": 10,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.248Z",
      "updatedAt": "2024-07-31T11:29:56.099Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "4e90e876-2820-4e19-ba33-815e2767add0",
      "number": 33,
      "content": "Nhưng Chúa không phó người ấy vào tay nó;",
      "order": 0,
      "parNumber": 10,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.253Z",
      "updatedAt": "2024-07-31T11:29:56.108Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "aa6ad5df-adee-400b-aa5a-15ff1daf7f4d",
      "number": 33,
      "content": "Ngài không để cho người ấy bị kết án khi bị xét xử.",
      "order": 1,
      "parNumber": 10,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.253Z",
      "updatedAt": "2024-07-31T11:29:56.117Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "9b4e831e-546f-4b22-a784-8663f297d2de",
      "number": 34,
      "content": "Hãy trông cậy Chúa và hãy giữ theo đường lối Ngài;",
      "order": 0,
      "parNumber": 11,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.259Z",
      "updatedAt": "2024-07-31T11:29:56.128Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "f0845427-eaef-4325-b47d-0572ccc96331",
      "number": 34,
      "content": "Ngài sẽ nhấc nâng bạn lên để bạn hưởng được đất;",
      "order": 1,
      "parNumber": 11,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.259Z",
      "updatedAt": "2024-07-31T11:29:56.137Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "96eadcfe-7212-40e9-8542-befe01c9db38",
      "number": 34,
      "content": "Bạn sẽ nhìn thấy rõ khi kẻ ác bị diệt mất.",
      "order": 2,
      "parNumber": 11,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.259Z",
      "updatedAt": "2024-07-31T11:29:56.147Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "c3a0a528-26fd-456d-9e3f-095fdccd6414",
      "number": 35,
      "content": "Tôi đã từng thấy một kẻ gian ác có thế lực và bạo tàn;",
      "order": 0,
      "parNumber": 12,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.265Z",
      "updatedAt": "2024-07-31T11:29:56.158Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "098b817b-5872-464b-afc2-c35067911259",
      "number": 35,
      "content": "Nó vùng vẫy dọc ngang như một cây sum suê trong vùng đất tốt;",
      "order": 1,
      "parNumber": 12,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.265Z",
      "updatedAt": "2024-07-31T11:29:56.168Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "09d1ccac-a778-4d8a-bea1-43a074ba6cce",
      "number": 36,
      "content": "Nhưng nó đã mất sớm, và này, nó chẳng còn nữa;",
      "order": 0,
      "parNumber": 12,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.271Z",
      "updatedAt": "2024-07-31T11:29:56.193Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "b10f30d9-d8d2-481a-a824-3186de3cb264",
      "number": 36,
      "content": "Tôi đã cố tình tìm kiếm nó nhưng chẳng tìm ra.",
      "order": 1,
      "parNumber": 12,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.271Z",
      "updatedAt": "2024-07-31T11:29:56.220Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "8d8505f3-fe09-48e2-84d5-72fa80dd9f77",
      "number": 37,
      "content": "Hãy để ý người liêm khiết và nhìn xem người ngay thật;",
      "order": 0,
      "parNumber": 13,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.275Z",
      "updatedAt": "2024-07-31T11:29:56.257Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "8842bfcf-d636-44fa-afde-947a4603ea42",
      "number": 37,
      "content": "Vì tương lai của người hiếu hòa là bình an thịnh vượng.",
      "order": 1,
      "parNumber": 13,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.275Z",
      "updatedAt": "2024-07-31T11:29:56.283Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "2b5adab8-7d37-4878-83e6-145528dd2259",
      "number": 38,
      "content": "Nhưng những kẻ tội lỗi đều phải bị diệt vong;",
      "order": 0,
      "parNumber": 13,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.278Z",
      "updatedAt": "2024-07-31T11:29:56.307Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "85ce4bf6-1bc2-42e8-abf8-1ae46037b36a",
      "number": 38,
      "content": "Tương lai của những kẻ gian ác là bị tiêu diệt hoàn toàn.",
      "order": 1,
      "parNumber": 13,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.278Z",
      "updatedAt": "2024-07-31T11:29:56.320Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "6b2001f7-8842-4b88-9ffc-2d1505ad1cce",
      "number": 39,
      "content": "Chúa ban ơn cứu rỗi cho người ngay lành;",
      "order": 0,
      "parNumber": 14,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.281Z",
      "updatedAt": "2024-07-31T11:29:56.336Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "49e2b8c8-46da-4bcd-9f37-671e942dd80b",
      "number": 39,
      "content": "Ngài là sức mạnh của người ấy trong khi gặp khó khăn rắc rối.",
      "order": 1,
      "parNumber": 14,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.281Z",
      "updatedAt": "2024-07-31T11:29:56.348Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "e53ea681-9135-473b-ad39-02748577defc",
      "number": 40,
      "content": "Chúa giúp đỡ họ và giải cứu họ;",
      "order": 0,
      "parNumber": 14,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.285Z",
      "updatedAt": "2024-07-31T11:29:56.359Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "265c5be3-18c5-4786-886c-9f14fd65c57a",
      "number": 40,
      "content": "Ngài giải thoát họ và cứu họ khỏi tay kẻ ác,",
      "order": 1,
      "parNumber": 14,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.285Z",
      "updatedAt": "2024-07-31T11:29:56.370Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    },
    {
      "id": "998b62df-7502-4706-aa29-9bb54863e816",
      "number": 40,
      "content": "Bởi vì họ nương náu nơi Ngài.",
      "order": 2,
      "parNumber": 14,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2024-07-15T02:50:59.285Z",
      "updatedAt": "2024-07-31T11:29:56.379Z",
      "chapterId": "25af1f67-fbb8-47bb-98a6-0eb906397f73"
    }
  ],
