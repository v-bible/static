{
  "chapter": {
    "id": "79b24888-c516-4d17-b426-c8c747d40584",
    "number": 37,
    "ref": "https://www.biblegateway.com/passage/?search=Th%C3%A1nh%20Thi%2037&version=BD2011",
    "createdAt": "2024-09-09T04:12:59.886Z",
    "updatedAt": "2024-09-09T04:12:59.886Z",
    "bookId": "0d206502-6aae-452a-9312-2974be7c7aa6"
  },
  "verses": [
    {
      "id": "efffa53e-f4dd-443e-ba8d-97585cacfba9",
      "number": 1,
      "content": "Chớ phiền lòng vì những kẻ làm ác;",
      "order": 0,
      "parNumber": 0,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:03.992Z",
      "updatedAt": "2024-09-09T04:44:03.992Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "3357c4a5-c283-461a-a780-d7d8c2a6e995",
      "number": 1,
      "content": "Cũng đừng ganh tức vì những kẻ làm chuyện gian tà,",
      "order": 1,
      "parNumber": 0,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.001Z",
      "updatedAt": "2024-09-09T04:44:04.001Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "f5db2ad4-1511-4313-a81a-064dcb3e2edd",
      "number": 2,
      "content": "Vì chúng sẽ mau héo khô như cỏ dại,",
      "order": 0,
      "parNumber": 0,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.003Z",
      "updatedAt": "2024-09-09T04:44:04.003Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "a29ac0d2-bada-4cc9-b8b5-e9ae7d55e199",
      "number": 2,
      "content": "Và sẽ chóng úa tàn như rau dại mới vừa xanh.",
      "order": 1,
      "parNumber": 0,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.005Z",
      "updatedAt": "2024-09-09T04:44:04.005Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "1762f689-4b38-45f3-b8ae-d9b6316f4f7d",
      "number": 3,
      "content": "Hãy tin cậy Chúa và làm điều lành;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.007Z",
      "updatedAt": "2024-09-09T04:44:04.007Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "b153bf9c-4e55-456d-abc9-fddef8c02693",
      "number": 3,
      "content": "Khá ở trong xứ và nuôi mình bằng sự thành tín của Ngài.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.009Z",
      "updatedAt": "2024-09-09T04:44:04.009Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "349085ec-385a-4a78-82ce-7f130df50c87",
      "number": 4,
      "content": "Hãy vui thỏa trong Chúa,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.011Z",
      "updatedAt": "2024-09-09T04:44:04.011Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "a504e564-d647-4e1f-aca4-a5d6dcf36237",
      "number": 4,
      "content": "Và Ngài sẽ ban cho bạn những điều lòng bạn ao ước.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.013Z",
      "updatedAt": "2024-09-09T04:44:04.013Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "fb649803-2b27-421b-ab70-b09e80776bb0",
      "number": 5,
      "content": "Hãy phó thác đường lối bạn cho Chúa,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.015Z",
      "updatedAt": "2024-09-09T04:44:04.015Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "18e7aa56-d1ca-43ee-86f4-4d4a0745576a",
      "number": 5,
      "content": "Hãy tin cậy Ngài, Ngài sẽ làm thành điều bạn muốn.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 5,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.018Z",
      "updatedAt": "2024-09-09T04:44:04.018Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "f020bf9d-2a4c-49c5-822e-9ccb77beefe6",
      "number": 6,
      "content": "Ngài sẽ làm cho đức công chính của bạn rạng ngời như ánh sáng,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 6,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.023Z",
      "updatedAt": "2024-09-09T04:44:04.023Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "f17314c4-cc7b-47cf-b7ec-3b2399303373",
      "number": 6,
      "content": "Và sự trong sạch của bạn lộ ra như giữa trưa.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 7,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.028Z",
      "updatedAt": "2024-09-09T04:44:04.028Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "48dc5456-1321-44f0-8ed4-1193e9dbabdd",
      "number": 7,
      "content": "Hãy an tâm trong Chúa và kiên nhẫn chờ đợi Ngài;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 8,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.033Z",
      "updatedAt": "2024-09-09T04:44:04.033Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "1a2a05c0-f170-4466-9b35-ff46a29309e3",
      "number": 7,
      "content": "Ðừng phiền lòng vì người khác được may mắn trong đường lối họ,",
      "order": 1,
      "parNumber": 1,
      "parIndex": 9,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.037Z",
      "updatedAt": "2024-09-09T04:44:04.037Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "fd904c2f-1225-42d8-9389-921c52a69255",
      "number": 7,
      "content": "Hoặc vì họ thực hiện được những mưu ác.",
      "order": 2,
      "parNumber": 1,
      "parIndex": 10,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.042Z",
      "updatedAt": "2024-09-09T04:44:04.042Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "bfae94d3-538d-458d-919e-313272e51fba",
      "number": 8,
      "content": "Hãy ngưng cơn giận và bỏ sự tức giận đi;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 11,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.046Z",
      "updatedAt": "2024-09-09T04:44:04.046Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "788da6af-0e37-4fae-8f44-dacdfd9906ac",
      "number": 8,
      "content": "Ðừng bực bội làm gì, vì nuôi giận như thế chỉ dẫn đến việc ác.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 12,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.051Z",
      "updatedAt": "2024-09-09T04:44:04.051Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "fc0f2fa0-aab9-4667-a2c6-a36e3d0bd135",
      "number": 9,
      "content": "Phàm kẻ nào làm điều ác ắt sẽ bị diệt mất,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 13,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.056Z",
      "updatedAt": "2024-09-09T04:44:04.056Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "36888680-acce-4e79-9810-7524ba9a245e",
      "number": 9,
      "content": "Nhưng ai trông đợi Chúa sẽ hưởng được đất.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 14,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.060Z",
      "updatedAt": "2024-09-09T04:44:04.060Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "4fbcaded-0498-4f25-8f92-606c9ec7df2b",
      "number": 10,
      "content": "Chỉ trong chốc lát thôi, kẻ ác sẽ không còn nữa;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 15,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.065Z",
      "updatedAt": "2024-09-09T04:44:04.065Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "c6d505c3-fb22-41a9-8166-5b9c817a6059",
      "number": 10,
      "content": "Bạn sẽ tìm kiếm chỗ nó, nhưng nó chẳng còn ở đó nữa.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 16,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.070Z",
      "updatedAt": "2024-09-09T04:44:04.070Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "5bb696ef-398c-40bc-9508-8933428d7b54",
      "number": 11,
      "content": "Nhưng người hiền lành sẽ hưởng được đất",
      "order": 0,
      "parNumber": 1,
      "parIndex": 17,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.074Z",
      "updatedAt": "2024-09-09T04:44:04.074Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "7f26cd23-e2be-4560-a9d8-3062baf23412",
      "number": 11,
      "content": "Và được vui thỏa trong bình an thịnh vượng dồi dào.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 18,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.079Z",
      "updatedAt": "2024-09-09T04:44:04.079Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "a5d40ec5-2871-4dae-87c4-8bb2a73c487b",
      "number": 12,
      "content": "Kẻ ác lập mưu hại người ngay lành,",
      "order": 0,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.084Z",
      "updatedAt": "2024-09-09T04:44:04.084Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "a461889c-a702-456b-b300-7bdffb729394",
      "number": 12,
      "content": "Và nghiến răng chống lại người ấy;",
      "order": 1,
      "parNumber": 2,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.089Z",
      "updatedAt": "2024-09-09T04:44:04.089Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "e53b74a6-4c30-40df-9e98-62e9e5eabc65",
      "number": 13,
      "content": "Nhưng Chúa cười nó,",
      "order": 0,
      "parNumber": 2,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.094Z",
      "updatedAt": "2024-09-09T04:44:04.094Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "0f8f0251-aebb-4e79-a085-ba17e6370bf1",
      "number": 13,
      "content": "Vì Ngài thấy ngày tàn của nó đến gần.",
      "order": 1,
      "parNumber": 2,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.100Z",
      "updatedAt": "2024-09-09T04:44:04.100Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "951b74fb-1440-453e-a11f-2ef61632b3df",
      "number": 14,
      "content": "Kẻ ác rút gươm và giương cung để đánh hạ người nghèo nàn và khốn khổ,",
      "order": 0,
      "parNumber": 2,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.105Z",
      "updatedAt": "2024-09-09T04:44:04.105Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "eb09d0fc-8862-42ef-b78b-8d07a8a3e7b5",
      "number": 14,
      "content": "Và để giết hại người sống ngay lành;",
      "order": 1,
      "parNumber": 2,
      "parIndex": 5,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.110Z",
      "updatedAt": "2024-09-09T04:44:04.110Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "909f729a-1fca-4b21-8492-d9f2f5690c0b",
      "number": 15,
      "content": "Nhưng gươm của nó sẽ đâm vào lòng nó,",
      "order": 0,
      "parNumber": 2,
      "parIndex": 6,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.116Z",
      "updatedAt": "2024-09-09T04:44:04.116Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "c6217ce5-a64c-458f-8eb7-48a3731c3711",
      "number": 15,
      "content": "Và cung của nó sẽ gãy cụp làm hai.",
      "order": 1,
      "parNumber": 2,
      "parIndex": 7,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.121Z",
      "updatedAt": "2024-09-09T04:44:04.121Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "103796a9-2a33-46bb-b1b2-c1da6df43ba9",
      "number": 16,
      "content": "Những gì người ngay lành có tuy ít ỏi,",
      "order": 0,
      "parNumber": 3,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.126Z",
      "updatedAt": "2024-09-09T04:44:04.126Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "cda66219-3ad3-4aca-84cc-729d00725ee0",
      "number": 16,
      "content": "Nhưng tốt hơn của cải nhiều của lắm kẻ gian tà.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.132Z",
      "updatedAt": "2024-09-09T04:44:04.132Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "d760abcb-2aa7-460a-a67d-284bfbb51f25",
      "number": 17,
      "content": "Vì cánh tay của kẻ ác sẽ bị gãy,",
      "order": 0,
      "parNumber": 3,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.136Z",
      "updatedAt": "2024-09-09T04:44:04.136Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "cd5ce06d-ca4d-4f02-95b5-184b57db7816",
      "number": 17,
      "content": "Nhưng Chúa bảo vệ người ngay lành.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.142Z",
      "updatedAt": "2024-09-09T04:44:04.142Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "a475e25b-5e29-450d-a2af-af084d1ee666",
      "number": 18,
      "content": "Chúa biết những ngày của người thanh liêm trong sạch;",
      "order": 0,
      "parNumber": 4,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.147Z",
      "updatedAt": "2024-09-09T04:44:04.147Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "93776d96-902e-4f50-9221-0bdcaf5c8abb",
      "number": 18,
      "content": "Cơ nghiệp của họ sẽ còn lại đời đời.",
      "order": 1,
      "parNumber": 4,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.152Z",
      "updatedAt": "2024-09-09T04:44:04.152Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "0fd840ad-7028-4a05-88e6-2da4341b835f",
      "number": 19,
      "content": "Họ sẽ không bị hổ thẹn trong thời tai họa;",
      "order": 0,
      "parNumber": 4,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.157Z",
      "updatedAt": "2024-09-09T04:44:04.157Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "845bd2bb-2af1-463f-84d3-10ad1f9d0de5",
      "number": 19,
      "content": "Trong thời đói kém họ vẫn được no nê.",
      "order": 1,
      "parNumber": 4,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.162Z",
      "updatedAt": "2024-09-09T04:44:04.162Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "e3f13161-5b66-406d-acce-ff6f2c33fde8",
      "number": 20,
      "content": "Nhưng kẻ ác sẽ bị chết mất;",
      "order": 0,
      "parNumber": 4,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.167Z",
      "updatedAt": "2024-09-09T04:44:04.167Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "bbb94560-5cb8-4ae1-b62d-94f5cdc351b6",
      "number": 20,
      "content": "Những kẻ thù của Chúa tựa như sắc đẹp của đồng cỏ;",
      "order": 1,
      "parNumber": 4,
      "parIndex": 5,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.172Z",
      "updatedAt": "2024-09-09T04:44:04.172Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "07da9f10-9494-495b-8fd7-3a3c4138a23a",
      "number": 20,
      "content": "Chúng bị tan biến như khói tan đi.",
      "order": 2,
      "parNumber": 4,
      "parIndex": 6,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.177Z",
      "updatedAt": "2024-09-09T04:44:04.177Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "3abde7b9-0166-4961-b50c-f1437af9ce7a",
      "number": 21,
      "content": "Kẻ ác vay mượn rồi không trả lại,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.182Z",
      "updatedAt": "2024-09-09T04:44:04.182Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "f440d395-8a23-4633-9482-a45a0e45e494",
      "number": 21,
      "content": "Còn người ngay lành cứ rộng rãi ban cho.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.186Z",
      "updatedAt": "2024-09-09T04:44:04.186Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "03453582-45ff-4337-be95-4c31de44644a",
      "number": 22,
      "content": "Vì ai được Chúa ban phước sẽ hưởng được đất,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.191Z",
      "updatedAt": "2024-09-09T04:44:04.191Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "0dbd0ef6-d407-49b1-85f6-7bf04e7923eb",
      "number": 22,
      "content": "Nhưng kẻ nào bị Ngài nguyền rủa sẽ bị diệt vong.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.196Z",
      "updatedAt": "2024-09-09T04:44:04.196Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "d2bd424c-636f-4bcf-a8d2-27e6dd7bd74c",
      "number": 23,
      "content": "Chúa làm cho vững các bước của người tốt,",
      "order": 0,
      "parNumber": 6,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.200Z",
      "updatedAt": "2024-09-09T04:44:04.200Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "505bb0e3-c974-4912-8deb-0d3b06f01f1d",
      "number": 23,
      "content": "Vì Ngài ưa thích đường lối của người ấy.",
      "order": 1,
      "parNumber": 6,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.206Z",
      "updatedAt": "2024-09-09T04:44:04.206Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "92e7bb6d-9ef3-4996-bcdd-7bffe4e61995",
      "number": 24,
      "content": "Nếu người ấy có vấp, người ấy sẽ không ngã dài,",
      "order": 0,
      "parNumber": 6,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.211Z",
      "updatedAt": "2024-09-09T04:44:04.211Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "d10bae63-d4ef-45d2-b53d-2703d57b0fe3",
      "number": 24,
      "content": "Vì Chúa sẽ nắm lấy tay người ấy giữ lại.",
      "order": 1,
      "parNumber": 6,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.216Z",
      "updatedAt": "2024-09-09T04:44:04.216Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "0f20a2d4-4606-4370-bdd4-15983ee6349a",
      "number": 25,
      "content": "Trước tôi trẻ, giờ tôi già,",
      "order": 0,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.220Z",
      "updatedAt": "2024-09-09T04:44:04.220Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "ea434827-28f8-4ae6-856a-fb11aad7688f",
      "number": 25,
      "content": "Nhưng tôi chưa thấy người ngay lành nào bị bỏ,",
      "order": 1,
      "parNumber": 7,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.225Z",
      "updatedAt": "2024-09-09T04:44:04.225Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "0002f813-9d09-4537-b632-70bfd9077efa",
      "number": 25,
      "content": "Hoặc dòng dõi người ấy phải đi ăn mày.",
      "order": 2,
      "parNumber": 7,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.230Z",
      "updatedAt": "2024-09-09T04:44:04.230Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "171e9e1f-9dcb-4a6b-b8e2-51ac67dfe50a",
      "number": 26,
      "content": "Cả đời người ấy cứ làm ơn và cho mượn;",
      "order": 0,
      "parNumber": 7,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.235Z",
      "updatedAt": "2024-09-09T04:44:04.235Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "0502f32e-d8f7-466c-a2f3-3652adee57ba",
      "number": 26,
      "content": "Dòng dõi người ấy trở thành nguồn phước cho nhiều người.",
      "order": 1,
      "parNumber": 7,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.240Z",
      "updatedAt": "2024-09-09T04:44:04.240Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "fab658d1-1b19-4cf5-bb64-34f01507c78e",
      "number": 27,
      "content": "Hãy tránh điều ác và làm điều thiện,",
      "order": 0,
      "parNumber": 8,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.245Z",
      "updatedAt": "2024-09-09T04:44:04.245Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "604f46ca-bbc0-4d0b-92cf-5c902aa42ee2",
      "number": 27,
      "content": "Ðể bạn sẽ ở trong xứ mãi mãi.",
      "order": 1,
      "parNumber": 8,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.249Z",
      "updatedAt": "2024-09-09T04:44:04.249Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "98caac2a-1e38-4b70-aa5c-6f8545b8540e",
      "number": 28,
      "content": "Vì Chúa yêu thương người công chính;",
      "order": 0,
      "parNumber": 8,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.254Z",
      "updatedAt": "2024-09-09T04:44:04.254Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "74733a3c-d04f-4dde-a589-d81511e8476e",
      "number": 28,
      "content": "Ngài không bỏ các thánh đồ của Ngài;",
      "order": 1,
      "parNumber": 8,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.259Z",
      "updatedAt": "2024-09-09T04:44:04.259Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "9bb1161b-677e-4ce3-a77d-920e634e3d03",
      "number": 28,
      "content": "Họ sẽ được bảo vệ đời đời;",
      "order": 2,
      "parNumber": 8,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.264Z",
      "updatedAt": "2024-09-09T04:44:04.264Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "ca61c3b8-351b-4fa9-be03-d39990fff3ba",
      "number": 28,
      "content": "Nhưng dòng dõi của kẻ ác sẽ bị diệt vong.",
      "order": 3,
      "parNumber": 8,
      "parIndex": 5,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.268Z",
      "updatedAt": "2024-09-09T04:44:04.268Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "602eca0d-b569-46b8-89b1-428d915a29f3",
      "number": 29,
      "content": "Người ngay lành sẽ hưởng được đất,",
      "order": 0,
      "parNumber": 8,
      "parIndex": 6,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.274Z",
      "updatedAt": "2024-09-09T04:44:04.274Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "6ce932b3-c5cf-4d1b-8fb3-fe626f6fcfb4",
      "number": 29,
      "content": "Và sẽ ở trong đó mãi mãi.",
      "order": 1,
      "parNumber": 8,
      "parIndex": 7,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.279Z",
      "updatedAt": "2024-09-09T04:44:04.279Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "ad6c357d-c770-4844-8ed5-cf15107df02a",
      "number": 30,
      "content": "Miệng người ngay lành thốt ra sự khôn ngoan;",
      "order": 0,
      "parNumber": 9,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.284Z",
      "updatedAt": "2024-09-09T04:44:04.284Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "acc74881-e39c-4e19-b96e-77aff89b9193",
      "number": 30,
      "content": "Lưỡi người ấy nói ra công lý.",
      "order": 1,
      "parNumber": 9,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.288Z",
      "updatedAt": "2024-09-09T04:44:04.288Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "ce4ef7d6-3932-4492-8ccd-3cb098c3a266",
      "number": 31,
      "content": "Luật pháp Ðức Chúa Trời ở trong lòng người ấy;",
      "order": 0,
      "parNumber": 9,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.293Z",
      "updatedAt": "2024-09-09T04:44:04.293Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "b0dccf24-2a3c-4592-b232-61548e1df9c9",
      "number": 31,
      "content": "Các bước chân người ấy sẽ không bị trợt.",
      "order": 1,
      "parNumber": 9,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.298Z",
      "updatedAt": "2024-09-09T04:44:04.298Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "6ff62d63-47b1-4a89-ad65-512a2595b55a",
      "number": 32,
      "content": "Kẻ ác rình rập người ngay lành,",
      "order": 0,
      "parNumber": 10,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.304Z",
      "updatedAt": "2024-09-09T04:44:04.304Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "dfb1d918-bf5c-4999-b400-e37ab2089653",
      "number": 32,
      "content": "Ðể tìm cơ hội giết hại người ấy,",
      "order": 1,
      "parNumber": 10,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.309Z",
      "updatedAt": "2024-09-09T04:44:04.309Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "c6a6abe4-ed82-46ff-bd5c-1fed21510ad4",
      "number": 33,
      "content": "Nhưng Chúa không phó người ấy vào tay nó;",
      "order": 0,
      "parNumber": 10,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.314Z",
      "updatedAt": "2024-09-09T04:44:04.314Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "0cb918fc-9379-408f-a6a4-36a28018afc6",
      "number": 33,
      "content": "Ngài không để cho người ấy bị kết án khi bị xét xử.",
      "order": 1,
      "parNumber": 10,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.320Z",
      "updatedAt": "2024-09-09T04:44:04.320Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "9570d627-bcbd-4097-ad90-51a659f72ecd",
      "number": 34,
      "content": "Hãy trông cậy Chúa và hãy giữ theo đường lối Ngài;",
      "order": 0,
      "parNumber": 11,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.325Z",
      "updatedAt": "2024-09-09T04:44:04.325Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "d066f614-77e2-4171-9a42-246b0db8f268",
      "number": 34,
      "content": "Ngài sẽ nhấc nâng bạn lên để bạn hưởng được đất;",
      "order": 1,
      "parNumber": 11,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.330Z",
      "updatedAt": "2024-09-09T04:44:04.330Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "ed9b8269-7aed-4595-ac90-e07a3a4fd072",
      "number": 34,
      "content": "Bạn sẽ nhìn thấy rõ khi kẻ ác bị diệt mất.",
      "order": 2,
      "parNumber": 11,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.336Z",
      "updatedAt": "2024-09-09T04:44:04.336Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "7c7e4f47-fd8c-4a25-85d2-7a3ea5433ca4",
      "number": 35,
      "content": "Tôi đã từng thấy một kẻ gian ác có thế lực và bạo tàn;",
      "order": 0,
      "parNumber": 12,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.341Z",
      "updatedAt": "2024-09-09T04:44:04.341Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "041f5cc6-321d-47be-862c-8f32697b123f",
      "number": 35,
      "content": "Nó vùng vẫy dọc ngang như một cây sum suê trong vùng đất tốt;",
      "order": 1,
      "parNumber": 12,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.347Z",
      "updatedAt": "2024-09-09T04:44:04.347Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "7ffa080e-5876-4234-8f46-aec9fea7f2f5",
      "number": 36,
      "content": "Nhưng nó đã mất sớm, và này, nó chẳng còn nữa;",
      "order": 0,
      "parNumber": 12,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.352Z",
      "updatedAt": "2024-09-09T04:44:04.352Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "354fa329-cafe-488d-9bb8-de7701e39942",
      "number": 36,
      "content": "Tôi đã cố tình tìm kiếm nó nhưng chẳng tìm ra.",
      "order": 1,
      "parNumber": 12,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.356Z",
      "updatedAt": "2024-09-09T04:44:04.356Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "d4499b14-fa05-4ba2-944c-a04006b8abee",
      "number": 37,
      "content": "Hãy để ý người liêm khiết và nhìn xem người ngay thật;",
      "order": 0,
      "parNumber": 13,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.362Z",
      "updatedAt": "2024-09-09T04:44:04.362Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "d405f823-2767-44a7-907b-d2ec5e28c22a",
      "number": 37,
      "content": "Vì tương lai của người hiếu hòa là bình an thịnh vượng.",
      "order": 1,
      "parNumber": 13,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.367Z",
      "updatedAt": "2024-09-09T04:44:04.367Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "a987a058-65d7-4df3-ba44-81bac225874c",
      "number": 38,
      "content": "Nhưng những kẻ tội lỗi đều phải bị diệt vong;",
      "order": 0,
      "parNumber": 13,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.372Z",
      "updatedAt": "2024-09-09T04:44:04.372Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "01fa5d2c-d1c0-46ef-baf1-271604c5ecfc",
      "number": 38,
      "content": "Tương lai của những kẻ gian ác là bị tiêu diệt hoàn toàn.",
      "order": 1,
      "parNumber": 13,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.378Z",
      "updatedAt": "2024-09-09T04:44:04.378Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "9d6a934a-c2a6-4b12-a1c7-bfcc99bd8c5e",
      "number": 39,
      "content": "Chúa ban ơn cứu rỗi cho người ngay lành;",
      "order": 0,
      "parNumber": 14,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.383Z",
      "updatedAt": "2024-09-09T04:44:04.383Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "ad74848b-58bf-4cc3-af7c-ed3a1628707e",
      "number": 39,
      "content": "Ngài là sức mạnh của người ấy trong khi gặp khó khăn rắc rối.",
      "order": 1,
      "parNumber": 14,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.388Z",
      "updatedAt": "2024-09-09T04:44:04.388Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "10e651a2-f372-4ab9-842d-fde424f9966e",
      "number": 40,
      "content": "Chúa giúp đỡ họ và giải cứu họ;",
      "order": 0,
      "parNumber": 14,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.393Z",
      "updatedAt": "2024-09-09T04:44:04.393Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "792638a2-d5b4-4430-8b4b-ce44f81420df",
      "number": 40,
      "content": "Ngài giải thoát họ và cứu họ khỏi tay kẻ ác,",
      "order": 1,
      "parNumber": 14,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.398Z",
      "updatedAt": "2024-09-09T04:44:04.398Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    },
    {
      "id": "5e66e748-8d3b-4096-b514-22ed25bd0e12",
      "number": 40,
      "content": "Bởi vì họ nương náu nơi Ngài.",
      "order": 2,
      "parNumber": 14,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2024-09-09T04:44:04.403Z",
      "updatedAt": "2024-09-09T04:44:04.403Z",
      "chapterId": "79b24888-c516-4d17-b426-c8c747d40584"
    }
  ],
