    },
    {
      "id": "bfacbcce-9df1-4590-8d3a-7091e2bbe5fa",
      "content": "Bê-li-an là một tên khác của Sa-tan",
      "position": 23,
      "order": 3,
      "createdAt": "2025-04-22T11:11:03.263Z",
      "updatedAt": "2025-04-22T11:11:03.263Z",
      "verseId": "ebd5fe6a-e6de-4ba3-8199-bf4778cbc414",
      "chapterId": "bb5e74ba-c470-404b-aaad-516c7f992df9"
    },
    {
      "id": "43b7593d-b31f-4f4d-b15f-566b62371534",
