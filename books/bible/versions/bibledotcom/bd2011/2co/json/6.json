    },
    {
      "id": "a1e1d89d-26d1-4884-bdbb-4fee89df1880",
      "content": "Ê-sai 52:11; Êxê 20:34",
      "position": 30,
      "order": 5,
      "createdAt": "2025-04-22T11:11:03.405Z",
      "updatedAt": "2025-04-22T11:11:03.405Z",
      "verseId": "b6edea26-3d10-440f-ae34-56d4eb18fd6a",
      "chapterId": "bb5e74ba-c470-404b-aaad-516c7f992df9"
    },
    {
      "id": "8917f69c-13a9-43fa-8697-941bd239a82c",
      "content": "2Sa 7:8, 14; Ô-sê 1:10; Ê-sai 43:6",
      "position": 25,
      "order": 6,
