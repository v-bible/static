      "position": 35,
      "order": 0,
      "createdAt": "2025-04-24T02:24:30.004Z",
      "updatedAt": "2025-04-24T02:24:30.004Z",
      "verseId": "6d3e5c5f-ff03-4af9-b0cb-bd42ddacb205",
