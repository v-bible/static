{
  "chapter": {
    "id": "7250863a-c70f-447f-88df-2b3b1b12e80a",
    "number": 42,
    "ref": "https://www.bible.com/bible/19/PSA.42.BD2011",
    "createdAt": "2025-04-24T01:29:06.307Z",
    "updatedAt": "2025-04-24T01:29:06.307Z",
    "bookId": "1be24f59-6084-4aae-9ca9-e1e79d1deaa1"
  },
  "verses": [
    {
      "id": "7b1daa24-43a3-4a7b-bf16-532c66c3f6fe",
      "number": 1,
      "content": "Đức Chúa Trời ôi, như con nai thèm khát khe nước thể nào,",
      "order": 0,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.060Z",
      "updatedAt": "2025-04-24T01:53:42.060Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "ce0bb77d-87fe-4c20-9ba6-5a89323e20f5",
      "number": 1,
      "content": "Linh hồn con cũng khát khao Ngài thể ấy.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.087Z",
      "updatedAt": "2025-04-24T01:53:42.087Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "b73bfca8-0480-4ea5-a7c2-f362efee5ab5",
      "number": 2,
      "content": "Linh hồn tôi khát khao Đức Chúa Trời,",
      "order": 0,
      "parNumber": 4,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.097Z",
      "updatedAt": "2025-04-24T01:53:42.097Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "e2056ced-f7ba-468d-a9c7-624ae5021e15",
      "number": 2,
      "content": "Tức Đức Chúa Trời hằng sống;",
      "order": 1,
      "parNumber": 5,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.109Z",
      "updatedAt": "2025-04-24T01:53:42.109Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "36303abc-0fe8-4764-a27a-063fa57ef620",
      "number": 2,
      "content": "Khi nào tôi mới được đến để ra mắt Đức Chúa Trời đây?",
      "order": 2,
      "parNumber": 6,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.120Z",
      "updatedAt": "2025-04-24T01:53:42.120Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "27848ce3-9929-4e8b-97d0-c7bc45790f40",
      "number": 3,
      "content": "Suốt ngày họ cứ hỏi tôi,",
      "order": 0,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.134Z",
      "updatedAt": "2025-04-24T01:53:42.134Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "e9ebc78d-ff46-4cc6-9784-d90bcfd5ec92",
      "number": 3,
      "content": "“Đức Chúa Trời của mi đâu rồi?”",
      "order": 1,
      "parNumber": 8,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.147Z",
      "updatedAt": "2025-04-24T01:53:42.147Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "f1b1ca48-320a-4861-99d4-98835b658a79",
      "number": 3,
      "content": "Nước mắt đã làm thực phẩm cho tôi",
      "order": 2,
      "parNumber": 9,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.164Z",
      "updatedAt": "2025-04-24T01:53:42.164Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "12383eb3-5432-4f73-92e9-cbe70699221b",
      "number": 3,
      "content": "Cả ngày lẫn đêm.",
      "order": 3,
      "parNumber": 10,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.177Z",
      "updatedAt": "2025-04-24T01:53:42.177Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "b8841935-2218-480a-8e08-0af2a6ca3017",
      "number": 4,
      "content": "Mỗi khi tôi nhớ lại những kỷ niệm phước hạnh ngày xưa,",
      "order": 0,
      "parNumber": 11,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.191Z",
      "updatedAt": "2025-04-24T01:53:42.191Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "81c73b7f-0e88-42bd-80f0-15f4b86ba835",
      "number": 4,
      "content": "Lòng tôi dâng lên nỗi buồn vô hạn.",
      "order": 1,
      "parNumber": 12,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.205Z",
      "updatedAt": "2025-04-24T01:53:42.205Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "15c982eb-ae9e-408d-9d95-f154c182c6ae",
      "number": 4,
      "content": "Nhớ trước kia tôi đi theo một đoàn người đông đúc,",
      "order": 2,
      "parNumber": 13,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.218Z",
      "updatedAt": "2025-04-24T01:53:42.218Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "42ec9f95-eed1-4fce-810e-924bbcf9ee0f",
      "number": 4,
      "content": "Cùng họ tiến về nhà Đức Chúa Trời,",
      "order": 3,
      "parNumber": 14,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.237Z",
      "updatedAt": "2025-04-24T01:53:42.237Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "5b7f0717-930f-45d0-88fd-6ac534ed3f5a",
      "number": 4,
      "content": "Cùng cất tiếng reo mừng và dâng những lời cảm tạ,",
      "order": 4,
      "parNumber": 15,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.253Z",
      "updatedAt": "2025-04-24T01:53:42.253Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "1ca59b0e-2594-4547-8531-850314dd4b5f",
      "number": 4,
      "content": "Một đoàn người vui mừng giữ đại lễ thờ phượng.",
      "order": 5,
      "parNumber": 16,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.267Z",
      "updatedAt": "2025-04-24T01:53:42.267Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "63faa93d-a2e4-4967-a9da-c93c0e013d8f",
      "number": 5,
      "content": "Hỡi linh hồn ta, cớ sao ngươi buồn bã?",
      "order": 0,
      "parNumber": 17,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.280Z",
      "updatedAt": "2025-04-24T01:53:42.280Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "bcc470b1-018d-4100-9f4a-85b66cb0aeb9",
      "number": 5,
      "content": "Vì sao ngươi than thở trong ta?",
      "order": 1,
      "parNumber": 18,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.293Z",
      "updatedAt": "2025-04-24T01:53:42.293Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "03fcf998-83ab-4363-931d-551b26d5fbfe",
      "number": 5,
      "content": "Hãy tin cậy Đức Chúa Trời, vì ta sẽ còn ca ngợi Ngài,",
      "order": 2,
      "parNumber": 19,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.307Z",
      "updatedAt": "2025-04-24T01:53:42.307Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "3698aa3b-fdda-4bd6-b345-1344246cd48a",
      "number": 5,
      "content": "Đấng Giải Cứu của ta và Đức Chúa Trời của ta.",
      "order": 3,
      "parNumber": 20,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.321Z",
      "updatedAt": "2025-04-24T01:53:42.321Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "08e9d2e4-61b5-4cac-905c-9addb50ace24",
      "number": 6,
      "content": "Đức Chúa Trời của con ôi,",
      "order": 0,
      "parNumber": 21,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.352Z",
      "updatedAt": "2025-04-24T01:53:42.352Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "45d536f3-5e6d-4255-a1b0-dfeac43d6da3",
      "number": 6,
      "content": "Linh hồn con buồn bã trong con;",
      "order": 1,
      "parNumber": 22,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.366Z",
      "updatedAt": "2025-04-24T01:53:42.366Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "8a7b0b2e-ef82-4651-8488-ec79a4469e5a",
      "number": 6,
      "content": "Từ xứ Giô-đanh, từ các đỉnh Hẹt-môn,",
      "order": 2,
      "parNumber": 23,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.384Z",
      "updatedAt": "2025-04-24T01:53:42.384Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "2c597bf2-133d-4061-bebc-9f5257f9833c",
      "number": 6,
      "content": "Từ Đồi Mi-xa, con nhớ đến Ngài.",
      "order": 3,
      "parNumber": 24,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.401Z",
      "updatedAt": "2025-04-24T01:53:42.401Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "fe479576-20bb-47fa-a384-512678fb65a0",
      "number": 7,
      "content": "Vực gọi vực theo tiếng ầm ầm các thác nước của Ngài;",
      "order": 0,
      "parNumber": 25,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.414Z",
      "updatedAt": "2025-04-24T01:53:42.414Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "66c5145c-520e-42ec-a770-af72d07fec24",
      "number": 7,
      "content": "Những lượn sóng lớn và nhỏ của Ngài đã vùi dập con.",
      "order": 1,
      "parNumber": 26,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.428Z",
      "updatedAt": "2025-04-24T01:53:42.428Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "e52fd1d8-8f02-4398-b57e-18a128f535f2",
      "number": 8,
      "content": "Ban ngày **CHÚA** ban lịnh cho tình thương Ngài ở với tôi;",
      "order": 0,
      "parNumber": 27,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.441Z",
      "updatedAt": "2025-04-24T01:53:42.441Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "6e5ba9e3-8979-4ee3-83ea-fe5227f571bb",
      "number": 8,
      "content": "Còn ban đêm bài ca của Ngài ở với tôi.",
      "order": 1,
      "parNumber": 28,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.455Z",
      "updatedAt": "2025-04-24T01:53:42.455Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "07594d3c-e182-4e11-acd1-746deaf62c99",
      "number": 8,
      "content": "Đó là bài cầu nguyện dâng lên Đức Chúa Trời của đời sống tôi.",
      "order": 2,
      "parNumber": 29,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.469Z",
      "updatedAt": "2025-04-24T01:53:42.469Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "33b31ae4-9b32-4171-a340-52f0e88abd7c",
      "number": 9,
      "content": "Tôi đã thưa với Đức Chúa Trời, vầng đá của tôi,",
      "order": 0,
      "parNumber": 30,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.482Z",
      "updatedAt": "2025-04-24T01:53:42.482Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "bb9a437d-13a9-4387-955b-d91724405056",
      "number": 9,
      "content": "“Sao Ngài đã quên con?",
      "order": 1,
      "parNumber": 31,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.496Z",
      "updatedAt": "2025-04-24T01:53:42.496Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "f45632f6-06b6-43c6-9797-fa8961efef2a",
      "number": 9,
      "content": "Sao con cứ phải than khóc",
      "order": 2,
      "parNumber": 32,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.510Z",
      "updatedAt": "2025-04-24T01:53:42.510Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "a030d297-a3b7-42aa-b2a4-e6263631b3dc",
      "number": 9,
      "content": "Vì bị kẻ thù của con áp bức mãi thế này?",
      "order": 3,
      "parNumber": 33,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.523Z",
      "updatedAt": "2025-04-24T01:53:42.523Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "9d87364d-13e2-494c-b993-84c1a8b1e219",
      "number": 10,
      "content": "Con đau đớn như bị gươm đâm thấu xương",
      "order": 0,
      "parNumber": 34,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.537Z",
      "updatedAt": "2025-04-24T01:53:42.537Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "062d288a-d7a5-48fa-9688-5a9d923f4c55",
      "number": 10,
      "content": "Mỗi khi con bị kẻ thù sỉ nhục;",
      "order": 1,
      "parNumber": 35,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.551Z",
      "updatedAt": "2025-04-24T01:53:42.551Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "1ff84eab-b4ca-4daa-a415-3f6b4a49a236",
      "number": 10,
      "content": "Suốt ngày chúng cứ hỏi con,",
      "order": 2,
      "parNumber": 36,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.565Z",
      "updatedAt": "2025-04-24T01:53:42.565Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "43124289-26f2-4d81-9af1-2073b7e8e3e5",
      "number": 10,
      "content": "‘Đức Chúa Trời của mi đâu rồi?’”",
      "order": 3,
      "parNumber": 37,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.579Z",
      "updatedAt": "2025-04-24T01:53:42.579Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "5a42dbac-aa30-4b4b-88c1-eeb6f5c54501",
      "number": 11,
      "content": "Hỡi linh hồn ta, cớ sao ngươi buồn bã?",
      "order": 0,
      "parNumber": 38,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.593Z",
      "updatedAt": "2025-04-24T01:53:42.593Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "14ef1766-43a2-4576-8d8a-4c7654639f63",
      "number": 11,
      "content": "Vì sao ngươi than thở trong ta?",
      "order": 1,
      "parNumber": 39,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.607Z",
      "updatedAt": "2025-04-24T01:53:42.607Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "269fe71d-8310-44aa-b935-66725a52e4c2",
      "number": 11,
      "content": "Hãy tin cậy Đức Chúa Trời, vì ta sẽ còn ca ngợi Ngài,",
      "order": 2,
      "parNumber": 40,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:53:42.621Z",
      "updatedAt": "2025-04-24T01:53:42.621Z",
      "chapterId": "7250863a-c70f-447f-88df-2b3b1b12e80a"
    },
    {
      "id": "5adc9916-39ec-44d9-8003-97d13b449d31",
      "number": 11,
      "content": "Đấng Giải Cứu của ta và Đức Chúa Trời của ta.",
      "order": 3,
      "parNumber": 41,
