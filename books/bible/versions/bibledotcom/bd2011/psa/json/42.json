{
  "chapter": {
    "id": "28e11e54-5c11-4e07-b96a-a9e70e25bc81",
    "number": 42,
    "ref": "https://www.bible.com/bible/19/PSA.42.BD2011",
    "createdAt": "2025-04-22T10:10:26.053Z",
    "updatedAt": "2025-04-22T10:10:26.053Z",
    "bookId": "287f96f5-4a40-46df-b6a0-89edcd2581a9"
  },
  "verses": [
    {
      "id": "e5df98ae-2115-49ea-bf2d-02e6a2681bf0",
      "number": 1,
      "content": "Đức Chúa Trời ôi, như con nai thèm khát khe nước thể nào,",
      "order": 0,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.575Z",
      "updatedAt": "2025-04-22T10:37:41.575Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "f5eb7a6f-20a0-4253-965a-7f1c1dccdc9e",
      "number": 1,
      "content": "Linh hồn con cũng khát khao Ngài thể ấy.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.639Z",
      "updatedAt": "2025-04-22T10:37:41.639Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "26dd2093-5b81-4130-9379-bc9fbaec9b81",
      "number": 2,
      "content": "Linh hồn tôi khát khao Đức Chúa Trời,",
      "order": 0,
      "parNumber": 4,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.652Z",
      "updatedAt": "2025-04-22T10:37:41.652Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "6c28d930-d356-41c4-91ab-a43492944b93",
      "number": 2,
      "content": "Tức Đức Chúa Trời hằng sống;",
      "order": 1,
      "parNumber": 5,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.665Z",
      "updatedAt": "2025-04-22T10:37:41.665Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "04f4009d-30c8-4432-a15e-395ecf9e4a6b",
      "number": 2,
      "content": "Khi nào tôi mới được đến để ra mắt Đức Chúa Trời đây?",
      "order": 2,
      "parNumber": 6,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.678Z",
      "updatedAt": "2025-04-22T10:37:41.678Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "d16ade7c-1199-4e8f-8b89-86486e07b752",
      "number": 3,
      "content": "Suốt ngày họ cứ hỏi tôi,",
      "order": 0,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.694Z",
      "updatedAt": "2025-04-22T10:37:41.694Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "7694c0da-28fb-47e0-832e-3b272c6f5517",
      "number": 3,
      "content": "“Đức Chúa Trời của mi đâu rồi?”",
      "order": 1,
      "parNumber": 8,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.707Z",
      "updatedAt": "2025-04-22T10:37:41.707Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "001171f6-e476-4558-9007-2af7383d898d",
      "number": 3,
      "content": "Nước mắt đã làm thực phẩm cho tôi",
      "order": 2,
      "parNumber": 9,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.723Z",
      "updatedAt": "2025-04-22T10:37:41.723Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "154a04dd-2f9e-4567-8bad-8bf080f80956",
      "number": 3,
      "content": "Cả ngày lẫn đêm.",
      "order": 3,
      "parNumber": 10,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.736Z",
      "updatedAt": "2025-04-22T10:37:41.736Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "32f6a837-a538-4fa4-876e-64da83b84d44",
      "number": 4,
      "content": "Mỗi khi tôi nhớ lại những kỷ niệm phước hạnh ngày xưa,",
      "order": 0,
      "parNumber": 11,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.749Z",
      "updatedAt": "2025-04-22T10:37:41.749Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "6a7f0ff5-5272-4099-bddd-bb556f9d1af9",
      "number": 4,
      "content": "Lòng tôi dâng lên nỗi buồn vô hạn.",
      "order": 1,
      "parNumber": 12,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.762Z",
      "updatedAt": "2025-04-22T10:37:41.762Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "706e2980-9952-48a9-9406-69e942052c61",
      "number": 4,
      "content": "Nhớ trước kia tôi đi theo một đoàn người đông đúc,",
      "order": 2,
      "parNumber": 13,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.775Z",
      "updatedAt": "2025-04-22T10:37:41.775Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "be7531ec-d4c5-40d5-862d-8c6364e32342",
      "number": 4,
      "content": "Cùng họ tiến về nhà Đức Chúa Trời,",
      "order": 3,
      "parNumber": 14,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.788Z",
      "updatedAt": "2025-04-22T10:37:41.788Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "2e96f36d-798d-4529-8d61-2933ee3aee73",
      "number": 4,
      "content": "Cùng cất tiếng reo mừng và dâng những lời cảm tạ,",
      "order": 4,
      "parNumber": 15,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.803Z",
      "updatedAt": "2025-04-22T10:37:41.803Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "d06b3488-65fb-4eb3-81cb-7d9a0b51a1db",
      "number": 4,
      "content": "Một đoàn người vui mừng giữ đại lễ thờ phượng.",
      "order": 5,
      "parNumber": 16,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.819Z",
      "updatedAt": "2025-04-22T10:37:41.819Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "5bd955df-9bb7-467a-bc03-f73d986311d3",
      "number": 5,
      "content": "Hỡi linh hồn ta, cớ sao ngươi buồn bã?",
      "order": 0,
      "parNumber": 17,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.831Z",
      "updatedAt": "2025-04-22T10:37:41.831Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "c4e77ac2-63d5-4cff-b60d-0f3de253d9c6",
      "number": 11,
      "content": "Hỡi linh hồn ta, cớ sao ngươi buồn bã?",
      "order": 0,
      "parNumber": 17,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:42.099Z",
      "updatedAt": "2025-04-22T10:37:42.099Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "7a65ad6e-c0cb-4096-a43b-a768f5894e67",
      "number": 5,
      "content": "Vì sao ngươi than thở trong ta?",
      "order": 1,
      "parNumber": 18,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.842Z",
      "updatedAt": "2025-04-22T10:37:41.842Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "1c5f0747-e211-49d3-b94c-01e25f762d4f",
      "number": 11,
      "content": "Vì sao ngươi than thở trong ta?",
      "order": 1,
      "parNumber": 18,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:42.110Z",
      "updatedAt": "2025-04-22T10:37:42.110Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "90d576c9-c9d7-472c-a50a-e3eeebda3b83",
      "number": 5,
      "content": "Hãy tin cậy Đức Chúa Trời, vì ta sẽ còn ca ngợi Ngài,",
      "order": 2,
      "parNumber": 19,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.852Z",
      "updatedAt": "2025-04-22T10:37:41.852Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "0a41ee7f-e915-49b9-811e-86368b7e3992",
      "number": 11,
      "content": "Hãy tin cậy Đức Chúa Trời, vì ta sẽ còn ca ngợi Ngài,",
      "order": 2,
      "parNumber": 19,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:42.122Z",
      "updatedAt": "2025-04-22T10:37:42.122Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "fc63271b-ae13-4f26-8315-e2cd6ef6a2bd",
      "number": 5,
      "content": "Đấng Giải Cứu của ta và Đức Chúa Trời của ta.",
      "order": 3,
      "parNumber": 20,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.862Z",
      "updatedAt": "2025-04-22T10:37:41.862Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "cf7d54e0-81ff-4df5-b5cd-0c10c2280cec",
      "number": 11,
      "content": "Đấng Giải Cứu của ta và Đức Chúa Trời của ta.",
      "order": 3,
      "parNumber": 20,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:42.134Z",
      "updatedAt": "2025-04-22T10:37:42.134Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "8046a9f7-983f-4ca1-a97f-fb53bded48f9",
      "number": 6,
      "content": "Đức Chúa Trời của con ôi,",
      "order": 0,
      "parNumber": 21,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.882Z",
      "updatedAt": "2025-04-22T10:37:41.882Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "2f330db3-7379-418a-b1f9-d2226ea47df9",
      "number": 6,
      "content": "Linh hồn con buồn bã trong con;",
      "order": 1,
      "parNumber": 22,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.892Z",
      "updatedAt": "2025-04-22T10:37:41.892Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "3f99ba1d-7209-4075-b7da-64cd8b8e9e6b",
      "number": 6,
      "content": "Từ xứ Giô-đanh, từ các đỉnh Hẹt-môn,",
      "order": 2,
      "parNumber": 23,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.902Z",
      "updatedAt": "2025-04-22T10:37:41.902Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "9ac6b0a4-e291-4307-93e4-e8f48732dbe2",
      "number": 6,
      "content": "Từ Đồi Mi-xa, con nhớ đến Ngài.",
      "order": 3,
      "parNumber": 24,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.913Z",
      "updatedAt": "2025-04-22T10:37:41.913Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "0324b132-a706-4867-a580-f53fb826fe1a",
      "number": 7,
      "content": "Vực gọi vực theo tiếng ầm ầm các thác nước của Ngài;",
      "order": 0,
      "parNumber": 25,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.924Z",
      "updatedAt": "2025-04-22T10:37:41.924Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "1ff2e3d3-6d34-43e8-a26d-1a22422292dc",
      "number": 7,
      "content": "Những lượn sóng lớn và nhỏ của Ngài đã vùi dập con.",
      "order": 1,
      "parNumber": 26,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.936Z",
      "updatedAt": "2025-04-22T10:37:41.936Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "73056ff2-529c-4d9e-b981-64b76ae53a6b",
      "number": 8,
      "content": "Ban ngày **CHÚA** ban lịnh cho tình thương Ngài ở với tôi;",
      "order": 0,
      "parNumber": 27,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.948Z",
      "updatedAt": "2025-04-22T10:37:41.948Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "0273c832-d6f1-48da-867a-fc371f90b86d",
      "number": 8,
      "content": "Còn ban đêm bài ca của Ngài ở với tôi.",
      "order": 1,
      "parNumber": 28,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.961Z",
      "updatedAt": "2025-04-22T10:37:41.961Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "f70e7c1d-c46c-4367-9321-f698dc3d521d",
      "number": 8,
      "content": "Đó là bài cầu nguyện dâng lên Đức Chúa Trời của đời sống tôi.",
      "order": 2,
      "parNumber": 29,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.975Z",
      "updatedAt": "2025-04-22T10:37:41.975Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "0605416b-8f18-4703-8c46-1eb71a3dca15",
      "number": 9,
      "content": "Tôi đã thưa với Đức Chúa Trời, vầng đá của tôi,",
      "order": 0,
      "parNumber": 30,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:41.988Z",
      "updatedAt": "2025-04-22T10:37:41.988Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "7095aed6-7b54-42e1-be3e-1a158ae3b201",
      "number": 9,
      "content": "“Sao Ngài đã quên con?",
      "order": 1,
      "parNumber": 31,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:42.001Z",
      "updatedAt": "2025-04-22T10:37:42.001Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "15a242da-3428-40ab-94a7-150cf4a46c26",
      "number": 9,
      "content": "Sao con cứ phải than khóc",
      "order": 2,
      "parNumber": 32,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:42.014Z",
      "updatedAt": "2025-04-22T10:37:42.014Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "dabeeb97-c513-4281-9152-582a3357b20f",
      "number": 9,
      "content": "Vì bị kẻ thù của con áp bức mãi thế này?",
      "order": 3,
      "parNumber": 33,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:42.027Z",
      "updatedAt": "2025-04-22T10:37:42.027Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "345ee945-45e0-457c-a29f-defc73a5ad19",
      "number": 10,
      "content": "Con đau đớn như bị gươm đâm thấu xương",
      "order": 0,
      "parNumber": 34,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:42.040Z",
      "updatedAt": "2025-04-22T10:37:42.040Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "387f6e57-31d9-45a8-a7d9-0feed6dd037b",
      "number": 10,
      "content": "Mỗi khi con bị kẻ thù sỉ nhục;",
      "order": 1,
      "parNumber": 35,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:42.056Z",
      "updatedAt": "2025-04-22T10:37:42.056Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "43bea604-7f4e-4787-9852-256eae6ad853",
      "number": 10,
      "content": "Suốt ngày chúng cứ hỏi con,",
      "order": 2,
      "parNumber": 36,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:37:42.073Z",
      "updatedAt": "2025-04-22T10:37:42.073Z",
      "chapterId": "28e11e54-5c11-4e07-b96a-a9e70e25bc81"
    },
    {
      "id": "f64d09ad-5612-45b3-99d7-65ea47ed7cc3",
      "number": 10,
