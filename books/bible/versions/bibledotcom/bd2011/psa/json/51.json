    },
    {
      "id": "af1698f1-59b7-4fec-a270-af98110b5366",
      "number": 18,
      "content": "Cầu xin Ngài dựng lại các tường thành của Giê-ru-sa-lem.",
      "order": 1,
      "parNumber": 40,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:54:13.192Z",
      "updatedAt": "2025-04-24T01:54:13.192Z",
      "chapterId": "0d976ea3-f020-449b-8906-2869017996e9"
    },
    {
      "id": "a24894be-d1b2-4611-a321-a07ad81e5d79",
      "number": 19,
      "content": "Bấy giờ Ngài sẽ vui lòng về các của lễ dâng lên để được xưng công chính,",
      "order": 0,
      "parNumber": 41,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:54:13.204Z",
      "updatedAt": "2025-04-24T01:54:13.204Z",
      "chapterId": "0d976ea3-f020-449b-8906-2869017996e9"
    },
    {
      "id": "d99ddedb-f7d5-42b9-a7d4-52debd8b8c9c",
      "number": 19,
      "content": "Tức các của lễ thiêu và các của lễ toàn thiêu;",
      "order": 1,
      "parNumber": 42,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:54:13.218Z",
      "updatedAt": "2025-04-24T01:54:13.218Z",
      "chapterId": "0d976ea3-f020-449b-8906-2869017996e9"
    },
    {
      "id": "d4b1660e-f1b9-4cba-9348-49c74f2387b0",
      "number": 19,
      "content": "Rồi các bò đực tơ sẽ được hiến dâng trên bàn thờ Ngài.",
      "order": 2,
      "parNumber": 43,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T01:54:13.231Z",
      "updatedAt": "2025-04-24T01:54:13.231Z",
      "chapterId": "0d976ea3-f020-449b-8906-2869017996e9"
    }
  ],
