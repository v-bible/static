{
  "chapter": {
    "id": "9d0543cb-4a9d-4678-af4c-9272bc93d021",
    "number": 19,
    "ref": "https://www.bible.com/bible/19/PRO.19.BD2011",
    "createdAt": "2025-04-22T10:10:27.559Z",
    "updatedAt": "2025-04-22T10:10:27.559Z",
    "bookId": "3cb100ae-f29d-45d9-958d-3944bc91671c"
  },
  "verses": [
    {
      "id": "1dd9d15f-c7ad-4385-a7a9-70917a8f14f7",
      "number": 1,
      "content": "Thà nghèo mà sống thanh liêm,",
      "order": 0,
      "parNumber": 0,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:47.692Z",
      "updatedAt": "2025-04-22T10:46:47.692Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "7a220967-3df1-4b1a-90e6-b37da509243e",
      "number": 1,
      "content": "Còn hơn có môi miệng gian xảo và làm một kẻ dại.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:47.709Z",
      "updatedAt": "2025-04-22T10:46:47.709Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "e7db4daa-6e75-40ca-a8d5-db0d0c2cc6ce",
      "number": 2,
      "content": "Nhiệt thành nhưng thiếu tri thức thì không tốt;",
      "order": 0,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:47.719Z",
      "updatedAt": "2025-04-22T10:46:47.719Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "55ac8b71-85e0-4fd5-a860-01a3f0e15753",
      "number": 2,
      "content": "Vội vàng làm nhưng chưa suy nghĩ kỹ chỉ làm hỏng việc mà thôi.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:47.734Z",
      "updatedAt": "2025-04-22T10:46:47.734Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "563a6919-63a1-4043-a7d7-641b1cc33332",
      "number": 3,
      "content": "Kẻ dại làm theo sự dại dột mình và thất bại;",
      "order": 0,
      "parNumber": 4,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:47.756Z",
      "updatedAt": "2025-04-22T10:46:47.756Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "6dce4b3c-7270-492c-8bfb-0ae5adbecfe0",
      "number": 3,
      "content": "Rồi nổi giận trong lòng và oán trách **CHÚA**.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:47.767Z",
      "updatedAt": "2025-04-22T10:46:47.767Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "a5541b3d-4b9e-446a-b591-0bd4913e3fc4",
      "number": 4,
      "content": "Khi giàu sang có lắm người xin kết bạn,",
      "order": 0,
      "parNumber": 6,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:47.779Z",
      "updatedAt": "2025-04-22T10:46:47.779Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "a81cc67b-4a00-4251-ab72-4c85fb8129a1",
      "number": 4,
      "content": "Lúc khó nghèo bạn hữu đều lìa bỏ lánh xa.",
      "order": 1,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:47.792Z",
      "updatedAt": "2025-04-22T10:46:47.792Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "074e93dd-9ebd-4e3b-81fc-c1ddec738ba4",
      "number": 5,
      "content": "Kẻ làm chứng gian ắt phải mang hình phạt;",
      "order": 0,
      "parNumber": 8,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:47.804Z",
      "updatedAt": "2025-04-22T10:46:47.804Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "24656c4f-c0ee-4f98-88d6-b959723e5f74",
      "number": 5,
      "content": "Kẻ nói dối không thoát khỏi bị sửa trị đâu.",
      "order": 1,
      "parNumber": 9,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:47.817Z",
      "updatedAt": "2025-04-22T10:46:47.817Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "63b85234-fac7-49d7-bee7-c650eec5cc5c",
      "number": 6,
      "content": "Người quyền quý tốt bụng sẽ được nhiều người tìm xin ân huệ;",
      "order": 0,
      "parNumber": 10,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:47.834Z",
      "updatedAt": "2025-04-22T10:46:47.834Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "6ae135aa-edbc-48a3-a0ca-82ba9a128b1e",
      "number": 6,
      "content": "Người rộng rãi ban cho ai cũng mong được là bạn của mình.",
      "order": 1,
      "parNumber": 11,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:47.847Z",
      "updatedAt": "2025-04-22T10:46:47.847Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "6a67e10d-599d-4707-8c6e-3e727eba0f1f",
      "number": 7,
      "content": "Người nghèo khó ngay cả bà con ruột thịt còn xa lánh,",
      "order": 0,
      "parNumber": 12,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:47.860Z",
      "updatedAt": "2025-04-22T10:46:47.860Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "c96dfef2-8267-4b25-8cf5-932a5dedc96d",
      "number": 7,
      "content": "Huống chi là bị bạn bè lìa bỏ;",
      "order": 1,
      "parNumber": 13,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:47.873Z",
      "updatedAt": "2025-04-22T10:46:47.873Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "8e809ea3-5aa1-4432-9a38-7cd057804b4b",
      "number": 7,
      "content": "Khi người ấy đuổi theo xin giúp đỡ, họ đều đã cao bay xa chạy.",
      "order": 2,
      "parNumber": 14,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:47.886Z",
      "updatedAt": "2025-04-22T10:46:47.886Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "c64fbbdb-24b7-4103-bfd6-24f4770a89ff",
      "number": 8,
      "content": "Ai tìm kiếm khôn ngoan là yêu mến linh hồn mình;",
      "order": 0,
      "parNumber": 15,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:47.900Z",
      "updatedAt": "2025-04-22T10:46:47.900Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "3ca7602b-0a1b-4f7c-8e6f-c02389a31ccc",
      "number": 8,
      "content": "Ai giữ lấy thông sáng ắt sẽ được thịnh vượng.",
      "order": 1,
      "parNumber": 16,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:47.913Z",
      "updatedAt": "2025-04-22T10:46:47.913Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "ebcd2154-8dd7-4965-a916-3afb03cc689e",
      "number": 9,
      "content": "Kẻ làm chứng gian ắt phải mang hình phạt,",
      "order": 0,
      "parNumber": 17,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:47.926Z",
      "updatedAt": "2025-04-22T10:46:47.926Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "d495b71a-a2c1-49e1-972d-6d6d8c190b65",
      "number": 9,
      "content": "Kẻ nói dối sớm muộn gì cũng sẽ bị tàn mạt tiêu vong.",
      "order": 1,
      "parNumber": 18,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:47.940Z",
      "updatedAt": "2025-04-22T10:46:47.940Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "a6090021-f155-4e4d-adb1-36cdecb13456",
      "number": 10,
      "content": "Vinh hoa phú quý thật không xứng với kẻ rồ dại;",
      "order": 0,
      "parNumber": 19,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:47.957Z",
      "updatedAt": "2025-04-22T10:46:47.957Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "ed405d07-5700-40cb-ae94-fda2f20ee369",
      "number": 10,
      "content": "Tôi tớ mà cai trị người quyền quý lại càng không xứng hợp.",
      "order": 1,
      "parNumber": 20,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:47.970Z",
      "updatedAt": "2025-04-22T10:46:47.970Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "68e178f1-6019-40d2-9b54-8920449d5cdc",
      "number": 11,
      "content": "Người khôn ngoan thường hay chậm giận,",
      "order": 0,
      "parNumber": 21,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:47.983Z",
      "updatedAt": "2025-04-22T10:46:47.983Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "068bcf36-227c-48d0-8792-7099d00b6cca",
      "number": 11,
      "content": "Người ấy lấy làm vinh hạnh bỏ qua lầm lỗi của người ta.",
      "order": 1,
      "parNumber": 22,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:47.996Z",
      "updatedAt": "2025-04-22T10:46:47.996Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "4d4b62fd-749d-4f2a-91c1-e22f630b2a53",
      "number": 12,
      "content": "Vua giận dữ thét la như sư tử rống,",
      "order": 0,
      "parNumber": 23,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.010Z",
      "updatedAt": "2025-04-22T10:46:48.010Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "f030ac59-7138-46cd-8eeb-a33ab686d06d",
      "number": 12,
      "content": "Lúc nguôi ngoai ban ân điển giống sương móc đồng xanh.",
      "order": 1,
      "parNumber": 24,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.023Z",
      "updatedAt": "2025-04-22T10:46:48.023Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "60862fdb-233c-44b9-a119-c9874f55161d",
      "number": 13,
      "content": "Con ngu muội là tai họa cho cha nó;",
      "order": 0,
      "parNumber": 25,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.037Z",
      "updatedAt": "2025-04-22T10:46:48.037Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "61319528-a757-4df2-85e3-bff2ba825a04",
      "number": 13,
      "content": "Vợ hay cãi khác nào nhà bị dột mãi khi trời mưa.",
      "order": 1,
      "parNumber": 26,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.049Z",
      "updatedAt": "2025-04-22T10:46:48.049Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "68e63566-6c1a-4cfc-9c9b-f43ea1ef2c20",
      "number": 14,
      "content": "Nhà cửa và tài sản là cơ nghiệp do cha mẹ để lại;",
      "order": 0,
      "parNumber": 27,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.062Z",
      "updatedAt": "2025-04-22T10:46:48.062Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "282e0850-8e23-4bfc-ab58-3643d634f5de",
      "number": 14,
      "content": "Nhưng người vợ khôn ngoan thì do **CHÚA** ban cho.",
      "order": 1,
      "parNumber": 28,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.075Z",
      "updatedAt": "2025-04-22T10:46:48.075Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "becbf960-55d5-455a-a8db-a4e56fe72c06",
      "number": 15,
      "content": "Kẻ biếng nhác ham mê ngủ nghỉ;",
      "order": 0,
      "parNumber": 29,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.088Z",
      "updatedAt": "2025-04-22T10:46:48.088Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "8cd6bc24-c4dc-4d0a-933e-ce10f25380e0",
      "number": 15,
      "content": "Kẻ biếng lười bị đói khổ triền miên.",
      "order": 1,
      "parNumber": 30,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.101Z",
      "updatedAt": "2025-04-22T10:46:48.101Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "f012dcda-a711-4b25-a3d5-b3e02b2b607c",
      "number": 16,
      "content": "Ai vâng giữ điều răn gìn giữ mạng sống mình;",
      "order": 0,
      "parNumber": 31,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.114Z",
      "updatedAt": "2025-04-22T10:46:48.114Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "b181df20-b4f5-42a9-acf3-093e22b3ff62",
      "number": 16,
      "content": "Kẻ khinh thường đường lối mình ắt sẽ chết chắc.",
      "order": 1,
      "parNumber": 32,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.127Z",
      "updatedAt": "2025-04-22T10:46:48.127Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "9474df70-5601-428d-9688-73b64f01f977",
      "number": 17,
      "content": "Ai thương xót người nghèo là cho **CHÚA** vay mượn;",
      "order": 0,
      "parNumber": 33,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.140Z",
      "updatedAt": "2025-04-22T10:46:48.140Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "5fc5af17-591e-48a4-9e0d-12f3c4c00f2d",
      "number": 17,
      "content": "Ngài sẽ trả lại đầy đủ việc phước thiện người ấy làm.",
      "order": 1,
      "parNumber": 34,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.153Z",
      "updatedAt": "2025-04-22T10:46:48.153Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "6b018d69-580d-4197-a0d7-17865e2c5983",
      "number": 18,
      "content": "Hãy sửa trị con bạn khi còn tia hy vọng;",
      "order": 0,
      "parNumber": 35,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.166Z",
      "updatedAt": "2025-04-22T10:46:48.166Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "adf8161a-8afe-43f2-91c8-1e72b4c02f49",
      "number": 18,
      "content": "Nhưng lòng bạn đừng mong nó bị diệt vong.",
      "order": 1,
      "parNumber": 36,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.180Z",
      "updatedAt": "2025-04-22T10:46:48.180Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "0bb9fc7b-f11d-4077-ab83-bb4b83e3cdff",
      "number": 19,
      "content": "Người giận dữ thái quá ắt chuốc lấy hình phạt;",
      "order": 0,
      "parNumber": 37,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.193Z",
      "updatedAt": "2025-04-22T10:46:48.193Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "14825e44-4657-40c6-ab31-f2a7d715d45d",
      "number": 19,
      "content": "Nếu bạn cứu người ấy lần này, hãy chuẩn bị để cứu lại lần sau.",
      "order": 1,
      "parNumber": 38,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.206Z",
      "updatedAt": "2025-04-22T10:46:48.206Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "2a74669a-6b14-406d-a5e5-229a67352320",
      "number": 20,
      "content": "Hãy lắng nghe lời khuyên bảo và hãy lãnh hội lời giáo huấn,",
      "order": 0,
      "parNumber": 39,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.219Z",
      "updatedAt": "2025-04-22T10:46:48.219Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "025e2bc5-1de4-4a67-8fd5-550158d5bb18",
      "number": 20,
      "content": "Để có được khôn ngoan hầu biết ứng biến trong tương lai.",
      "order": 1,
      "parNumber": 40,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.232Z",
      "updatedAt": "2025-04-22T10:46:48.232Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "0078af2b-3949-4895-b1cd-62a3381f98fa",
      "number": 21,
      "content": "Lòng người ta nghĩ ra nhiều mưu kế,",
      "order": 0,
      "parNumber": 41,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.245Z",
      "updatedAt": "2025-04-22T10:46:48.245Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "fab71abb-90ec-4d7a-9d6f-65c20725020a",
      "number": 21,
      "content": "Nhưng chỉ ý định của **CHÚA** mới đứng vững mà thôi.",
      "order": 1,
      "parNumber": 42,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.258Z",
      "updatedAt": "2025-04-22T10:46:48.258Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "59fd577b-32ab-4344-8e12-010a7863979d",
      "number": 22,
      "content": "Điều mong ước ở một người là lòng trung nghĩa của người ấy;",
      "order": 0,
      "parNumber": 43,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.273Z",
      "updatedAt": "2025-04-22T10:46:48.273Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "0053f9ac-7057-43b4-a85d-221c5b54303b",
      "number": 22,
      "content": "Thà làm một người nghèo hơn làm một kẻ nói dối.",
      "order": 1,
      "parNumber": 44,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.284Z",
      "updatedAt": "2025-04-22T10:46:48.284Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "0c3f229d-2b3e-4ed7-a8ad-520331166c1c",
      "number": 23,
      "content": "Lòng kính sợ **CHÚA** dẫn đến sự sống,",
      "order": 0,
      "parNumber": 45,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.295Z",
      "updatedAt": "2025-04-22T10:46:48.295Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "a13c5988-6b8a-4b99-9b0b-778b3905e841",
      "number": 23,
      "content": "Có nó ở cùng thì sẽ được thỏa mãn",
      "order": 1,
      "parNumber": 46,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.305Z",
      "updatedAt": "2025-04-22T10:46:48.305Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "232d2a05-7724-4623-b45c-f97c0fdbb4a4",
      "number": 23,
      "content": "Và không bị chiếu cố bởi tai ương.",
      "order": 2,
      "parNumber": 47,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.318Z",
      "updatedAt": "2025-04-22T10:46:48.318Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "f5143b35-e966-4ed1-861d-f4dace65aa3c",
      "number": 24,
      "content": "Kẻ biếng nhác chôn tay mình trong dĩa,",
      "order": 0,
      "parNumber": 48,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.332Z",
      "updatedAt": "2025-04-22T10:46:48.332Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "53ff1011-f0ac-47c9-b487-3d2f30c7dc19",
      "number": 24,
      "content": "Không nhấc nổi tay lên đưa thức ăn vào miệng.",
      "order": 1,
      "parNumber": 49,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.353Z",
      "updatedAt": "2025-04-22T10:46:48.353Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "0949069c-bce0-419d-be1e-225968cc81d8",
      "number": 25,
      "content": "Đánh kẻ nhạo báng, kẻ khờ khạo sẽ học được thận trọng;",
      "order": 0,
      "parNumber": 50,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.363Z",
      "updatedAt": "2025-04-22T10:46:48.363Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "6bdd71a8-340b-48ff-8ed3-6e937d71e503",
      "number": 25,
      "content": "Quở người thông sáng, người ấy sẽ lãnh hội thêm tri thức.",
      "order": 1,
      "parNumber": 51,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.373Z",
      "updatedAt": "2025-04-22T10:46:48.373Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "5bfcfa9a-7d37-4028-a9b0-1592fa87c1df",
      "number": 26,
      "content": "Kẻ đánh cha đuổi mẹ là đứa con bất hiếu.",
      "order": 0,
      "parNumber": 52,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.383Z",
      "updatedAt": "2025-04-22T10:46:48.383Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "68902f9b-e641-4e53-abd1-06c584e41a4a",
      "number": 26,
      "content": "Ấy là đứa con gây xấu hổ và sỉ nhục.",
      "order": 1,
      "parNumber": 53,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.396Z",
      "updatedAt": "2025-04-22T10:46:48.396Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "0c03d723-2ab8-4ea7-a280-5d42c1b1b929",
      "number": 27,
      "content": "Con ơi, khi con không muốn nghe những lời chỉ dạy nữa,",
      "order": 0,
      "parNumber": 54,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.407Z",
      "updatedAt": "2025-04-22T10:46:48.407Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "9193d2a2-7f97-47e4-845b-6a9def4db8fb",
      "number": 27,
      "content": "Con sẽ lạc xa những lời của tri thức.",
      "order": 1,
      "parNumber": 55,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.418Z",
      "updatedAt": "2025-04-22T10:46:48.418Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "8ff92c1d-c4d8-4811-b239-2235e8bfc01f",
      "number": 28,
      "content": "Kẻ làm chứng dối nhạo báng công lý;",
      "order": 0,
      "parNumber": 56,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.433Z",
      "updatedAt": "2025-04-22T10:46:48.433Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "4f1b37a7-8aab-4597-89ce-13926ce3a727",
      "number": 28,
      "content": "Miệng kẻ gian tà ăn ngấu nghiến tội lỗi.",
      "order": 1,
      "parNumber": 57,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.449Z",
      "updatedAt": "2025-04-22T10:46:48.449Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "995bccac-5a03-4f09-a566-9c9a8e2a084e",
      "number": 29,
      "content": "Các án phạt dành cho phường nhạo báng,",
      "order": 0,
      "parNumber": 58,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.462Z",
      "updatedAt": "2025-04-22T10:46:48.462Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    },
    {
      "id": "700404d5-0a8d-4817-9e65-68b9bca48012",
      "number": 29,
      "content": "Các đòn roi dành cho lưng bọn điên rồ.",
      "order": 1,
      "parNumber": 59,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:46:48.475Z",
      "updatedAt": "2025-04-22T10:46:48.475Z",
      "chapterId": "9d0543cb-4a9d-4678-af4c-9272bc93d021"
    }
  ],
