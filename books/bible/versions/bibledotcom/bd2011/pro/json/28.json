{
  "chapter": {
    "id": "caf648c5-9b1b-4d9b-8217-d1797933339d",
    "number": 28,
    "ref": "https://www.bible.com/bible/19/PRO.28.BD2011",
    "createdAt": "2025-04-24T01:29:08.077Z",
    "updatedAt": "2025-04-24T01:29:08.077Z",
    "bookId": "22b7d9ee-b450-4fb2-a041-7a410ab966bc"
  },
  "verses": [
    {
      "id": "c8bb3dfa-c1d9-4cef-9b84-caa3aefb2ef7",
      "number": 1,
      "content": "Kẻ gian ác chạy trốn dù không ai rượt đuổi,",
      "order": 0,
      "parNumber": 0,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:23.793Z",
      "updatedAt": "2025-04-24T02:02:23.793Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "a8f2af12-efc8-44a2-8238-f739679f764c",
      "number": 1,
      "content": "Còn người ngay lành bạo dạn như sư tử.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:23.813Z",
      "updatedAt": "2025-04-24T02:02:23.813Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "a4e9eabf-3250-4540-af02-8b275b7dce17",
      "number": 2,
      "content": "Khi đất nước gặp cơn biến loạn lắm người cho mình là lãnh tụ,",
      "order": 0,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:23.823Z",
      "updatedAt": "2025-04-24T02:02:23.823Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "e5ad8a51-7af7-455a-82aa-97c08b959841",
      "number": 2,
      "content": "Nhưng nhờ người lãnh đạo sáng suốt và trí thức",
      "order": 1,
      "parNumber": 3,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:23.839Z",
      "updatedAt": "2025-04-24T02:02:23.839Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "5f7e9ac8-343d-4fcb-8ca5-d8b9cfa2ca83",
      "number": 2,
      "content": "Đất nước được ổn định lâu dài.",
      "order": 2,
      "parNumber": 4,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:23.849Z",
      "updatedAt": "2025-04-24T02:02:23.849Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "ec966c42-fe0e-453e-ab9e-5b171794df82",
      "number": 3,
      "content": "Người nghèo bóc lột người nghèo",
      "order": 0,
      "parNumber": 5,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:23.864Z",
      "updatedAt": "2025-04-24T02:02:23.864Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "9a86be21-f8ae-46f2-83df-0e1576ecc502",
      "number": 3,
      "content": "Khác nào trận mưa to quét sạch mọi hoa màu lương thực.",
      "order": 1,
      "parNumber": 6,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:23.879Z",
      "updatedAt": "2025-04-24T02:02:23.879Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "06e12ff0-af8a-4bb7-94d5-ce1696aa2591",
      "number": 4,
      "content": "Ai gạt bỏ luật pháp là gián tiếp khen ngợi kẻ ác,",
      "order": 0,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:23.895Z",
      "updatedAt": "2025-04-24T02:02:23.895Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "e7c03dad-9b79-4d4f-80b1-6dcae03819e2",
      "number": 4,
      "content": "Nhưng ai tuân giữ luật pháp là chống lại kẻ gian tà.",
      "order": 1,
      "parNumber": 8,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:23.907Z",
      "updatedAt": "2025-04-24T02:02:23.907Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "183fbe65-b4de-49a5-8e6f-7d41af55a620",
      "number": 5,
      "content": "Kẻ gian ác không hiểu tại sao phải duy trì công lý,",
      "order": 0,
      "parNumber": 9,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:23.920Z",
      "updatedAt": "2025-04-24T02:02:23.920Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "4ad64420-41a9-4332-bbd8-bfcb22c13666",
      "number": 5,
      "content": "Còn người tìm kiếm **CHÚA** thì hiểu rõ tận tường.",
      "order": 1,
      "parNumber": 10,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:23.935Z",
      "updatedAt": "2025-04-24T02:02:23.935Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "1a11dd28-cb3c-439e-a17b-7889be4486b3",
      "number": 6,
      "content": "Thà nghèo mà sống thanh liêm trong sạch",
      "order": 0,
      "parNumber": 11,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:23.945Z",
      "updatedAt": "2025-04-24T02:02:23.945Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "3a2bec70-aa28-412b-98f1-39d132395d09",
      "number": 6,
      "content": "Hơn giàu mà theo đường lươn lẹo gian tà.",
      "order": 1,
      "parNumber": 12,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:23.957Z",
      "updatedAt": "2025-04-24T02:02:23.957Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "c34e56fd-ab69-44a8-8c93-be753088b255",
      "number": 7,
      "content": "Đứa con biết tuân giữ luật pháp là đứa con khôn ngoan,",
      "order": 0,
      "parNumber": 13,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:23.971Z",
      "updatedAt": "2025-04-24T02:02:23.971Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "74f09400-90b3-4833-b5c2-d5103ffaffb9",
      "number": 7,
      "content": "Còn đứa kết bạn với phường ăn nhậu làm cha nó xấu hổ.",
      "order": 1,
      "parNumber": 14,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:23.986Z",
      "updatedAt": "2025-04-24T02:02:23.986Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "c93e2756-7fb0-4a47-aa68-24efa1a5f873",
      "number": 8,
      "content": "Kẻ làm giàu nhờ bắt chẹt người ta và tính lãi quá cao",
      "order": 0,
      "parNumber": 15,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:23.996Z",
      "updatedAt": "2025-04-24T02:02:23.996Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "fef1e2b0-2336-4527-bc87-2227f1cd460c",
      "number": 8,
      "content": "Là tích lũy của cải cho người thương xót người nghèo.",
      "order": 1,
      "parNumber": 16,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.015Z",
      "updatedAt": "2025-04-24T02:02:24.015Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "dd85874e-f762-4b1d-8a08-1019d5cf31da",
      "number": 9,
      "content": "Kẻ nào xây tai không nghe theo luật pháp,",
      "order": 0,
      "parNumber": 17,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.031Z",
      "updatedAt": "2025-04-24T02:02:24.031Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "5db5c07c-6d4b-484e-8b84-ea1df21d1b0e",
      "number": 9,
      "content": "Ngay cả lời cầu nguyện của nó cũng là điều gớm ghiếc.",
      "order": 1,
      "parNumber": 18,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.048Z",
      "updatedAt": "2025-04-24T02:02:24.048Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "f84d49a8-e7c9-4057-ac2a-6125a2368991",
      "number": 10,
      "content": "Kẻ nào dẫn đưa người chính trực vào con đường gian tà",
      "order": 0,
      "parNumber": 19,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.069Z",
      "updatedAt": "2025-04-24T02:02:24.069Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "7a14f78b-d16e-46f1-af9a-72528fc24c7e",
      "number": 10,
      "content": "Sẽ sa vào hố nó đã đào,",
      "order": 1,
      "parNumber": 20,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.081Z",
      "updatedAt": "2025-04-24T02:02:24.081Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "1b95bbf4-fd00-44ea-bd10-f64c80d4b4ea",
      "number": 10,
      "content": "Nhưng người trong sạch sẽ được hưởng phước lành.",
      "order": 2,
      "parNumber": 21,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.095Z",
      "updatedAt": "2025-04-24T02:02:24.095Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "1d3e00ac-bb1e-4d56-a7cf-a908a0c1240c",
      "number": 11,
      "content": "Người giàu cứ cho mình là khôn ngoan theo mắt mình;",
      "order": 0,
      "parNumber": 22,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.107Z",
      "updatedAt": "2025-04-24T02:02:24.107Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "b43612df-6270-49b4-8e4c-0e20db0ffdfe",
      "number": 11,
      "content": "Nhưng người nghèo mà thông sáng hiểu rõ thực lực của người giàu ấy.",
      "order": 1,
      "parNumber": 23,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.121Z",
      "updatedAt": "2025-04-24T02:02:24.121Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "eb485018-49b5-4053-a164-43066e0870b7",
      "number": 12,
      "content": "Khi người ngay lành đắc thắng, có vinh hiển lớn lao;",
      "order": 0,
      "parNumber": 24,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.136Z",
      "updatedAt": "2025-04-24T02:02:24.136Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "dce18beb-75e0-4012-9265-3785ebab8834",
      "number": 12,
      "content": "Khi kẻ ác nắm quyền, người ta đều bỏ trốn.",
      "order": 1,
      "parNumber": 25,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.151Z",
      "updatedAt": "2025-04-24T02:02:24.151Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "f45316fa-99eb-424d-b480-b3d0d4b83703",
      "number": 13,
      "content": "Người nào che giấu tội lỗi mình sẽ không được thịnh vượng,",
      "order": 0,
      "parNumber": 26,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.162Z",
      "updatedAt": "2025-04-24T02:02:24.162Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "a600d38a-cb20-44e5-ad86-27fa4e0c7ee4",
      "number": 13,
      "content": "Nhưng ai xưng nó ra và lìa bỏ nó thì sẽ được thương xót.",
      "order": 1,
      "parNumber": 27,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.175Z",
      "updatedAt": "2025-04-24T02:02:24.175Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "dc5535cf-e285-4e6f-bc5a-9f6e41151fce",
      "number": 14,
      "content": "Phước cho người luôn luôn kính sợ Chúa,",
      "order": 0,
      "parNumber": 28,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.186Z",
      "updatedAt": "2025-04-24T02:02:24.186Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "7ea82490-733b-433d-9b58-2c0b2f663f14",
      "number": 14,
      "content": "Nhưng kẻ cứng lòng sẽ lâm vào cảnh tai ương.",
      "order": 1,
      "parNumber": 29,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.205Z",
      "updatedAt": "2025-04-24T02:02:24.205Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "319ee88a-afc9-4dae-a5e2-9514fb2310d8",
      "number": 15,
      "content": "Như sư tử gầm rống hay gấu đuổi theo con mồi thể nào,",
      "order": 0,
      "parNumber": 30,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.219Z",
      "updatedAt": "2025-04-24T02:02:24.219Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "aaaf0156-b1a8-43b3-abf9-07722c74cd28",
      "number": 15,
      "content": "Kẻ cai trị gian ác đối với dân nghèo cũng thể ấy.",
      "order": 1,
      "parNumber": 31,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.236Z",
      "updatedAt": "2025-04-24T02:02:24.236Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "97af3c42-a5dc-46ce-bab8-a931d36cb8c7",
      "number": 16,
      "content": "Kẻ cầm quyền thiếu hiểu biết là kẻ đàn áp bạo tàn;",
      "order": 0,
      "parNumber": 32,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.252Z",
      "updatedAt": "2025-04-24T02:02:24.252Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "75f543a1-0fa6-4437-baf0-b60bed6c233b",
      "number": 16,
      "content": "Nhưng người ghét lợi bất chính sẽ được sống lâu dài.",
      "order": 1,
      "parNumber": 33,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.268Z",
      "updatedAt": "2025-04-24T02:02:24.268Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "a6bb3680-36a6-4cd9-b9db-2ca3a6ed7653",
      "number": 17,
      "content": "Nếu có kẻ mắc tội làm đổ máu người vô tội,",
      "order": 0,
      "parNumber": 34,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.280Z",
      "updatedAt": "2025-04-24T02:02:24.280Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "1150c3c1-6d1f-4348-8940-c9e85ad28b10",
      "number": 17,
      "content": "Hãy để nó phải lẩn trốn cho đến ngày bước vào phần mộ,",
      "order": 1,
      "parNumber": 35,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.296Z",
      "updatedAt": "2025-04-24T02:02:24.296Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "2d22ff70-9521-4647-9fbb-018183e8ab1d",
      "number": 17,
      "content": "Đừng ai che chở nó.",
      "order": 2,
      "parNumber": 36,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.307Z",
      "updatedAt": "2025-04-24T02:02:24.307Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "b7f999cb-2984-44db-9183-2cf331974d14",
      "number": 18,
      "content": "Người sống thanh liêm sẽ được bình an vô sự,",
      "order": 0,
      "parNumber": 37,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.324Z",
      "updatedAt": "2025-04-24T02:02:24.324Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "88639f44-c751-4a4e-9ca8-a1ce3a4b741a",
      "number": 18,
      "content": "Nhưng kẻ theo đường gian tà sẽ bị sụp đổ thình lình.",
      "order": 1,
      "parNumber": 38,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.340Z",
      "updatedAt": "2025-04-24T02:02:24.340Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "a7d04a0f-7749-4fbe-9ff2-ab7c8ba7a686",
      "number": 19,
      "content": "Người cày cấy ruộng mình sẽ có cơm bánh ăn dư dật,",
      "order": 0,
      "parNumber": 39,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.355Z",
      "updatedAt": "2025-04-24T02:02:24.355Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "a86a251b-0749-4831-87e2-197a280922d0",
      "number": 19,
      "content": "Nhưng ai cứ sống lông bông sẽ lãnh đủ đói nghèo.",
      "order": 1,
      "parNumber": 40,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.368Z",
      "updatedAt": "2025-04-24T02:02:24.368Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "dc318baa-da26-47ef-a58d-be999753c6e9",
      "number": 20,
      "content": "Người trung tín sẽ nhận nhiều phước hạnh,",
      "order": 0,
      "parNumber": 41,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.383Z",
      "updatedAt": "2025-04-24T02:02:24.383Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "e738abc7-eca3-4e52-aa4b-6606d86aca4e",
      "number": 20,
      "content": "Nhưng kẻ muốn làm giàu nhanh sẽ không tránh bị phạt đâu.",
      "order": 1,
      "parNumber": 42,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.393Z",
      "updatedAt": "2025-04-24T02:02:24.393Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "f79a60bb-cb0c-49a9-8ebb-b2d3adf71bb9",
      "number": 21,
      "content": "Sự thiên vị là điều không tốt,",
      "order": 0,
      "parNumber": 43,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.403Z",
      "updatedAt": "2025-04-24T02:02:24.403Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "babb9a27-7858-465e-becc-4269885f266d",
      "number": 21,
      "content": "Chỉ vì một miếng bánh mà người ta có thể quyết định sai.",
      "order": 1,
      "parNumber": 44,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.415Z",
      "updatedAt": "2025-04-24T02:02:24.415Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "d9d23bf5-99a8-41a6-b238-371ba11773a0",
      "number": 22,
      "content": "Kẻ có mắt gian tham ham làm giàu gấp rút,",
      "order": 0,
      "parNumber": 45,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.425Z",
      "updatedAt": "2025-04-24T02:02:24.425Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "5f7fc969-9779-4ce5-a3b4-2f65f1a03735",
      "number": 22,
      "content": "Nhưng nó không nghĩ rằng cái nghèo sẽ vụt đến với mình.",
      "order": 1,
      "parNumber": 46,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.435Z",
      "updatedAt": "2025-04-24T02:02:24.435Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "922c99d6-7f4c-4fdd-a257-e2b8ea6457ac",
      "number": 23,
      "content": "Ai quở trách người nào để về sau được biết ơn",
      "order": 0,
      "parNumber": 47,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.445Z",
      "updatedAt": "2025-04-24T02:02:24.445Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "f09d7a30-a941-495d-be32-ba42212cbc65",
      "number": 23,
      "content": "Thật tốt hơn kẻ dùng lưỡi mình để dua nịnh.",
      "order": 1,
      "parNumber": 48,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.454Z",
      "updatedAt": "2025-04-24T02:02:24.454Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "e7cba901-e0e1-41d4-9b56-6da7614f19f6",
      "number": 24,
      "content": "Kẻ nào trộm cắp của cha mẹ mình",
      "order": 0,
      "parNumber": 49,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.464Z",
      "updatedAt": "2025-04-24T02:02:24.464Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "090a1d68-9791-432a-b176-6b9cf003c408",
      "number": 24,
      "content": "Rồi nói, “Đâu có tội lỗi gì!”",
      "order": 1,
      "parNumber": 50,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.474Z",
      "updatedAt": "2025-04-24T02:02:24.474Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "0c2460b8-da81-48b1-bca2-ea1358fd2001",
      "number": 24,
      "content": "Chính là kẻ đồng bọn với phường phá hoại.",
      "order": 2,
      "parNumber": 51,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.484Z",
      "updatedAt": "2025-04-24T02:02:24.484Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "8e0bdddd-f73a-4916-b799-82bfdfb4a95b",
      "number": 25,
      "content": "Kẻ có lòng kiêu ngạo dễ tạo ra xung khắc,",
      "order": 0,
      "parNumber": 52,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.494Z",
      "updatedAt": "2025-04-24T02:02:24.494Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "b3714a32-c00f-4d86-96c0-c3ffd783adc7",
      "number": 25,
      "content": "Nhưng người tin cậy **CHÚA** ắt sẽ được thịnh vượng.",
      "order": 1,
      "parNumber": 53,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.503Z",
      "updatedAt": "2025-04-24T02:02:24.503Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "08dd8f0b-8750-41ec-b631-34518727fb59",
      "number": 26,
      "content": "Kẻ nào chỉ tin cậy vào tài trí mình là người dại dột,",
      "order": 0,
      "parNumber": 54,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.513Z",
      "updatedAt": "2025-04-24T02:02:24.513Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "faacd273-b4f5-4501-a30f-dbc91288256c",
      "number": 26,
      "content": "Nhưng ai bước đi cách khôn ngoan sẽ được thoát hiểm nguy.",
      "order": 1,
      "parNumber": 55,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.523Z",
      "updatedAt": "2025-04-24T02:02:24.523Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "c8c5db8f-7217-4023-9e13-43425f6bd15d",
      "number": 27,
      "content": "Ai giúp đỡ người nghèo sẽ không bị thiếu thốn,",
      "order": 0,
      "parNumber": 56,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.533Z",
      "updatedAt": "2025-04-24T02:02:24.533Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "e3f34beb-e971-4826-90a6-9675d69e582b",
      "number": 27,
      "content": "Nhưng ai quay mắt làm ngơ sẽ bị lắm lời nguyền rủa.",
      "order": 1,
      "parNumber": 57,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.542Z",
      "updatedAt": "2025-04-24T02:02:24.542Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "3e07e5c6-1b98-408f-98cc-6ba753422b11",
      "number": 28,
      "content": "Khi kẻ ác nắm quyền, người ta đều bỏ trốn,",
      "order": 0,
      "parNumber": 58,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.553Z",
      "updatedAt": "2025-04-24T02:02:24.553Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    },
    {
      "id": "fbd4ec0a-2c4e-4f1e-bfad-6ffe1c71c33f",
      "number": 28,
      "content": "Nhưng khi chúng bị diệt vong, người ngay lành sẽ gia tăng.",
      "order": 1,
      "parNumber": 59,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T02:02:24.569Z",
      "updatedAt": "2025-04-24T02:02:24.569Z",
      "chapterId": "caf648c5-9b1b-4d9b-8217-d1797933339d"
    }
  ],
