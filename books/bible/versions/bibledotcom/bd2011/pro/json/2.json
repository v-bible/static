    {
      "id": "25e073ea-d107-4523-9dc6-2beca34988f6",
      "number": 21,
      "content": "Người trọn lành sẽ sống trong đó luôn luôn;",
      "order": 1,
      "parNumber": 41,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:45:51.607Z",
      "updatedAt": "2025-04-22T10:45:51.607Z",
      "chapterId": "ec698c35-081a-4031-8410-bc8324865931"
    },
    {
      "id": "ccb99216-f322-4fe5-9861-1c2e678b6920",
      "number": 22,
      "content": "Nhưng phường gian ác sẽ bị dứt lìa khỏi đất,",
      "order": 0,
      "parNumber": 42,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:45:51.620Z",
      "updatedAt": "2025-04-22T10:45:51.620Z",
      "chapterId": "ec698c35-081a-4031-8410-bc8324865931"
    },
    {
      "id": "b114a399-1796-4d31-b005-01c0666997d7",
      "number": 22,
      "content": "Bọn bất trung sẽ bị nhổ bật gốc khỏi thế gian.",
      "order": 1,
      "parNumber": 43,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:45:51.634Z",
