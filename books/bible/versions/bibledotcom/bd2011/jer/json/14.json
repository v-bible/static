      "chapterId": "2eab5903-9154-4b76-a567-ae6a2f2fbdbd"
    },
    {
      "id": "a3bf9725-662e-47ee-bd55-0996bcc948ef",
      "content": "Lên Án Các Tiên Tri Nói Dối",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-24T02:07:28.754Z",
      "updatedAt": "2025-04-24T02:07:28.754Z",
      "verseId": "2602c9ac-c1c9-4995-9376-7fafa89a0cee",
      "chapterId": "2eab5903-9154-4b76-a567-ae6a2f2fbdbd"
    },
    {
      "id": "4febf766-cae5-45fa-94a9-f54ffeef8128",
      "content": "Giê-rê-mi Cầu Thay Cho Dân",
      "level": 1,
      "order": 0,
