    },
    {
      "id": "a29ef67a-471a-4ba9-adc7-3b08a377c37d",
      "number": 25,
      "content": "Toàn dân sẽ đáp, ‘A-men!’",
      "order": 1,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2025-04-22T10:19:37.315Z",
      "updatedAt": "2025-04-22T10:19:37.315Z",
