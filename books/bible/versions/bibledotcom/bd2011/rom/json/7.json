  "headings": [
    {
      "id": "b14eafc8-6ad9-47ce-9862-cce26f1e3f15",
      "content": "Liên Hệ Giữa Luật Pháp và Tội Lỗi",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-24T02:22:05.051Z",
      "updatedAt": "2025-04-24T02:22:05.051Z",
      "verseId": "672d06f0-1364-4175-b61a-8eaa9ed39941",
      "chapterId": "1f7c0cb8-7ed2-4693-a993-2c96bb2a6ec5"
    },
    {
      "id": "655653c5-0484-4323-ab68-b5baab687c28",
      "content": "Tôi Con Chúa và Luật Pháp",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-24T02:22:04.958Z",
      "updatedAt": "2025-04-24T02:22:04.958Z",
      "verseId": "8bad49ef-9a26-48e5-8b94-463dc8df9a68",
      "chapterId": "1f7c0cb8-7ed2-4693-a993-2c96bb2a6ec5"
