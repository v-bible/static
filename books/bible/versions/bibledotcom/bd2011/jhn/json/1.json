      "chapterId": "67767104-54bc-4bfe-9fe7-9f52f99e9c9b"
    },
    {
      "id": "1d180b5a-ca04-480b-abb6-08091e77c7f2",
      "content": "Lời Chứng của Giăng Báp-tít",
      "order": 0,
      "createdAt": "2024-09-23T06:16:51.962Z",
      "updatedAt": "2024-09-23T06:16:51.962Z",
      "verseId": "e4b1aeb4-5bf6-40fe-981f-810134fddc6c",
      "chapterId": "67767104-54bc-4bfe-9fe7-9f52f99e9c9b"
    },
    {
      "id": "65035167-6781-4cdb-97d1-d1f88704fe7f",
      "content": "Chiên Con của Đức Chúa Trời",
      "order": 0,
      "createdAt": "2024-09-23T06:16:52.041Z",
      "updatedAt": "2024-09-23T06:16:52.041Z",
      "verseId": "0c58b446-6dee-4c78-80df-b87f27d13a1f",
      "chapterId": "67767104-54bc-4bfe-9fe7-9f52f99e9c9b"
