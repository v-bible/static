    }
  ],
  "headings": [
    {
      "id": "45d63556-69e4-4e99-ac5a-7eed5f675e99",
      "content": "Chiếm Thành Giê-ru-sa-lem",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T10:24:05.393Z",
      "updatedAt": "2025-04-22T10:24:05.393Z",
      "verseId": "4f0d7d74-e21c-499d-9527-e3d10f9992d1",
      "chapterId": "0c38fbe3-23e2-4e1a-a196-82a0db528116"
    },
    {
      "id": "bc5c5249-c9c3-4e38-ba8e-6cf7474fda4d",
      "content": "Đa-vít Trị Vì Trên Toàn Thể I-sơ-ra-ên",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T10:24:05.298Z",
      "updatedAt": "2025-04-22T10:24:05.298Z",
      "verseId": "69070e33-d8db-4d69-870d-7651b6311e79",
      "chapterId": "0c38fbe3-23e2-4e1a-a196-82a0db528116"
    },
    {
      "id": "caad7d5a-8324-4cae-8ba5-ead1230af854",
      "content": "Dân Phi-li-tin Bị Bại Trận",
      "level": 1,
