    }
  ],
  "headings": [
    {
      "id": "5d1ccb84-0c79-405b-b1f7-1c0be478d655",
      "content": "Dân Phi-li-tin Bị Bại Trận",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-24T01:41:10.133Z",
      "updatedAt": "2025-04-24T01:41:10.133Z",
      "verseId": "74e97e39-8dbd-49c8-92db-9d1554d4751f",
      "chapterId": "bc98c5e6-ebb7-4901-8936-70c78e9782a6"
    },
    {
      "id": "33632cd6-9d15-4733-bbe9-71bc865caeb4",
      "content": "Đa-vít Trị Vì Trên Toàn Thể I-sơ-ra-ên",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-24T01:41:09.879Z",
      "updatedAt": "2025-04-24T01:41:09.879Z",
      "verseId": "940eb0c7-77c2-42b4-8c93-6bd23d1ca570",
      "chapterId": "bc98c5e6-ebb7-4901-8936-70c78e9782a6"
    },
    {
      "id": "d7416fc9-d3c1-4003-9a3a-90a346e3804d",
      "content": "Chiếm Thành Giê-ru-sa-lem",
