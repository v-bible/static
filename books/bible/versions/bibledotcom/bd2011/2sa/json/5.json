    {
      "id": "a920e50b-2cba-46f5-a92b-fd206d9592fc",
      "content": "Trong 1 Sử 3:5 thì gọi là Si-mê-a",
      "position": 62,
      "order": 1,
      "createdAt": "2025-04-24T01:41:10.078Z",
      "updatedAt": "2025-04-24T01:41:10.078Z",
      "verseId": "ff7f0fb9-c3c7-4f58-accc-ed7ab0714baf",
      "chapterId": "bc98c5e6-ebb7-4901-8936-70c78e9782a6"
    },
    {
      "id": "3ec3c52f-70a6-41af-ad5d-e3ef77906bad",
      "content": "Nghĩa là Ba-anh bị tan nát",
      "position": 199,
      "order": 2,
      "createdAt": "2025-04-24T01:41:10.217Z",
      "updatedAt": "2025-04-24T01:41:10.217Z",
