    },
    {
      "id": "d073047a-60dc-4bc8-97ef-8276ef04e845",
      "number": 20,
      "content": "Chúng sẽ chẳng còn một lối thoát nào đâu;",
      "order": 1,
      "parNumber": 39,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T10:33:20.875Z",
      "updatedAt": "2025-04-22T10:33:20.875Z",
