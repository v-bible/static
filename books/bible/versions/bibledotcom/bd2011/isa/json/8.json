      "chapterId": "27c4d931-635d-4f58-a591-a725366b7a9e"
    },
    {
      "id": "2bb518ef-e189-4d69-ba39-1adc01f79d7d",
      "content": "****",
      "level": 1,
      "order": 1,
      "createdAt": "2025-04-22T10:48:52.269Z",
      "updatedAt": "2025-04-22T10:48:52.269Z",
