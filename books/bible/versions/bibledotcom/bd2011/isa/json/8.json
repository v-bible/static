    },
    {
      "id": "061e81c2-31ee-41d5-b64b-418de974d7b6",
      "content": "A-sy-ri, Dụng Cụ của",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T10:48:52.018Z",
      "updatedAt": "2025-04-22T10:48:52.018Z",
      "verseId": "7e4235e3-90df-4206-890a-afb6b21d3542",
      "chapterId": "27c4d931-635d-4f58-a591-a725366b7a9e"
    },
    {
      "id": "f8a7d0d2-177a-438a-9bc7-e0cd974474a9",
      "content": "Lời Dặn Các Đồ Đệ",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T10:48:52.366Z",
      "updatedAt": "2025-04-22T10:48:52.366Z",
