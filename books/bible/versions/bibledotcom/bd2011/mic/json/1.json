    },
    {
      "id": "c9e646a4-2caf-4a80-8be5-26a32b0fb623",
      "content": "Dân Sa-phia thời xưa nổi tiếng là mặc đẹp",
      "position": 13,
      "order": 1,
      "createdAt": "2025-04-24T02:14:05.270Z",
      "updatedAt": "2025-04-24T02:14:05.270Z",
      "verseId": "36d5233f-9d4a-4858-9524-b30168c4730c",
      "chapterId": "c8f90732-4dec-422f-9b09-ca1e9a2d01c9"
    },
    {
      "id": "12de5622-fd88-4ee6-b44b-2b960c5db225",
      "content": "Xa-a-nan có nghĩa là “ra đi”",
      "position": 14,
      "order": 2,
      "createdAt": "2025-04-24T02:14:05.308Z",
      "updatedAt": "2025-04-24T02:14:05.308Z",
      "verseId": "bf773f39-3a04-458a-bdec-97236e765d41",
      "chapterId": "c8f90732-4dec-422f-9b09-ca1e9a2d01c9"
    },
    {
      "id": "04d22dc8-99f3-47f2-8b70-533d953fe75f",
      "content": "Bết Ê-xên có nghĩa là “nhà chật”",
      "position": 15,
      "order": 3,
      "createdAt": "2025-04-24T02:14:05.338Z",
      "updatedAt": "2025-04-24T02:14:05.338Z",
      "verseId": "265f4c55-9101-482d-9f65-d45bb917d2aa",
      "chapterId": "c8f90732-4dec-422f-9b09-ca1e9a2d01c9"
    },
    {
      "id": "61dc55d4-6bc0-4dce-bf89-f5ed0d55ba3c",
      "content": "nt: của ngươi",
      "position": 21,
      "order": 4,
      "createdAt": "2025-04-24T02:14:05.357Z",
      "updatedAt": "2025-04-24T02:14:05.357Z",
      "verseId": "6df9d9ee-55f7-43b7-b6ce-dc326a29c3fd",
      "chapterId": "c8f90732-4dec-422f-9b09-ca1e9a2d01c9"
    },
    {
      "id": "fa71c195-733b-4862-a128-f83be8faf636",
      "content": "Ách-xíp có nghĩa là “dối gạt”",
      "position": 53,
      "order": 5,
      "createdAt": "2025-04-24T02:14:05.494Z",
      "updatedAt": "2025-04-24T02:14:05.494Z",
      "verseId": "599f5a09-c5c7-4a59-a4a5-1a918f1f88bc",
      "chapterId": "c8f90732-4dec-422f-9b09-ca1e9a2d01c9"
    },
    {
      "id": "66f91698-f337-4b5c-9031-d5c1992ec762",
      "content": "Ma-rê-sa có nghĩa là “kẻ chinh phục”",
      "position": 20,
      "order": 6,
      "createdAt": "2025-04-24T02:14:05.523Z",
      "updatedAt": "2025-04-24T02:14:05.523Z",
      "verseId": "54b5f609-dd20-4966-a8e8-1d562d422cfa",
      "chapterId": "c8f90732-4dec-422f-9b09-ca1e9a2d01c9"
    }
  ],
