    {
      "id": "7337adec-737d-4a22-bc62-eba5c53ee9c3",
      "content": "2. BÀI GIẢNG VỀ SỨ MẠNG TRUYỀN GIÁO",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T00:52:48.571Z",
      "updatedAt": "2025-04-22T00:52:48.571Z",
      "verseId": "086badc7-0cb9-4473-aa58-c6d11fe2d858",
      "chapterId": "b5a5fa0c-2e4c-4969-862d-c3e544bf2642"
    },
    {
      "id": "75c099f7-54c1-45cb-849f-65abaa285dca",
      "content": "Từ bỏ mình để theo Đức Giê-su",
      "level": 2,
      "order": 0,
      "createdAt": "2025-04-22T00:52:49.444Z",
      "updatedAt": "2025-04-22T00:52:49.444Z",
      "verseId": "1c3e3c8a-2fb4-4e09-99e8-7740754e8b16",
      "chapterId": "b5a5fa0c-2e4c-4969-862d-c3e544bf2642"
    },
    {
      "id": "60d4e6f4-6c85-420e-8d31-c8a130108c25",
      "content": "Ai đón tiếp anh em là đón tiếp Thầy",
      "level": 2,
      "order": 0,
      "createdAt": "2025-04-22T00:52:49.514Z",
      "updatedAt": "2025-04-22T00:52:49.514Z",
      "verseId": "2da262c2-5393-4659-ab8a-2969c6755600",
      "chapterId": "b5a5fa0c-2e4c-4969-862d-c3e544bf2642"
    },
    {
      "id": "b8a37792-eff6-4ba9-b0ae-21474cb01161",
      "content": "Đức Giê-su đến để gây chia rẽ",
      "level": 2,
      "order": 0,
      "createdAt": "2025-04-22T00:52:49.362Z",
      "updatedAt": "2025-04-22T00:52:49.362Z",
      "verseId": "92e91676-422b-49c0-ba8e-d8ad38ac2f4f",
      "chapterId": "b5a5fa0c-2e4c-4969-862d-c3e544bf2642"
    },
    {
      "id": "89f7a7e9-f8e8-4327-9fa2-ad0f4310928f",
      "content": "Đức Giê-su tiên báo những cuộc bách hại",
      "level": 2,
      "order": 0,
      "createdAt": "2025-04-22T00:52:49Z",
      "updatedAt": "2025-04-22T00:52:49Z",
      "verseId": "d6d62ba2-4495-456b-8686-dfe695be7181",
      "chapterId": "b5a5fa0c-2e4c-4969-862d-c3e544bf2642"
    },
    {
      "id": "e6549e52-251a-4604-9378-58fd6b7960fc",
      "content": "Hãy nói giữa ban ngày, đừng có sợ",
      "level": 2,
      "order": 0,
      "createdAt": "2025-04-22T00:52:49.191Z",
      "updatedAt": "2025-04-22T00:52:49.191Z",
      "verseId": "e41cbd45-5915-418f-9554-73f195acab9f",
      "chapterId": "b5a5fa0c-2e4c-4969-862d-c3e544bf2642"
    },
    {
      "id": "8155d8be-36b9-47ad-88c5-277a110a0152",
      "content": "Đức Giê-su sai mười hai Tông Đồ đi giảng",
      "level": 2,
      "order": 1,
      "createdAt": "2025-04-22T00:52:48.581Z",
      "updatedAt": "2025-04-22T00:52:48.581Z",
