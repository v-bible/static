  "headings": [
    {
      "id": "b4eec85f-0a9b-4ea3-a045-8edd0f459473",
      "content": "Đức Giê-su chữa nhiều bệnh nhân tại ven biển hồ Ga-li-lê",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T00:54:42.177Z",
      "updatedAt": "2025-04-22T00:54:42.177Z",
      "verseId": "006867a0-62b2-41f8-bcc9-5eb9d9e58aa2",
      "chapterId": "61c29019-46d1-490f-be5c-23f09076d623"
    },
    {
      "id": "fb3e751b-ac22-4efa-b30c-f099f6465fa7",
      "content": "Đức Giê-su chữa con gái người đàn bà Ca-na-an",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T00:54:42.020Z",
      "updatedAt": "2025-04-22T00:54:42.020Z",
      "verseId": "5c241488-ecd2-4ad4-9ab9-210c0c19ec6a",
      "chapterId": "61c29019-46d1-490f-be5c-23f09076d623"
    },
    {
      "id": "912e62e5-25a0-4d2e-ab6b-1369e9ef8f9d",
      "content": "Đức Giê-su hoá bánh ra nhiều lần thứ hai",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T00:54:42.231Z",
      "updatedAt": "2025-04-22T00:54:42.231Z",
      "verseId": "65ceffac-0071-48c0-8c51-1ffb867a9ba5",
      "chapterId": "61c29019-46d1-490f-be5c-23f09076d623"
    },
    {
      "id": "53b33121-84e5-4b94-870d-e668629ea446",
      "content": "Tranh luận về truyền thống",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T00:54:41.644Z",
      "updatedAt": "2025-04-22T00:54:41.644Z",
      "verseId": "ddc3f5ae-693e-47cc-b4b6-70c44011a5d5",
      "chapterId": "61c29019-46d1-490f-be5c-23f09076d623"
    },
    {
      "id": "be0090c6-0cee-429b-b015-fc384f675824",
      "content": "Cái gì làm cho con người ra ô uế ?",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T00:54:41.824Z",
      "updatedAt": "2025-04-22T00:54:41.824Z",
      "verseId": "ec456774-e7ec-4d44-bcd9-e102a88b15d9",
      "chapterId": "61c29019-46d1-490f-be5c-23f09076d623"
    }
  ],
