    },
    {
      "id": "290f9384-450f-4986-8f5a-51c524631871",
      "content": "Khiêm tốn",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T06:05:24.596Z",
      "updatedAt": "2025-04-22T06:05:24.596Z",
      "verseId": "0b06ceb5-c5da-44c6-9167-0c9ffe2ef62c",
      "chapterId": "9a9b3c59-7c3a-46a4-96c9-2f36776df64f"
    },
    {
      "id": "a2a7b298-8061-4778-b9ee-b07b133aada5",
      "content": "Bác ái đối với người nghèo",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T06:05:25.105Z",
      "updatedAt": "2025-04-22T06:05:25.105Z",
