      "chapterId": "9a9b3c59-7c3a-46a4-96c9-2f36776df64f"
    },
    {
      "id": "b603603a-bf33-4f2a-8d6c-b5f123401392",
      "content": "Kiêu ngạo",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T06:05:24.928Z",
      "updatedAt": "2025-04-22T06:05:24.928Z",
