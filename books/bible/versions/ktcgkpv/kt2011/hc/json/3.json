    },
    {
      "id": "bf2cc7c7-b965-48b3-89b5-4c2d75b49fd3",
      "content": "St 27,27 tt; 48,15-20; 49,3-29; Đnl 33,1-25",
      "position": 3,
      "order": 2,
      "createdAt": "2024-09-23T04:34:54.640Z",
      "updatedAt": "2024-09-23T04:34:54.640Z",
      "verseId": "e2dcf753-ade1-4351-8c0d-5d9a3321fa14",
      "chapterId": "531e0314-8f37-449e-90a1-49a8427cb6c1"
