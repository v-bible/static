  "headings": [
    {
      "id": "76dc18a3-a44c-4a01-ab9b-a52f06c0ffad",
      "content": "Người Do-thái cầu nguyện và đã thành công ở gần thành Mô-đin",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T05:10:14.087Z",
      "updatedAt": "2025-04-22T05:10:14.087Z",
      "verseId": "1be3b546-8cd9-41b4-b351-8ab995fdb3eb",
      "chapterId": "982601ad-7fbb-41c3-9165-6486b7f8189d"
    },
    {
      "id": "e9db19b9-414a-488d-a33b-6656d4d3bc77",
      "content": "Vua An-ti-ô-khô V thương thuyết với người Do-thái",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T05:10:14.287Z",
      "updatedAt": "2025-04-22T05:10:14.287Z",
      "verseId": "7e122b6c-5bae-464f-908e-62571dd5b5d7",
      "chapterId": "982601ad-7fbb-41c3-9165-6486b7f8189d"
    },
    {
      "id": "c19da195-a115-4fe0-9228-14b6c1c4790f",
      "content": "Cuộc chinh phạt của vua An-ti-ô-khô và tướng Ly-xi-a. Ông Mê-nê-la-ô bị tử hình.",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T05:10:13.833Z",
      "updatedAt": "2025-04-22T05:10:13.833Z",
      "verseId": "bf5cb3ec-446e-4129-981f-1af259c3ba09",
      "chapterId": "982601ad-7fbb-41c3-9165-6486b7f8189d"
    }
  ],
