  "headings": [
    {
      "id": "d1bb2468-adfc-4023-ab42-51b3d5b017db",
      "content": "II. LỜI TỰA CỦA TÁC GIẢ BẢN TÓM LƯỢC",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T05:06:20.568Z",
      "updatedAt": "2025-04-22T05:06:20.568Z",
      "verseId": "20421a63-cd17-48de-9690-b326ed3c1743",
      "chapterId": "31dc5395-7fd4-41c9-8792-d64c3c5dfa25"
    },
    {
      "id": "553c7601-a9ba-455a-a2b6-f601435b7b53",
      "content": "Thư viện của ông Nơ-khe-mi-a",
      "level": 2,
      "order": 0,
      "createdAt": "2025-04-22T05:06:20.370Z",
      "updatedAt": "2025-04-22T05:06:20.370Z",
      "verseId": "2ab98d46-aa45-487e-8d4d-52ef8865b2cb",
      "chapterId": "31dc5395-7fd4-41c9-8792-d64c3c5dfa25"
    },
    {
      "id": "4fb27355-2bef-41bd-96de-0d1baf40cf1a",
      "content": "Kêu gọi mừng lễ thánh hiến",
      "level": 2,
      "order": 0,
      "createdAt": "2025-04-22T05:06:20.450Z",
      "updatedAt": "2025-04-22T05:06:20.450Z",
      "verseId": "43575852-6d63-4e41-8d0f-543e7a1e2e90",
      "chapterId": "31dc5395-7fd4-41c9-8792-d64c3c5dfa25"
    },
    {
      "id": "017bda3f-3a0b-4865-aec9-e15fcc43b0cd",
      "content": "Ngôn sứ Giê-rê-mi-a cất giấu đồ thờ phượng",
      "level": 2,
      "order": 0,
