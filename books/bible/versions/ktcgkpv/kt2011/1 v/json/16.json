    },
    {
      "id": "b7aee7ad-ee3f-4a87-a915-cc1e21a49ced",
      "content": "X. 15,27+.",
      "position": 150,
      "order": 7,
      "createdAt": "2024-09-23T03:57:48.178Z",
      "updatedAt": "2024-09-23T03:57:48.178Z",
      "verseId": "2859014e-0fb6-40eb-8d12-2fad1fba45d1",
