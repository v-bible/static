  "headings": [
    {
      "id": "fb268cef-c650-4d58-a6ff-830e29414708",
      "content": "Các Kê-ru-bim",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T04:04:54.063Z",
      "updatedAt": "2025-04-22T04:04:54.063Z",
      "verseId": "14e72963-9152-45e3-8a3f-8fa9bb270cc8",
      "chapterId": "bef5f2f2-ca4f-4094-a49d-64c7453153b0"
    },
    {
      "id": "980f9873-d946-431d-a362-569e41374aa7",
      "content": "Trần thiết bên trong – Nơi Cực Thánh",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T04:04:53.888Z",
      "updatedAt": "2025-04-22T04:04:53.888Z",
      "verseId": "52a6a466-f676-435f-bd3c-e691c768d421",
      "chapterId": "bef5f2f2-ca4f-4094-a49d-64c7453153b0"
    },
    {
      "id": "d105bd30-f96e-4309-ba54-7e203df4692d",
      "content": "Cửa – Sân",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T04:04:54.267Z",
      "updatedAt": "2025-04-22T04:04:54.267Z",
      "verseId": "a0618223-800f-452a-a7d2-a32b22e65691",
      "chapterId": "bef5f2f2-ca4f-4094-a49d-64c7453153b0"
    },
    {
      "id": "9d00b86a-c598-41cb-9b75-9cf356debc2d",
