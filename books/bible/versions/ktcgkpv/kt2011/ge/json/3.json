{
  "chapter": {
    "id": "b2dc6662-98ef-4a92-af6d-6e071cbff86e",
    "number": 3,
    "ref": "",
    "createdAt": "2025-04-22T00:48:32.398Z",
    "updatedAt": "2025-04-22T00:48:32.398Z",
