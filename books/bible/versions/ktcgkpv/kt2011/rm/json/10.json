  "headings": [
    {
      "id": "6817039e-d874-4ce5-bea1-d77ffbc61828",
      "content": "Ít-ra-en không nhận biết rằng Thiên Chúa làm cho con người nên công chính",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T01:39:43.203Z",
      "updatedAt": "2025-04-22T01:39:43.203Z",
      "verseId": "2ced514f-20f7-44a1-9727-7c08275f8d39",
      "chapterId": "e1834706-6215-4e61-9a5d-e2730bd19203"
    },
    {
      "id": "c67be886-568f-4513-b385-d6e453b2337a",
      "content": "Ít-ra-en không tự bào chữa",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T01:39:43.558Z",
      "updatedAt": "2025-04-22T01:39:43.558Z",
      "verseId": "98691294-c30c-4b9f-b28a-235b000ec950",
      "chapterId": "e1834706-6215-4e61-9a5d-e2730bd19203"
    },
    {
      "id": "3f18d6da-5c9f-412a-850d-f2ab81e49b3e",
      "content": "Ông Mô-sê báo trước con người được nên công chính nhờ đức tin",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T01:39:43.311Z",
      "updatedAt": "2025-04-22T01:39:43.311Z",
      "verseId": "a53e9349-afff-4ccb-8bb3-2748ca03fce5",
      "chapterId": "e1834706-6215-4e61-9a5d-e2730bd19203"
    }
  ],
