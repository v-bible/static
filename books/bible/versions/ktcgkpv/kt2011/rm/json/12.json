    {
      "id": "51f1ae4c-d581-492e-9f80-050dc933be69",
      "content": "Bác ái đối với mọi người, kể cả thù địch",
      "level": 2,
      "order": 0,
      "createdAt": "2025-04-22T01:40:45.875Z",
      "updatedAt": "2025-04-22T01:40:45.875Z",
      "verseId": "47643544-a495-4a69-aea9-352ffc231215",
      "chapterId": "05ff2ea2-ac17-48da-8204-b058e98c40e6"
    },
    {
      "id": "b59d9406-c44d-46d3-bd59-dbe0b8cbe72e",
      "content": "Sống khiêm nhường và bác ái trong cộng đoàn",
      "level": 2,
      "order": 0,
      "createdAt": "2025-04-22T01:40:45.566Z",
      "updatedAt": "2025-04-22T01:40:45.566Z",
      "verseId": "a0a4a24b-a6da-4345-9ce9-920152ebaa86",
      "chapterId": "05ff2ea2-ac17-48da-8204-b058e98c40e6"
    },
    {
      "id": "e6141d93-91df-4d97-8328-ae23cd0c0424",
      "content": "Cách thức xứng hợp để thờ phượng Thiên Chúa",
      "level": 2,
      "order": 1,
      "createdAt": "2025-04-22T01:40:45.481Z",
      "updatedAt": "2025-04-22T01:40:45.481Z",
