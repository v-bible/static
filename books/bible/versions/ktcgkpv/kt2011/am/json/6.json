  "headings": [
    {
      "id": "d8da4c7c-1ff3-4470-a63d-9851fb811d63",
      "content": "Hình phạt kinh hồn",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T07:16:16.059Z",
      "updatedAt": "2025-04-22T07:16:16.059Z",
      "verseId": "0aae5447-edae-4f31-aa2e-d090ad52657c",
      "chapterId": "53534b94-5d53-4e4f-80db-22d908ceea27"
    },
    {
      "id": "fa23a1cc-d219-44a7-a483-0c98413967ee",
