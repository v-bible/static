    },
    {
      "id": "1c859433-c70f-4a13-966e-f23e291ec9b0",
      "content": "Các cửa",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T07:04:14.407Z",
      "updatedAt": "2025-04-22T07:04:14.407Z",
      "verseId": "b5a0ae91-a9e9-467a-96dd-336b2b94c14f",
      "chapterId": "8ab83694-ee5c-42b6-a042-ac03768edee6"
    },
    {
      "id": "c765f308-4265-4c9e-a351-5b64ed3f302a",
      "content": "Toà nhà phía đông",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T07:04:14.237Z",
      "updatedAt": "2025-04-22T07:04:14.237Z",
