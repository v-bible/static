  "headings": [
    {
      "id": "cfa1451d-faa9-40ad-93f4-588a54b05c24",
      "content": "Ngôi mộ trống. Thiên sứ báo tin.",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T01:06:04.206Z",
      "updatedAt": "2025-04-22T01:06:04.206Z",
      "verseId": "309eecb7-64d1-4b7e-a10c-5435c9d5e12e",
      "chapterId": "32d40288-aa7c-4f6b-89ce-130ba04c4f42"
    },
    {
      "id": "39cbcc05-4dbd-4b2f-a151-8d12388934a5",
      "content": "Đức Giê-su phục sinh hiện ra",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T01:06:04.346Z",
