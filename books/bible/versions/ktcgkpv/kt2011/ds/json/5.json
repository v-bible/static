    },
    {
      "id": "77f5e6a0-a6c1-4452-a603-187e7da5baba",
      "content": "Luật về chuyện ghen tuông",
      "order": 0,
      "createdAt": "2024-09-23T03:45:36.306Z",
      "updatedAt": "2024-09-23T03:45:36.306Z",
      "verseId": "380f46c3-c297-44e0-882c-f67554d8f838",
      "chapterId": "51cb3286-27df-4e6b-a0e8-29e4fa332736"
    },
    {
      "id": "ec9e695a-e5de-472b-9e6d-0b0df04e61e9",
      "content": "Loại trừ những người nhiễm uế",
      "order": 1,
