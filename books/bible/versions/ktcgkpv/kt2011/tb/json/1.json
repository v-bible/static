      "chapterId": "d4a3d0cc-4720-4d60-ba01-fd085575bb13"
    },
    {
      "id": "91ae39a9-4d22-433f-ae41-28ed58edfe5c",
      "content": "Ở Ác-mê-ni, trong miền hồ Van.",
      "position": 99,
      "order": 34,
      "createdAt": "2025-04-22T04:46:35.881Z",
      "updatedAt": "2025-04-22T04:46:35.881Z",
