    },
    {
      "id": "c0600650-a7ab-4c43-8002-b450db8d54f2",
      "content": "English: Christ - French: Chist - Latin: Christus - Origin: &#935;&#961;&#953;&#964;&#959;&#962; - Vietnamese: Ki-tô Mt 1,18",
      "position": 120,
      "order": 26,
      "createdAt": "2025-04-22T01:54:44.444Z",
