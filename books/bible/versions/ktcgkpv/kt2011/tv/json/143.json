    }
  ],
  "references": [
    {
      "id": "3c3883e3-0799-4783-9c24-581f38a0fcdf",
      "content": "Rm 3,20; Gl 2,13",
      "position": 25,
      "order": 0,
      "createdAt": "2025-04-22T05:44:34.772Z",
