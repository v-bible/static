  ],
  "references": [
    {
      "id": "1d8e8282-b6d1-471b-a340-b15b13174856",
      "content": "Tv 56,12; 118,6",
      "position": 4,
      "order": 0,
      "createdAt": "2025-04-22T05:28:45.128Z",
      "updatedAt": "2025-04-22T05:28:45.128Z",
      "verseId": "9d49d3b2-d778-4fad-8d48-0dee37a9182c",
      "chapterId": "63becdb8-32bc-4bbc-8984-63e26938bcf6"
    },
