      "chapterId": "4ab968dd-146c-4338-b04d-4a325f3ab85f"
    },
    {
      "id": "37a99d5e-8016-46d8-9d87-440fdc716a9e",
      "content": "Tv 7,15-17; 57,7; Cn 1,31; 5,22; Kn 11,16",
      "position": 23,
      "order": 2,
