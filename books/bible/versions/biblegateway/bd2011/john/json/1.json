      "chapterId": "b9fd6b37-490b-4c14-acc5-bc23704c0d24"
    },
    {
      "id": "77ef8c7d-8dee-49bb-ac5a-46088643f624",
      "content": "Các Môn Ðồ Ðầu Tiên",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-24T04:41:40.628Z",
      "updatedAt": "2025-04-24T04:41:40.628Z",
      "verseId": "95935b35-f3d9-4905-9b5d-657ba136ae0d",
      "chapterId": "b9fd6b37-490b-4c14-acc5-bc23704c0d24"
    },
    {
      "id": "8621ef70-2550-4ec2-a1e8-a69de3c9959a",
      "content": "Lời Chứng của Giăng Báp-tít",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-24T04:41:40.388Z",
      "updatedAt": "2025-04-24T04:41:40.388Z",
      "verseId": "9703e514-733d-42eb-9d90-5c8d35537600",
      "chapterId": "b9fd6b37-490b-4c14-acc5-bc23704c0d24"
    },
    {
      "id": "9c866b5d-7f41-4a0c-aab1-d67c6a06aaf7",
      "content": "Chiên Con của Ðức Chúa Trời",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-24T04:41:40.560Z",
