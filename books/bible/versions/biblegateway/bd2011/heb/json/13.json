    }
  ],
  "headings": [
    {
      "id": "fff45a36-f003-408e-a3ec-2b6e72a2de2a",
      "content": "Những Lời Khuyên Nhủ Chung",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T09:25:20.805Z",
      "updatedAt": "2025-04-22T09:25:20.805Z",
      "verseId": "8e2712fc-1ec3-47ef-b59f-a74b57115095",
      "chapterId": "707c2415-4065-4a72-9c67-3703cd50cc1a"
    },
    {
      "id": "706bfb29-da23-467f-97db-0218c3aaa614",
      "content": "Khuyên Phải Trung Thành",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T09:25:20.981Z",
      "updatedAt": "2025-04-22T09:25:20.981Z",
      "verseId": "9b839416-7788-4d4e-9023-fbad025716d2",
      "chapterId": "707c2415-4065-4a72-9c67-3703cd50cc1a"
    },
    {
      "id": "f475a4b7-3c49-46ac-97fa-7343876c1969",
      "content": "Khuyên Phải Vâng Phục Những Người Lãnh Ðạo Thuộc Linh",
      "level": 1,
      "order": 0,
