    },
    {
      "id": "3b642bb0-4869-4306-84c2-d3be707adaaa",
      "content": "Chúa Cảnh Cáo về Ðạo Ðức Giả",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-24T04:40:32.499Z",
      "updatedAt": "2025-04-24T04:40:32.499Z",
      "verseId": "4ca5eee6-8b6b-44b9-ae4d-f13662e3aa9b",
      "chapterId": "17538e89-7520-4426-9848-3ba6e11a15bf"
    },
    {
      "id": "c8d22844-1465-44e1-b68a-98004d88fb5a",
      "content": "Xưng Nhận hay Chối Bỏ Chúa",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-24T04:40:32.621Z",
      "updatedAt": "2025-04-24T04:40:32.621Z",
      "verseId": "873839bb-2fe2-4a2b-ab60-66b309dcb8c6",
