      "chapterId": "2e74ff26-bbf4-440c-8e2d-096778d39dad"
    },
    {
      "id": "7d428295-1f35-40cc-a064-ce5f0d0f44a3",
      "content": "Tà Linh Ô Uế Trở Lại",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-24T04:40:26.114Z",
      "updatedAt": "2025-04-24T04:40:26.114Z",
      "verseId": "9e8870a1-2273-45f8-9a66-2f500d9e08ae",
      "chapterId": "2e74ff26-bbf4-440c-8e2d-096778d39dad"
    },
