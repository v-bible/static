    },
    {
      "id": "4325b50b-35aa-43b6-a6b9-82db0e039498",
      "number": 25,
      "content": "Toàn dân sẽ đáp, ‘A-men!’",
      "order": 1,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2025-04-22T07:53:14.873Z",
      "updatedAt": "2025-04-22T07:53:14.873Z",
      "chapterId": "78bb5acf-967d-464a-ab32-eaf5ba644fe6"
    },
    {
      "id": "95bb235b-9af0-4798-9530-48c939626004",
      "number": 26,
      "content": "Toàn dân sẽ đáp, ‘A-men!’",
      "order": 1,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2025-04-22T07:53:14.907Z",
      "updatedAt": "2025-04-22T07:53:14.907Z",
      "chapterId": "78bb5acf-967d-464a-ab32-eaf5ba644fe6"
    },
    {
      "id": "27028858-6a98-4dc1-8535-0d348e05fba0",
      "number": 16,
      "content": "‘Ðáng nguyền rủa thay là kẻ bất hiếu đối cha hoặc mẹ mình.’",
      "order": 0,
      "parNumber": 8,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2025-04-22T07:53:14.569Z",
      "updatedAt": "2025-04-22T07:53:14.569Z",
      "chapterId": "78bb5acf-967d-464a-ab32-eaf5ba644fe6"
    },
    {
      "id": "b4ff20c2-241a-4698-b72a-7dbd77be5980",
      "number": 17,
      "content": "‘Ðáng nguyền rủa thay là kẻ dời mốc ấn định ranh giới của người lân cận mình.’",
      "order": 0,
      "parNumber": 10,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2025-04-22T07:53:14.591Z",
      "updatedAt": "2025-04-22T07:53:14.591Z",
      "chapterId": "78bb5acf-967d-464a-ab32-eaf5ba644fe6"
    },
    {
      "id": "d420a766-06fa-46ca-8cb8-2735a5d4387a",
      "number": 18,
      "content": "‘Ðáng nguyền rủa thay là kẻ dẫn người mù đi lạc đường.’",
      "order": 0,
      "parNumber": 12,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2025-04-22T07:53:14.621Z",
      "updatedAt": "2025-04-22T07:53:14.621Z",
      "chapterId": "78bb5acf-967d-464a-ab32-eaf5ba644fe6"
    },
    {
      "id": "507db8a5-cb4c-46d5-b53f-9ed0e20413f5",
      "number": 19,
      "content": "‘Ðáng nguyền rủa thay là kẻ tước đoạt công lý của kiều dân, cô nhi, và quả phụ.’",
      "order": 0,
      "parNumber": 14,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2025-04-22T07:53:14.652Z",
      "updatedAt": "2025-04-22T07:53:14.652Z",
      "chapterId": "78bb5acf-967d-464a-ab32-eaf5ba644fe6"
    },
    {
      "id": "1291b842-418e-4e61-b0a0-f295f44459d3",
      "number": 20,
      "content": "‘Ðáng nguyền rủa thay là kẻ ăn nằm với vợ lẽ của cha nó, vì nó đã xúc phạm đến người chia sẻ chăn gối của cha nó.’",
      "order": 0,
      "parNumber": 16,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2025-04-22T07:53:14.681Z",
      "updatedAt": "2025-04-22T07:53:14.681Z",
      "chapterId": "78bb5acf-967d-464a-ab32-eaf5ba644fe6"
    },
    {
      "id": "5fe61c5a-9bc6-4e9a-a680-b74a053ce373",
      "number": 21,
      "content": "‘Ðáng nguyền rủa thay là kẻ ăn nằm với một con thú.’",
      "order": 0,
      "parNumber": 18,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2025-04-22T07:53:14.723Z",
      "updatedAt": "2025-04-22T07:53:14.723Z",
      "chapterId": "78bb5acf-967d-464a-ab32-eaf5ba644fe6"
    },
    {
      "id": "43a183ff-a3b9-409a-9c39-293c7126caf2",
      "number": 22,
      "content": "‘Ðáng nguyền rủa thay là kẻ ăn nằm với chị em của nó, bất luận đó là chị em cùng cha khác mẹ hay cùng mẹ khác cha.’",
      "order": 0,
      "parNumber": 20,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2025-04-22T07:53:14.755Z",
      "updatedAt": "2025-04-22T07:53:14.755Z",
      "chapterId": "78bb5acf-967d-464a-ab32-eaf5ba644fe6"
    },
    {
      "id": "28aba17f-ff31-44ae-8730-8e07c47f9a40",
      "number": 23,
      "content": "‘Ðáng nguyền rủa thay là kẻ ăn nằm với mẹ vợ của nó.’",
      "order": 0,
      "parNumber": 22,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2025-04-22T07:53:14.789Z",
      "updatedAt": "2025-04-22T07:53:14.789Z",
      "chapterId": "78bb5acf-967d-464a-ab32-eaf5ba644fe6"
    },
    {
      "id": "264b0096-4072-47bd-b6d1-e7a5c1991bf7",
      "number": 24,
      "content": "‘Ðáng nguyền rủa thay là kẻ bí mật giết hại người lân cận của nó.’",
      "order": 0,
      "parNumber": 24,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2025-04-22T07:53:14.818Z",
      "updatedAt": "2025-04-22T07:53:14.818Z",
      "chapterId": "78bb5acf-967d-464a-ab32-eaf5ba644fe6"
    },
    {
      "id": "89307191-a900-4e9c-a56b-fc11d9cfd902",
      "number": 25,
      "content": "‘Ðáng nguyền rủa thay là kẻ nhận lấy của hối lộ để làm đổ máu người vô tội.’",
      "order": 0,
      "parNumber": 26,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2025-04-22T07:53:14.858Z",
      "updatedAt": "2025-04-22T07:53:14.858Z",
      "chapterId": "78bb5acf-967d-464a-ab32-eaf5ba644fe6"
    },
    {
      "id": "8786dded-280f-4885-b353-f971c4bb8387",
      "number": 26,
      "content": "‘Ðáng nguyền rủa thay là kẻ không gìn giữ những lời của bộ luật nầy mà làm theo.’",
      "order": 0,
      "parNumber": 28,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2025-04-22T07:53:14.887Z",
      "updatedAt": "2025-04-22T07:53:14.887Z",
      "chapterId": "78bb5acf-967d-464a-ab32-eaf5ba644fe6"
    }
  ],
