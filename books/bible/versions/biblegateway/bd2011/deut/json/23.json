  "headings": [
    {
      "id": "70cc7ff5-9774-4e6f-9782-cb602aaee372",
      "content": "Luật về Việc Khai Trừ Khỏi Hội Chúng",
      "order": 0,
      "createdAt": "2024-09-24T01:18:19.673Z",
      "updatedAt": "2024-09-24T01:18:19.673Z",
      "verseId": "a65d9310-c5a2-4153-9d01-748bdbf89c80",
      "chapterId": "eae478da-f283-4e3c-8e5e-cec7cd81a53c"
    },
    {
      "id": "cbacc093-2abc-45f5-8403-620abc685210",
      "content": "Luật về Vệ Sinh Doanh Trại",
      "order": 0,
      "createdAt": "2024-09-24T01:18:19.693Z",
      "updatedAt": "2024-09-24T01:18:19.693Z",
      "verseId": "c46ca041-e7a3-40ea-a32c-ee440af747d6",
      "chapterId": "eae478da-f283-4e3c-8e5e-cec7cd81a53c"
    },
    {
      "id": "85d82168-45dc-4e71-846c-c80c2c991d19",
