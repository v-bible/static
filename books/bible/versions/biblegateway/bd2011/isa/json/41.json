    },
    {
      "id": "de6dd9e3-ed92-464c-b18e-2fd9a9fb9088",
      "content": "Sự Hư Không của Thần Tượng",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-24T04:14:56.830Z",
