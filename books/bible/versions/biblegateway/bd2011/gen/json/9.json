    },
    {
      "id": "579a190d-3404-4ae6-b457-de2c4a83189e",
      "number": 27,
      "content": "Và hãy để Ca-na-an làm tôi cho nó.”",
      "order": 2,
      "parNumber": 8,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2025-04-22T07:38:53.807Z",
      "updatedAt": "2025-04-22T07:38:53.807Z",
      "chapterId": "9669f13e-5fa7-4adf-91b1-0897e8f3fbd0"
    },
    {
      "id": "54b53161-c361-4323-b8f6-eea7f74b050f",
      "number": 28,
      "content": "Sau cơn đại hồng thủy, Nô-ê sống thêm ba trăm năm mươi năm nữa.",
      "order": 0,
      "parNumber": 9,
      "parIndex": 0,
      "isPoetry": false,
      "createdAt": "2025-04-22T07:38:53.821Z",
      "updatedAt": "2025-04-22T07:38:53.821Z",
      "chapterId": "9669f13e-5fa7-4adf-91b1-0897e8f3fbd0"
    },
    {
      "id": "1cbfa186-9586-4f01-ba3d-c9ed074e394e",
      "number": 29,
      "content": "Như vậy Nô-ê hưởng thọ chín trăm năm mươi tuổi, rồi qua đời.",
      "order": 0,
      "parNumber": 9,
      "parIndex": 1,
      "isPoetry": false,
      "createdAt": "2025-04-22T07:38:53.835Z",
      "updatedAt": "2025-04-22T07:38:53.835Z",
