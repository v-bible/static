{
  "chapter": {
    "id": "58814648-99a9-449c-a843-77df2e9be64f",
    "number": 9,
    "ref": "https://www.biblegateway.com/passage/?search=Th%C3%A1nh%20Thi%209&version=BD2011",
    "createdAt": "2025-04-22T07:37:45.598Z",
    "updatedAt": "2025-04-22T07:37:45.598Z",
    "bookId": "7a44f33e-f512-4e76-bac1-934bef7677e1"
  },
  "verses": [
    {
      "id": "541f2a1e-74a8-4916-97ec-bda72431e7fa",
      "number": 1,
      "content": "Con sẽ hết lòng dâng lời cảm tạ Chúa;",
      "order": 0,
      "parNumber": 0,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.126Z",
      "updatedAt": "2025-04-22T08:20:34.126Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "8b1a0c8d-f27b-436c-9b0d-05cacc1c315e",
      "number": 1,
      "content": "Con sẽ kể ra mọi việc kỳ diệu của Ngài.",
      "order": 1,
      "parNumber": 0,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.153Z",
      "updatedAt": "2025-04-22T08:20:34.153Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "08ce1e43-a816-4b59-84ea-cb8a5cd78154",
      "number": 2,
      "content": "Con sẽ hân hoan và hớn hở trong Ngài;",
      "order": 0,
      "parNumber": 0,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.166Z",
      "updatedAt": "2025-04-22T08:20:34.166Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "e2683596-0b54-48c4-b2ab-cb96ba6b53a7",
      "number": 2,
      "content": "Con sẽ ca tụng danh Ngài, ôi Ðấng Tối Cao.",
      "order": 1,
      "parNumber": 0,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.176Z",
      "updatedAt": "2025-04-22T08:20:34.176Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "43d74067-560a-486b-89ae-b6796d3ea38d",
      "number": 3,
      "content": "Khi những kẻ thù của con quay trở lại,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.197Z",
      "updatedAt": "2025-04-22T08:20:34.197Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "2adffa31-2337-4c43-8a29-22e273d553f2",
      "number": 3,
      "content": "Chúng sẽ ngã xuống và bị diệt vong trước mặt Ngài,",
      "order": 1,
      "parNumber": 1,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.207Z",
      "updatedAt": "2025-04-22T08:20:34.207Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "f03e2e06-b439-49dd-b1c1-437b0d6840dd",
      "number": 4,
      "content": "Vì Ngài binh vực quyền lợi của con và duyên cớ của con;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.218Z",
      "updatedAt": "2025-04-22T08:20:34.218Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "af4f9398-5dbe-444a-a5ad-60649ae3745f",
      "number": 4,
      "content": "Ngài ngự trên ngai và phán xét công minh.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.229Z",
      "updatedAt": "2025-04-22T08:20:34.229Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "aa7e2f34-68b2-4988-a9a5-f0dd2649e2ee",
      "number": 5,
      "content": "Ngài quở trách các dân;",
      "order": 0,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.241Z",
      "updatedAt": "2025-04-22T08:20:34.241Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "9f88d56f-0d9d-45ae-9892-a2d7c1ca2983",
      "number": 5,
      "content": "Ngài hủy diệt những kẻ ác;",
      "order": 1,
      "parNumber": 2,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.260Z",
      "updatedAt": "2025-04-22T08:20:34.260Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "24c795a9-7cf4-4cfe-8a9e-216357974c96",
      "number": 5,
      "content": "Ngài xóa tên chúng nó đời đời bất tận.",
      "order": 2,
      "parNumber": 2,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.273Z",
      "updatedAt": "2025-04-22T08:20:34.273Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "6557b08e-268d-4e32-9857-9037421a4fa5",
      "number": 6,
      "content": "Kẻ thù của con đã bị kết liễu trong hoang tàn vĩnh viễn;",
      "order": 0,
      "parNumber": 2,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.287Z",
      "updatedAt": "2025-04-22T08:20:34.287Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "e84db5c5-8723-48cf-85c8-9c38309709c2",
      "number": 6,
      "content": "Những thành trì mà Ngài đã diệt trừ,",
      "order": 1,
      "parNumber": 2,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.299Z",
      "updatedAt": "2025-04-22T08:20:34.299Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "7f7485bc-4648-445f-a537-041d6f8ca25d",
      "number": 6,
      "content": "Dù kỷ niệm về chúng cũng chẳng còn;",
      "order": 2,
      "parNumber": 2,
      "parIndex": 5,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.312Z",
      "updatedAt": "2025-04-22T08:20:34.312Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "583e3f4f-e1b7-4726-8045-48eb6c4b267f",
      "number": 7,
      "content": "Nhưng Chúa sẽ còn lại đời đời;",
      "order": 0,
      "parNumber": 2,
      "parIndex": 6,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.325Z",
      "updatedAt": "2025-04-22T08:20:34.325Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "3d15e7f0-2ba0-4e3c-b708-ba33a93d3916",
      "number": 7,
      "content": "Ngài đã lập ngôi Ngài để xét đoán.",
      "order": 1,
      "parNumber": 2,
      "parIndex": 7,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.338Z",
      "updatedAt": "2025-04-22T08:20:34.338Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "e35c3ebd-e153-48b6-b8e0-287313cf944b",
      "number": 8,
      "content": "Ngài sẽ phán xét thế gian theo lẽ công chính;",
      "order": 0,
      "parNumber": 2,
      "parIndex": 8,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.350Z",
      "updatedAt": "2025-04-22T08:20:34.350Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "bab73fff-3e9a-4fe6-b588-ed8db12f1e69",
      "number": 8,
      "content": "Ngài sẽ xét xử muôn dân theo lẽ công bình.",
      "order": 1,
      "parNumber": 2,
      "parIndex": 9,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.360Z",
      "updatedAt": "2025-04-22T08:20:34.360Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "185a721c-b1a1-43a4-a700-651c00269b9d",
      "number": 9,
      "content": "Chúa là nơi nương náu cho những người bị hà hiếp;",
      "order": 0,
      "parNumber": 3,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.370Z",
      "updatedAt": "2025-04-22T08:20:34.370Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "8e68decc-333d-447e-9786-d4d68747e840",
      "number": 9,
      "content": "Ngài là chỗ ẩn núp trong lúc bị nguy nan.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.381Z",
      "updatedAt": "2025-04-22T08:20:34.381Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "0670f8c5-5238-4cd1-83b5-0a84b4e18cf0",
      "number": 10,
      "content": "Phàm ai biết đến danh Ngài sẽ để lòng tin cậy Ngài,",
      "order": 0,
      "parNumber": 3,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.391Z",
      "updatedAt": "2025-04-22T08:20:34.391Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "d3a04e21-8823-4053-afb6-3e47419b4bc0",
      "number": 10,
      "content": "Vì Chúa ôi, Ngài không bỏ rơi những ai tìm kiếm Ngài.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.401Z",
      "updatedAt": "2025-04-22T08:20:34.401Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "ee179183-50aa-4887-962c-f052521bc69b",
      "number": 11,
      "content": "Hãy ca tụng Chúa, Ðấng ngự tại Si-ôn!",
      "order": 0,
      "parNumber": 4,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.411Z",
      "updatedAt": "2025-04-22T08:20:34.411Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "2eeb1fdf-6c13-40ce-bd25-4187d1bebfa6",
      "number": 11,
      "content": "Hãy rao ra những công việc Ngài giữa các dân.",
      "order": 1,
      "parNumber": 4,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.421Z",
      "updatedAt": "2025-04-22T08:20:34.421Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "3a00a77d-53c5-4869-b939-cb9b50e114a6",
      "number": 12,
      "content": "Vì Ðấng báo thù kẻ gây đổ máu đã nhớ lại họ,",
      "order": 0,
      "parNumber": 4,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.432Z",
      "updatedAt": "2025-04-22T08:20:34.432Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "399c33eb-8dfb-4fb6-95f3-495bf488d0bd",
      "number": 12,
      "content": "Ngài không quên tiếng kêu cầu của những người khốn khổ.",
      "order": 1,
      "parNumber": 4,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.441Z",
      "updatedAt": "2025-04-22T08:20:34.441Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "1ea64b3e-bf09-4eab-986d-17486ecd763d",
      "number": 13,
      "content": "Xin thương xót con, Chúa ôi!",
      "order": 0,
      "parNumber": 5,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.451Z",
      "updatedAt": "2025-04-22T08:20:34.451Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "33a50155-5487-45c2-bbf1-98a676e18985",
      "number": 13,
      "content": "Xin đoái xem những khổ đau con chịu vì những kẻ ghét con;",
      "order": 1,
      "parNumber": 5,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.461Z",
      "updatedAt": "2025-04-22T08:20:34.461Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "33b05785-e5b6-4978-bcd0-bd0bb0a76394",
      "number": 13,
      "content": "Xin nhấc đưa con ra khỏi cổng của tử thần,",
      "order": 2,
      "parNumber": 5,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.471Z",
      "updatedAt": "2025-04-22T08:20:34.471Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "b3e74856-c102-494f-b5d7-e84e33d69d96",
      "number": 14,
      "content": "Ðể con có thể thuật lại mọi sự hầu ca ngợi Ngài nơi các cổng của Ái Nữ Si-ôn,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.481Z",
      "updatedAt": "2025-04-22T08:20:34.481Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "3140a92c-5e08-433b-87dc-ee91e63a1387",
      "number": 14,
      "content": "Hầu bày tỏ niềm vui vì được hưởng ơn giải cứu của Ngài.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.501Z",
      "updatedAt": "2025-04-22T08:20:34.501Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "85d328ea-4d40-4150-ac4b-47647dcf5b34",
      "number": 15,
      "content": "Các dân đã lún sâu vào hố chúng đào;",
      "order": 0,
      "parNumber": 6,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.511Z",
      "updatedAt": "2025-04-22T08:20:34.511Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "558807ed-48cf-41be-8f4c-34ca76897921",
      "number": 15,
      "content": "Chân chúng đã vướng vào bẫy chúng giăng.",
      "order": 1,
      "parNumber": 6,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.521Z",
      "updatedAt": "2025-04-22T08:20:34.521Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "f760a750-a203-446b-b308-a4dd28696b8b",
      "number": 16,
      "content": "Chúa đã bày tỏ Ngài ra khi Ngài thi hành sự đoán phạt;",
      "order": 0,
      "parNumber": 6,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.531Z",
      "updatedAt": "2025-04-22T08:20:34.531Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "357a2b13-1c34-42be-b5bd-20591ea5f590",
      "number": 16,
      "content": "Kẻ ác đã bị mắc vào bẫy do chính tay nó gài. *(Hãy suy gẫm – Sê-la)*",
      "order": 1,
      "parNumber": 6,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.540Z",
      "updatedAt": "2025-04-22T08:20:34.540Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "dfed206d-4aef-4c61-a72e-8ff804ff8eea",
      "number": 17,
      "content": "Kẻ ác sẽ đi vào âm phủ;",
      "order": 0,
      "parNumber": 6,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.550Z",
      "updatedAt": "2025-04-22T08:20:34.550Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "d1410ef7-c5f2-46e3-a78e-78704baac5eb",
      "number": 17,
      "content": "Mọi dân quên Ðức Chúa Trời cũng vậy.",
      "order": 1,
      "parNumber": 6,
      "parIndex": 5,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.560Z",
      "updatedAt": "2025-04-22T08:20:34.560Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "08999a80-266e-484d-9a31-b58408eaaef9",
      "number": 18,
      "content": "Người thiếu thốn sẽ chẳng bị bỏ quên luôn luôn,",
      "order": 0,
      "parNumber": 7,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.570Z",
      "updatedAt": "2025-04-22T08:20:34.570Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "54340ca7-eac5-4f35-adfb-c4a340ef6770",
      "number": 18,
      "content": "Người nghèo khó sẽ chẳng bị thất vọng mãi mãi.",
      "order": 1,
      "parNumber": 7,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.580Z",
      "updatedAt": "2025-04-22T08:20:34.580Z",
      "chapterId": "58814648-99a9-449c-a843-77df2e9be64f"
    },
    {
      "id": "fa9e6314-f26e-409b-9140-e0792c7b41c0",
      "number": 19,
      "content": "Chúa ôi, xin trỗi dậy, xin đừng để loài người thắng hơn.",
      "order": 0,
      "parNumber": 8,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:20:34.590Z",
      "updatedAt": "2025-04-22T08:20:34.590Z",
