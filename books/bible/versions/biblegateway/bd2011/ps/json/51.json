    },
    {
      "id": "4c2e6f2b-638b-4612-9d8c-d371e64d77a8",
      "number": 19,
      "content": "Tức các của lễ thiêu và các của lễ toàn thiêu;",
      "order": 1,
      "parNumber": 5,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:53:27.189Z",
      "updatedAt": "2025-04-24T03:53:27.189Z",
      "chapterId": "62e76652-a012-4208-8422-11a7962feb54"
    },
    {
      "id": "3b237cbd-5401-4dee-8f86-e7d191ac6cee",
      "number": 19,
      "content": "Rồi các bò đực tơ sẽ được hiến dâng trên bàn thờ Ngài.",
      "order": 2,
      "parNumber": 5,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:53:27.211Z",
