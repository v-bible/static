    {
      "id": "0c67511d-23e2-4570-98cd-2f0f8cc9c5e0",
      "number": 19,
      "content": "Bấy giờ Ngài sẽ vui lòng về các của lễ dâng lên để được xưng công chính,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:53:27.170Z",
