{
  "chapter": {
    "id": "bbeabeaa-8ff3-4d20-86b2-eac354152b0d",
    "number": 13,
    "ref": "https://www.biblegateway.com/passage/?search=Th%C3%A1nh%20Thi%2013&version=BD2011",
    "createdAt": "2025-04-24T03:03:15.140Z",
    "updatedAt": "2025-04-24T03:03:15.140Z",
    "bookId": "f2dba16d-ebf7-4e93-9b11-74f6ef6ae98b"
  },
  "verses": [
    {
      "id": "257f86a3-877b-400c-a41f-80b1b09deec5",
      "number": 1,
      "content": "Cho đến bao giờ, Chúa ôi? Ngài sẽ quên con mãi sao?",
      "order": 0,
      "parNumber": 0,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:48:45.118Z",
      "updatedAt": "2025-04-24T03:48:45.118Z",
      "chapterId": "bbeabeaa-8ff3-4d20-86b2-eac354152b0d"
    },
    {
      "id": "3806252f-7356-493e-b975-fc52af6fd196",
      "number": 1,
      "content": "Ngài cứ ẩn mặt Ngài khỏi con cho đến chừng nào?",
      "order": 1,
      "parNumber": 0,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:48:45.146Z",
      "updatedAt": "2025-04-24T03:48:45.146Z",
      "chapterId": "bbeabeaa-8ff3-4d20-86b2-eac354152b0d"
    },
    {
      "id": "2c8258dd-10bb-4d19-a78f-f0de24ca8b3e",
      "number": 2,
      "content": "Con cứ bị dằn vặt bởi những ý nghĩ trong lòng,",
      "order": 0,
      "parNumber": 0,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:48:45.159Z",
      "updatedAt": "2025-04-24T03:48:45.159Z",
      "chapterId": "bbeabeaa-8ff3-4d20-86b2-eac354152b0d"
    },
    {
      "id": "9a9e97e9-96d2-4126-be05-55fd3e76590e",
      "number": 2,
      "content": "Và hằng ngày con phải cưu mang nỗi sầu khổ trong tâm hồn cho đến bao giờ?",
      "order": 1,
      "parNumber": 0,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:48:45.170Z",
      "updatedAt": "2025-04-24T03:48:45.170Z",
      "chapterId": "bbeabeaa-8ff3-4d20-86b2-eac354152b0d"
    },
    {
      "id": "ae941e04-904a-4680-8557-b006a452df14",
      "number": 2,
      "content": "Kẻ thù ghét con sẽ còn trỗi hơn con cho đến bao lâu nữa?",
      "order": 2,
      "parNumber": 0,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:48:45.181Z",
      "updatedAt": "2025-04-24T03:48:45.181Z",
      "chapterId": "bbeabeaa-8ff3-4d20-86b2-eac354152b0d"
    },
    {
      "id": "5a9a80f2-6a18-47e1-9f81-e79dcf105a0f",
      "number": 3,
      "content": "Chúa ôi, xin đoái xem và nhậm lời con,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:48:45.193Z",
      "updatedAt": "2025-04-24T03:48:45.193Z",
      "chapterId": "bbeabeaa-8ff3-4d20-86b2-eac354152b0d"
    },
    {
      "id": "fad82019-add7-4b5f-abfa-f41c158ed704",
      "number": 3,
      "content": "Ðức Chúa Trời của con ôi, xin cho mắt con được sáng rỡ lên,",
      "order": 1,
      "parNumber": 1,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:48:45.206Z",
      "updatedAt": "2025-04-24T03:48:45.206Z",
      "chapterId": "bbeabeaa-8ff3-4d20-86b2-eac354152b0d"
    },
    {
      "id": "c3e68a16-455d-4d66-8f5f-9145858a0897",
      "number": 3,
      "content": "Kẻo con sẽ âm thầm qua đời trong giấc ngủ mình,",
      "order": 2,
      "parNumber": 1,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:48:45.220Z",
      "updatedAt": "2025-04-24T03:48:45.220Z",
      "chapterId": "bbeabeaa-8ff3-4d20-86b2-eac354152b0d"
    },
    {
      "id": "c3e84982-1566-40e1-8541-32ef21cf8077",
      "number": 4,
      "content": "Kẻo kẻ thù của con sẽ nói rằng, “Ta đã thắng nó rồi,”",
      "order": 0,
      "parNumber": 1,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:48:45.233Z",
      "updatedAt": "2025-04-24T03:48:45.233Z",
      "chapterId": "bbeabeaa-8ff3-4d20-86b2-eac354152b0d"
    },
    {
      "id": "dbb107a6-3210-4d7e-85f7-ca8c23c7f9e4",
      "number": 4,
      "content": "Kẻo những kẻ chống đối con được vui mừng khi con bị rúng động.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:48:45.246Z",
      "updatedAt": "2025-04-24T03:48:45.246Z",
      "chapterId": "bbeabeaa-8ff3-4d20-86b2-eac354152b0d"
    },
    {
      "id": "cb14ed3e-431f-4967-b5ff-5baed9ded973",
      "number": 5,
      "content": "Dù sao con vẫn tin cậy vào lòng thương xót của Ngài;",
      "order": 0,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:48:45.260Z",
      "updatedAt": "2025-04-24T03:48:45.260Z",
      "chapterId": "bbeabeaa-8ff3-4d20-86b2-eac354152b0d"
    },
    {
      "id": "4e588e50-0c09-4c66-b079-b847298bd7a4",
      "number": 5,
      "content": "Lòng con sẽ vui mừng trong ơn cứu rỗi của Ngài.",
      "order": 1,
      "parNumber": 2,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:48:45.274Z",
      "updatedAt": "2025-04-24T03:48:45.274Z",
      "chapterId": "bbeabeaa-8ff3-4d20-86b2-eac354152b0d"
    },
    {
      "id": "41e34601-54ec-4b07-a48c-ca7872d4296f",
      "number": 6,
      "content": "Tôi sẽ ca ngợi Chúa,",
      "order": 0,
      "parNumber": 3,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:48:45.286Z",
      "updatedAt": "2025-04-24T03:48:45.286Z",
      "chapterId": "bbeabeaa-8ff3-4d20-86b2-eac354152b0d"
    },
    {
      "id": "a40a239d-8278-4cbd-95e1-694b287950fb",
      "number": 6,
      "content": "Vì Ngài đã hậu đãi tôi.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:48:45.299Z",
      "updatedAt": "2025-04-24T03:48:45.299Z",
      "chapterId": "bbeabeaa-8ff3-4d20-86b2-eac354152b0d"
    }
  ],
