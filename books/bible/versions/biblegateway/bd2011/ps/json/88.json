    },
    {
      "id": "f07c6989-e910-4dfd-b0ec-0371fb960a44",
      "number": 18,
      "content": "Ngài đã làm cho người yêu của con và bạn bè con xa lánh con;",
      "order": 0,
      "parNumber": 3,
      "parIndex": 6,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.529Z",
      "updatedAt": "2025-04-24T03:58:00.529Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "35706b9c-7ada-455e-828c-476f8f503c1d",
      "number": 18,
      "content": "Người quen của con bây giờ chỉ là bóng tối.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 7,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.542Z",
      "updatedAt": "2025-04-24T03:58:00.542Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    }
  ],
