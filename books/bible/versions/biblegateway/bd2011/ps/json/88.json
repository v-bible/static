{
  "chapter": {
    "id": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1",
    "number": 88,
    "ref": "https://www.biblegateway.com/passage/?search=Th%C3%A1nh%20Thi%2088&version=BD2011",
    "createdAt": "2025-04-24T03:03:17.073Z",
    "updatedAt": "2025-04-24T03:03:17.073Z",
    "bookId": "f2dba16d-ebf7-4e93-9b11-74f6ef6ae98b"
  },
  "verses": [
    {
      "id": "76e5ba9a-0fd7-43b2-b516-626aa01c1d3c",
      "number": 1,
      "content": "Lạy Chúa, Ðức Chúa Trời, Ðấng Giải Cứu của con,",
      "order": 0,
      "parNumber": 0,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:57:59.975Z",
      "updatedAt": "2025-04-24T03:57:59.975Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "c7fc3397-a6dd-4f7e-bb3b-2cb71f034b6d",
      "number": 1,
      "content": "Ngày và đêm con kêu cầu trước thánh nhan Ngài.",
      "order": 1,
      "parNumber": 0,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.003Z",
      "updatedAt": "2025-04-24T03:58:00.003Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "c69594d2-a332-4797-9030-6aa2ad4bbef3",
      "number": 2,
      "content": "Nguyện lời cầu nguyện của con thấu đến trước mặt Ngài;",
      "order": 0,
      "parNumber": 0,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.013Z",
      "updatedAt": "2025-04-24T03:58:00.013Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "08b37ab0-74d2-4cf4-a4b4-8996359c1096",
      "number": 2,
      "content": "Xin nghiêng tai Ngài nghe tiếng kêu cầu của con,",
      "order": 1,
      "parNumber": 0,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.025Z",
      "updatedAt": "2025-04-24T03:58:00.025Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "90a5f4c4-79b1-4a53-a898-d6a9f9b9eb1b",
      "number": 3,
      "content": "Vì linh hồn con đang dẫy đầy hoạn nạn,",
      "order": 0,
      "parNumber": 0,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.039Z",
      "updatedAt": "2025-04-24T03:58:00.039Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "dbd800db-3dac-40ab-87ce-374c1f23470c",
      "number": 3,
      "content": "Và mạng sống con đang cận kề âm phủ.",
      "order": 1,
      "parNumber": 0,
      "parIndex": 5,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.052Z",
      "updatedAt": "2025-04-24T03:58:00.052Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "c08c7983-bc4f-4bcb-a02f-16398a33cfe3",
      "number": 4,
      "content": "Con bị xem như kẻ sắp đi vào huyệt mả;",
      "order": 0,
      "parNumber": 0,
      "parIndex": 6,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.065Z",
      "updatedAt": "2025-04-24T03:58:00.065Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "0552062d-2500-43c8-9748-27a5378b2e37",
      "number": 4,
      "content": "Contrở thành một kẻ chẳng còn chút sức lực nào;",
      "order": 1,
      "parNumber": 0,
      "parIndex": 7,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.079Z",
      "updatedAt": "2025-04-24T03:58:00.079Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "0497f95b-e22d-47c7-b4a6-5e51bdfa45c4",
      "number": 5,
      "content": "Con bị lãng quên như những người đã chết,",
      "order": 0,
      "parNumber": 0,
      "parIndex": 8,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.092Z",
      "updatedAt": "2025-04-24T03:58:00.092Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "9ffbf8f4-f6fd-4f37-8fcb-aad87d203c95",
      "number": 5,
      "content": "Như những kẻ đã nằm trong phần mộ từ lâu,",
      "order": 1,
      "parNumber": 0,
      "parIndex": 9,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.106Z",
      "updatedAt": "2025-04-24T03:58:00.106Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "96c24da3-8f45-464d-9554-d250e8b1b5ec",
      "number": 5,
      "content": "Những kẻ Ngài không còn nhớ đến nữa,",
      "order": 2,
      "parNumber": 0,
      "parIndex": 10,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.119Z",
      "updatedAt": "2025-04-24T03:58:00.119Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "6bf01beb-aa0b-489f-af19-e8db388e830b",
      "number": 5,
      "content": "Và như những người đã bị dứt bỏ khỏi tay Ngài.",
      "order": 3,
      "parNumber": 0,
      "parIndex": 11,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.133Z",
      "updatedAt": "2025-04-24T03:58:00.133Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "3e19a6ec-6dd7-4215-9290-533d6d37dc01",
      "number": 6,
      "content": "Ngài đã bỏ con vào một huyệt sâu không đáy,",
      "order": 0,
      "parNumber": 0,
      "parIndex": 12,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.146Z",
      "updatedAt": "2025-04-24T03:58:00.146Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "f5e431da-0a9d-4a55-aff3-67d41d8fe300",
      "number": 6,
      "content": "Vào chỗ cực kỳ tối tăm trong nơi tận cùng sâu thẳm.",
      "order": 1,
      "parNumber": 0,
      "parIndex": 13,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.159Z",
      "updatedAt": "2025-04-24T03:58:00.159Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "0eca3c94-009f-431c-82c9-f9d2cd4a4c72",
      "number": 7,
      "content": "Cơn thịnh nộ của Ngài đã giáng trên con;",
      "order": 0,
      "parNumber": 0,
      "parIndex": 14,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.179Z",
      "updatedAt": "2025-04-24T03:58:00.179Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "85ac6a8a-1420-4b68-a318-5cdb45f656e3",
      "number": 7,
      "content": "Ngài đã phủ trên con tất cả các đợt sóng của Ngài. *(Sê-la)*",
      "order": 1,
      "parNumber": 0,
      "parIndex": 15,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.192Z",
      "updatedAt": "2025-04-24T03:58:00.192Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "adcae966-6697-4ae3-aa2f-abffb384fcb5",
      "number": 8,
      "content": "Ngài đã làm cho những người thân quen của con xa lánh con;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.206Z",
      "updatedAt": "2025-04-24T03:58:00.206Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "74b849fe-5417-496c-9ddb-f06ad500414a",
      "number": 8,
      "content": "Ngài đã khiến con thành một đối tượng để họ ghê tởm;",
      "order": 1,
      "parNumber": 1,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.219Z",
      "updatedAt": "2025-04-24T03:58:00.219Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "0d696ae6-5574-47b8-8bb6-e88778456c9e",
      "number": 8,
      "content": "Con đã bị cô lập và không còn lối thoát.",
      "order": 2,
      "parNumber": 1,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.233Z",
      "updatedAt": "2025-04-24T03:58:00.233Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "97d0b43a-e52a-41cf-a445-0cf01b65286d",
      "number": 9,
      "content": "Mắt con thẫn thờ vì sầu khổ;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.246Z",
      "updatedAt": "2025-04-24T03:58:00.246Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "51123a47-d040-463e-8b3a-5a8d47fe2adb",
      "number": 9,
      "content": "Chúa ôi, hằng ngày con kêu cầu Ngài;",
      "order": 1,
      "parNumber": 1,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.259Z",
      "updatedAt": "2025-04-24T03:58:00.259Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "afdee661-34c3-4b27-91e4-870aa4c26804",
      "number": 9,
      "content": "Con đưa đôi tay con lên và hướng về Ngài.",
      "order": 2,
      "parNumber": 1,
      "parIndex": 5,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.273Z",
      "updatedAt": "2025-04-24T03:58:00.273Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "d5c373d3-c8c2-4131-9879-b7900f9885ad",
      "number": 10,
      "content": "Chẳng lẽ Ngài sẽ thực hiện phép lạ cho những người đã chết sao?",
      "order": 0,
      "parNumber": 1,
      "parIndex": 6,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.286Z",
      "updatedAt": "2025-04-24T03:58:00.286Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "1ae4feb3-bcf3-4ea5-b29e-f4ae4e4a54d8",
      "number": 10,
      "content": "Những linh hồn đã xuất ra rồi lẽ nào còn có thể trỗi dậy để ca ngợi Ngài sao?",
      "order": 1,
      "parNumber": 1,
      "parIndex": 7,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.300Z",
      "updatedAt": "2025-04-24T03:58:00.300Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "d3278a98-d9d4-48ad-8bf7-d29b6639190f",
      "number": 10,
      "content": "*(Sê-la)*",
      "order": 2,
      "parNumber": 1,
      "parIndex": 8,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.326Z",
      "updatedAt": "2025-04-24T03:58:00.326Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "50b7e0c9-674f-4fc9-a5f7-e3537cb89d59",
      "number": 11,
      "content": "Tình thương của Ngài có thể được công bố trong phần mộ sao?",
      "order": 0,
      "parNumber": 1,
      "parIndex": 9,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.339Z",
      "updatedAt": "2025-04-24T03:58:00.339Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "a3a7e5da-fbf4-48ff-8149-6399e77e44cb",
      "number": 11,
      "content": "Ðức thành tín của Ngài sẽ được giảng ra trong nơi người ta bị hủy diệt sao?",
      "order": 1,
      "parNumber": 1,
      "parIndex": 10,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.352Z",
      "updatedAt": "2025-04-24T03:58:00.352Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "dcbc12a4-303d-4883-8332-cf71dd45578f",
      "number": 12,
      "content": "Cõi u minh làm sao biết được những việc diệu kỳ của Ngài?",
      "order": 0,
      "parNumber": 1,
      "parIndex": 11,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.366Z",
      "updatedAt": "2025-04-24T03:58:00.366Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "a9851c5c-a791-4a62-a425-7b2b3c1b01ee",
      "number": 12,
      "content": "Ðức công chính của Ngài há sẽ được biết đến trong cõi của những kẻ đã bị lãng quên sao?",
      "order": 1,
      "parNumber": 1,
      "parIndex": 12,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.379Z",
      "updatedAt": "2025-04-24T03:58:00.379Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "fa6164e9-0fe6-4698-b17e-e0c7033b39f9",
      "number": 13,
      "content": "Còn con, Chúa ôi, con kêu cầu Ngài;",
      "order": 0,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.392Z",
      "updatedAt": "2025-04-24T03:58:00.392Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "b3fac730-d6e4-4bbc-b790-942e5e9a9cc9",
      "number": 13,
      "content": "Vừa sớm tinh sương con dâng lời cầu nguyện lên trước thánh nhan Ngài.",
      "order": 1,
      "parNumber": 2,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.405Z",
      "updatedAt": "2025-04-24T03:58:00.405Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "d868e4b8-a880-4d94-9e57-64f5806d7506",
      "number": 14,
      "content": "Chúa ôi, sao Ngài nỡ từ bỏ con?",
      "order": 0,
      "parNumber": 2,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.419Z",
      "updatedAt": "2025-04-24T03:58:00.419Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "e55e6dc3-cd21-4490-9769-2f2f14027f0e",
      "number": 14,
      "content": "Sao Ngài nỡ ẩn mặt Ngài khỏi con?",
      "order": 1,
      "parNumber": 2,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.432Z",
      "updatedAt": "2025-04-24T03:58:00.432Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "dd5351ab-f08d-43af-af2b-a450542dc52f",
      "number": 15,
      "content": "Con đã bị đau đớn và gần chết từ thời niên thiếu;",
      "order": 0,
      "parNumber": 3,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.445Z",
      "updatedAt": "2025-04-24T03:58:00.445Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "e19422e6-38fb-4d14-9a0f-15e3a26fe442",
      "number": 15,
      "content": "Con bị những trận đòn kinh hoàng của Ngài nên đâm ra tuyệt vọng.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.462Z",
      "updatedAt": "2025-04-24T03:58:00.462Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "e662c7d2-6f9d-4c2e-b7e9-4a956dda169e",
      "number": 16,
      "content": "Cơn giận phừng phừng của Ngài đã giáng trên con;",
      "order": 0,
      "parNumber": 3,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.475Z",
      "updatedAt": "2025-04-24T03:58:00.475Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "36b4f533-f612-48f0-a9b6-92553b5c2279",
      "number": 16,
      "content": "Những cơn hãi hùng của Ngài đã tàn phá con.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.488Z",
      "updatedAt": "2025-04-24T03:58:00.488Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "e7feb976-5137-4c41-9d36-5d6d8e90ce23",
      "number": 17,
      "content": "Những điều ấy bao phủ con như nước lụt tràn ngập cả ngày;",
      "order": 0,
      "parNumber": 3,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.502Z",
      "updatedAt": "2025-04-24T03:58:00.502Z",
      "chapterId": "21e2e4f3-91bb-47fe-a827-3450b6f0f7a1"
    },
    {
      "id": "485588e7-4862-49f1-af58-7ee5a8de8839",
      "number": 17,
      "content": "Chúng cứ cùng nhau vây chặt lấy con.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 5,
      "isPoetry": true,
      "createdAt": "2025-04-24T03:58:00.515Z",
      "updatedAt": "2025-04-24T03:58:00.515Z",
