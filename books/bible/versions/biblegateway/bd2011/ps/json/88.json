{
  "chapter": {
    "id": "32618d13-63f5-4d42-a712-12beeb5fa164",
    "number": 88,
    "ref": "https://www.biblegateway.com/passage/?search=Th%C3%A1nh%20Thi%2088&version=BD2011",
    "createdAt": "2025-04-22T07:37:47.684Z",
    "updatedAt": "2025-04-22T07:37:47.684Z",
    "bookId": "7a44f33e-f512-4e76-bac1-934bef7677e1"
  },
  "verses": [
    {
      "id": "84a40125-c385-41fb-84b7-a67f52ebd968",
      "number": 1,
      "content": "Lạy Chúa, Ðức Chúa Trời, Ðấng Giải Cứu của con,",
      "order": 0,
      "parNumber": 0,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.415Z",
      "updatedAt": "2025-04-22T08:30:09.415Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "21f86ef7-4d2f-49ed-bca5-09a8f3ca320d",
      "number": 1,
      "content": "Ngày và đêm con kêu cầu trước thánh nhan Ngài.",
      "order": 1,
      "parNumber": 0,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.446Z",
      "updatedAt": "2025-04-22T08:30:09.446Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "df36ac20-0aca-4584-8a73-311eddb86a3e",
      "number": 2,
      "content": "Nguyện lời cầu nguyện của con thấu đến trước mặt Ngài;",
      "order": 0,
      "parNumber": 0,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.461Z",
      "updatedAt": "2025-04-22T08:30:09.461Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "d8ee86cc-6953-4155-9c3c-7d052e31a9cd",
      "number": 2,
      "content": "Xin nghiêng tai Ngài nghe tiếng kêu cầu của con,",
      "order": 1,
      "parNumber": 0,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.473Z",
      "updatedAt": "2025-04-22T08:30:09.473Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "30ae73d8-6db7-432e-80f9-ea87358e4a8a",
      "number": 3,
      "content": "Vì linh hồn con đang dẫy đầy hoạn nạn,",
      "order": 0,
      "parNumber": 0,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.489Z",
      "updatedAt": "2025-04-22T08:30:09.489Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "39ff86f5-af0c-44f3-8f76-5131ab0f452f",
      "number": 3,
      "content": "Và mạng sống con đang cận kề âm phủ.",
      "order": 1,
      "parNumber": 0,
      "parIndex": 5,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.503Z",
      "updatedAt": "2025-04-22T08:30:09.503Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "1081fa3a-45ee-4209-816a-104bb9f5988a",
      "number": 4,
      "content": "Con bị xem như kẻ sắp đi vào huyệt mả;",
      "order": 0,
      "parNumber": 0,
      "parIndex": 6,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.517Z",
      "updatedAt": "2025-04-22T08:30:09.517Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "8d5905b8-9297-49a7-a091-922a93cd2aa6",
      "number": 4,
      "content": "Contrở thành một kẻ chẳng còn chút sức lực nào;",
      "order": 1,
      "parNumber": 0,
      "parIndex": 7,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.532Z",
      "updatedAt": "2025-04-22T08:30:09.532Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "b352d5eb-ab32-4523-9829-748a3e593d32",
      "number": 5,
      "content": "Con bị lãng quên như những người đã chết,",
      "order": 0,
      "parNumber": 0,
      "parIndex": 8,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.547Z",
      "updatedAt": "2025-04-22T08:30:09.547Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "bc774f2d-3ed7-4aa5-8c7f-ac498b83ebe3",
      "number": 5,
      "content": "Như những kẻ đã nằm trong phần mộ từ lâu,",
      "order": 1,
      "parNumber": 0,
      "parIndex": 9,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.562Z",
      "updatedAt": "2025-04-22T08:30:09.562Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "68f56901-33e8-40ca-a08d-7d60047abde8",
      "number": 5,
      "content": "Những kẻ Ngài không còn nhớ đến nữa,",
      "order": 2,
      "parNumber": 0,
      "parIndex": 10,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.576Z",
      "updatedAt": "2025-04-22T08:30:09.576Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "dfff47ed-36cf-42df-8bf2-fdbcc7c00d6f",
      "number": 5,
      "content": "Và như những người đã bị dứt bỏ khỏi tay Ngài.",
      "order": 3,
      "parNumber": 0,
      "parIndex": 11,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.590Z",
      "updatedAt": "2025-04-22T08:30:09.590Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "a646fc83-3815-42e9-9715-f1b7bbd82a4a",
      "number": 6,
      "content": "Ngài đã bỏ con vào một huyệt sâu không đáy,",
      "order": 0,
      "parNumber": 0,
      "parIndex": 12,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.601Z",
      "updatedAt": "2025-04-22T08:30:09.601Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "c49c45d2-579c-4b6f-aea2-d0e8ab859658",
      "number": 6,
      "content": "Vào chỗ cực kỳ tối tăm trong nơi tận cùng sâu thẳm.",
      "order": 1,
      "parNumber": 0,
      "parIndex": 13,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.613Z",
      "updatedAt": "2025-04-22T08:30:09.613Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "6a80ce85-266c-4b48-84a6-3458c6b28b4a",
      "number": 7,
      "content": "Cơn thịnh nộ của Ngài đã giáng trên con;",
      "order": 0,
      "parNumber": 0,
      "parIndex": 14,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.623Z",
      "updatedAt": "2025-04-22T08:30:09.623Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "6b6ce233-e4e1-41e1-a2bc-00c5a1235f61",
      "number": 7,
      "content": "Ngài đã phủ trên con tất cả các đợt sóng của Ngài. *(Sê-la)*",
      "order": 1,
      "parNumber": 0,
      "parIndex": 15,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.633Z",
      "updatedAt": "2025-04-22T08:30:09.633Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "930fb744-4347-414e-908c-62797f1c6dc1",
      "number": 8,
      "content": "Ngài đã làm cho những người thân quen của con xa lánh con;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.643Z",
      "updatedAt": "2025-04-22T08:30:09.643Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "ef00f9ae-458c-4527-8e1e-9ee104907920",
      "number": 8,
      "content": "Ngài đã khiến con thành một đối tượng để họ ghê tởm;",
      "order": 1,
      "parNumber": 1,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.654Z",
      "updatedAt": "2025-04-22T08:30:09.654Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "07335054-9f30-47c1-856c-ae117070df55",
      "number": 8,
      "content": "Con đã bị cô lập và không còn lối thoát.",
      "order": 2,
      "parNumber": 1,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.663Z",
      "updatedAt": "2025-04-22T08:30:09.663Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "9a9f74a1-1d4e-4836-8a56-726fa6a7e204",
      "number": 9,
      "content": "Mắt con thẫn thờ vì sầu khổ;",
      "order": 0,
      "parNumber": 1,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.674Z",
      "updatedAt": "2025-04-22T08:30:09.674Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "eee81e96-1586-4604-968a-98f6c6e34f6f",
      "number": 9,
      "content": "Chúa ôi, hằng ngày con kêu cầu Ngài;",
      "order": 1,
      "parNumber": 1,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.684Z",
      "updatedAt": "2025-04-22T08:30:09.684Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "3c0bebf4-4566-4e75-808d-55adf2b655fe",
      "number": 9,
      "content": "Con đưa đôi tay con lên và hướng về Ngài.",
      "order": 2,
      "parNumber": 1,
      "parIndex": 5,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.694Z",
      "updatedAt": "2025-04-22T08:30:09.694Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "348ccb23-12ae-4c69-b62b-9b4fe2d00b04",
      "number": 10,
      "content": "Chẳng lẽ Ngài sẽ thực hiện phép lạ cho những người đã chết sao?",
      "order": 0,
      "parNumber": 1,
      "parIndex": 6,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.704Z",
      "updatedAt": "2025-04-22T08:30:09.704Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "cdf59eaa-d6ed-4db6-99cf-2e4372f5099b",
      "number": 10,
      "content": "Những linh hồn đã xuất ra rồi lẽ nào còn có thể trỗi dậy để ca ngợi Ngài sao?",
      "order": 1,
      "parNumber": 1,
      "parIndex": 7,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.714Z",
      "updatedAt": "2025-04-22T08:30:09.714Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "23617c9e-eebe-4ce2-853c-992e87702465",
      "number": 10,
      "content": "*(Sê-la)*",
      "order": 2,
      "parNumber": 1,
      "parIndex": 8,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.735Z",
      "updatedAt": "2025-04-22T08:30:09.735Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "63774cb4-8a58-40cb-acc9-e7cd58193486",
      "number": 11,
      "content": "Tình thương của Ngài có thể được công bố trong phần mộ sao?",
      "order": 0,
      "parNumber": 1,
      "parIndex": 9,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.745Z",
      "updatedAt": "2025-04-22T08:30:09.745Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "70bad736-9190-4299-af52-7a3abf76d3d5",
      "number": 11,
      "content": "Ðức thành tín của Ngài sẽ được giảng ra trong nơi người ta bị hủy diệt sao?",
      "order": 1,
      "parNumber": 1,
      "parIndex": 10,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.755Z",
      "updatedAt": "2025-04-22T08:30:09.755Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "d90aa128-1afb-446f-a4ec-c3b7a73b959d",
      "number": 12,
      "content": "Cõi u minh làm sao biết được những việc diệu kỳ của Ngài?",
      "order": 0,
      "parNumber": 1,
      "parIndex": 11,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.765Z",
      "updatedAt": "2025-04-22T08:30:09.765Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "c817eba9-f0a8-4a6a-be54-f34c65bc47df",
      "number": 12,
      "content": "Ðức công chính của Ngài há sẽ được biết đến trong cõi của những kẻ đã bị lãng quên sao?",
      "order": 1,
      "parNumber": 1,
      "parIndex": 12,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.775Z",
      "updatedAt": "2025-04-22T08:30:09.775Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "24ba3121-eda9-44f8-b336-ff7d47f06acf",
      "number": 13,
      "content": "Còn con, Chúa ôi, con kêu cầu Ngài;",
      "order": 0,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.785Z",
      "updatedAt": "2025-04-22T08:30:09.785Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "388a96a1-6d3e-4c3c-bb8e-3abcb6cdd481",
      "number": 13,
      "content": "Vừa sớm tinh sương con dâng lời cầu nguyện lên trước thánh nhan Ngài.",
      "order": 1,
      "parNumber": 2,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.796Z",
      "updatedAt": "2025-04-22T08:30:09.796Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "ebeca313-8931-459e-a597-f1941855f68a",
      "number": 14,
      "content": "Chúa ôi, sao Ngài nỡ từ bỏ con?",
      "order": 0,
      "parNumber": 2,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.806Z",
      "updatedAt": "2025-04-22T08:30:09.806Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "0be17325-1134-4ca8-a068-22881ae2a26e",
      "number": 14,
      "content": "Sao Ngài nỡ ẩn mặt Ngài khỏi con?",
      "order": 1,
      "parNumber": 2,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.818Z",
      "updatedAt": "2025-04-22T08:30:09.818Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "1df996bb-18e1-4c7c-9859-2701b060167a",
      "number": 15,
      "content": "Con đã bị đau đớn và gần chết từ thời niên thiếu;",
      "order": 0,
      "parNumber": 3,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.831Z",
      "updatedAt": "2025-04-22T08:30:09.831Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "3ecb83de-ff50-4896-abf2-680cf0097e82",
      "number": 15,
      "content": "Con bị những trận đòn kinh hoàng của Ngài nên đâm ra tuyệt vọng.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.844Z",
      "updatedAt": "2025-04-22T08:30:09.844Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "087c0aa5-c577-4fa6-aa3d-aed9f603031d",
      "number": 16,
      "content": "Cơn giận phừng phừng của Ngài đã giáng trên con;",
      "order": 0,
      "parNumber": 3,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.857Z",
      "updatedAt": "2025-04-22T08:30:09.857Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "bed0cddf-33d5-441b-b21f-b373fc98c0eb",
      "number": 16,
      "content": "Những cơn hãi hùng của Ngài đã tàn phá con.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.870Z",
      "updatedAt": "2025-04-22T08:30:09.870Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "bec675ee-95d3-4899-a001-be7adec10711",
      "number": 17,
      "content": "Những điều ấy bao phủ con như nước lụt tràn ngập cả ngày;",
      "order": 0,
      "parNumber": 3,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.883Z",
      "updatedAt": "2025-04-22T08:30:09.883Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "ad417779-fafb-4159-9fc4-208deb7f48f6",
      "number": 17,
      "content": "Chúng cứ cùng nhau vây chặt lấy con.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 5,
      "isPoetry": true,
      "createdAt": "2025-04-22T08:30:09.896Z",
      "updatedAt": "2025-04-22T08:30:09.896Z",
      "chapterId": "32618d13-63f5-4d42-a712-12beeb5fa164"
    },
    {
      "id": "19e4674b-c535-46c6-a6ac-db9399c00759",
      "number": 18,
      "content": "Ngài đã làm cho người yêu của con và bạn bè con xa lánh con;",
