    {
      "id": "751bca04-c457-46b1-9776-d448cd879832",
      "content": "Trong 1 Sử 3:5 thì gọi là Si-mê-a",
      "position": 63,
      "order": 1,
      "createdAt": "2025-04-22T08:00:44.691Z",
      "updatedAt": "2025-04-22T08:00:44.691Z",
      "verseId": "e9d40598-01f3-4613-ab76-5257ec40e75b",
      "chapterId": "0507e9a8-c2df-41ed-8737-77ace7b6aa6b"
    },
    {
      "id": "4f7fafee-782f-4ec8-ad7a-107e0792fb81",
      "content": "Nghĩa là Ba-anh bị tan nát",
      "position": 195,
      "order": 2,
      "createdAt": "2025-04-22T08:00:44.816Z",
      "updatedAt": "2025-04-22T08:00:44.816Z",
