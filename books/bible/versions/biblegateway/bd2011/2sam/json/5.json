    }
  ],
  "headings": [
    {
      "id": "0fc901d4-3e96-4288-b4bb-9fe67967bd35",
      "content": "Chiếm Thành Giê-ru-sa-lem",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T08:00:44.587Z",
      "updatedAt": "2025-04-22T08:00:44.587Z",
      "verseId": "8a7eea90-3b24-4101-93a7-a319c8aced52",
      "chapterId": "0507e9a8-c2df-41ed-8737-77ace7b6aa6b"
    },
    {
      "id": "e45e4aac-4c22-4151-83bf-e80aa42bad0f",
      "content": "Dân Phi-li-tin Bị Bại Trận",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-22T08:00:44.739Z",
      "updatedAt": "2025-04-22T08:00:44.739Z",
      "verseId": "e8711ec4-e7b9-4324-9a2e-6854a4386d40",
      "chapterId": "0507e9a8-c2df-41ed-8737-77ace7b6aa6b"
    },
    {
      "id": "a2ad2043-bb4e-4463-b2ad-5c72f53a6c70",
      "content": "Ða-vít Trị Vì Trên Toàn Thể I-sơ-ra-ên",
      "level": 1,
      "order": 0,
