    },
    {
      "id": "7cb396e6-a37e-45cb-9795-f032435deda3",
      "content": "ctd: Tổng tư lệnh quân đội của Vua Gia-bin ở thành Ha-xơ (Gsuê 11:1)",
      "position": 123,
      "order": 1,
      "createdAt": "2025-04-24T03:25:55.836Z",
      "updatedAt": "2025-04-24T03:25:55.836Z",
      "verseId": "5ee49a9d-74e3-40ee-972d-ec9078dd4363",
      "chapterId": "de07bce1-ad11-4e2e-91e5-c702854c67ea"
    },
