{
  "chapter": {
    "id": "18703040-dd8a-4ab3-b6f0-af795d230f72",
    "number": 28,
    "ref": "https://www.biblegateway.com/passage/?search=Ch%C3%A2m%20Ng%C3%B4n%2028&version=BD2011",
    "createdAt": "2024-09-24T01:00:45.951Z",
    "updatedAt": "2024-09-24T01:00:45.951Z",
    "bookId": "2a7cfb76-854f-4125-8376-cd1d8bb799d7"
  },
  "verses": [
    {
      "id": "64169928-188a-4b67-b8b3-352c434eac6b",
      "number": 1,
      "content": "Kẻ gian ác chạy trốn dù không ai rượt đuổi,",
      "order": 0,
      "parNumber": 0,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.874Z",
      "updatedAt": "2024-09-24T02:16:52.874Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "d41b4cd4-3895-4032-ada5-0d903eca01db",
      "number": 1,
      "content": "Còn người ngay lành bạo dạn như sư tử.",
      "order": 1,
      "parNumber": 0,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.884Z",
      "updatedAt": "2024-09-24T02:16:52.884Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "ac50e6a7-7881-4cc6-88ad-bf1cb5ea2494",
      "number": 2,
      "content": "Khi đất nước gặp cơn biến loạn lắm người cho mình là lãnh tụ,",
      "order": 0,
      "parNumber": 0,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.887Z",
      "updatedAt": "2024-09-24T02:16:52.887Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "1eca51dd-4634-4afb-92f3-d1dd758b21d7",
      "number": 2,
      "content": "Nhưng nhờ người lãnh đạo sáng suốt và trí thức đất nước được ổn định lâu dài.",
      "order": 1,
      "parNumber": 0,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.889Z",
      "updatedAt": "2024-09-24T02:16:52.889Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "ffadee4f-3da4-4883-8e41-96603d62edee",
      "number": 3,
      "content": "Người nghèo bóc lột người nghèo",
      "order": 0,
      "parNumber": 0,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.892Z",
      "updatedAt": "2024-09-24T02:16:52.892Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "1071d626-204e-49d3-97ff-da04f01e8b98",
      "number": 3,
      "content": "Khác nào trận mưa to quét sạch mọi hoa màu lương thực.",
      "order": 1,
      "parNumber": 0,
      "parIndex": 5,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.894Z",
      "updatedAt": "2024-09-24T02:16:52.894Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "7234a110-30f4-4244-927c-890af31d2db8",
      "number": 4,
      "content": "Ai gạt bỏ luật pháp là gián tiếp khen ngợi kẻ ác,",
      "order": 0,
      "parNumber": 0,
      "parIndex": 6,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.897Z",
      "updatedAt": "2024-09-24T02:16:52.897Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "74178c59-0b43-49cf-b94d-075e555c6444",
      "number": 4,
      "content": "Nhưng ai tuân giữ luật pháp là chống lại kẻ gian tà.",
      "order": 1,
      "parNumber": 0,
      "parIndex": 7,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.899Z",
      "updatedAt": "2024-09-24T02:16:52.899Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "8ab02d73-51da-43aa-8810-8db492ba89b6",
      "number": 5,
      "content": "Kẻ gian ác không hiểu tại sao phải duy trì công lý,",
      "order": 0,
      "parNumber": 0,
      "parIndex": 8,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.902Z",
      "updatedAt": "2024-09-24T02:16:52.902Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "15f5b102-1788-4db0-9881-fa81646d1343",
      "number": 5,
      "content": "Còn người tìm kiếm Chúa thì hiểu rõ tận tường.",
      "order": 1,
      "parNumber": 0,
      "parIndex": 9,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.904Z",
      "updatedAt": "2024-09-24T02:16:52.904Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "30cc0d51-2b4f-4588-977b-f978082c4cb0",
      "number": 6,
      "content": "Thà nghèo mà sống thanh liêm trong sạch",
      "order": 0,
      "parNumber": 1,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.907Z",
      "updatedAt": "2024-09-24T02:16:52.907Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "7003d524-f587-4bd0-8d9c-be02d8fc5973",
      "number": 6,
      "content": "Hơn giàu mà theo đường lươn lẹo gian tà.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.909Z",
      "updatedAt": "2024-09-24T02:16:52.909Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "fd15fba6-73b4-4a1d-b120-06c6da0437fa",
      "number": 7,
      "content": "Ðứa con biết tuân giữ luật pháp là đứa con khôn ngoan,",
      "order": 0,
      "parNumber": 1,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.912Z",
      "updatedAt": "2024-09-24T02:16:52.912Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "791342f7-0da9-4a2a-8fa9-71f2d11e2f83",
      "number": 7,
      "content": "Còn đứa kết bạn với phường ăn nhậu làm cha nó xấu hổ.",
      "order": 1,
      "parNumber": 1,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.914Z",
      "updatedAt": "2024-09-24T02:16:52.914Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "1de222be-9487-4d85-a7a1-13f34beb931e",
      "number": 8,
      "content": "Kẻ làm giàu nhờ bắt chẹt người ta và tính lãi quá cao",
      "order": 0,
      "parNumber": 2,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.916Z",
      "updatedAt": "2024-09-24T02:16:52.916Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "8465419f-d63d-480c-afb2-384a834b7f42",
      "number": 8,
      "content": "Là tích lũy của cải cho người thương xót người nghèo.",
      "order": 1,
      "parNumber": 2,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.918Z",
      "updatedAt": "2024-09-24T02:16:52.918Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "961eb4c3-8949-433a-a317-152487ad6289",
      "number": 9,
      "content": "Kẻ nào xây tai không nghe theo luật pháp,",
      "order": 0,
      "parNumber": 2,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.920Z",
      "updatedAt": "2024-09-24T02:16:52.920Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "583e957f-ed9d-4ed6-9269-821c376fd84b",
      "number": 9,
      "content": "Ngay cả lời cầu nguyện của nó cũng là điều gớm ghiếc.",
      "order": 1,
      "parNumber": 2,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.922Z",
      "updatedAt": "2024-09-24T02:16:52.922Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "79331005-2563-4884-b935-c155aa1f2c21",
      "number": 10,
      "content": "Kẻ nào dẫn đưa người chính trực vào con đường gian tà sẽ sa vào hố nó đã đào,",
      "order": 0,
      "parNumber": 2,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.924Z",
      "updatedAt": "2024-09-24T02:16:52.924Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "4b1f935d-1ffb-439f-b114-f85b6729a8c5",
      "number": 10,
      "content": "Nhưng người trong sạch sẽ được hưởng phước lành.",
      "order": 1,
      "parNumber": 2,
      "parIndex": 5,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.926Z",
      "updatedAt": "2024-09-24T02:16:52.926Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "78272e26-8c2e-4df4-b399-65d062711cba",
      "number": 11,
      "content": "Người giàu cứ cho mình là khôn ngoan theo mắt mình;",
      "order": 0,
      "parNumber": 2,
      "parIndex": 6,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.928Z",
      "updatedAt": "2024-09-24T02:16:52.928Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "2929464c-cc68-413e-bc3e-f0502a6e7122",
      "number": 11,
      "content": "Nhưng người nghèo mà thông sáng hiểu rõ thực lực của người giàu ấy.",
      "order": 1,
      "parNumber": 2,
      "parIndex": 7,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.930Z",
      "updatedAt": "2024-09-24T02:16:52.930Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "1c0228af-fc27-4f0a-9f0c-8f9399f302b3",
      "number": 12,
      "content": "Khi người ngay lành đắc thắng, có vinh hiển lớn lao;",
      "order": 0,
      "parNumber": 3,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.932Z",
      "updatedAt": "2024-09-24T02:16:52.932Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "c6f08e4a-c3e4-4c34-b156-8c34a39f15bb",
      "number": 12,
      "content": "Khi kẻ ác nắm quyền, người ta đều bỏ trốn.",
      "order": 1,
      "parNumber": 3,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.934Z",
      "updatedAt": "2024-09-24T02:16:52.934Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "595868a4-bb53-4a3d-899c-096c0dce5a7f",
      "number": 13,
      "content": "Người nào che giấu tội lỗi mình sẽ không được thịnh vượng,",
      "order": 0,
      "parNumber": 4,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.936Z",
      "updatedAt": "2024-09-24T02:16:52.936Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "23cce181-26c6-41d4-b285-859e5455015e",
      "number": 13,
      "content": "Nhưng ai xưng nó ra và lìa bỏ nó thì sẽ được thương xót.",
      "order": 1,
      "parNumber": 4,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.938Z",
      "updatedAt": "2024-09-24T02:16:52.938Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "3a97d0ab-cab4-4dc0-a1bc-a91d5a1256d3",
      "number": 14,
      "content": "Phước cho người luôn luôn kính sợ Chúa,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 0,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.940Z",
      "updatedAt": "2024-09-24T02:16:52.940Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "401c3015-f266-459a-9294-46c704003e73",
      "number": 14,
      "content": "Nhưng kẻ cứng lòng sẽ lâm vào cảnh tai ương.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 1,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.942Z",
      "updatedAt": "2024-09-24T02:16:52.942Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "216b81a0-05ee-4478-868c-3ae820e84cc4",
      "number": 15,
      "content": "Như sư tử gầm rống hay gấu đuổi theo con mồi thể nào,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 2,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.944Z",
      "updatedAt": "2024-09-24T02:16:52.944Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "cef7cae1-cf12-4045-bc38-4a5359183142",
      "number": 15,
      "content": "Kẻ cai trị gian ác đối với dân nghèo cũng thể ấy.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 3,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.946Z",
      "updatedAt": "2024-09-24T02:16:52.946Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "4e9bcf3a-01a5-48a9-a776-72affe48a292",
      "number": 16,
      "content": "Kẻ cầm quyền thiếu hiểu biết là kẻ đàn áp bạo tàn;",
      "order": 0,
      "parNumber": 5,
      "parIndex": 4,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.948Z",
      "updatedAt": "2024-09-24T02:16:52.948Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "1a6aafe9-7dc0-4a45-85a7-93d297aa0f27",
      "number": 16,
      "content": "Nhưng người ghét của hối lộ thì càng có việc lâu dài.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 5,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.950Z",
      "updatedAt": "2024-09-24T02:16:52.950Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "7597354a-02ad-42d9-9266-46ae18180aa3",
      "number": 17,
      "content": "Nếu có kẻ mắc tội làm đổ máu người vô tội,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 6,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.951Z",
      "updatedAt": "2024-09-24T02:16:52.951Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "1ac00343-f5c9-4179-9274-485c345aa0b0",
      "number": 17,
      "content": "Hãy để nó phải lẩn trốn cho đến ngày bước vào phần mộ,",
      "order": 1,
      "parNumber": 5,
      "parIndex": 7,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.953Z",
      "updatedAt": "2024-09-24T02:16:52.953Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "c3f102b7-1f1c-49bb-a7c9-89eba13e4c0c",
      "number": 17,
      "content": "Ðừng ai che chở nó.",
      "order": 2,
      "parNumber": 5,
      "parIndex": 8,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.955Z",
      "updatedAt": "2024-09-24T02:16:52.955Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "b1e2cf39-bf61-4608-bb38-b555a2f5e267",
      "number": 18,
      "content": "Người sống thanh liêm sẽ được bình an vô sự,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 9,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.957Z",
      "updatedAt": "2024-09-24T02:16:52.957Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "39ede673-e787-435f-bca2-8d6daf607eb0",
      "number": 18,
      "content": "Nhưng kẻ theo đường gian tà sẽ bị sụp đổ thình lình.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 10,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.959Z",
      "updatedAt": "2024-09-24T02:16:52.959Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "322d65ca-9a88-400f-a411-c26a020501be",
      "number": 19,
      "content": "Người cày cấy ruộng mình sẽ có cơm bánh ăn dư dật,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 11,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.961Z",
      "updatedAt": "2024-09-24T02:16:52.961Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "e070b671-e022-4245-ac90-2cdfa51605ea",
      "number": 19,
      "content": "Nhưng ai cứ sống lông bông sẽ lãnh đủ đói nghèo.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 12,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.963Z",
      "updatedAt": "2024-09-24T02:16:52.963Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "c7c98832-6838-42b8-9d26-119a1a7e3be0",
      "number": 20,
      "content": "Người trung tín sẽ nhận nhiều phước hạnh,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 13,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.965Z",
      "updatedAt": "2024-09-24T02:16:52.965Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "c947dc0f-64ab-45f8-8dc1-93e4f46a34e3",
      "number": 20,
      "content": "Nhưng kẻ muốn làm giàu nhanh sẽ không tránh bị phạt đâu.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 14,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.967Z",
      "updatedAt": "2024-09-24T02:16:52.967Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "ae951fe9-54da-497d-b082-5c810ec43c2a",
      "number": 21,
      "content": "Sự thiên vị là điều không tốt,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 15,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.969Z",
      "updatedAt": "2024-09-24T02:16:52.969Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "2f4fa72c-29fb-4e38-a284-38c882922325",
      "number": 21,
      "content": "Chỉ vì một miếng bánh mà người ta có thể quyết định sai.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 16,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.971Z",
      "updatedAt": "2024-09-24T02:16:52.971Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "7a310c49-903e-4fe3-8030-e3be027a3c70",
      "number": 22,
      "content": "Kẻ có mắt gian tham ham làm giàu gấp rút,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 17,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.973Z",
      "updatedAt": "2024-09-24T02:16:52.973Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "b3ed6d43-6a2d-450a-ab10-25ffa9734fd9",
      "number": 22,
      "content": "Nhưng nó không nghĩ rằng cái nghèo sẽ vụt đến với mình.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 18,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.976Z",
      "updatedAt": "2024-09-24T02:16:52.976Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "31aea3ce-c7c6-4386-8bbf-e08aaadae95b",
      "number": 23,
      "content": "Ai quở trách người nào để về sau được biết ơn",
      "order": 0,
      "parNumber": 5,
      "parIndex": 19,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.982Z",
      "updatedAt": "2024-09-24T02:16:52.982Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "a2a87ee4-8b2a-440c-8cae-fe9a5184c478",
      "number": 23,
      "content": "Thật tốt hơn kẻ dùng lưỡi mình để dua nịnh.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 20,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.987Z",
      "updatedAt": "2024-09-24T02:16:52.987Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "c03a0eec-bf44-44fd-a87e-f4ea5884c099",
      "number": 24,
      "content": "Kẻ nào trộm cắp của cha mẹ mình rồi nói, “Ðâu có tội lỗi gì!”",
      "order": 0,
      "parNumber": 5,
      "parIndex": 21,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.992Z",
      "updatedAt": "2024-09-24T02:16:52.992Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "79be8bc1-a70b-4dc4-b414-ca3722417656",
      "number": 24,
      "content": "Chính là kẻ đồng bọn với phường phá hoại.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 22,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:52.997Z",
      "updatedAt": "2024-09-24T02:16:52.997Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "8d9d5925-510b-4847-9724-4e6697f37202",
      "number": 25,
      "content": "Kẻ có lòng kiêu ngạo dễ tạo ra xung khắc,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 23,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:53.002Z",
      "updatedAt": "2024-09-24T02:16:53.002Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "298a796d-5209-4fab-b039-042103f7bb29",
      "number": 25,
      "content": "Nhưng người tin cậy Chúa ắt sẽ được thịnh vượng.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 24,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:53.007Z",
      "updatedAt": "2024-09-24T02:16:53.007Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "f9ffd583-74b0-4d9d-b8a8-011b72a073ed",
      "number": 26,
      "content": "Kẻ nào chỉ tin cậy vào tài trí mình là người dại dột,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 25,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:53.012Z",
      "updatedAt": "2024-09-24T02:16:53.012Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "1859fcc2-19ef-47e7-b6c7-d69e64ea2c93",
      "number": 26,
      "content": "Nhưng ai bước đi cách khôn ngoan sẽ được thoát hiểm nguy.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 26,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:53.017Z",
      "updatedAt": "2024-09-24T02:16:53.017Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "a13cffb8-0186-47fa-a357-73d6e1102c23",
      "number": 27,
      "content": "Ai giúp đỡ người nghèo sẽ không bị thiếu thốn,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 27,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:53.022Z",
      "updatedAt": "2024-09-24T02:16:53.022Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "f917cc90-42eb-47fd-ace0-40b2a9e63fff",
      "number": 27,
      "content": "Nhưng ai quay mắt làm ngơ sẽ bị lắm lời nguyền rủa.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 28,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:53.027Z",
      "updatedAt": "2024-09-24T02:16:53.027Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "089edf4b-053b-43e2-9aae-7d820949032f",
      "number": 28,
      "content": "Khi kẻ ác nắm quyền, người ta đều bỏ trốn,",
      "order": 0,
      "parNumber": 5,
      "parIndex": 29,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:53.032Z",
      "updatedAt": "2024-09-24T02:16:53.032Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    },
    {
      "id": "f3102088-e257-44a0-8534-afe9b1c67e4b",
      "number": 28,
      "content": "Nhưng khi chúng bị diệt vong, người ngay lành sẽ gia tăng.",
      "order": 1,
      "parNumber": 5,
      "parIndex": 30,
      "isPoetry": true,
      "createdAt": "2024-09-24T02:16:53.037Z",
      "updatedAt": "2024-09-24T02:16:53.037Z",
      "chapterId": "18703040-dd8a-4ab3-b6f0-af795d230f72"
    }
  ],
