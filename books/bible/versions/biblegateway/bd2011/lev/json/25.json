  "headings": [
    {
      "id": "fb745af0-2f0f-440d-916e-5231600f3de1",
      "content": "Cách Ðối Xử với Người Nghèo",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-24T03:14:18.058Z",
      "updatedAt": "2025-04-24T03:14:18.058Z",
      "verseId": "215a4908-4c0a-458b-a6de-4d72dd533381",
      "chapterId": "f77bba17-c822-4f9e-a8c1-bfd719df0fdb"
    },
    {
      "id": "65b0ab2e-b40c-4275-92fa-faab3aab7539",
      "content": "Mua Bán Ðất Ðai",
      "level": 1,
      "order": 0,
      "createdAt": "2025-04-24T03:14:17.737Z",
